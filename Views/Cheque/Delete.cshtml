@model TheBuryProject.ViewModels.ChequeViewModel
@{
    ViewData["Title"] = "Eliminar Cheque";
}

<section class="container-fluid py-4 text-light">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card bg-dark border-danger shadow-sm">
                <div class="card-header bg-danger text-light py-3">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-danger border-0 shadow-sm d-flex align-items-start">
                        <i class="bi bi-exclamation-circle-fill fs-3 me-3 flex-shrink-0"></i>
                        <div>
                            <h5 class="alert-heading fw-bold mb-2">¿Estás seguro que querés eliminar este cheque?</h5>
                            <p class="mb-0">Esta acción no se puede deshacer. El registro se eliminará permanentemente del sistema.</p>
                        </div>
                    </div>

                    <dl class="row mt-4 mb-0">
                        <dt class="col-sm-4 text-secondary">Número de Cheque</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Numero</dd>

                        <dt class="col-sm-4 text-secondary">Banco</dt>
                        <dd class="col-sm-8">@Model.Banco</dd>

                        <dt class="col-sm-4 text-secondary">Monto</dt>
                        <dd class="col-sm-8">
                            <span class="fw-bold text-info fs-5">$@Model.Monto.ToString("N2")</span>
                        </dd>

                        <dt class="col-sm-4 text-secondary">Proveedor</dt>
                        <dd class="col-sm-8">@Model.ProveedorNombre</dd>

                        <dt class="col-sm-4 text-secondary">Fecha Emisión</dt>
                        <dd class="col-sm-8">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>

                        @if (Model.FechaVencimiento.HasValue)
                        {
                            <dt class="col-sm-4 text-secondary">Fecha Vencimiento</dt>
                            <dd class="col-sm-8">
                                @Model.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                @if (Model.EstaVencido)
                                {
                                    <br />
                            
                                    <span class="badge bg-danger mt-1">Vencido</span>
                                }
                                else if (Model.EstaPorVencer)
                                {
                                    <br />
                            
                                    <span class="badge bg-warning text-dark mt-1">Por vencer</span>
                                }
                            </dd>
                        }

                        <dt class="col-sm-4 text-secondary">Estado</dt>
                        <dd class="col-sm-8">
                            @{
                                var badgeClass = Model.Estado switch
                                {
                                    TheBuryProject.Models.Enums.EstadoCheque.Emitido => "bg-secondary",
                                    TheBuryProject.Models.Enums.EstadoCheque.Entregado => "bg-info",
                                    TheBuryProject.Models.Enums.EstadoCheque.Depositado => "bg-warning text-dark",
                                    TheBuryProject.Models.Enums.EstadoCheque.Cobrado => "bg-success",
                                    TheBuryProject.Models.Enums.EstadoCheque.Rechazado => "bg-danger",
                                    TheBuryProject.Models.Enums.EstadoCheque.Anulado => "bg-dark border",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@Model.Estado.ToString()</span>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.OrdenCompraNumero))
                        {
                            <dt class="col-sm-4 text-secondary">Orden de Compra</dt>
                            <dd class="col-sm-8">
                                <a asp-controller="OrdenCompra" asp-action="Details" asp-route-id="@Model.OrdenCompraId" class="text-decoration-none text-info">
                                    <i class="bi bi-link-45deg"></i> @Model.OrdenCompraNumero
                                </a>
                            </dd>
                        }
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <hr class="border-secondary my-4" />
                        <h6 class="fw-semibold text-secondary mb-2">Observaciones</h6>
                        <p class="text-light-emphasis mb-0">@Model.Observaciones</p>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-light px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash me-2"></i>Eliminar Cheque
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
