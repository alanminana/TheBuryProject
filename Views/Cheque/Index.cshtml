@model IEnumerable<TheBuryProject.ViewModels.ChequeViewModel>
@{
    ViewData["Title"] = "Cheques";
    var filter = ViewBag.Filter as TheBuryProject.ViewModels.ChequeFilterViewModel ?? new TheBuryProject.ViewModels.ChequeFilterViewModel();
}

<section class="container-fluid py-4 text-light">
    <div class="row">
        <div class="col-lg-12">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-semibold">
                    <i class="bi bi-credit-card text-primary"></i> Cheques
                </h2>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nuevo Cheque
                </a>
            </div>

            <!-- Alertas de éxito y error -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Alertas de vencimiento -->
            @if (ViewBag.TotalVencidos > 0 || ViewBag.TotalPorVencer > 0)
            {
                <div class="row mb-3">
                    @if (ViewBag.TotalVencidos > 0)
                    {
                        <div class="col-md-6">
                            <div class="alert alert-danger border-0 shadow-sm">
                                <i class="bi bi-exclamation-triangle"></i>
                                <strong>@ViewBag.TotalVencidos cheque(s) vencido(s)</strong>
                                <a asp-action="Index" asp-route-SoloVencidos="true" class="alert-link float-end text-light">
                                    Ver cheques vencidos
                                </a>
                            </div>
                        </div>
                    }
                    @if (ViewBag.TotalPorVencer > 0)
                    {
                        <div class="col-md-6">
                            <div class="alert alert-warning border-0 shadow-sm text-dark">
                                <i class="bi bi-clock"></i>
                                <strong>@ViewBag.TotalPorVencer cheque(s) por vencer (próximos 7 días)</strong>
                                <a asp-action="Index" asp-route-SoloPorVencer="true" class="alert-link float-end">
                                    Ver cheques por vencer
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }

            <!-- Filtros -->
            <div class="card bg-dark border-secondary mb-4 shadow-sm">
                <div class="card-header bg-secondary bg-opacity-25 border-secondary">
                    <a class="text-decoration-none text-light d-block" data-bs-toggle="collapse" href="#filtrosCollapse" role="button">
                        <i class="bi bi-funnel"></i> Filtros de Búsqueda
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                </div>
                <div class="collapse" id="filtrosCollapse">
                    <div class="card-body">
                        <form asp-action="Index" method="get" class="text-light">
                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.SearchTerm" class="form-label fw-semibold"></label>
                                    <input asp-for="@filter.SearchTerm" class="form-control bg-dark text-light border-secondary"
                                           placeholder="Número, banco, proveedor..." value="@filter.SearchTerm" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.ProveedorId" class="form-label fw-semibold"></label>
                                    <select asp-for="@filter.ProveedorId" class="form-select bg-dark text-light border-secondary" asp-items="ViewBag.Proveedores">
                                        <option value="">Todos los proveedores</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <label asp-for="@filter.Estado" class="form-label fw-semibold"></label>
                                    <select asp-for="@filter.Estado" class="form-select bg-dark text-light border-secondary" asp-items="ViewBag.Estados">
                                        <option value="">Todos los estados</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <label class="form-label fw-semibold">Filtros Rápidos</label>
                                    <div class="form-check">
                                        <input asp-for="@filter.SoloVencidos" class="form-check-input bg-dark border-secondary" type="checkbox" />
                                        <label asp-for="@filter.SoloVencidos" class="form-check-label">Solo vencidos</label>
                                    </div>
                                    <div class="form-check">
                                        <input asp-for="@filter.SoloPorVencer" class="form-check-input bg-dark border-secondary" type="checkbox" />
                                        <label asp-for="@filter.SoloPorVencer" class="form-check-label">Por vencer</label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.FechaEmisionDesde" class="form-label fw-semibold"></label>
                                    <input asp-for="@filter.FechaEmisionDesde" type="date" class="form-control bg-dark text-light border-secondary"
                                           value="@filter.FechaEmisionDesde?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.FechaEmisionHasta" class="form-label fw-semibold"></label>
                                    <input asp-for="@filter.FechaEmisionHasta" type="date" class="form-control bg-dark text-light border-secondary"
                                           value="@filter.FechaEmisionHasta?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.FechaVencimientoDesde" class="form-label fw-semibold"></label>
                                    <input asp-for="@filter.FechaVencimientoDesde" type="date" class="form-control bg-dark text-light border-secondary"
                                           value="@filter.FechaVencimientoDesde?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.FechaVencimientoHasta" class="form-label fw-semibold"></label>
                                    <input asp-for="@filter.FechaVencimientoHasta" type="date" class="form-control bg-dark text-light border-secondary"
                                           value="@filter.FechaVencimientoHasta?.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-3 mb-2">
                                    <label asp-for="@filter.OrderBy" class="form-label fw-semibold"></label>
                                    <select asp-for="@filter.OrderBy" class="form-select bg-dark text-light border-secondary">
                                        <option value="">Por defecto</option>
                                        <option value="numero">Número</option>
                                        <option value="banco">Banco</option>
                                        <option value="proveedor">Proveedor</option>
                                        <option value="fechaemision">Fecha Emisión</option>
                                        <option value="fechavencimiento">Fecha Vencimiento</option>
                                        <option value="monto">Monto</option>
                                        <option value="estado">Estado</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <label asp-for="@filter.OrderDirection" class="form-label fw-semibold"></label>
                                    <select asp-for="@filter.OrderDirection" class="form-select bg-dark text-light border-secondary">
                                        <option value="asc">Ascendente</option>
                                        <option value="desc">Descendente</option>
                                    </select>
                                </div>
                                <div class="col-md-7 mb-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="bi bi-search"></i> Buscar
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-light">
                                        <i class="bi bi-x-circle"></i> Limpiar
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tabla -->
            <div class="card bg-dark border-secondary shadow-sm">
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle">
                                <thead class="table-secondary text-dark">
                                    <tr>
                                        <th>Número</th>
                                        <th>Banco</th>
                                        <th>Proveedor</th>
                                        <th>Fecha Emisión</th>
                                        <th>Fecha Vencimiento</th>
                                        <th class="text-end">Monto</th>
                                        <th>Estado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cheque in Model)
                                    {
                                        var badgeClass = cheque.Estado switch
                                        {
                                            TheBuryProject.Models.Enums.EstadoCheque.Emitido => "bg-secondary",
                                            TheBuryProject.Models.Enums.EstadoCheque.Entregado => "bg-info",
                                            TheBuryProject.Models.Enums.EstadoCheque.Depositado => "bg-warning text-dark",
                                            TheBuryProject.Models.Enums.EstadoCheque.Cobrado => "bg-success",
                                            TheBuryProject.Models.Enums.EstadoCheque.Rechazado => "bg-danger",
                                            TheBuryProject.Models.Enums.EstadoCheque.Anulado => "bg-dark border",
                                            _ => "bg-secondary"
                                        };
                                        var rowClass = cheque.EstaVencido ? "table-danger text-dark" :
                                        cheque.EstaPorVencer ? "table-warning text-dark" : "";

                                        <tr class="@rowClass">
                                            <td>
                                                <strong>@cheque.Numero</strong>
                                                @if (cheque.EstaVencido)
                                                {
                                                    <br />
                                        
                                                    <small class="text-danger"><i class="bi bi-exclamation-triangle"></i> Vencido</small>
                                                }
                                                else if (cheque.EstaPorVencer)
                                                {
                                                    <br />
                                        
                                                    <small class="text-warning"><i class="bi bi-clock"></i> Por vencer</small>
                                                }
                                            </td>
                                            <td>@cheque.Banco</td>
                                            <td>@cheque.ProveedorNombre</td>
                                            <td>@cheque.FechaEmision.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @if (cheque.FechaVencimiento.HasValue)
                                                {
                                                    @cheque.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                                    if (cheque.DiasPorVencer > 0 && !cheque.EstaVencido)
                                                    {
                                                        <br />
                                        
                                                        <small class="text-muted">(@cheque.DiasPorVencer días)</small>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-end"><strong>$@cheque.Monto.ToString("N2")</strong></td>
                                            <td><span class="badge @badgeClass">@cheque.Estado.ToString()</span></td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@cheque.Id" class="btn btn-outline-info" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (cheque.Estado != TheBuryProject.Models.Enums.EstadoCheque.Cobrado &&
                                                                                                cheque.Estado != TheBuryProject.Models.Enums.EstadoCheque.Depositado)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@cheque.Id" class="btn btn-outline-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@cheque.Id" class="btn btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-secondary text-dark">
                                    <tr>
                                        <td colspan="5" class="text-end"><strong>Total:</strong></td>
                                        <td class="text-end">
                                            <strong class="text-primary">$@Model.Sum(c => c.Monto).ToString("N2")</strong>
                                        </td>
                                        <td colspan="2"></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                        <p class="text-secondary mt-3">
                            <i class="bi bi-info-circle"></i> Mostrando @Model.Count() cheque(s)
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-info border-0 text-dark bg-opacity-75">
                            <i class="bi bi-info-circle"></i> No se encontraron cheques con los criterios especificados.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
