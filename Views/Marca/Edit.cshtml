@model TheBuryProject.ViewModels.MarcaViewModel

@{
    ViewData["Title"] = "Editar Marca";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Volver al listado
                </a>
            </div>

            <div class="card border-0 shadow-lg">
                <div class="card-header bg-warning-subtle border-warning py-3">
                    <h4 class="mb-0 fw-bold text-warning-emphasis">
                        <i class="bi bi-pencil-square me-2"></i>Editar Marca
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>Por favor, corregí los errores antes de continuar</div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Codigo" class="form-control" id="floatingCodigo" placeholder="Código" />
                                    <label for="floatingCodigo">Código *</label>
                                    <span asp-validation-for="Codigo" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control" id="floatingNombre" placeholder="Nombre" />
                                    <label for="floatingNombre">Nombre *</label>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Descripcion" class="form-control" id="floatingDescripcion" placeholder="Descripción" style="height: 100px"></textarea>
                                    <label for="floatingDescripcion">Descripción (opcional)</label>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PaisOrigen" class="form-control" id="floatingPais" placeholder="País de Origen" />
                                    <label for="floatingPais">País de Origen (opcional)</label>
                                    <span asp-validation-for="PaisOrigen" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ParentId" class="form-select" id="floatingParent" asp-items="ViewBag.Marcas">
                                        <option value="">-- Marca principal (sin padre) --</option>
                                    </select>
                                    <label for="floatingParent">Marca Padre</label>
                                    <span asp-validation-for="ParentId" class="text-danger small"></span>
                                </div>
                                <div class="form-text">Dejá vacío para que sea una marca principal</div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Actualizar Marca
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
