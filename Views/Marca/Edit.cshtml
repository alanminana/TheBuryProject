@model TheBuryProject.ViewModels.MarcaViewModel
@{
    ViewData["Title"] = "Editar Marca";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index")!;
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a href="@backUrl" class="text-decoration-none text-light">
                    <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Volver al listado
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-pencil-square me-2" aria-hidden="true"></i>Editar Marca
                    </h4>
                </div>

                <div class="card-body text-light p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />
                        @if (!string.IsNullOrWhiteSpace(returnUrl))
                        {
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
                                <div>Corregí los errores antes de continuar</div>
                            </div>
                        }

                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Codigo" class="form-control bg-body-secondary text-light border-0" id="codigo" placeholder="Código" />
                                    <label for="codigo">Código *</label>
                                    <span asp-validation-for="Codigo" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control bg-body-secondary text-light border-0" id="nombre" placeholder="Nombre" />
                                    <label for="nombre">Nombre *</label>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Descripcion" class="form-control bg-body-secondary text-light border-0"
                                              id="descripcion" placeholder="Descripción" style="height: 100px"></textarea>
                                    <label for="descripcion">Descripción (opcional)</label>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PaisOrigen" class="form-control bg-body-secondary text-light border-0" id="pais" placeholder="País de Origen" />
                                    <label for="pais">País de Origen (opcional)</label>
                                    <span asp-validation-for="PaisOrigen" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ParentId" class="form-select bg-body-secondary text-light border-0" id="parent" asp-items="ViewBag.Marcas">
                                        <option value="">-- Marca principal (sin padre) --</option>
                                    </select>
                                    <label for="parent">Marca Padre</label>
                                    <span asp-validation-for="ParentId" class="text-danger small"></span>
                                </div>
                                <div class="form-text text-muted">Dejá vacío para que sea una marca principal</div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a href="@backUrl" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-x-circle me-2" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-4 text-dark fw-semibold">
                                <i class="bi bi-check-circle me-2" aria-hidden="true"></i>Actualizar Marca
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@section Styles {
    <link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />
}
