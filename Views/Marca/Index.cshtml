@model TheBuryProject.ViewModels.MarcaFilterViewModel
@{
    ViewData["Title"] = "Marcas";
    var filtrosActivos = !string.IsNullOrEmpty(Model.SearchTerm) || Model.SoloActivos;
    var originReturnUrl = ViewData["ReturnUrl"] as string;
    var backToCatalogoUrl = originReturnUrl ?? Url.Action("Index", "Catalogo")!;
    var listReturnUrl = Context.Request.Path + Context.Request.QueryString;
}

<section class="container-fluid py-4 text-light">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h3 mb-1 fw-bold">
                <i class="bi bi-award text-info" aria-hidden="true"></i> Gestión de Marcas
            </h1>
            <p class="text-secondary mb-0">Administrá las marcas de productos registradas</p>
        </div>
        <div class="col-auto d-flex gap-2">
            <a href="@backToCatalogoUrl" class="btn btn-outline-light fw-semibold shadow-sm">
                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Volver al Catálogo
            </a>
            <a asp-action="Create" class="btn btn-info text-dark fw-semibold btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2" aria-hidden="true"></i>Nueva Marca
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2" aria-hidden="true"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card bg-dark border-0 shadow-sm mb-4 filter-card">
        <button class="card-header bg-secondary text-light d-flex justify-content-between align-items-center @(filtrosActivos ? string.Empty : "collapsed")"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#filtrosCollapse"
                aria-expanded="@(filtrosActivos.ToString().ToLower())">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-funnel" aria-hidden="true"></i>
                <span class="fw-semibold">Búsqueda y filtros</span>
            </div>
            <i class="bi bi-chevron-down chevron" aria-hidden="true"></i>
        </button>

        <div class="collapse @(filtrosActivos ? "show" : "")" id="filtrosCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-search me-1" aria-hidden="true"></i>Buscar por texto
                            </label>
                            <input type="text" class="form-control bg-body-secondary text-light border-0"
                                   name="searchTerm"
                                   value="@Model.SearchTerm"
                                   placeholder="Nombre o descripción..." />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Opciones</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"
                                       name="soloActivos"
                                       id="soloActivos"
                                       value="true"
                                       @(Model.SoloActivos ? "checked" : "") />
                                <label class="form-check-label" for="soloActivos">
                                    <i class="bi bi-check-circle text-success me-1" aria-hidden="true"></i>Solo marcas activas
                                </label>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label fw-semibold"><i class="bi bi-sort-down me-1" aria-hidden="true"></i>Ordenar</label>
                            <select class="form-select bg-body-secondary text-light border-0" name="orderBy">
                                <option value="nombre" selected="@((Model.OrderBy == "nombre" || string.IsNullOrEmpty(Model.OrderBy)) ? "selected" : null)">Nombre</option>
                                <option value="descripcion" selected="@(Model.OrderBy == "descripcion" ? "selected" : null)">Descripción</option>
                            </select>
                        </div>

                        <div class="col-md-1">
                            <label class="form-label fw-semibold">Dirección</label>
                            <select class="form-select bg-body-secondary text-light border-0" name="orderDirection">
                                <option value="asc" selected="@((Model.OrderDirection == "asc" || string.IsNullOrEmpty(Model.OrderDirection)) ? "selected" : null)">Asc</option>
                                <option value="desc" selected="@(Model.OrderDirection == "desc" ? "selected" : null)">Desc</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-info text-dark fw-semibold">
                                    <i class="bi bi-search me-2" aria-hidden="true"></i>Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light">
                                    <i class="bi bi-x-circle me-2" aria-hidden="true"></i>Limpiar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SoloActivos)
    {
        <div class="alert alert-info d-flex align-items-center mb-3 shadow-sm">
            <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
            <span>Se encontraron <strong>@Model.TotalResultados</strong> marcas coincidentes</span>
        </div>
    }

    <!-- Tabla -->
    <div class="card bg-dark border-0 shadow-sm">
        <div class="table-responsive">
            <table class="table table-dark table-hover align-middle mb-0">
                <thead class="bg-secondary text-light">
                    <tr>
                        <th scope="col" class="px-4">Código</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripción</th>
                        <th scope="col">Marca Padre</th>
                        <th scope="col">País de Origen</th>
                        <th scope="col" class="text-center">Estado</th>
                        <th scope="col" class="text-center px-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Marcas.Any())
                    {
                        @foreach (var marca in Model.Marcas)
                        {
                            <tr>
                                <td class="px-4">
                                    <span class="badge bg-primary">@marca.Codigo</span>
                                </td>
                                <td class="fw-semibold">@marca.Nombre</td>
                                <td class="text-muted">@(!string.IsNullOrEmpty(marca.Descripcion) ? marca.Descripcion : "-")</td>
                                <td class="text-muted">
                                    @if (!string.IsNullOrEmpty(marca.ParentNombre))
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-diagram-3" aria-hidden="true"></i> @marca.ParentNombre
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-muted">@(!string.IsNullOrEmpty(marca.PaisOrigen) ? marca.PaisOrigen : "-")</td>
                                <td class="text-center">
                                    @if (marca.Activo)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle" aria-hidden="true"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle" aria-hidden="true"></i> Inactivo
                                        </span>
                                    }
                                </td>
                                <td class="text-center px-4">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@marca.Id"
                                                         asp-route-returnUrl="@listReturnUrl"
                                           class="btn btn-outline-info" title="Detalles">
                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                            <span class="visually-hidden">Detalles</span>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@marca.Id"
                                                         asp-route-returnUrl="@listReturnUrl"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil" aria-hidden="true"></i>
                                            <span class="visually-hidden">Editar</span>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@marca.Id"
                                                         asp-route-returnUrl="@listReturnUrl"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash" aria-hidden="true"></i>
                                            <span class="visually-hidden">Eliminar</span>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <i class="bi bi-inbox fs-1 text-muted d-block mb-3" aria-hidden="true"></i>
                                <p class="text-muted mb-2">No se encontraron marcas</p>
                                <a asp-action="Create" class="btn btn-info text-dark fw-semibold">Crear Marca</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.Marcas.Any())
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card bg-body-secondary border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Marcas</h6>
                        <h3 class="fw-bold">@Model.TotalResultados</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-body-secondary border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Marcas Activas</h6>
                        <h3 class="fw-bold text-success">@Model.Marcas.Count(m => m.Activo)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />
}
