@model IEnumerable<TheBuryProject.ViewModels.MarcaViewModel>

@{
    ViewData["Title"] = "Marcas";
    var marcasRaiz = Model.Where(m => !m.ParentId.HasValue).ToList();
    var marcasHijas = Model.Where(m => m.ParentId.HasValue).ToList();
}

<div class="container-fluid py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h3 mb-0 fw-bold">
                <i class="bi bi-tag text-primary"></i> Gestión de Marcas
            </h1>
            <p class="text-muted mb-0">Administrá las marcas y submarcas de productos</p>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Nueva Marca
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="fw-semibold px-4 py-3">Jerarquía</th>
                            <th class="fw-semibold py-3">Código</th>
                            <th class="fw-semibold py-3">Nombre</th>
                            <th class="fw-semibold py-3">Descripción</th>
                            <th class="fw-semibold py-3">País de Origen</th>
                            <th class="fw-semibold text-center py-3 px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var marca in marcasRaiz)
                            {
                                <tr class="table-primary">
                                    <td class="px-4">
                                        <i class="bi bi-star-fill text-warning me-2"></i>
                                        <strong>Marca Principal</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary-subtle text-primary-emphasis">@marca.Codigo</span>
                                    </td>
                                    <td class="fw-bold">@marca.Nombre</td>
                                    <td class="text-muted">@(marca.Descripcion ?? "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(marca.PaisOrigen))
                                        {
                                            <span class="badge bg-info-subtle text-info-emphasis">
                                                <i class="bi bi-flag"></i> @marca.PaisOrigen
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center px-4">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@marca.Id"
                                               class="btn btn-outline-info"
                                               data-bs-toggle="tooltip"
                                               title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@marca.Id"
                                               class="btn btn-outline-warning"
                                               data-bs-toggle="tooltip"
                                               title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@marca.Id"
                                               class="btn btn-outline-danger"
                                               data-bs-toggle="tooltip"
                                               title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>

                                @* Submarcas de esta marca principal *@
                                @foreach (var submarca in marcasHijas.Where(h => h.ParentId == marca.Id))
                                {
                                    <tr class="table-light">
                                        <td class="px-4">
                                            <span class="ms-4">
                                                <i class="bi bi-arrow-return-right text-muted me-2"></i>
                                                Submarca de <strong>@marca.Nombre</strong>
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary-subtle text-secondary-emphasis">@submarca.Codigo</span>
                                        </td>
                                        <td class="fw-medium">@submarca.Nombre</td>
                                        <td class="text-muted">@(submarca.Descripcion ?? "-")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(submarca.PaisOrigen))
                                            {
                                                <span class="badge bg-info-subtle text-info-emphasis">
                                                    <i class="bi bi-flag"></i> @submarca.PaisOrigen
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center px-4">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@submarca.Id"
                                                   class="btn btn-outline-info"
                                                   data-bs-toggle="tooltip"
                                                   title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@submarca.Id"
                                                   class="btn btn-outline-warning"
                                                   data-bs-toggle="tooltip"
                                                   title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@submarca.Id"
                                                   class="btn btn-outline-danger"
                                                   data-bs-toggle="tooltip"
                                                   title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-muted d-block mb-3"></i>
                                    <p class="text-muted mb-2">No hay marcas registradas</p>
                                    <a asp-action="Create" class="btn btn-primary">Crear la primera marca</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm mt-4 bg-light">
            <div class="card-body">
                <h6 class="fw-bold mb-3"><i class="bi bi-info-circle text-primary"></i> Leyenda</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <i class="bi bi-star-fill text-warning me-2"></i> <strong>Marca Principal:</strong> No tiene marca padre
                    </div>
                    <div class="col-md-6">
                        <i class="bi bi-arrow-return-right text-muted me-2"></i> <strong>Submarca:</strong> Depende de una marca principal
                    </div>
                </div>
                <div class="mt-2 text-muted small">
                    <strong>Ejemplo:</strong> Samsung (marca principal) → Samsung Galaxy (submarca)
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Inicializar tooltips de Bootstrap 5.3
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));
    </script>
}
