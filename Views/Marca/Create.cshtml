@model TheBuryProject.ViewModels.MarcaViewModel
@{
    ViewData["Title"] = "Nueva Marca";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none text-light">
                    <i class="bi bi-arrow-left me-2"></i>Volver al listado
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-primary text-white py-3">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-plus-circle me-2"></i>Nueva Marca
                    </h4>
                </div>

                <div class="card-body text-light p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>Corregí los errores antes de continuar</div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Codigo" class="form-control bg-body-secondary text-light border-0" id="codigo" placeholder="Código" />
                                    <label for="codigo">Código *</label>
                                    <span asp-validation-for="Codigo" class="text-danger small"></span>
                                </div>
                                <div class="form-text text-muted">Ej: SAM, LG, WHI</div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="Nombre" class="form-control bg-body-secondary text-light border-0" id="nombre" placeholder="Nombre" />
                                    <label for="nombre">Nombre *</label>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Descripcion" class="form-control bg-body-secondary text-light border-0" id="descripcion"
                                              placeholder="Descripción" style="height: 100px"></textarea>
                                    <label for="descripcion">Descripción (opcional)</label>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="PaisOrigen" class="form-control bg-body-secondary text-light border-0" id="pais" placeholder="País de Origen" />
                                    <label for="pais">País de Origen (opcional)</label>
                                    <span asp-validation-for="PaisOrigen" class="text-danger small"></span>
                                </div>
                                <div class="form-text text-muted">Ej: Corea del Sur, China, Argentina</div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ParentId" class="form-select bg-body-secondary text-light border-0" id="parent" asp-items="ViewBag.Marcas">
                                        <option value="">-- Marca principal (sin padre) --</option>
                                    </select>
                                    <label for="parent">Marca Padre</label>
                                    <span asp-validation-for="ParentId" class="text-danger small"></span>
                                </div>
                                <div class="form-text text-muted">Dejá vacío para crear una marca principal</div>
                            </div>
                        </div>

                        <div class="alert alert-info border-0 mt-4 text-dark" role="alert">
                            <h6 class="alert-heading">
                                <i class="bi bi-lightbulb"></i> Sobre la jerarquía de marcas
                            </h6>
                            <p class="mb-0 small">
                                <strong>Marca Principal:</strong> Samsung, LG, Whirlpool<br />
                                <strong>Submarca:</strong> Samsung Galaxy, LG ThinQ
                            </p>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Marca
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
