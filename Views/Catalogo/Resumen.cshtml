@model TheBuryProject.ViewModels.CatalogoViewModel

@{
    ViewData["Title"] = "Resumen del Catálogo";
    var categoriasCount = Model.Categorias?.Count() ?? 0;
    var marcasCount = Model.Marcas?.Count() ?? 0;
    var returnUrl = Context.Request.Path + Context.Request.QueryString;
}

<section class="container-fluid py-4 text-light">

    @* Header unificado *@
    <partial name="_PageHeader" model='new PageHeaderModel {
        Breadcrumb = "Productos · Catálogo",
        Title = "Resumen del Catálogo",
        Icon = "grid",
        Subtitle = "Gestión centralizada de categorías y marcas.",
        PrimaryAction = "Index",
        PrimaryController = "Catalogo",
        PrimaryActionText = "Ver Catálogo Completo",
        PrimaryActionIcon = "box-seam"
    }' />

    @* Alertas unificadas *@
    <partial name="_Alerts" />

    <div class="row g-4">

        <div class="col-lg-6">
            <div class="card card-animate bg-dark border-0 shadow-sm h-100">

                <div class="card-header bg-secondary text-light d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-diagram-3" aria-hidden="true"></i>
                        <span class="fw-semibold">Categorías</span>
                    </div>
                    <span class="badge bg-light text-dark">@categoriasCount</span>
                </div>

                <div class="card-body">

                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="feature-icon d-flex align-items-center justify-content-center flex-shrink-0">
                            <i class="bi bi-diagram-3 text-primary fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h5 mb-1 text-light">Clasificación de productos</h2>
                            <p class="page-header-subtitle mb-0">Organizá las categorías que estructuran el catálogo.</p>
                        </div>
                    </div>

                    <div class="metric-pill d-flex justify-content-between align-items-center mb-4">
                        <span class="label">Total de categorías</span>
                        <span class="value">@categoriasCount</span>
                    </div>

                    <div class="d-flex flex-column flex-md-row gap-2">
                        <a asp-controller="Categoria"
                           asp-action="Index"
                           asp-route-returnUrl="@returnUrl"
                           class="btn btn-primary flex-fill d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-search" aria-hidden="true"></i>
                            <span>Ver todas las categorías</span>
                        </a>

                        <a asp-controller="Categoria"
                           asp-action="Create"
                           asp-route-returnUrl="@returnUrl"
                           class="btn btn-outline-primary flex-fill d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-plus-circle" aria-hidden="true"></i>
                            <span>Nueva categoría</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card card-animate bg-dark border-0 shadow-sm h-100">

                <div class="card-header bg-success text-dark d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-award" aria-hidden="true"></i>
                        <span class="fw-semibold">Marcas</span>
                    </div>
                    <span class="badge bg-dark text-light">@marcasCount</span>
                </div>

                <div class="card-body">

                    <div class="d-flex align-items-center gap-3 mb-4">
                        <div class="feature-icon d-flex align-items-center justify-content-center flex-shrink-0">
                            <i class="bi bi-award text-success fs-4"></i>
                        </div>
                        <div>
                            <h2 class="h5 mb-1 text-light">Marcas y fabricantes</h2>
                            <p class="page-header-subtitle mb-0">Administrá las marcas y fabricantes principales.</p>
                        </div>
                    </div>

                    <div class="metric-pill d-flex justify-content-between align-items-center mb-4">
                        <span class="label">Total de marcas</span>
                        <span class="value">@marcasCount</span>
                    </div>

                    <div class="d-flex flex-column flex-md-row gap-2">
                        <a asp-controller="Marca"
                           asp-action="Index"
                           asp-route-returnUrl="@returnUrl"
                           class="btn btn-success flex-fill d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-search" aria-hidden="true"></i>
                            <span>Ver todas las marcas</span>
                        </a>

                        <a asp-controller="Marca"
                           asp-action="Create"
                           asp-route-returnUrl="@returnUrl"
                           class="btn btn-outline-success flex-fill d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-plus-circle" aria-hidden="true"></i>
                            <span>Nueva marca</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />
}
