@model TheBuryProject.ViewModels.CatalogoViewModel

@{
    ViewData["Title"] = "Catálogo";
}

<div class="container-fluid py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h3 mb-0 fw-bold">
                <i class="bi bi-box-seam text-primary"></i> Catálogo de Productos
            </h1>
            <p class="text-muted mb-0">Gestión de categorías y marcas</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <ul class="nav nav-tabs mb-3" id="catalogoTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="categorias-tab" data-bs-toggle="tab" data-bs-target="#categorias" type="button" role="tab">
                <i class="bi bi-diagram-3"></i> Categorías (@Model.Categorias.Count())
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="marcas-tab" data-bs-toggle="tab" data-bs-target="#marcas" type="button" role="tab">
                <i class="bi bi-tag"></i> Marcas (@Model.Marcas.Count())
            </button>
        </li>
    </ul>

    <div class="tab-content" id="catalogoTabsContent">
        <!-- TAB CATEGORÍAS -->
        <div class="tab-pane fade show active" id="categorias" role="tabpanel">
            <div class="d-flex justify-content-end mb-3">
                <a asp-controller="Categoria" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Categoría
                </a>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">Código</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th class="text-center">Control Serie</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Categorias.Any())
                            {
                                @foreach (var cat in Model.Categorias.Where(c => !c.ParentId.HasValue))
                                {
                                    <tr>
                                        <td class="px-4">
                                            <span class="badge bg-primary">@cat.Codigo</span>
                                        </td>
                                        <td>
                                            <strong>@cat.Nombre</strong>
                                        </td>
                                        <td class="text-muted">@(cat.Descripcion ?? "-")</td>
                                        <td class="text-center">
                                            @if (cat.ControlSerieDefault)
                                            {
                                                <i class="bi bi-check-circle-fill text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-dash-circle text-secondary"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Categoria" asp-action="Details" asp-route-id="@cat.Id" class="btn btn-outline-info" title="Ver">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-controller="Categoria" asp-action="Delete" asp-route-id="@cat.Id" class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>

                                    @foreach (var sub in Model.Categorias.Where(c => c.ParentId == cat.Id))
                                    {
                                        <tr class="table-light">
                                            <td class="px-4">
                                                <span class="ms-3 badge bg-secondary">@sub.Codigo</span>
                                            </td>
                                            <td>
                                                <span class="ms-3 text-muted">└─</span> @sub.Nombre
                                            </td>
                                            <td class="text-muted">@(sub.Descripcion ?? "-")</td>
                                            <td class="text-center">
                                                @if (sub.ControlSerieDefault)
                                                {
                                                    <i class="bi bi-check-circle-fill text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-dash-circle text-secondary"></i>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-controller="Categoria" asp-action="Details" asp-route-id="@sub.Id" class="btn btn-outline-info" title="Ver">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-controller="Categoria" asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-outline-warning" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-controller="Categoria" asp-action="Delete" asp-route-id="@sub.Id" class="btn btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        No hay categorías
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- TAB MARCAS -->
        <div class="tab-pane fade" id="marcas" role="tabpanel">
            <div class="d-flex justify-content-end mb-3">
                <a asp-controller="Marca" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Nueva Marca
                </a>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">Código</th>
                                <th>Nombre</th>
                                <th>Descripción</th>
                                <th>País</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Marcas.Any())
                            {
                                @foreach (var marca in Model.Marcas.Where(m => !m.ParentId.HasValue))
                                {
                                    <tr>
                                        <td class="px-4">
                                            <span class="badge bg-primary">@marca.Codigo</span>
                                        </td>
                                        <td>
                                            <strong>@marca.Nombre</strong>
                                        </td>
                                        <td class="text-muted">@(marca.Descripcion ?? "-")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(marca.PaisOrigen))
                                            {
                                                <span class="badge bg-info-subtle text-info">@marca.PaisOrigen</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-controller="Marca" asp-action="Details" asp-route-id="@marca.Id" class="btn btn-outline-info" title="Ver">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-controller="Marca" asp-action="Edit" asp-route-id="@marca.Id" class="btn btn-outline-warning" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-controller="Marca" asp-action="Delete" asp-route-id="@marca.Id" class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>

                                    @foreach (var sub in Model.Marcas.Where(m => m.ParentId == marca.Id))
                                    {
                                        <tr class="table-light">
                                            <td class="px-4">
                                                <span class="ms-3 badge bg-secondary">@sub.Codigo</span>
                                            </td>
                                            <td>
                                                <span class="ms-3 text-muted">└─</span> @sub.Nombre
                                            </td>
                                            <td class="text-muted">@(sub.Descripcion ?? "-")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(sub.PaisOrigen))
                                                {
                                                    <span class="badge bg-info-subtle text-info">@sub.PaisOrigen</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    <a asp-controller="Marca" asp-action="Details" asp-route-id="@sub.Id" class="btn btn-outline-info" title="Ver">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-controller="Marca" asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-outline-warning" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-controller="Marca" asp-action="Delete" asp-route-id="@sub.Id" class="btn btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                        No hay marcas
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
