@model TheBuryProject.ViewModels.CatalogoViewModel

@{
    ViewData["Title"] = "Catálogo";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 mb-0 fw-bold">
                <i class="bi bi-grid text-primary"></i> Catálogo del Sistema
            </h1>
            <p class="text-muted mb-0">Gestión centralizada de categorías y marcas</p>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Cards principales -->
    <div class="row g-4">
        <!-- Card Categorías -->
        <div class="col-lg-6">
            <div class="card border-0 shadow h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary bg-opacity-10 rounded p-3 me-3">
                            <i class="bi bi-diagram-3 text-primary" style="font-size: 2rem;"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Categorías</h4>
                            <p class="text-muted mb-0">Clasificación de productos</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                            <span class="fw-semibold">Total de categorías</span>
                            <span class="badge bg-primary fs-5">@Model.Categorias.Count()</span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="Categoria" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-search me-2"></i>Ver todas las categorías
                        </a>
                        <a asp-controller="Categoria" asp-action="Create" class="btn btn-outline-primary">
                            <i class="bi bi-plus-circle me-2"></i>Nueva Categoría
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card Marcas -->
        <div class="col-lg-6">
            <div class="card border-0 shadow h-100">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-success bg-opacity-10 rounded p-3 me-3">
                            <i class="bi bi-award text-success" style="font-size: 2rem;"></i>
                        </div>
                        <div>
                            <h4 class="mb-0 fw-bold">Marcas</h4>
                            <p class="text-muted mb-0">Fabricantes y proveedores</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded">
                            <span class="fw-semibold">Total de marcas</span>
                            <span class="badge bg-success fs-5">@Model.Marcas.Count()</span>
                        </div>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="Marca" asp-action="Index" class="btn btn-success btn-lg">
                            <i class="bi bi-search me-2"></i>Ver todas las marcas
                        </a>
                        <a asp-controller="Marca" asp-action="Create" class="btn btn-outline-success">
                            <i class="bi bi-plus-circle me-2"></i>Nueva Marca
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>