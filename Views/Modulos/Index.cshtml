@model List<ModuloViewModel>

@{
    ViewData["Title"] = "Gestión de Módulos";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2><i class="bi bi-grid me-2"></i>Gestión de Módulos del Sistema</h2>
            <p class="text-muted">Administra los módulos disponibles para asignación de permisos</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Crear Módulo
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                var categorias = Model.GroupBy(m => m.Categoria ?? "Sin categoría");

                @foreach (var categoria in categorias.OrderBy(g => g.Key))
                {
                    <h5 class="mt-3 mb-2 border-bottom pb-2">@categoria.Key</h5>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Módulo</th>
                                    <th>Clave</th>
                                    <th class="text-center">Acciones</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-end">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var modulo in categoria.OrderBy(m => m.Nombre))
                                {
                                    <tr>
                                        <td>
                                            <i class="@(modulo.Icono ?? "bi-square") me-2"></i>
                                            <strong>@modulo.Nombre</strong>
                                        </td>
                                        <td><code>@modulo.Clave</code></td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@modulo.CantidadAcciones</span>
                                        </td>
                                        <td class="text-center">
                                            @if (modulo.Activo)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactivo</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@modulo.Id" class="btn btn-sm btn-outline-info" title="Ver">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@modulo.Id" class="btn btn-sm btn-outline-primary" title="Editar">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@modulo.Id" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-grid" style="font-size: 4rem;"></i>
                    <p class="mt-3">No hay módulos configurados</p>
                </div>
            }
        </div>
    </div>
</div>