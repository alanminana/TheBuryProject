@model EliminarModuloViewModel

@{
    ViewData["Title"] = "Eliminar Módulo";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Modulos")!;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@backUrl">Módulos</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash me-2" aria-hidden="true"></i>Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
                        <strong>¿Está seguro que desea eliminar este módulo?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Módulo:</dt>
                        <dd class="col-sm-9"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-3">Clave:</dt>
                        <dd class="col-sm-9"><code>@Model.Clave</code></dd>

                        <dt class="col-sm-3">Acciones:</dt>
                        <dd class="col-sm-9">
                            @if (Model.CantidadAcciones > 0)
                            {
                                <span class="badge bg-warning text-dark">
                                    @Model.CantidadAcciones acción@(Model.CantidadAcciones != 1 ? "es" : "")
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">Sin acciones</span>
                            }
                        </dd>
                    </dl>

                    @if (Model.CantidadAcciones > 0)
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                            <strong>Advertencia:</strong> Este módulo tiene acciones asociadas. Al eliminarlo, se eliminarán también todas sus acciones y los permisos relacionados.
                        </div>
                    }

                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-circle me-2" aria-hidden="true"></i>
                        <strong>ATENCIÓN:</strong> Esta acción no se puede deshacer. Se eliminarán todos los permisos basados en este módulo.
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@backUrl" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" data-confirm="¿Eliminar el módulo '@Model.Nombre'? Esta acción no se puede deshacer.">
                                <i class="bi bi-trash me-1" aria-hidden="true"></i>Eliminar Módulo
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>