@model ModuloDetalleViewModel

@{
    ViewData["Title"] = "Detalles del Módulo";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Módulos</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="@(Model.Icono ?? "bi-grid") me-2"></i>@Model.Nombre
                    @if (Model.Activo)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactivo</span>
                    }
                </h2>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Clave:</dt>
                        <dd class="col-sm-8"><code>@Model.Clave</code></dd>

                        <dt class="col-sm-4">Categoría:</dt>
                        <dd class="col-sm-8">@(Model.Categoria ?? "Sin categoría")</dd>

                        <dt class="col-sm-4">Orden:</dt>
                        <dd class="col-sm-8">@Model.Orden</dd>

                        <dt class="col-sm-4">Creado:</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</dd>

                        @if (!string.IsNullOrEmpty(Model.Descripcion))
                        {
                            <dt class="col-sm-12 mt-2">Descripción:</dt>
                            <dd class="col-sm-12">@Model.Descripcion</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning me-2"></i>
                        Acciones Disponibles (@Model.Acciones.Count)
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Acciones.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead>
                                    <tr>
                                        <th>Acción</th>
                                        <th>Clave</th>
                                        <th>Descripción</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var accion in Model.Acciones.OrderBy(a => a.Nombre))
                                    {
                                        <tr>
                                            <td><strong>@accion.Nombre</strong></td>
                                            <td><code>@accion.Clave</code></td>
                                            <td><small>@(accion.Descripcion ?? "-")</small></td>
                                            <td class="text-center">
                                                @if (accion.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-lightning" style="font-size: 3rem;"></i>
                            <p class="mt-2">No hay acciones configuradas para este módulo</p>
                            <a asp-controller="Acciones" asp-action="Create" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle me-1"></i>Crear Acción
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>