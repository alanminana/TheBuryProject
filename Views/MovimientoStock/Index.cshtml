@model TheBuryProject.ViewModels.MovimientoStockFilterViewModel
@using TheBuryProject.Models.Enums
@{
    ViewData["Title"] = "Movimientos de Stock";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-arrow-left-right text-info me-2"></i>Movimientos de Stock (Kardex)
                </h2>
                <a asp-action="Create" asp-route-productoId="@(Model?.ProductoId)" class="btn btn-success">
                    <i class="bi bi-plus-circle me-1"></i>Nuevo Ajuste
                </a>
            </div>

            <!-- Filtros -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros</h5>
                </div>
                <div class="card-body text-light">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label class="form-label fw-semibold">Producto</label>
                                <select name="ProductoId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Productos">
                                    <option value="">Todos los productos</option>
                                </select>
                            </div>

                            <div class="col-md-2 mb-3">
                                <label class="form-label fw-semibold">Tipo</label>
                                <select name="Tipo" class="form-select bg-body-secondary text-light border-0">
                                    <option value="">Todos</option>
                                    <option value="@((int)TipoMovimiento.Entrada)" selected="@(Model.Tipo == TipoMovimiento.Entrada)">Entrada</option>
                                    <option value="@((int)TipoMovimiento.Salida)" selected="@(Model.Tipo == TipoMovimiento.Salida)">Salida</option>
                                    <option value="@((int)TipoMovimiento.Ajuste)" selected="@(Model.Tipo == TipoMovimiento.Ajuste)">Ajuste</option>
                                </select>
                            </div>

                            <div class="col-md-2 mb-3">
                                <label class="form-label fw-semibold">Desde</label>
                                <input type="date" name="FechaDesde" class="form-control bg-body-secondary text-light border-0"
                                       value="@Model.FechaDesde?.ToString("yyyy-MM-dd")" />
                            </div>

                            <div class="col-md-2 mb-3">
                                <label class="form-label fw-semibold">Hasta</label>
                                <input type="date" name="FechaHasta" class="form-control bg-body-secondary text-light border-0"
                                       value="@Model.FechaHasta?.ToString("yyyy-MM-dd")" />
                            </div>

                            <div class="col-md-3 mb-3 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Resultados -->
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list me-2"></i>Movimientos</h5>
                    <span class="badge bg-light text-dark">@Model.TotalResultados</span>
                </div>

                <div class="card-body text-light">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th>Fecha</th>
                                    <th>Producto</th>
                                    <th class="text-center">Tipo</th>
                                    <th class="text-end">Cantidad</th>
                                    <th class="text-end">Stock Anterior</th>
                                    <th class="text-end">Stock Nuevo</th>
                                    <th>Referencia</th>
                                    <th>Motivo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Movimientos.Any())
                                {
                                    @foreach (var mov in Model.Movimientos)
                                    {
                                        <tr>
                                            <td>@mov.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                            <td>
                                                <strong>@mov.ProductoCodigo</strong> - @mov.ProductoNombre
                                                <br />
                                                <a asp-action="Kardex" asp-route-id="@mov.ProductoId"
                                                   class="btn btn-sm btn-outline-info mt-1">
                                                    <i class="bi bi-graph-up"></i> Kardex
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                @switch (mov.Tipo)
                                                {
                                                    case TipoMovimiento.Entrada:
                                                        <span class="badge bg-success">Entrada</span>
                                                        break;
                                                    case TipoMovimiento.Salida:
                                                        <span class="badge bg-danger">Salida</span>
                                                        break;
                                                    case TipoMovimiento.Ajuste:
                                                        <span class="badge bg-warning text-dark">Ajuste</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end">
                                                @if (mov.Tipo == TipoMovimiento.Entrada || (mov.Tipo == TipoMovimiento.Ajuste && mov.Cantidad > 0))
                                                {
                                                    <span class="text-success fw-bold">+@mov.Cantidad.ToString("N2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger fw-bold">-@Math.Abs(mov.Cantidad).ToString("N2")</span>
                                                }
                                            </td>
                                            <td class="text-end">@mov.StockAnterior.ToString("N2")</td>
                                            <td class="text-end fw-bold">@mov.StockNuevo.ToString("N2")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(mov.OrdenCompraNumero))
                                                {
                                                    <a asp-controller="OrdenCompra" asp-action="Details" asp-route-id="@mov.OrdenCompraId"
                                                       class="text-info text-decoration-none">
                                                        @mov.Referencia
                                                    </a>
                                                }
                                                else
                                                {
                                                    @mov.Referencia
                                                }
                                            </td>
                                            <td>@mov.Motivo</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center py-5">
                                            <i class="bi bi-inbox display-4 text-muted"></i>
                                            <p class="text-muted mt-2">No se encontraron movimientos.</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
