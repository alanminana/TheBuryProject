@model TheBuryProject.ViewModels.MovimientoStockFilterViewModel
@using TheBuryProject.Models.Enums

@{
    ViewData["Title"] = "Movimientos de Stock";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-arrow-left-right"></i> Movimientos de Stock (Kardex)</h2>
        </div>

        <!-- Filtros -->
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
            </div>
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label class="form-label">Producto</label>
                            <select name="ProductoId" class="form-select" asp-items="ViewBag.Productos">
                                <option value="">Todos los productos</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">Tipo</label>
                            <select name="Tipo" class="form-select">
                                <option value="">Todos</option>
                                <option value="@((int)TipoMovimiento.Entrada)" @(Model.Tipo == TipoMovimiento.Entrada ? "selected" : "")>Entrada</option>
                                <option value="@((int)TipoMovimiento.Salida)" @(Model.Tipo == TipoMovimiento.Salida ? "selected" : "")>Salida</option>
                                <option value="@((int)TipoMovimiento.Ajuste)" @(Model.Tipo == TipoMovimiento.Ajuste ? "selected" : "")>Ajuste</option>
                            </select>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">Desde</label>
                            <input type="date" name="FechaDesde" class="form-control" value="@Model.FechaDesde?.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-2 mb-3">
                            <label class="form-label">Hasta</label>
                            <input type="date" name="FechaHasta" class="form-control" value="@Model.FechaHasta?.ToString("yyyy-MM-dd")" />
                        </div>
                        <div class="col-md-3 mb-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Resultados -->
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="bi bi-list"></i> Movimientos
                    <span class="badge bg-light text-dark">@Model.TotalResultados</span>
                </h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Producto</th>
                                <th class="text-center">Tipo</th>
                                <th class="text-end">Cantidad</th>
                                <th class="text-end">Stock Anterior</th>
                                <th class="text-end">Stock Nuevo</th>
                                <th>Referencia</th>
                                <th>Motivo</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Movimientos.Any())
                            {
                                @foreach (var mov in Model.Movimientos)
                                {
                                    <tr>
                                        <td>@mov.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>
                                            <strong>@mov.ProductoCodigo</strong> - @mov.ProductoNombre
                                            <br />
                                            <a asp-action="Kardex" asp-route-id="@mov.ProductoId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-graph-up"></i> Ver Kardex
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            @switch (mov.Tipo)
                                            {
                                                case TipoMovimiento.Entrada:
                                                    <span class="badge bg-success">Entrada</span>
                                                    break;
                                                case TipoMovimiento.Salida:
                                                    <span class="badge bg-danger">Salida</span>
                                                    break;
                                                case TipoMovimiento.Ajuste:
                                                    <span class="badge bg-warning">Ajuste</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-end">
                                            @if (mov.Tipo == TipoMovimiento.Entrada || mov.Tipo == TipoMovimiento.Ajuste && mov.Cantidad > 0)
                                            {
                                                <span class="text-success fw-bold">+@mov.Cantidad.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger fw-bold">-@Math.Abs(mov.Cantidad).ToString("N2")</span>
                                            }
                                        </td>
                                        <td class="text-end">@mov.StockAnterior.ToString("N2")</td>
                                        <td class="text-end"><strong>@mov.StockNuevo.ToString("N2")</strong></td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(mov.OrdenCompraNumero))
                                            {
                                                <a asp-controller="OrdenCompra" asp-action="Details" asp-route-id="@mov.OrdenCompraId">
                                                    @mov.Referencia
                                                </a>
                                            }
                                            else
                                            {
                                                @mov.Referencia
                                            }
                                        </td>
                                        <td>@mov.Motivo</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center py-4">
                                        <i class="bi bi-inbox display-1 text-muted"></i>
                                        <p class="text-muted mt-2">No se encontraron movimientos</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>