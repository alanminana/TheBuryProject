@using System.Linq
@model TheBuryProject.ViewModels.MovimientoStockFilterViewModel
@{
    ViewData["Title"] = "Movimientos de Stock";
    var movimientos = Model?.Movimientos ?? Enumerable.Empty<TheBuryProject.ViewModels.MovimientoStockViewModel>();
}

<div class="container-fluid mt-4">
    <div class="d-flex flex-wrap justify-content-between align-items-start mb-3 gap-2">
        <div>
            <p class="text-muted text-uppercase small mb-1">Inventario</p>
            <h1 class="h4 mb-1">Movimientos de Stock</h1>
            <p class="text-muted small mb-0">Filtra y revisa los ajustes, ingresos y salidas registrados.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nuevo ajuste
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-funnel text-primary"></i>
                <span class="fw-semibold">Filtros</span>
            </div>
            <small class="text-muted">@Model?.TotalResultados resultado@(Model?.TotalResultados == 1 ? string.Empty : "s")</small>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label asp-for="ProductoId" class="form-label">Producto</label>
                    <select asp-for="ProductoId" class="form-select" asp-items="ViewBag.Productos">
                        <option value="">Todos los productos</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label asp-for="Tipo" class="form-label">Tipo de movimiento</label>
                    <select asp-for="Tipo" class="form-select" asp-items="ViewBag.Tipos">
                        <option value="">Todos los tipos</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label asp-for="FechaDesde" class="form-label">Desde</label>
                    <input asp-for="FechaDesde" type="date" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label asp-for="FechaHasta" class="form-label">Hasta</label>
                    <input asp-for="FechaHasta" type="date" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label asp-for="OrderBy" class="form-label">Ordenar por</label>
                    <select asp-for="OrderBy" class="form-select">
                        <option value="">Fecha (recientes primero)</option>
                        <option value="fecha">Fecha</option>
                        <option value="producto">Producto</option>
                        <option value="tipo">Tipo</option>
                        <option value="cantidad">Cantidad</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label asp-for="OrderDirection" class="form-label">Dirección</label>
                    <select asp-for="OrderDirection" class="form-select">
                        <option value="desc">Descendente</option>
                        <option value="asc">Ascendente</option>
                    </select>
                </div>
                <div class="col-12 d-flex gap-2 mt-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise"></i> Limpiar
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-clock-history text-primary"></i>
                <span class="fw-semibold">Historial de movimientos</span>
            </div>
            <small class="text-muted">Actualizado al @DateTime.Now.ToString("dd/MM/yyyy HH:mm")</small>
        </div>

        <div class="card-body p-0">
            @if (!movimientos.Any())
            {
                <div class="p-4 text-center text-muted">
                    <i class="bi bi-inbox display-6 d-block mb-2"></i>
                    <div>No hay movimientos que coincidan con los filtros seleccionados.</div>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Producto</th>
                                <th class="text-center">Tipo</th>
                                <th class="text-end">Cantidad</th>
                                <th class="text-end">Stock anterior</th>
                                <th class="text-end">Stock nuevo</th>
                                <th>Referencia</th>
                                <th>Motivo</th>
                                <th>Registrado por</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var movimiento in movimientos)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-semibold">@movimiento.Fecha.ToString("dd/MM/yyyy")</div>
                                        <small class="text-muted">@movimiento.Fecha.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@movimiento.ProductoNombre</div>
                                        <small class="text-muted">Código: @movimiento.ProductoCodigo</small>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-@(movimiento.Tipo == TheBuryProject.Models.Enums.TipoMovimiento.Entrada ? "success" : movimiento.Tipo == TheBuryProject.Models.Enums.TipoMovimiento.Salida ? "danger" : "info")">
                                            @movimiento.Tipo
                                        </span>
                                    </td>
                                    <td class="text-end">@movimiento.Cantidad.ToString("N2")</td>
                                    <td class="text-end">@movimiento.StockAnterior.ToString("N2")</td>
                                    <td class="text-end">@movimiento.StockNuevo.ToString("N2")</td>
                                    <td>@(string.IsNullOrWhiteSpace(movimiento.Referencia) ? "-" : movimiento.Referencia)</td>
                                    <td>@(string.IsNullOrWhiteSpace(movimiento.Motivo) ? "-" : movimiento.Motivo)</td>
                                    <td>
                                        <div class="fw-semibold">@movimiento.CreatedBy</div>
                                        <small class="text-muted">Registrado el @movimiento.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
