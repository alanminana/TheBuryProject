@model TheBuryProject.ViewModels.AjusteStockViewModel
@using TheBuryProject.Models.Enums
@{
    ViewData["Title"] = "Ajuste de Stock";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-plus-circle text-info me-2"></i>Ajuste de Stock
                </h2>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-x-octagon-fill me-2"></i>@TempData["Error"]
                </div>
            }

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Información del Ajuste</h5>
                </div>

                <div class="card-body text-light">
                    <form asp-action="Create" method="post" id="formMovimientoStock" data-buscar-productos-url="@Url.Action("BuscarProductos", "MovimientoStock")">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Producto -->
                        <div class="mb-4">
                            <label asp-for="ProductoId" class="form-label fw-semibold"></label>
                            <input type="hidden" asp-for="ProductoId" id="productoIdInput" />
                            <div class="position-relative">
                                <input type="text"
                                       id="productoSearchInput"
                                       class="form-control bg-body-secondary text-light border-0"
                                       data-producto-info-url="@Url.Action("GetProductoInfo", "MovimientoStock")"
                                       value="@(!string.IsNullOrWhiteSpace(Model.ProductoCodigo) ? $"{Model.ProductoCodigo} - {Model.ProductoNombre}" : Model.ProductoNombre)"
                                       placeholder="Buscar producto por código, nombre o descripción..."
                                       autocomplete="off" />
                                <div id="productoSearchResults" class="list-group position-absolute w-100 shadow d-none" style="z-index: 1080;"></div>
                            </div>
                            <span asp-validation-for="ProductoId" class="text-danger"></span>
                        </div>

                        <!-- Info del producto -->
                        <div id="productoInfo" class="alert alert-info text-dark" style="display:none;">
                            <div class="row">
                                <div class="col-md-4"><strong>Código:</strong> <span id="productoCodigo"></span></div>
                                <div class="col-md-4"><strong>Producto:</strong> <span id="productoNombre"></span></div>
                                <div class="col-md-4">
                                    <strong>Stock actual:</strong>
                                    <span id="stockActual" class="badge bg-info text-dark fs-6"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Tipo y cantidad -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Tipo" class="form-label fw-semibold"></label>
                                <select asp-for="Tipo" class="form-select bg-body-secondary text-light border-0" id="tipoSelect">
                                    <option value="">Seleccione tipo...</option>
                                    <option value="@((int)TipoMovimiento.Entrada)">Entrada (Aumenta)</option>
                                    <option value="@((int)TipoMovimiento.Salida)">Salida (Disminuye)</option>
                                    <option value="@((int)TipoMovimiento.Ajuste)">Ajuste (Establece)</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                                <small class="text-muted">
                                    <div><strong>Entrada:</strong> suma al stock actual</div>
                                    <div><strong>Salida:</strong> resta del stock actual</div>
                                    <div><strong>Ajuste:</strong> define un valor exacto</div>
                                </small>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Cantidad" class="form-label fw-semibold"></label>
                                <input asp-for="Cantidad" type="number" step="0.01" min="0"
                                       class="form-control bg-body-secondary text-light border-0" id="cantidadInput" />
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                                <small id="stockResultado" class="form-text"></small>
                            </div>
                        </div>

                        <!-- Referencia -->
                        <div class="mb-4">
                            <label asp-for="Referencia" class="form-label fw-semibold"></label>
                            <input asp-for="Referencia"
                                   class="form-control bg-body-secondary text-light border-0"
                                   placeholder="Ej: Factura #12345, Nota de devolución, etc." />
                            <span asp-validation-for="Referencia" class="text-danger"></span>
                        </div>

                        <!-- Motivo -->
                        <div class="mb-4">
                            <label asp-for="Motivo" class="form-label fw-semibold"></label>
                            <textarea asp-for="Motivo" rows="3"
                                      class="form-control bg-body-secondary text-light border-0"
                                      placeholder="Describa el motivo del ajuste (requerido)"></textarea>
                            <span asp-validation-for="Motivo" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-3">
                            <button type="submit" class="btn btn-success btn-lg fw-semibold">
                                <i class="bi bi-check-circle me-1"></i>Registrar Ajuste
                            </button>
                            <a asp-action="Index" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/movimiento-stock-create.js" asp-append-version="true"></script>
}
