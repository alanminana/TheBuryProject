@model IEnumerable<TheBuryProject.ViewModels.MovimientoStockViewModel>
@using TheBuryProject.Models.Enums
@{
    ViewData["Title"] = "Kardex";
    var producto = ViewBag.Producto as TheBuryProject.Models.Entities.Producto;
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-graph-up text-info me-2"></i>Kardex @if (producto != null){
                    <span>- @producto.Codigo</span>
                                        }
                </h2>
                <div class="d-flex gap-2">
                    @if (producto != null)
                    {
                        <a asp-controller="Producto" asp-action="Details" asp-route-id="@producto.Id" class="btn btn-outline-info">
                            <i class="bi bi-info-circle"></i> Ver Producto
                        </a>
                        <a asp-action="Create" asp-route-productoId="@producto.Id" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Nuevo Ajuste
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>

            @if (producto != null)
            {
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-box-seam me-2"></i>Información del Producto
                        </h5>
                    </div>
                    <div class="card-body text-light">
                        <div class="row gy-2">
                            <div class="col-md-3"><strong>Código:</strong> @producto.Codigo</div>
                            <div class="col-md-5"><strong>Nombre:</strong> @producto.Nombre</div>
                            <div class="col-md-2">
                                <strong>Stock Actual:</strong>
                                <span class="badge @(producto.StockActual <= producto.StockMinimo ? "bg-danger" : "bg-success") fs-6">
                                    @producto.StockActual
                                </span>
                            </div>
                            <div class="col-md-2"><strong>Stock Mínimo:</strong> @producto.StockMinimo</div>
                        </div>
                    </div>
                </div>
            }

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>Historial de Movimientos
                    </h5>
                    <span class="badge bg-light text-dark">@Model.Count()</span>
                </div>

                <div class="card-body p-0 text-light">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Fecha y Hora</th>
                                        <th>Tipo</th>
                                        <th class="text-end">Cantidad</th>
                                        <th class="text-end">Stock Anterior</th>
                                        <th class="text-end">Stock Nuevo</th>
                                        <th>Referencia</th>
                                        <th>Motivo</th>
                                        <th>Usuario</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var mov in Model)
                                    {
                                        var tipoBadge = mov.Tipo switch
                                        {
                                            TipoMovimiento.Entrada => "bg-success",
                                            TipoMovimiento.Salida => "bg-danger",
                                            TipoMovimiento.Ajuste => "bg-warning text-dark",
                                            _ => "bg-secondary"
                                        };
                                        var tipoIcon = mov.Tipo switch
                                        {
                                            TipoMovimiento.Entrada => "bi-arrow-down-circle",
                                            TipoMovimiento.Salida => "bi-arrow-up-circle",
                                            TipoMovimiento.Ajuste => "bi-gear",
                                            _ => "bi-question-circle"
                                        };

                                        <tr>
                                            <td>@mov.CreatedAt.ToString("dd/MM/yyyy HH:mm:ss")</td>
                                            <td>
                                                <span class="badge @tipoBadge">
                                                    <i class="bi @tipoIcon me-1"></i>@mov.Tipo
                                                </span>
                                            </td>
                                            <td class="text-end fw-bold">@mov.Cantidad.ToString("N2")</td>
                                            <td class="text-end">@mov.StockAnterior.ToString("N2")</td>
                                            <td class="text-end fw-bold text-info">@mov.StockNuevo.ToString("N2")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(mov.Referencia))
                                                {
                                                    if (mov.OrdenCompraId.HasValue)
                                                    {
                                                        <a asp-controller="OrdenCompra" asp-action="Details" asp-route-id="@mov.OrdenCompraId" class="text-info text-decoration-none">
                                                            @mov.Referencia
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        @mov.Referencia
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>@(string.IsNullOrEmpty(mov.Motivo) ? "-" : mov.Motivo)</td>
                                            <td>@(string.IsNullOrEmpty(mov.CreatedBy) ? "Sistema" : mov.CreatedBy)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-5 text-center text-muted">
                            <i class="bi bi-inbox display-5"></i>
                            <p class="mt-2">No hay movimientos registrados para este producto.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
