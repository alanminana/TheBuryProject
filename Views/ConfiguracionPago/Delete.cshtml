@model TheBuryProject.ViewModels.ConfiguracionPagoViewModel

@{
    ViewData["Title"] = "Eliminar Configuración";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-trash"></i> @ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Atención:</strong> Está por eliminar esta configuración de pago. Esta acción no se puede deshacer.
                </div>

                <h5>¿Está seguro que desea eliminar esta configuración?</h5>

                <table class="table table-bordered mt-3">
                    <tr>
                        <th width="30%">Tipo de Pago:</th>
                        <td><strong>@Model.TipoPago</strong></td>
                    </tr>
                    <tr>
                        <th>Nombre:</th>
                        <td>@Model.Nombre</td>
                    </tr>
                    <tr>
                        <th>Descripción:</th>
                        <td>@(string.IsNullOrEmpty(Model.Descripcion) ? "-" : Model.Descripcion)</td>
                    </tr>
                    <tr>
                        <th>Estado:</th>
                        <td>
                            @if (Model.Activo)
                            {
                                <span class="badge bg-success">Activo</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactivo</span>
                            }
                        </td>
                    </tr>
                </table>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
                    @Html.AntiForgeryToken()

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirmar Eliminación
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>