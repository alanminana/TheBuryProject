@model TheBuryProject.ViewModels.ConfiguracionPagoViewModel
@{
    ViewData["Title"] = "Editar Configuración de Pago";
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-pencil-square text-warning me-2"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-secondary mb-0">Actualizá nombre, descuentos, recargos y estado de esta forma de pago</p>
                </div>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-primary text-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="fw-semibold mb-0">@Model.Nombre</h5>
                        <span class="badge @(Model.Activo ? "bg-success" : "bg-secondary")">
                            @(Model.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                    <small class="text-light-50">Tipo de pago: @Model.TipoPago</small>
                </div>

                <div class="card-body">
                    <form asp-action="Edit"
                          asp-route-id="@Model.Id"
                          method="post"
                          novalidate
                          data-configuracion-pago-form
                          data-porcentaje-descuento-id="@Html.IdFor(m => m.PorcentajeDescuentoMaximo)"
                          data-porcentaje-recargo-id="@Html.IdFor(m => m.PorcentajeRecargo)">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>Revisá los campos marcados en rojo.</div>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="TipoPago" />

                        <!-- Datos básicos -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-semibold"></label>
                            <input asp-for="Nombre" class="form-control bg-body-secondary text-light border-0" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-semibold"></label>
                            <textarea asp-for="Descripcion" class="form-control bg-body-secondary text-light border-0" rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="form-check form-switch mb-4">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label fw-semibold"></label>
                        </div>

                        <hr class="border-secondary" />

                        <!-- Descuentos -->
                        <h5 class="text-info mb-3">
                            <i class="bi bi-tag me-2"></i>Descuentos
                        </h5>
                        <div class="row g-3 align-items-center">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="PermiteDescuento" class="form-check-input" type="checkbox" id="permiteDescuentoCheck" />
                                    <label asp-for="PermiteDescuento" class="form-check-label fw-semibold"></label>
                                </div>
                            </div>

                            <div class="col-md-6" id="descuentoMaxDiv" style="display:none;">
                                <label asp-for="PorcentajeDescuentoMaximo" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PorcentajeDescuentoMaximo"
                                           class="form-control bg-body-secondary text-light border-0"
                                           type="number" step="0.01" min="0" max="100" />
                                    <span class="input-group-text bg-secondary text-light border-0">%</span>
                                </div>
                                <span asp-validation-for="PorcentajeDescuentoMaximo" class="text-danger small"></span>
                            </div>
                        </div>

                        <hr class="border-secondary mt-4" />

                        <!-- Recargos -->
                        <h5 class="text-warning mb-3">
                            <i class="bi bi-percent me-2"></i>Recargos
                        </h5>
                        <div class="row g-3 align-items-center">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="TieneRecargo" class="form-check-input" type="checkbox" id="tieneRecargoCheck" />
                                    <label asp-for="TieneRecargo" class="form-check-label fw-semibold"></label>
                                </div>
                            </div>

                            <div class="col-md-6" id="recargoDiv" style="display:none;">
                                <label asp-for="PorcentajeRecargo" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="PorcentajeRecargo"
                                           class="form-control bg-body-secondary text-light border-0"
                                           type="number" step="0.01" min="0" max="100" />
                                    <span class="input-group-text bg-secondary text-light border-0">%</span>
                                </div>
                                <span asp-validation-for="PorcentajeRecargo" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-3 mt-5">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light px-4">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save me-1"></i>Actualizar Configuración
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/configuracion-pago-create.js" asp-append-version="true"></script>
}
