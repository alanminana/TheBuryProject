@model TheBuryProject.ViewModels.ConfiguracionPagoViewModel

@{
    ViewData["Title"] = "Editar Configuración de Pago";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-pencil"></i> @ViewData["Title"]</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">@Model.TipoPago - @Model.Nombre</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="TipoPago" />

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-3">
                        <input asp-for="Activo" class="form-check-input" type="checkbox" />
                        <label asp-for="Activo" class="form-check-label"></label>
                    </div>

                    <hr />

                    <h5>Descuentos</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="PermiteDescuento" class="form-check-input" type="checkbox" id="permiteDescuentoCheck" />
                                <label asp-for="PermiteDescuento" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3" id="descuentoMaxDiv" style="display: none;">
                            <label asp-for="PorcentajeDescuentoMaximo" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="PorcentajeDescuentoMaximo" class="form-control" type="number" step="0.01" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="PorcentajeDescuentoMaximo" class="text-danger"></span>
                        </div>
                    </div>

                    <hr />

                    <h5>Recargos</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="TieneRecargo" class="form-check-input" type="checkbox" id="tieneRecargoCheck" />
                                <label asp-for="TieneRecargo" class="form-check-label"></label>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3" id="recargoDiv" style="display: none;">
                            <label asp-for="PorcentajeRecargo" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="PorcentajeRecargo" class="form-control" type="number" step="0.01" min="0" max="100" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="PorcentajeRecargo" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Actualizar Configuración
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            // Mostrar/ocultar campo de descuento máximo
            $('#permiteDescuentoCheck').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#descuentoMaxDiv').show();
                } else {
                    $('#descuentoMaxDiv').hide();
                    $('#PorcentajeDescuentoMaximo').val('');
                }
            });

            // Mostrar/ocultar campo de recargo
            $('#tieneRecargoCheck').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#recargoDiv').show();
                } else {
                    $('#recargoDiv').hide();
                    $('#PorcentajeRecargo').val('');
                }
            });

            // Inicializar estado
            if ($('#permiteDescuentoCheck').is(':checked')) {
                $('#descuentoMaxDiv').show();
            }
            if ($('#tieneRecargoCheck').is(':checked')) {
                $('#recargoDiv').show();
            }
        });
    </script>
}