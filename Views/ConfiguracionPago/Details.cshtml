@model TheBuryProject.ViewModels.ConfiguracionPagoViewModel
@{
    ViewData["Title"] = "Detalles de Configuración de Pago";
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold mb-1">
                        <i class="bi bi-gear text-info me-2" aria-hidden="true"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-secondary mb-0">Revisá los parámetros de esta forma de pago</p>
                </div>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil" aria-hidden="true"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left" aria-hidden="true"></i> Volver
                    </a>
                </div>
            </div>

            <!-- Mensajes -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-check-circle-fill me-2" aria-hidden="true"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            }

            <!-- Información general -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header @(Model.Activo ? "bg-primary" : "bg-secondary") text-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h4 class="mb-0">@Model.Nombre</h4>
                            <small class="text-light-50">@Model.TipoPago</small>
                        </div>
                        <span class="badge @(Model.Activo ? "bg-success" : "bg-danger") fs-6">
                            @(Model.Activo ? "Activo" : "Inactivo")
                        </span>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row g-3 mb-3">
                        <div class="col-md-6">
                            <table class="table table-dark table-borderless align-middle mb-0">
                                <tr>
                                    <th scope="row" class="text-muted" width="40%">Nombre:</th>
                                    <td class="fw-semibold">@Model.Nombre</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="text-muted">Tipo de Pago:</th>
                                    <td>@Model.TipoPago</td>
                                </tr>
                                <tr>
                                    <th scope="row" class="text-muted">Estado:</th>
                                    <td>
                                        <span class="badge @(Model.Activo ? "bg-success" : "bg-secondary")">
                                            @(Model.Activo ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                </tr>
                            </table>
                        </div>

                        <div class="col-md-6">
                            <table class="table table-dark table-borderless align-middle mb-0">
                                <tr>
                                    <th scope="row" class="text-muted" width="45%">Permite Descuento:</th>
                                    <td>
                                        @if (Model.PermiteDescuento)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle me-1" aria-hidden="true"></i> Sí
                                            </span>
                                            @if (Model.PorcentajeDescuentoMaximo.HasValue)
                                            {
                                                <span class="text-secondary ms-2 small">
                                                    Máx: @Model.PorcentajeDescuentoMaximo.Value.ToString("N2") %
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle me-1" aria-hidden="true"></i> No
                                            </span>
                                        }
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row" class="text-muted">Tiene Recargo:</th>
                                    <td>
                                        @if (Model.TieneRecargo)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-triangle me-1" aria-hidden="true"></i> Sí
                                            </span>
                                            @if (Model.PorcentajeRecargo.HasValue)
                                            {
                                                <span class="text-secondary ms-2 small">
                                                    Recargo: @Model.PorcentajeRecargo.Value.ToString("N2") %
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle me-1" aria-hidden="true"></i> No
                                            </span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Descripcion))
                    {
                        <hr class="border-secondary" />
                        <div class="alert alert-info bg-opacity-10 border-info text-light mb-0">
                            <h6 class="fw-semibold mb-1">
                                <i class="bi bi-info-circle me-2" aria-hidden="true"></i>Descripción
                            </h6>
                            <p class="mb-0">@Model.Descripcion</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Configuración de tarjetas (solo si aplica) -->
            @if (Model.TipoPago == TheBuryProject.Models.Enums.TipoPago.TarjetaCredito ||
                        Model.TipoPago == TheBuryProject.Models.Enums.TipoPago.TarjetaDebito)
            {
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-header bg-info text-dark">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-credit-card me-2" aria-hidden="true"></i>Tarjetas Configuradas
                            </h5>
                            <a asp-action="ConfigurarTarjeta" asp-route-configuracionPagoId="@Model.Id"
                               class="btn btn-sm btn-light">
                                <i class="bi bi-plus-circle" aria-hidden="true"></i> Agregar Tarjeta
                            </a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        @if (Model.ConfiguracionesTarjeta != null && Model.ConfiguracionesTarjeta.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-dark table-hover align-middle mb-0">
                                    <thead class="table-secondary text-dark">
                                        <tr>
                                            <th scope="col">Tarjeta</th>
                                            <th scope="col">Tipo</th>
                                            <th scope="col">Cuotas</th>
                                            <th scope="col">Interés</th>
                                            <th scope="col">Recargo Débito</th>
                                            <th scope="col">Estado</th>
                                            <th scope="col" class="text-center">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var tarjeta in Model.ConfiguracionesTarjeta)
                                        {
                                            <tr>
                                                <td class="fw-semibold">@tarjeta.NombreTarjeta</td>
                                                <td>
                                                    @if (tarjeta.TipoTarjeta == TheBuryProject.Models.Enums.TipoTarjeta.Credito)
                                                    {
                                                        <span class="badge bg-warning text-dark">Crédito</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-primary">Débito</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (tarjeta.PermiteCuotas)
                                                    {
                                                        <span>Hasta @tarjeta.CantidadMaximaCuotas cuotas</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Sin cuotas</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (tarjeta.TipoCuota == TheBuryProject.Models.Enums.TipoCuotaTarjeta.ConInteres &&
                                                                                            tarjeta.TasaInteresesMensual.HasValue)
                                                    {
                                                        <span class="text-danger">
                                                            @tarjeta.TasaInteresesMensual.Value.ToString("N2") %
                                                        </span>
                                                    }
                                                    else if (tarjeta.TipoCuota == TheBuryProject.Models.Enums.TipoCuotaTarjeta.SinInteres)
                                                    {
                                                        <span class="text-success">Sin interés</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (tarjeta.TieneRecargoDebito && tarjeta.PorcentajeRecargoDebito.HasValue)
                                                    {
                                                        <span class="text-warning">
                                                            @tarjeta.PorcentajeRecargoDebito.Value.ToString("N2") %
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">-</span>
                                                    }
                                                </td>
                                                <td>
                                                    <span class="badge @(tarjeta.Activa ? "bg-success" : "bg-secondary")">
                                                        @(tarjeta.Activa ? "Activa" : "Inactiva")
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <!-- Ajustá los asp-action/asp-route según tus acciones reales -->
                                                        <a class="btn btn-outline-warning" title="Editar">
                                                            <i class="bi bi-pencil" aria-hidden="true"></i>
                                                        </a>
                                                        <a class="btn btn-outline-danger" title="Eliminar">
                                                            <i class="bi bi-trash" aria-hidden="true"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-5">
                                <i class="bi bi-credit-card" style="font-size:3rem;" aria-hidden="true"></i>
                                <p class="mt-3 mb-2">No hay tarjetas configuradas para esta forma de pago.</p>
                                <a asp-action="ConfigurarTarjeta" asp-route-configuracionPagoId="@Model.Id" class="btn btn-info">
                                    <i class="bi bi-plus-circle" aria-hidden="true"></i> Agregar Primera Tarjeta
                                </a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>
