@model TheBuryProject.ViewModels.OrdenCompraViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Editar Orden de Compra";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-pencil-square text-warning me-2" aria-hidden="true"></i>Editar Orden de Compra
                </h2>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver a Detalles
                </a>
            </div>

            <form asp-action="Edit" method="post" id="ordenCompraForm">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RowVersion" />
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" aria-label="Errores de validación"></div>
                }

                <div class="row">
                    <!-- Columna principal -->
                    <div class="col-lg-8">
                        <!-- Datos generales -->
                        <div class="card bg-dark border-0 shadow-sm mb-4">
                            <div class="card-header bg-primary border-0">
                                <h5 class="fw-bold text-dark mb-0"><i class="bi bi-info-circle me-2" aria-hidden="true"></i>Datos Generales</h5>
                            </div>
                            <div class="card-body text-light">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="Numero" class="form-label fw-semibold"></label>
                                        <input asp-for="Numero" class="form-control bg-body-secondary text-light border-0" />
                                        <span asp-validation-for="Numero" class="text-danger"></span>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label asp-for="ProveedorId" class="form-label fw-semibold"></label>
                                        <select asp-for="ProveedorId" id="ProveedorId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Proveedores" data-productos-url="@Url.Action("GetProductos", "Proveedor")">
                                            <option value="">Seleccione un proveedor</option>
                                        </select>
                                        <span asp-validation-for="ProveedorId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="FechaEmision" class="form-label fw-semibold"></label>
                                        <input asp-for="FechaEmision" type="date" class="form-control bg-body-secondary text-light border-0" />
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="FechaEntregaEstimada" class="form-label fw-semibold"></label>
                                        <input asp-for="FechaEntregaEstimada" type="date" class="form-control bg-body-secondary text-light border-0" />
                                    </div>
                                    <div class="col-md-4 mb-3">
                                        <label asp-for="Estado" class="form-label fw-semibold"></label>
                                        <select asp-for="Estado" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Estados"></select>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Observaciones" class="form-label fw-semibold"></label>
                                    <textarea asp-for="Observaciones" rows="3" class="form-control bg-body-secondary text-light border-0"></textarea>
                                </div>
                            </div>
                        </div>

                        <!-- Productos -->
                        <div class="card bg-dark border-0 shadow-sm mb-4">
                            <div class="card-header bg-success border-0">
                                <h5 class="fw-bold text-dark mb-0"><i class="bi bi-box-seam me-2" aria-hidden="true"></i>Productos</h5>
                            </div>
                            <div class="card-body text-light">
                                <div class="row mb-3">
                                    <div class="col-md-5">
                                        <label class="form-label fw-semibold">Producto</label>
                                        <div class="position-relative">
                                            <input type="text" id="productoSearchInput" class="form-control bg-body-secondary text-light border-0" placeholder="Buscar producto del proveedor..." autocomplete="off" aria-autocomplete="list" aria-controls="productoSearchResults" aria-expanded="false" />
                                            <div id="productoSearchResults" class="list-group position-absolute w-100 shadow d-none" style="z-index: 1080;"></div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold">Cantidad</label>
                                        <input type="number" id="cantidadInput" class="form-control bg-body-secondary text-light border-0" step="1" min="1" value="1" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label fw-semibold">Precio Unit.</label>
                                        <input type="number" id="precioInput" class="form-control bg-body-secondary text-light border-0" step="0.01" min="0.01" value="0" />
                                    </div>
                                    <div class="col-md-1 d-flex align-items-end">
                                        <button type="button" id="agregarDetalleBtn" class="btn btn-success w-100">
                                            <i class="bi bi-plus-lg" aria-hidden="true"></i>
                                            <span class="visually-hidden">Agregar producto</span>
                                        </button>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-dark table-striped table-hover align-middle" id="detallesTable">
                                        <thead class="table-secondary text-dark">
                                            <tr>
                                                <th scope="col">Producto</th>
                                                <th scope="col" class="text-end">Cantidad</th>
                                                <th scope="col" class="text-end">Precio Unit.</th>
                                                <th scope="col" class="text-end">Subtotal</th>
                                                <th scope="col" class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody id="detallesBody">
                                            <tr id="emptyRow">
                                                <td colspan="5" class="text-center text-muted py-3">No hay productos agregados</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Totales -->
                    <div class="col-lg-4">
                        <div class="card bg-dark border-0 shadow-sm sticky-top mb-4" style="top:20px;">
                            <div class="card-header bg-info border-0">
                                <h5 class="fw-bold text-dark mb-0"><i class="bi bi-calculator me-2" aria-hidden="true"></i>Totales</h5>
                            </div>
                            <div class="card-body text-light">
                                <div class="mb-3">
                                    <label asp-for="Descuento" class="form-label fw-semibold"></label>
                                    <input asp-for="Descuento" class="form-control bg-body-secondary text-light border-0" type="number" step="0.01" min="0" value="0" />
                                </div>
                                <hr />
                                <dl class="row mb-0">
                                    <dt class="col-sm-6">Subtotal:</dt>
                                    <dd class="col-sm-6 text-end" id="subtotalDisplay">$0.00</dd>
                                    <dt class="col-sm-6">Descuento:</dt>
                                    <dd class="col-sm-6 text-end" id="descuentoDisplay">$0.00</dd>
                                    <dt class="col-sm-6">IVA (21%):</dt>
                                    <dd class="col-sm-6 text-end" id="ivaDisplay">$0.00</dd>
                                    <dt class="col-sm-6 border-top pt-2"><strong>Total:</strong></dt>
                                    <dd class="col-sm-6 text-end border-top pt-2"><strong class="fs-5 text-info" id="totalDisplay">$0.00</strong></dd>
                                </dl>
                                <input type="hidden" asp-for="Subtotal" id="subtotalHidden" />
                                <input type="hidden" asp-for="Iva" id="ivaHidden" />
                                <input type="hidden" asp-for="Total" id="totalHidden" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg fw-semibold">
                                <i class="bi bi-save me-1" aria-hidden="true"></i>Guardar Cambios
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <textarea id="ordenCompraDetallesInicialesJson" class="d-none" aria-hidden="true" tabindex="-1" readonly>
@JsonSerializer.Serialize(
    (Model.Detalles ?? new List<TheBuryProject.ViewModels.OrdenCompraDetalleViewModel>())
        .Select(d => new {
            id = d.Id,
            productoId = d.ProductoId,
            productoNombre = d.ProductoNombre,
            cantidad = d.Cantidad,
            precioUnitario = d.PrecioUnitario,
            subtotal = d.Subtotal
        })
)
    </textarea>
    <script src="~/js/orden-compra-create.js" asp-append-version="true"></script>
}
