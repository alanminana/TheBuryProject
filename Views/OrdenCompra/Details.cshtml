@model TheBuryProject.ViewModels.OrdenCompraViewModel
@using TheBuryProject.Models.Enums

@{
    ViewData["Title"] = "Detalle de Orden de Compra";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-receipt"></i> Detalle de Orden de Compra</h2>
            <div>
                @if (Model.Estado != EstadoOrdenCompra.Recibida && Model.Estado != EstadoOrdenCompra.Cancelada)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                }

                @if (Model.Estado == EstadoOrdenCompra.Confirmada || Model.Estado == EstadoOrdenCompra.EnTransito)
                {
                    <a asp-action="Recepcionar" asp-route-id="@Model.Id" class="btn btn-success">
                        <i class="bi bi-box-arrow-in-down"></i> Recepcionar Mercadería
                    </a>
                }

                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Información General</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">N° Orden</dt>
                    <dd class="col-sm-9"><strong>@Model.Numero</strong></dd>

                    <dt class="col-sm-3">Fecha Emisión</dt>
                    <dd class="col-sm-9">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>

                    @if (Model.FechaEntregaEstimada.HasValue)
                    {
                        <dt class="col-sm-3">Fecha Entrega Estimada</dt>
                        <dd class="col-sm-9">@Model.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")</dd>
                    }

                    @if (Model.FechaRecepcion.HasValue)
                    {
                        <dt class="col-sm-3">Fecha Recepción</dt>
                        <dd class="col-sm-9">@Model.FechaRecepcion.Value.ToString("dd/MM/yyyy")</dd>
                    }

                    <dt class="col-sm-3">Proveedor</dt>
                    <dd class="col-sm-9">@Model.ProveedorNombre</dd>

                    <dt class="col-sm-3">Estado</dt>
                    <dd class="col-sm-9">
                        @switch (Model.Estado)
                        {
                            case EstadoOrdenCompra.Borrador:
                                <span class="badge bg-secondary">Borrador</span>
                                ; break;
                            case EstadoOrdenCompra.Enviada:

                                <span class="badge bg-info">Enviada</span>
                                ; break;
                            case EstadoOrdenCompra.Confirmada:

                                <span class="badge bg-primary">Confirmada</span>
                                ; break;
                            case EstadoOrdenCompra.EnTransito:

                                <span class="badge bg-warning">En Tránsito</span>
                                ; break;
                            case EstadoOrdenCompra.Recibida:

                                <span class="badge bg-success">Recibida</span>
                                ; break;
                            case EstadoOrdenCompra.Cancelada:

                                <span class="badge bg-danger">Cancelada</span>
                                ; break;
                        }
                    </dd>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <dt class="col-sm-3">Observaciones</dt>
                        <dd class="col-sm-9">@Model.Observaciones</dd>
                    }
                </dl>
            </div>
        </div>

        <div class="card mb-3">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-box-seam"></i> Productos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Producto</th>
                                <th class="text-end">Cantidad</th>
                                <th class="text-end">Recibida</th>
                                <th class="text-end">Precio Unit.</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                var estaPendiente = detalle.CantidadRecibida < detalle.Cantidad;
                                <tr class="@(estaPendiente ? "" : "table-success")">
                                    <td>
                                        <strong>@detalle.ProductoCodigo</strong> - @detalle.ProductoNombre
                                    </td>
                                    <td class="text-end">@detalle.Cantidad</td>
                                    <td class="text-end">
                                        <span class="badge @(estaPendiente ? "bg-warning" : "bg-success")">
                                            @detalle.CantidadRecibida
                                        </span>
                                    </td>
                                    <td class="text-end">$@detalle.PrecioUnitario.ToString("N2")</td>
                                    <td class="text-end"><strong>$@detalle.Subtotal.ToString("N2")</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-calculator"></i> Totales</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-9 text-end">Subtotal:</dt>
                    <dd class="col-sm-3 text-end">$@Model.Subtotal.ToString("N2")</dd>

                    @if (Model.Descuento > 0)
                    {
                        <dt class="col-sm-9 text-end">Descuento:</dt>
                        <dd class="col-sm-3 text-end text-danger">-$@Model.Descuento.ToString("N2")</dd>
                    }

                    <dt class="col-sm-9 text-end">IVA (21%):</dt>
                    <dd class="col-sm-3 text-end">$@Model.Iva.ToString("N2")</dd>

                    <dt class="col-sm-9 text-end border-top pt-2">Total:</dt>
                    <dd class="col-sm-3 text-end border-top pt-2">
                        <h4 class="text-primary"><strong>$@Model.Total.ToString("N2")</strong></h4>
                    </dd>
                </dl>
            </div>
        </div>

        <!-- ✅ Bloque único Cambiar Estado con validación -->
        @if (Model.Estado != EstadoOrdenCompra.Recibida && Model.Estado != EstadoOrdenCompra.Cancelada)
        {
            <div class="card mt-3">
                <div class="card-header">
                    <h5 class="mb-0">Cambiar Estado</h5>
                </div>
                <div class="card-body">
                    <form asp-action="CambiarEstado" method="post" class="d-flex gap-2 align-items-center">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />

                        <label class="form-label mb-0 me-2">Nuevo Estado:</label>
                        <select name="nuevoEstado" class="form-select" style="max-width: 300px;">
                            @if (Model.Estado == EstadoOrdenCompra.Borrador)
                            {
                                <option value="@((int)EstadoOrdenCompra.Enviada)">Enviada</option>
                            }
                            @if (Model.Estado == EstadoOrdenCompra.Enviada)
                            {
                                <option value="@((int)EstadoOrdenCompra.Confirmada)">Confirmada</option>
                            }
                            @if (Model.Estado == EstadoOrdenCompra.Confirmada)
                            {
                                <option value="@((int)EstadoOrdenCompra.EnTransito)">En Tránsito</option>
                            }
                            @if (Model.Estado == EstadoOrdenCompra.EnTransito)
                            {
                                <option value="@((int)EstadoOrdenCompra.Recibida)">Recibida</option>
                            }

                            <!-- Cancelar siempre permitido -->
                            <option value="@((int)EstadoOrdenCompra.Cancelada)">Cancelar</option>
                        </select>

                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-arrow-right-circle"></i> Cambiar Estado
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>
