@model TheBuryProject.ViewModels.OrdenCompraViewModel
@using TheBuryProject.Models.Enums

@{
    ViewData["Title"] = "Detalle de Orden de Compra";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-receipt me-2 text-info"></i>Detalle de Orden de Compra
                </h2>
                <div class="d-flex gap-2">
                    @if (Model.Estado != EstadoOrdenCompra.Recibida && Model.Estado != EstadoOrdenCompra.Cancelada)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Editar
                        </a>
                    }
                    @if (Model.Estado == EstadoOrdenCompra.Confirmada || Model.Estado == EstadoOrdenCompra.EnTransito)
                    {
                        <a asp-action="Recepcionar" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="bi bi-box-arrow-in-down me-1"></i>Recepcionar
                        </a>
                    }
                    <a asp-action="Index" class="btn btn-outline-light">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                </div>
            }

            <!-- Información general -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-primary border-0">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-info-circle me-2"></i>Información General</h5>
                </div>
                <div class="card-body text-light">
                    <dl class="row">
                        <dt class="col-sm-4">N° Orden</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Numero</dd>

                        <dt class="col-sm-4">Fecha Emisión</dt>
                        <dd class="col-sm-8">@Model.FechaEmision:dd/MM/yyyy</dd>

                        @if (Model.FechaEntregaEstimada.HasValue)
                        {
                            <dt class="col-sm-4">Entrega Estimada</dt>
                            <dd class="col-sm-8">@Model.FechaEntregaEstimada.Value:dd/MM/yyyy</dd>
                        }

                        @if (Model.FechaRecepcion.HasValue)
                        {
                            <dt class="col-sm-4">Recepción</dt>
                            <dd class="col-sm-8">@Model.FechaRecepcion.Value:dd/MM/yyyy</dd>
                        }

                        <dt class="col-sm-4">Proveedor</dt>
                        <dd class="col-sm-8">@Model.ProveedorNombre</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">
                            @{
                                var badge = Model.Estado switch
                                {
                                    EstadoOrdenCompra.Borrador => "bg-secondary",
                                    EstadoOrdenCompra.Enviada => "bg-info text-dark",
                                    EstadoOrdenCompra.Confirmada => "bg-primary",
                                    EstadoOrdenCompra.EnTransito => "bg-warning text-dark",
                                    EstadoOrdenCompra.Recibida => "bg-success",
                                    EstadoOrdenCompra.Cancelada => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badge fs-6 px-3 py-2">@Model.Estado</span>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <dt class="col-sm-4">Observaciones</dt>
                            <dd class="col-sm-8">@Model.Observaciones</dd>
                        }
                    </dl>
                </div>
            </div>

            <!-- Productos -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-success border-0">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-box-seam me-2"></i>Productos</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-striped align-middle mb-0">
                            <thead class="table-secondary text-dark">
                                <tr>
                                    <th>Producto</th>
                                    <th class="text-end">Cantidad</th>
                                    <th class="text-end">Recibida</th>
                                    <th class="text-end">Precio Unit.</th>
                                    <th class="text-end">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var d in Model.Detalles)
                                {
                                    var pendiente = d.CantidadRecibida < d.Cantidad;
                                    <tr class="@(pendiente ? "" : "table-success text-dark")">
                                        <td><strong>@d.ProductoCodigo</strong> - @d.ProductoNombre</td>
                                        <td class="text-end">@d.Cantidad</td>
                                        <td class="text-end">
                                            <span class="badge @(pendiente ? "bg-warning text-dark" : "bg-success")">@d.CantidadRecibida</span>
                                        </td>
                                        <td class="text-end">$@d.PrecioUnitario:N2</td>
                                        <td class="text-end fw-semibold">$@d.Subtotal:N2</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Totales -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-info border-0">
                    <h5 class="fw-bold text-dark mb-0"><i class="bi bi-calculator me-2"></i>Totales</h5>
                </div>
                <div class="card-body text-light">
                    <dl class="row mb-0">
                        <dt class="col-sm-9 text-end">Subtotal:</dt>
                        <dd class="col-sm-3 text-end">$@Model.Subtotal:N2</dd>

                        @if (Model.Descuento > 0)
                        {
                            <dt class="col-sm-9 text-end">Descuento:</dt>
                            <dd class="col-sm-3 text-end text-danger">-$@Model.Descuento:N2</dd>
                        }

                        <dt class="col-sm-9 text-end">IVA (21%):</dt>
                        <dd class="col-sm-3 text-end">$@Model.Iva:N2</dd>

                        <dt class="col-sm-9 text-end border-top pt-2">Total:</dt>
                        <dd class="col-sm-3 text-end border-top pt-2">
                            <h4 class="text-info fw-bold">$@Model.Total:N2</h4>
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Cambiar Estado -->
            @if (Model.Estado != EstadoOrdenCompra.Recibida && Model.Estado != EstadoOrdenCompra.Cancelada)
            {
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-header bg-secondary border-0">
                        <h5 class="fw-bold text-dark mb-0"><i class="bi bi-arrow-repeat me-2"></i>Cambiar Estado</h5>
                    </div>
                    <div class="card-body text-light">
                        <form asp-action="CambiarEstado" method="post" class="d-flex gap-3 align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label class="form-label mb-0">Nuevo Estado:</label>
                            <select name="nuevoEstado" class="form-select bg-body-secondary text-light border-0" style="max-width:280px;">
                                @if (Model.Estado == EstadoOrdenCompra.Borrador)
                                {
                                    <option value="@((int)EstadoOrdenCompra.Enviada)">Enviada</option>
                                }
                                @if (Model.Estado == EstadoOrdenCompra.Enviada)
                                {
                                    <option value="@((int)EstadoOrdenCompra.Confirmada)">Confirmada</option>
                                }
                                @if (Model.Estado == EstadoOrdenCompra.Confirmada)
                                {
                                    <option value="@((int)EstadoOrdenCompra.EnTransito)">En Tránsito</option>
                                }
                                @if (Model.Estado == EstadoOrdenCompra.EnTransito)
                                {
                                    <option value="@((int)EstadoOrdenCompra.Recibida)">Recibida</option>
                                }
                                <option value="@((int)EstadoOrdenCompra.Cancelada)">Cancelar</option>
                            </select>
                            <button type="submit" class="btn btn-primary text-dark fw-semibold">
                                <i class="bi bi-arrow-right-circle me-1"></i>Cambiar
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
