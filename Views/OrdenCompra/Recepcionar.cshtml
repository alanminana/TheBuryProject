@model TheBuryProject.ViewModels.OrdenCompraViewModel

@{
    ViewData["Title"] = "Recepcionar Mercadería";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-box-arrow-in-down text-success me-2"></i>Recepcionar Mercadería
                </h2>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            <!-- Info de la orden -->
            <div class="card bg-dark border-secondary mb-4 shadow-sm">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-receipt me-2"></i>Orden: @Model.Numero
                    </h5>
                    <span class="badge bg-info text-dark">@Model.Estado</span>
                </div>
                <div class="card-body text-light">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Proveedor:</dt>
                        <dd class="col-sm-9">@Model.ProveedorNombre</dd>

                        <dt class="col-sm-3">Fecha Emisión:</dt>
                        <dd class="col-sm-9">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>
                    </dl>
                </div>
            </div>

            <!-- Validación de detalles -->
            @if (Model.Detalles == null || !Model.Detalles.Any())
            {
                <div class="alert alert-warning border-0 shadow-sm">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>No hay productos en esta orden de compra.</strong>
                    <p class="mt-2 mb-0">Verifique que los productos estén correctamente asociados.</p>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mt-3">
                        <i class="bi bi-pencil"></i> Editar Orden
                    </a>
                </div>
            }
            else
            {
                <form asp-action="Recepcionar" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="card bg-dark border-0 shadow-sm">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-box-seam me-2"></i>Productos a Recepcionar
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-dark table-hover align-middle mb-0">
                                    <thead class="table-secondary text-dark">
                                        <tr>
                                            <th>Producto</th>
                                            <th class="text-center">Cantidad Solicitada</th>
                                            <th class="text-center">Recibida</th>
                                            <th class="text-center">Pendiente</th>
                                            <th class="text-center">Recepcionar Ahora</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.Detalles.Count; i++)
                                        {
                                            var detalle = Model.Detalles[i];
                                            var pendiente = detalle.Cantidad - detalle.CantidadRecibida;

                                            <tr class="@(pendiente == 0 ? "table-success text-dark" : "")">
                                                <td>
                                                    <div>
                                                        <strong>@(detalle.ProductoCodigo ?? "SIN-CODIGO")</strong>
                                                        - @(detalle.ProductoNombre ?? "SIN NOMBRE")
                                                    </div>
                                                    <small class="text-muted">ID: @detalle.ProductoId</small>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-primary fs-6">@detalle.Cantidad</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-success fs-6">@detalle.CantidadRecibida</span>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge bg-warning text-dark fs-6">@pendiente</span>
                                                </td>
                                                <td class="text-center">
                                                    @if (pendiente > 0)
                                                    {
                                                        <input type="hidden" name="detalles[@i].DetalleId" value="@detalle.Id" />
                                                        <input type="hidden" name="detalles[@i].ProductoId" value="@detalle.ProductoId" />
                                                        <input type="hidden" name="detalles[@i].ProductoNombre" value="@detalle.ProductoNombre" />
                                                        <input type="hidden" name="detalles[@i].CantidadSolicitada" value="@detalle.Cantidad" />
                                                        <input type="hidden" name="detalles[@i].CantidadYaRecibida" value="@detalle.CantidadRecibida" />
                                                        <input type="number"
                                                               name="detalles[@i].CantidadARecepcionar"
                                                               class="form-control form-control-sm text-center fw-bold bg-body-secondary text-light border-0"
                                                               min="0" max="@pendiente" value="@pendiente"
                                                               style="width: 100px; margin: 0 auto;" />
                                                    }
                                                    else
                                                    {
                                                        <span class="text-success fw-bold">
                                                            <i class="bi bi-check-circle-fill me-1"></i>Completo
                                                        </span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Confirmar Recepción
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light btn-lg">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            }
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
