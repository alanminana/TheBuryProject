@model TheBuryProject.ViewModels.OrdenCompraViewModel
@{
    ViewData["Title"] = "Nueva Orden de Compra";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-cart-plus me-2 text-primary"></i>Nueva Orden de Compra
                </h2>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left me-2"></i>Volver al listado
                </a>
            </div>

            <form asp-action="Create" method="post" id="ordenCompraForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>Corrige los errores antes de continuar</div>
                </div>

                <div class="row g-4">
                    <!-- COLUMNA PRINCIPAL -->
                    <div class="col-lg-8">
                        <!-- DATOS GENERALES -->
                        <div class="card bg-dark border-0 shadow-sm mb-4">
                            <div class="card-header bg-primary border-0">
                                <h5 class="fw-bold text-dark mb-0"><i class="bi bi-info-circle me-2"></i>Datos Generales</h5>
                            </div>
                            <div class="card-body text-light">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label asp-for="Numero" class="form-label fw-semibold text-light"></label>
                                        <input asp-for="Numero" class="form-control bg-body-secondary text-light border-0" readonly />
                                        <small class="text-muted"><i class="bi bi-info-circle me-1"></i>Número generado automáticamente</small>
                                        <span asp-validation-for="Numero" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="ProveedorId" class="form-label fw-semibold text-light"></label>
                                        <select asp-for="ProveedorId" id="ProveedorId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Proveedores" data-productos-url="@Url.Action("GetProductos", "Proveedor")">
                                            <option value="">Seleccione un proveedor</option>
                                        </select>
                                        <span asp-validation-for="ProveedorId" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="FechaEmision" class="form-label fw-semibold text-light"></label>
                                        <input asp-for="FechaEmision" type="date" class="form-control bg-body-secondary text-light border-0" />
                                        <span asp-validation-for="FechaEmision" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="FechaEntregaEstimada" class="form-label fw-semibold text-light"></label>
                                        <input asp-for="FechaEntregaEstimada" type="date" class="form-control bg-body-secondary text-light border-0" />
                                        <span asp-validation-for="FechaEntregaEstimada" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-4">
                                        <label asp-for="Estado" class="form-label fw-semibold text-light"></label>
                                        <select asp-for="Estado" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Estados"></select>
                                        <span asp-validation-for="Estado" class="text-danger small"></span>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="Observaciones" class="form-label fw-semibold text-light"></label>
                                        <textarea asp-for="Observaciones" rows="3" class="form-control bg-body-secondary text-light border-0"></textarea>
                                        <span asp-validation-for="Observaciones" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- PRODUCTOS -->
                        <div class="card bg-dark border-0 shadow-sm mb-4">
                            <div class="card-header bg-success border-0">
                                <h5 class="fw-bold text-dark mb-0"><i class="bi bi-box-seam me-2"></i>Productos</h5>
                            </div>
                            <div class="card-body text-light">
                                <div class="row g-3 align-items-end mb-3">
                                    <div class="col-md-5">
                                        <label class="form-label text-light fw-semibold">Producto</label>
                                        <select id="productoSelect" class="form-select bg-body-secondary text-light border-0">
                                            <option value="">Seleccione un producto</option>
                                            @foreach (var item in (SelectList)ViewBag.Productos)
                                            {
                                                <option value="@item.Value">@item.Text</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-light fw-semibold">Cantidad</label>
                                        <input id="cantidadInput" type="number" step="1" min="1" value="1" class="form-control bg-body-secondary text-light border-0" />
                                    </div>
                                    <div class="col-md-3">
                                        <label class="form-label text-light fw-semibold">Precio Unit.</label>
                                        <input id="precioInput" type="number" step="0.01" min="0.01" value="0" class="form-control bg-body-secondary text-light border-0" />
                                    </div>
                                    <div class="col-md-1 d-grid">
                                        <button type="button" id="agregarDetalleBtn" class="btn btn-success">
                                            <i class="bi bi-plus"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="table-responsive">
                                    <table class="table table-dark table-striped align-middle" id="detallesTable">
                                        <thead class="table-secondary text-dark">
                                            <tr>
                                                <th>Producto</th>
                                                <th class="text-end">Cantidad</th>
                                                <th class="text-end">Precio Unit.</th>
                                                <th class="text-end">Subtotal</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody id="detallesBody">
                                            <tr id="emptyRow">
                                                <td colspan="5" class="text-center text-secondary fst-italic">
                                                    No hay productos agregados
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- COLUMNA LATERAL -->
                    <div class="col-lg-4">
                        <div class="card bg-dark border-0 shadow-sm mb-4 sticky-top" style="top: 20px;">
                            <div class="card-header bg-info border-0">
                                <h5 class="fw-bold text-dark mb-0"><i class="bi bi-calculator me-2"></i>Totales</h5>
                            </div>
                            <div class="card-body text-light">
                                <label asp-for="Descuento" class="form-label fw-semibold text-light"></label>
                                <input asp-for="Descuento" type="number" step="0.01" min="0" value="0"
                                       class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Descuento" class="text-danger small"></span>

                                <hr class="border-secondary" />

                                <dl class="row mb-0">
                                    <dt class="col-sm-6">Subtotal:</dt>
                                    <dd class="col-sm-6 text-end" id="subtotalDisplay">$0.00</dd>
                                    <dt class="col-sm-6">Descuento:</dt>
                                    <dd class="col-sm-6 text-end" id="descuentoDisplay">$0.00</dd>
                                    <dt class="col-sm-6">IVA (21%):</dt>
                                    <dd class="col-sm-6 text-end" id="ivaDisplay">$0.00</dd>
                                    <dt class="col-sm-6 border-top pt-2 fw-bold">Total:</dt>
                                    <dd class="col-sm-6 text-end border-top pt-2">
                                        <strong class="fs-5 text-info" id="totalDisplay">$0.00</strong>
                                    </dd>
                                </dl>

                                <input type="hidden" asp-for="Subtotal" id="subtotalHidden" />
                                <input type="hidden" asp-for="Iva" id="ivaHidden" />
                                <input type="hidden" asp-for="Total" id="totalHidden" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary text-dark fw-semibold btn-lg">
                                <i class="bi bi-save me-2"></i>Guardar Orden
                            </button>
                            <a asp-action="Index" class="btn btn-outline-light btn-lg">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/orden-compra-create.js" asp-append-version="true"></script>
}
