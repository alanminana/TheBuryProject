@model TheBuryProject.ViewModels.OrdenCompraViewModel
@using TheBuryProject.Models.Enums
@{
    ViewData["Title"] = "Eliminar Orden de Compra";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="mb-4">
                <a asp-action="Details" asp-route-id="@Model.Id" class="link-light text-decoration-none">
                    <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Volver a detalles
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-danger border-0">
                    <h4 class="fw-bold text-white mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body text-light">
                    <div class="alert alert-danger border-0 d-flex align-items-start" role="alert">
                        <i class="bi bi-exclamation-octagon-fill fs-3 me-3 flex-shrink-0" aria-hidden="true"></i>
                        <div>
                            <h5 class="fw-bold mb-2">¿Está seguro que desea eliminar esta orden de compra?</h5>
                            <p class="mb-0">Esta acción es irreversible y no podrá recuperar la orden eliminada.</p>
                        </div>
                    </div>

                    <div class="card bg-body-secondary border-0 mt-4">
                        <div class="card-body p-4 text-dark">
                            <h6 class="text-uppercase fw-semibold mb-3">Información de la Orden</h6>

                            <dl class="row mb-0">
                                <dt class="col-sm-4">Número</dt>
                                <dd class="col-sm-8 fw-semibold">@Model.Numero</dd>

                                <dt class="col-sm-4">Proveedor</dt>
                                <dd class="col-sm-8">@Model.ProveedorNombre</dd>

                                <dt class="col-sm-4">Fecha Emisión</dt>
                                <dd class="col-sm-8"><time datetime="@Model.FechaEmision.ToString("yyyy-MM-dd")">@Model.FechaEmision.ToString("dd/MM/yyyy")</time></dd>

                                @if (Model.FechaEntregaEstimada.HasValue)
                                {
                                    <dt class="col-sm-4">Entrega Estimada</dt>
                                    <dd class="col-sm-8"><time datetime="@Model.FechaEntregaEstimada.Value.ToString("yyyy-MM-dd")">@Model.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")</time></dd>
                                }

                                <dt class="col-sm-4">Estado</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var badge = Model.Estado switch
                                        {
                                            EstadoOrdenCompra.Borrador => "bg-secondary",
                                            EstadoOrdenCompra.Enviada => "bg-info text-dark",
                                            EstadoOrdenCompra.Confirmada => "bg-primary",
                                            EstadoOrdenCompra.EnTransito => "bg-warning text-dark",
                                            EstadoOrdenCompra.Recibida => "bg-success",
                                            EstadoOrdenCompra.Cancelada => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                    }
                                    <span class="badge @badge fs-6 px-3 py-2">@Model.Estado</span>
                                </dd>

                                <dt class="col-sm-4">Total</dt>
                                <dd class="col-sm-8 fw-bold">$@Model.Total.ToString("N2")</dd>

                                <dt class="col-sm-4">Items</dt>
                                <dd class="col-sm-8"><span class="badge bg-info text-dark fs-6 px-3 py-2">@Model.Detalles.Count</span></dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-x-circle me-2" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="bi bi-trash me-2" aria-hidden="true"></i>Eliminar Orden
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
