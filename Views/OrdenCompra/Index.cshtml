@model IEnumerable<TheBuryProject.ViewModels.OrdenCompraViewModel>
@{
    ViewData["Title"] = "Órdenes de Compra";
    var filter = ViewBag.Filter as TheBuryProject.ViewModels.OrdenCompraFilterViewModel ?? new TheBuryProject.ViewModels.OrdenCompraFilterViewModel();
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>
                <i class="bi bi-cart-check"></i> Órdenes de Compra
            </h2>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Orden
            </a>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Filtros de búsqueda -->
        <div class="card mb-3">
            <div class="card-header bg-light">
                <a class="text-decoration-none" data-bs-toggle="collapse" href="#filtrosCollapse" role="button" aria-expanded="false">
                    <i class="bi bi-funnel"></i> Filtros de Búsqueda
                    <i class="bi bi-chevron-down float-end"></i>
                </a>
            </div>
            <div class="collapse" id="filtrosCollapse">
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <label asp-for="@filter.SearchTerm" class="form-label"></label>
                                <input asp-for="@filter.SearchTerm" class="form-control"
                                       placeholder="Número, proveedor..." value="@filter.SearchTerm" />
                            </div>
                            <div class="col-md-3 mb-2">
                                <label asp-for="@filter.ProveedorId" class="form-label"></label>
                                <select asp-for="@filter.ProveedorId" class="form-select"
                                        asp-items="ViewBag.Proveedores">
                                    <option value="">Todos los proveedores</option>
                                </select>
                            </div>
                            <div class="col-md-2 mb-2">
                                <label asp-for="@filter.Estado" class="form-label"></label>
                                <select asp-for="@filter.Estado" class="form-select"
                                        asp-items="ViewBag.Estados">
                                    <option value="">Todos los estados</option>
                                </select>
                            </div>
                            <div class="col-md-2 mb-2">
                                <label asp-for="@filter.FechaDesde" class="form-label"></label>
                                <input asp-for="@filter.FechaDesde" class="form-control"
                                       type="date" value="@filter.FechaDesde?.ToString("yyyy-MM-dd")" />
                            </div>
                            <div class="col-md-2 mb-2">
                                <label asp-for="@filter.FechaHasta" class="form-label"></label>
                                <input asp-for="@filter.FechaHasta" class="form-control"
                                       type="date" value="@filter.FechaHasta?.ToString("yyyy-MM-dd")" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-2">
                                <label asp-for="@filter.OrderBy" class="form-label"></label>
                                <select asp-for="@filter.OrderBy" class="form-select" name="OrderBy">
                                    <option value="">Por defecto</option>
                                    <option value="numero" selected="@(filter.OrderBy == "numero")">Número</option>
                                    <option value="proveedor" selected="@(filter.OrderBy == "proveedor")">Proveedor</option>
                                    <option value="fechaemision" selected="@(filter.OrderBy == "fechaemision")">Fecha Emisión</option>
                                    <option value="estado" selected="@(filter.OrderBy == "estado")">Estado</option>
                                    <option value="total" selected="@(filter.OrderBy == "total")">Total</option>
                                </select>
                            </div>
                            <div class="col-md-2 mb-2">
                                <label asp-for="@filter.OrderDirection" class="form-label"></label>
                                <select asp-for="@filter.OrderDirection" class="form-select" name="OrderDirection">
                                    <option value="asc" selected="@(filter.OrderDirection == "asc")">Ascendente</option>
                                    <option value="desc" selected="@(filter.OrderDirection == "desc")">Descendente</option>
                                </select>
                            </div>
                            <div class="col-md-7 mb-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Tabla de órdenes -->
        <div class="card">
            <div class="card-body">
                @if (Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Número</th>
                                    <th>Proveedor</th>
                                    <th>Fecha Emisión</th>
                                    <th>Fecha Entrega</th>
                                    <th>Estado</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-center">Items</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var orden in Model)
                                {
                                    var badgeClass = orden.Estado switch
                                    {
                                        TheBuryProject.Models.Enums.EstadoOrdenCompra.Borrador => "bg-secondary",
                                        TheBuryProject.Models.Enums.EstadoOrdenCompra.Enviada => "bg-info",
                                        TheBuryProject.Models.Enums.EstadoOrdenCompra.Confirmada => "bg-primary",
                                        TheBuryProject.Models.Enums.EstadoOrdenCompra.EnTransito => "bg-warning",
                                        TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida => "bg-success",
                                        TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada => "bg-danger",
                                        _ => "bg-secondary"
                                    };

                                    <tr>
                                        <td>
                                            <strong>@orden.Numero</strong>
                                        </td>
                                        <td>@orden.ProveedorNombre</td>
                                        <td>@orden.FechaEmision.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            @if (orden.FechaEntregaEstimada.HasValue)
                                            {
                                                @orden.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge @badgeClass">
                                                @orden.Estado.ToString()
                                            </span>
                                        </td>
                                        <td class="text-end">
                                            <strong>$@orden.Total.ToString("N2")</strong>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-info">@orden.Detalles.Count</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <a asp-action="Details" asp-route-id="@orden.Id"
                                                   class="btn btn-outline-info" title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (orden.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida &&
                                                                                        orden.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@orden.Id"
                                                       class="btn btn-outline-warning" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                }
                                                <a asp-action="Delete" asp-route-id="@orden.Id"
                                                   class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="mt-3">
                        <p class="text-muted">
                            <i class="bi bi-info-circle"></i>
                            Mostrando @Model.Count() orden(es) de compra
                        </p>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i>
                        No se encontraron órdenes de compra con los criterios especificados.
                    </div>
                }
            </div>
        </div>
    </div>
</div>