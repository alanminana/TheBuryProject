@model IEnumerable<TheBuryProject.ViewModels.OrdenCompraViewModel>
@{
    ViewData["Title"] = "Órdenes de Compra";
    var filter = ViewBag.Filter as TheBuryProject.ViewModels.OrdenCompraFilterViewModel ?? new TheBuryProject.ViewModels.OrdenCompraFilterViewModel();
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-11">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="text-light fw-bold">
                    <i class="bi bi-cart-check me-2 text-info"></i>Órdenes de Compra
                </h2>
                <a asp-action="Create" class="btn btn-primary fw-semibold">
                    <i class="bi bi-plus-circle me-1"></i>Nueva Orden
                </a>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success d-flex align-items-center" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger d-flex align-items-center" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                </div>
            }

            <!-- Filtros -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-secondary border-0">
                    <a class="text-decoration-none text-light d-block" data-bs-toggle="collapse" href="#filtrosCollapse" role="button" aria-expanded="false">
                        <i class="bi bi-funnel me-2"></i>Filtros de Búsqueda
                        <i class="bi bi-chevron-down float-end"></i>
                    </a>
                </div>
                <div class="collapse" id="filtrosCollapse">
                    <div class="card-body text-light">
                        <form asp-action="Index" method="get">
                            <div class="row">
                                <div class="col-md-3 mb-3">
                                    <label asp-for="@filter.SearchTerm" class="form-label fw-semibold">Buscar</label>
                                    <input asp-for="@filter.SearchTerm" class="form-control bg-body-secondary text-light border-0"
                                           placeholder="Número o proveedor" value="@filter.SearchTerm" />
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label asp-for="@filter.ProveedorId" class="form-label fw-semibold">Proveedor</label>
                                    <select asp-for="@filter.ProveedorId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Proveedores">
                                        <option value="">Todos</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label asp-for="@filter.Estado" class="form-label fw-semibold">Estado</label>
                                    <select asp-for="@filter.Estado" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Estados">
                                        <option value="">Todos</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label asp-for="@filter.FechaDesde" class="form-label fw-semibold">Desde</label>
                                    <input asp-for="@filter.FechaDesde" type="date" class="form-control bg-body-secondary text-light border-0"
                                           value="@filter.FechaDesde?.ToString("yyyy-MM-dd")" />
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label asp-for="@filter.FechaHasta" class="form-label fw-semibold">Hasta</label>
                                    <input asp-for="@filter.FechaHasta" type="date" class="form-control bg-body-secondary text-light border-0"
                                           value="@filter.FechaHasta?.ToString("yyyy-MM-dd")" />
                                </div>
                            </div>

                            <div class="row align-items-end">
                                <div class="col-md-3 mb-3">
                                    <label asp-for="@filter.OrderBy" class="form-label fw-semibold">Ordenar por</label>
                                    <select asp-for="@filter.OrderBy" class="form-select bg-body-secondary text-light border-0" name="OrderBy">
                                        <option value="">Por defecto</option>
                                        <option value="numero">Número</option>
                                        <option value="proveedor">Proveedor</option>
                                        <option value="fechaemision">Fecha Emisión</option>
                                        <option value="estado">Estado</option>
                                        <option value="total">Total</option>
                                    </select>
                                </div>
                                <div class="col-md-2 mb-3">
                                    <label asp-for="@filter.OrderDirection" class="form-label fw-semibold">Dirección</label>
                                    <select asp-for="@filter.OrderDirection" class="form-select bg-body-secondary text-light border-0" name="OrderDirection">
                                        <option value="asc">Ascendente</option>
                                        <option value="desc">Descendente</option>
                                    </select>
                                </div>
                                <div class="col-md-7 mb-3 d-flex gap-2">
                                    <button type="submit" class="btn btn-primary fw-semibold">
                                        <i class="bi bi-search me-1"></i>Buscar
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-light">
                                        <i class="bi bi-x-circle me-1"></i>Limpiar
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Tabla -->
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body text-light">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-striped align-middle">
                                <thead class="table-secondary text-dark">
                                    <tr>
                                        <th>Número</th>
                                        <th>Proveedor</th>
                                        <th>Fecha Emisión</th>
                                        <th>Entrega</th>
                                        <th>Estado</th>
                                        <th class="text-end">Total</th>
                                        <th class="text-center">Items</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var o in Model)
                                    {
                                        var badge = o.Estado switch
                                        {
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Borrador => "bg-secondary",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Enviada => "bg-info text-dark",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Confirmada => "bg-primary",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.EnTransito => "bg-warning text-dark",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida => "bg-success",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada => "bg-danger",
                                            _ => "bg-secondary"
                                        };
                                        <tr>
                                            <td><strong>@o.Numero</strong></td>
                                            <td>@o.ProveedorNombre</td>
                                            <td>@o.FechaEmision:dd/MM/yyyy</td>
                                            <td>@(o.FechaEntregaEstimada?.ToString("dd/MM/yyyy") ?? "-")</td>
                                            <td><span class="badge @badge fs-6 px-3 py-2">@o.Estado</span></td>
                                            <td class="text-end fw-semibold">$@o.Total:N2</td>
                                            <td class="text-center"><span class="badge bg-info text-dark">@o.Detalles.Count</span></td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@o.Id" class="btn btn-outline-info" title="Ver">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (o.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida &&
                                                                                                o.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada)
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@o.Id" class="btn btn-outline-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    }
                                                    <a asp-action="Delete" asp-route-id="@o.Id" class="btn btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <p class="text-muted mt-3">
                            <i class="bi bi-info-circle"></i>
                            Mostrando <strong>@Model.Count()</strong> orden(es) de compra
                        </p>
                    }
                    else
                    {
                        <div class="alert alert-info border-0">
                            <i class="bi bi-info-circle me-2"></i>No se encontraron órdenes de compra con los filtros aplicados.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
