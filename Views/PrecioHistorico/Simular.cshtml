@model TheBuryProject.ViewModels.PrecioSimulacionViewModel
@{
    ViewData["Title"] = "Simular Cambio de Precio";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>🧮 Simulador de Cambio de Precio</h2>
            <h4 class="text-primary">@Model.ProductoCodigo - @Model.ProductoNombre</h4>
        </div>
        <div class="col-auto">
            <a asp-action="HistorialProducto" asp-route-id="@Model.ProductoId" class="btn btn-info">
                <i class="bi bi-clock-history"></i> Ver Historial
            </a>
            <a asp-controller="Producto" asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Panel de entrada -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📝 Proponer Nuevos Precios</h5>
                </div>
                <div class="card-body">
                    <form id="formSimular">
                        <input type="hidden" id="productoId" value="@Model.ProductoId" />

                        <div class="mb-3">
                            <h6 class="text-muted">Precios Actuales</h6>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label fw-bold">Precio de Compra</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" value="@Model.PrecioCompraActual.ToString("N2")" readonly />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="form-label fw-bold">Precio de Venta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" value="@Model.PrecioVentaActual.ToString("N2")" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-info">Margen Actual: @Model.MargenActual.ToString("N2")%</span>
                            </div>
                        </div>

                        <hr />

                        <div class="mb-3">
                            <h6 class="text-primary">Nuevos Precios Propuestos</h6>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label fw-bold">Precio de Compra Nuevo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" class="form-control" id="precioCompraNuevo"
                                               value="@Model.PrecioCompraActual" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="form-label fw-bold">Precio de Venta Nuevo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" class="form-control" id="precioVentaNuevo"
                                               value="@Model.PrecioVentaActual" required />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg btn-success">
                                <i class="bi bi-calculator"></i> Calcular Impacto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de resultados -->
        <div class="col-md-6">
            <div class="card" id="resultadoCard" style="display:none;">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📊 Análisis de Impacto</h5>
                </div>
                <div class="card-body" id="resultadoContenido">
                    <!-- Los resultados se cargarán aquí dinámicamente -->
                </div>
            </div>

            <div class="card mt-3" style="display:none;" id="alertasCard">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">⚠️ Alertas y Recomendaciones</h5>
                </div>
                <div class="card-body" id="alertasContenido">
                    <!-- Las alertas se cargarán aquí -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('formSimular').addEventListener('submit', async function (e) {
            e.preventDefault();

            const productoId = document.getElementById('productoId').value;
            const precioCompraNuevo = parseFloat(document.getElementById('precioCompraNuevo').value);
            const precioVentaNuevo = parseFloat(document.getElementById('precioVentaNuevo').value);

            try {
                const response = await fetch('@Url.Action("Simular")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    },
                    body: JSON.stringify({
                        productoId: parseInt(productoId),
                        precioCompraPropuesto: precioCompraNuevo,
                        precioVentaPropuesto: precioVentaNuevo
                    })
                });

                const result = await response.json();

                if (result.success) {
                    mostrarResultado(result.data);
                } else {
                    alert('Error: ' + result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al realizar la simulación');
            }
        });

        function mostrarResultado(data) {
            // Mostrar tarjeta de resultados
            document.getElementById('resultadoCard').style.display = 'block';

            // Construir HTML de resultados
            let html = `
                <div class="row mb-3">
                    <div class="col-6">
                        <h6 class="text-muted">Cambio en Compra</h6>
                        <h3 class="${data.porcentajeCambioCompra >= 0 ? 'text-danger' : 'text-success'}">
                            ${data.porcentajeCambioCompra >= 0 ? '↑' : '↓'} ${Math.abs(data.porcentajeCambioCompra).toFixed(2)}%
                        </h3>
                        <p class="mb-0">
                            ${data.diferenciaCompra >= 0 ? '+' : ''}$${data.diferenciaCompra.toFixed(2)}
                        </p>
                    </div>
                    <div class="col-6">
                        <h6 class="text-muted">Cambio en Venta</h6>
                        <h3 class="${data.porcentajeCambioVenta >= 0 ? 'text-success' : 'text-danger'}">
                            ${data.porcentajeCambioVenta >= 0 ? '↑' : '↓'} ${Math.abs(data.porcentajeCambioVenta).toFixed(2)}%
                        </h3>
                        <p class="mb-0">
                            ${data.diferenciaVenta >= 0 ? '+' : ''}$${data.diferenciaVenta.toFixed(2)}
                        </p>
                    </div>
                </div>

                <hr />

                <div class="row">
                    <div class="col-6">
                        <h6 class="text-muted">Margen Actual</h6>
                        <h4>${data.margenActual.toFixed(2)}%</h4>
                    </div>
                    <div class="col-6">
                        <h6 class="text-muted">Margen Propuesto</h6>
                        <h4 class="${data.margenPropuesto >= data.margenActual ? 'text-success' : 'text-danger'}">
                            ${data.margenPropuesto.toFixed(2)}%
                        </h4>
                    </div>
                </div>

                <div class="mt-3">
                    <h6 class="text-muted">Diferencia de Margen</h6>
                    <h3 class="${data.diferenciaMargen >= 0 ? 'text-success' : 'text-danger'}">
                        ${data.diferenciaMargen >= 0 ? '+' : ''}${data.diferenciaMargen.toFixed(2)}%
                    </h3>
                </div>
            `;

            document.getElementById('resultadoContenido').innerHTML = html;

            // Mostrar alertas si existen
            if (data.alertas && data.alertas.length > 0) {
                document.getElementById('alertasCard').style.display = 'block';

                let alertasHtml = '<ul class="list-unstyled mb-0">';
                data.alertas.forEach(alerta => {
                    alertasHtml += `<li class="mb-2"><i class="bi bi-exclamation-circle"></i> ${alerta}</li>`;
                });
                alertasHtml += '</ul>';

                if (data.recomendacion) {
                    alertasHtml += `<hr /><div class="alert ${data.esRecomendable ? 'alert-success' : 'alert-danger'} mb-0 mt-3">${data.recomendacion}</div>`;
                }

                document.getElementById('alertasContenido').innerHTML = alertasHtml;
            } else {
                document.getElementById('alertasCard').style.display = 'none';
            }
        }
    </script>
}

@Html.AntiForgeryToken()