@model TheBuryProject.ViewModels.PrecioSimulacionViewModel
@{
    ViewData["Title"] = "Simular Cambio de Precio";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2>🧮 Simulador de Cambio de Precio</h2>
            <h4 class="text-primary">@Model.ProductoCodigo - @Model.ProductoNombre</h4>
        </div>
        <div class="col-auto">
            <a asp-action="HistorialProducto" asp-route-id="@Model.ProductoId" class="btn btn-info">
                <i class="bi bi-clock-history"></i> Ver Historial
            </a>
            <a asp-controller="Producto" asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Panel de entrada -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📝 Proponer Nuevos Precios</h5>
                </div>
                <div class="card-body">
                    <form id="formSimular" data-simular-url="@Url.Action("Simular")">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="productoId" value="@Model.ProductoId" />

                        <div class="mb-3">
                            <h6 class="text-muted">Precios Actuales</h6>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label fw-bold">precio de costo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" value="@Model.PrecioCompraActual.ToString("N2")" readonly />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="form-label fw-bold">Precio de Venta</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" value="@Model.PrecioVentaActual.ToString("N2")" readonly />
                                    </div>
                                </div>
                            </div>
                            <div class="mt-2">
                                <span class="badge bg-info">Margen Actual: @Model.MargenActual.ToString("N2")%</span>
                            </div>
                        </div>

                        <hr />

                        <div class="mb-3">
                            <h6 class="text-primary">Nuevos Precios Propuestos</h6>
                            <div class="row">
                                <div class="col-6">
                                    <label class="form-label fw-bold">precio de costo Nuevo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" class="form-control" id="precioCompraNuevo"
                                               value="@Model.PrecioCompraActual" required />
                                    </div>
                                </div>
                                <div class="col-6">
                                    <label class="form-label fw-bold">Precio de Venta Nuevo</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" class="form-control" id="precioVentaNuevo"
                                               value="@Model.PrecioVentaActual" required />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-lg btn-success">
                                <i class="bi bi-calculator"></i> Calcular Impacto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel de resultados -->
        <div class="col-md-6">
            <div class="card" id="resultadoCard" style="display:none;">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">📊 Análisis de Impacto</h5>
                </div>
                <div class="card-body" id="resultadoContenido">
                    <!-- Los resultados se cargarán aquí dinámicamente -->
                </div>
            </div>

            <div class="card mt-3" style="display:none;" id="alertasCard">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">⚠️ Alertas y Recomendaciones</h5>
                </div>
                <div class="card-body" id="alertasContenido">
                    <!-- Las alertas se cargarán aquí -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/precio-historico-simular.js" asp-append-version="true"></script>
}
