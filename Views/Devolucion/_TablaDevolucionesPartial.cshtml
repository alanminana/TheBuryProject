@model List<TheBuryProject.Models.Entities.Devolucion>
@using TheBuryProject.Models.Constants

<div class="table-responsive">
    <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">Número</th>
                <th scope="col">Fecha</th>
                <th scope="col">Cliente</th>
                <th scope="col">Venta</th>
                <th scope="col">Motivo</th>
                <th scope="col">Total</th>
                <th scope="col">Estado</th>
                <th scope="col">Nota Crédito</th>
                <th scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var devolucion in Model)
            {
                var rowVersionBase64 = Convert.ToBase64String(devolucion.RowVersion ?? Array.Empty<byte>());
                <tr>
                    <td>
                        <strong>@devolucion.NumeroDevolucion</strong>
                    </td>
                    <td>
                        <small>@devolucion.FechaDevolucion.ToString("dd/MM/yyyy")</small>
                    </td>
                    <td>@(devolucion.Cliente?.NombreCompleto ?? "N/A")</td>
                    <td>@(devolucion.Venta?.Numero ?? "N/A")</td>
                    <td>
                        <span class="badge bg-secondary">
                            @devolucion.Motivo.ToString().Replace("DefectoFabrica", "Defecto de Fábrica")
                        </span>
                    </td>
                    <td class="text-end">
                        <strong>$@devolucion.TotalDevolucion.ToString("N2")</strong>
                    </td>
                    <td>
                        @switch (devolucion.Estado)
                        {
                            case TheBuryProject.Models.Entities.EstadoDevolucion.Pendiente:
                                <span class="badge bg-warning">Pendiente</span>
                                break;
                            case TheBuryProject.Models.Entities.EstadoDevolucion.EnRevision:
                                <span class="badge bg-info">En Revisión</span>
                                break;
                            case TheBuryProject.Models.Entities.EstadoDevolucion.Aprobada:
                                <span class="badge bg-success">Aprobada</span>
                                break;
                            case TheBuryProject.Models.Entities.EstadoDevolucion.Rechazada:
                                <span class="badge bg-danger">Rechazada</span>
                                break;
                            case TheBuryProject.Models.Entities.EstadoDevolucion.Completada:
                                <span class="badge bg-dark">Completada</span>
                                break;
                            default:
                                <span class="badge bg-secondary">@devolucion.Estado</span>
                                break;
                        }
                    </td>
                    <td>
                        @if (devolucion.NotaCreditoGenerada)
                        {
                            <span class="badge bg-success">
                                <i class="bi bi-check-circle" aria-hidden="true"></i> Generada
                            </span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Detalles" asp-route-id="@devolucion.Id"
                           class="btn btn-sm btn-outline-info"
                           data-bs-toggle="tooltip"
                           title="Ver detalles">
                            <i class="bi bi-eye" aria-hidden="true"></i>
                            <span class="visually-hidden">Ver detalles</span>
                        </a>

                        @if (devolucion.Estado == TheBuryProject.Models.Entities.EstadoDevolucion.Pendiente && (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.Gerente)))
                        {
                            <form asp-action="Aprobar" asp-route-id="@devolucion.Id"
                                  method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="rowVersion" value="@rowVersionBase64" />
                                <button type="submit" class="btn btn-sm btn-success"
                                        data-bs-toggle="tooltip"
                                        title="Aprobar devolución"
                                        data-confirm="¿Aprobar esta devolución?">
                                    <i class="bi bi-check-circle" aria-hidden="true"></i>
                                    <span class="visually-hidden">Aprobar devolución</span>
                                </button>
                            </form>
                        }

                        @if (devolucion.Estado == TheBuryProject.Models.Entities.EstadoDevolucion.Aprobada && (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.Gerente)))
                        {
                            <form asp-action="Completar" asp-route-id="@devolucion.Id"
                                  method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="rowVersion" value="@rowVersionBase64" />
                                <button type="submit" class="btn btn-sm btn-primary"
                                        data-bs-toggle="tooltip"
                                        title="Completar devolución"
                                        data-confirm="¿Completar esta devolución y procesar stock?">
                                    <i class="bi bi-check2-all" aria-hidden="true"></i>
                                    <span class="visually-hidden">Completar devolución</span>
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>