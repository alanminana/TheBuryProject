@model List<UsuarioViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
    var cleanedQuery = QueryString.Create(Context.Request.Query.Where(kvp => !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));
    var listReturnUrl = Context.Request.Path + cleanedQuery;
    var mostrarInactivos = (bool)(ViewData["MostrarInactivos"] ?? false);
    var usuariosActivos = Model.Count(u => u.Activo);
    var usuariosInactivos = Model.Count(u => !u.Activo);
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2><i class="bi bi-people me-2"></i>Gestión de Usuarios</h2>
            <p class="text-muted">Administra los usuarios del sistema y sus roles</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" asp-route-returnUrl="@listReturnUrl" class="btn btn-primary">
                <i class="bi bi-person-plus me-1"></i>Crear Usuario
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (usuariosInactivos > 0 && !mostrarInactivos)
    {
        <div class="alert alert-info d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-info-circle me-2"></i>
                Hay <strong>@usuariosInactivos usuario(s) inactivo(s)</strong> que no se muestran en la lista.
                <small class="d-block text-muted mt-1">Los usuarios inactivos aún mantienen sus roles asignados.</small>
            </div>
            <a asp-action="Index" asp-route-mostrarInactivos="true" class="btn btn-sm btn-outline-info">
                <i class="bi bi-eye me-1"></i>Ver Inactivos
            </a>
        </div>
    }
    
    @if (mostrarInactivos)
    {
        <div class="alert alert-warning d-flex justify-content-between align-items-center">
            <div>
                <i class="bi bi-funnel me-2"></i>
                Mostrando <strong>todos los usuarios</strong> (activos e inactivos)
            </div>
            <a asp-action="Index" asp-route-mostrarInactivos="false" class="btn btn-sm btn-outline-secondary">
                <i class="bi bi-eye-slash me-1"></i>Ocultar Inactivos
            </a>
        </div>
    }

    <div class="card">"
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Usuario</th>
                                <th>Email</th>
                                <th>Roles</th>
                                <th class="text-center">Estado</th>
                                <th class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="bi bi-person-circle me-2"></i>
                                        <strong>@usuario.UserName</strong>
                                    </td>
                                    <td>@usuario.Email</td>
                                    <td>
                                        @if (usuario.Roles.Any())
                                        {
                                            foreach (var rol in usuario.Roles)
                                            {
                                                <span class="badge bg-primary me-1">@rol</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Sin roles</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (!usuario.Activo)
                                        {
                                            <span class="badge bg-dark">Inactivo</span>
                                        }
                                        else if (usuario.LockoutEnd.HasValue && usuario.LockoutEnd.Value > DateTimeOffset.Now)
                                        {
                                            <span class="badge bg-danger">Bloqueado</span>
                                        }
                                        else if (usuario.EmailConfirmed)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pendiente</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@usuario.Id" asp-route-returnUrl="@listReturnUrl" class="btn btn-sm btn-outline-info" title="Ver">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="AsignarRoles" asp-route-id="@usuario.Id" asp-route-returnUrl="@listReturnUrl" class="btn btn-sm btn-outline-warning" title="Roles">
                                                <i class="bi bi-shield"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@usuario.Id" asp-route-returnUrl="@listReturnUrl" class="btn btn-sm btn-outline-primary" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="CambiarPassword" asp-route-id="@usuario.Id" asp-route-returnUrl="@listReturnUrl" class="btn btn-sm btn-outline-secondary" title="Password">
                                                <i class="bi bi-key"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@usuario.Id" asp-route-returnUrl="@listReturnUrl" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-people fs-1"></i>
                    <p class="mt-3">No hay usuarios registrados</p>
                </div>
            }
        </div>
    </div>
</div>