@model EliminarUsuarioViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Usuarios")!;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@backUrl">Usuarios</a></li>
                    <li class="breadcrumb-item active">Eliminar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash me-2" aria-hidden="true"></i>Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>
                        <strong>¿Está seguro que desea eliminar este usuario?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Usuario:</dt>
                        <dd class="col-sm-9"><strong>@Model.UserName</strong></dd>

                        <dt class="col-sm-3">Email:</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Roles asignados:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Roles.Any())
                            {
                                foreach (var rol in Model.Roles)
                                {
                                    <span class="badge bg-primary me-1">@rol</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">Sin roles</span>
                            }
                        </dd>
                    </dl>

                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                        <strong>Advertencia:</strong> Esta acción no se puede deshacer. Se eliminarán todos los datos asociados a este usuario.
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <div class="d-flex justify-content-between mt-4">
                            <a href="@backUrl" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger" data-confirm="¿Eliminar el usuario '@Model.UserName'? Esta acción no se puede deshacer.">
                                <i class="bi bi-trash me-1" aria-hidden="true"></i>Eliminar Usuario
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>