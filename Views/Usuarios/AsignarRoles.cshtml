@model AsignarRolesUsuarioViewModel

@{
    ViewData["Title"] = "Asignar Roles";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0"><i class="bi bi-shield me-2"></i>Asignar Roles a Usuario</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>Usuario:</strong> @Model.UserName (@Model.Email)
                    </div>

                    <form asp-action="AsignarRoles" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="UserName" />
                        <input type="hidden" asp-for="Email" />

                        <div class="mb-3">
                            <label class="form-label">Seleccione los roles:</label>
                            <div class="border rounded p-3">
                                @for (int i = 0; i < Model.Roles.Count; i++)
                                {
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleId" />
                                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                    <div class="form-check mb-2">
                                        <input asp-for="@Model.Roles[i].Seleccionado" class="form-check-input" />
                                        <label asp-for="@Model.Roles[i].Seleccionado" class="form-check-label">
                                            @Model.Roles[i].RoleName
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-save me-1"></i>Guardar Roles
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}