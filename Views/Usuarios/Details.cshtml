@model UsuarioDetalleViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Usuarios")!;
    var pageReturnUrl = Context.Request.Path + Context.Request.QueryString;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@backUrl">Usuarios</a></li>
                    <li class="breadcrumb-item active">Detalles</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="bi bi-person-circle me-2"></i>@Model.UserName
                    @if (Model.LockoutEnd.HasValue && Model.LockoutEnd.Value > DateTimeOffset.Now)
                    {
                        <span class="badge bg-danger">Bloqueado</span>
                    }
                    else if (Model.EmailConfirmed)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                </h2>
                <div>
                    <a asp-action="AsignarRoles" asp-route-id="@Model.Id" asp-route-returnUrl="@pageReturnUrl" class="btn btn-warning">
                        <i class="bi bi-shield me-1"></i>Asignar Roles
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@pageReturnUrl" class="btn btn-primary">
                        <i class="bi bi-pencil me-1"></i>Editar
                    </a>
                    <a asp-action="CambiarPassword" asp-route-id="@Model.Id" asp-route-returnUrl="@pageReturnUrl" class="btn btn-secondary">
                        <i class="bi bi-key me-1"></i>Cambiar Password
                    </a>
                    <a href="@backUrl" class="btn btn-secondary">
                        <i class="bi bi-arrow-left me-1"></i>Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    @if (!Model.EmailConfirmed && Model.Activo)
    {
        <div class="row mb-3">
            <div class="col-md-12">
                <div class="alert alert-warning d-flex justify-content-between align-items-center">
                    <div>
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Email no confirmado:</strong> Este usuario podría tener problemas para iniciar sesión.
                        <small class="d-block mt-1">Haga clic en "Confirmar Email" para activar el acceso inmediatamente.</small>
                    </div>
                    <form asp-action="ConfirmarEmail" asp-route-id="@Model.Id" asp-route-returnUrl="@pageReturnUrl" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-warning" onclick="return confirm('¿Confirmar el email de este usuario?')">
                            <i class="bi bi-check-circle me-1"></i>Confirmar Email
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }

    <div class="row">"
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Información</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Usuario:</dt>
                        <dd class="col-sm-7">@Model.UserName</dd>

                        <dt class="col-sm-5">Email:</dt>
                        <dd class="col-sm-7">@Model.Email</dd>

                        <dt class="col-sm-5">Email Verificado:</dt>
                        <dd class="col-sm-7">
                            @if (Model.EmailConfirmed)
                            {
                                <span class="badge bg-success">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">No</span>
                            }
                        </dd>

                        <dt class="col-sm-5">Bloqueo Habilitado:</dt>
                        <dd class="col-sm-7">
                            @if (Model.LockoutEnabled)
                            {
                                <span class="badge bg-info">Sí</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">No</span>
                            }
                        </dd>

                        @if (Model.LockoutEnd.HasValue && Model.LockoutEnd.Value > DateTimeOffset.Now)
                        {
                            <dt class="col-sm-5">Bloqueado hasta:</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-danger">
                                    @Model.LockoutEnd.Value.LocalDateTime.ToString("dd/MM/yyyy HH:mm")
                                </span>
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-shield me-2"></i>Roles Asignados (@Model.Roles.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Roles.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var rol in Model.Roles)
                            {
                                <span class="badge bg-primary fs-6">@rol</span>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <i class="bi bi-shield fs-2"></i>
                            <p class="mt-2">No tiene roles asignados</p>
                            <a asp-action="AsignarRoles" asp-route-id="@Model.Id" asp-route-returnUrl="@pageReturnUrl" class="btn btn-sm btn-warning">
                                <i class="bi bi-plus-circle me-1"></i>Asignar Roles
                            </a>
                        </div>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-success text-white">
                            <i class="bi bi-key fs-2"></i>
                </div>
                <div class="card-body">
                    @if (Model.Permisos.Any())
                    {
                        <div class="row">
                            @foreach (var permiso in Model.Permisos.OrderBy(p => p))
                            {
                                <div class="col-md-6 mb-1">
                                    <small><code>@permiso</code></small>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <i class="bi bi-key" style="font-size: 2rem;"></i>
                            <p class="mt-2">No tiene permisos efectivos</p>
                            <small>Asigne roles al usuario para otorgar permisos</small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>