@model TheBuryProject.ViewModels.RevertirBatchViewModel

@{
    ViewData["Title"] = "Revertir cambio de precios";
}

<div class="container-fluid px-0 py-4">

    <!-- Header página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Gestión de precios · Cambios masivos</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-arrow-counterclockwise"></i>
                <span>Revertir cambio de precios</span>
            </h1>
            <p class="text-muted small mb-0">
                Esta operación restaurará los precios anteriores para todos los productos afectados por este batch.
            </p>
        </div>

        <a asp-action="Preview"
           asp-route-id="@Model.BatchId"
           class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Volver al detalle
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-7 col-xl-6">
            <div class="card card-animate border-0 shadow-sm">

                <div class="card-header bg-danger text-white">
                    <div class="d-flex align-items-center justify-content-between">
                        <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                            <i class="bi bi-arrow-counterclockwise"></i>
                            <span>Confirmar reversión</span>
                        </h2>
                    </div>
                </div>

                <div class="card-body">
                    <div class="alert alert-danger small">
                        <div class="fw-semibold d-flex align-items-center gap-2 mb-1">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <span>¿Está seguro que desea revertir este cambio de precios?</span>
                        </div>
                        <p class="mb-0">
                            Esta acción restaurará los precios anteriores para todos los productos afectados.
                        </p>
                    </div>

                    <dl class="row small mb-0">
                        <dt class="col-sm-4 text-muted">Nombre:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Nombre</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">Productos afectados:</dt>
                        <dd class="col-sm-8">
                            <strong class="text-primary">@Model.CantidadProductos</strong>
                        </dd>

                        <dt class="col-sm-4 text-muted">Aplicado por:</dt>
                        <dd class="col-sm-8">
                            <div>@Model.AplicadoPor</div>
                            <small class="text-muted">
                                @Model.FechaAplicacion?.ToString("dd/MM/yyyy HH:mm")
                            </small>
                        </dd>

                        <dt class="col-sm-4 text-muted">Vigencia:</dt>
                        <dd class="col-sm-8">
                            @Model.FechaVigencia?.ToString("dd/MM/yyyy HH:mm")
                        </dd>
                    </dl>

                    <hr class="my-4" />

                    <form asp-action="RevertirConfirmed" method="post" class="mt-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.BatchId" />
                        <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(Model.RowVersion)" />

                        <div class="mb-3">
                            <label for="motivo" class="form-label small fw-semibold">
                                Motivo de la reversión *
                            </label>
                            <textarea id="motivo"
                                      name="motivo"
                                      class="form-control form-control-sm"
                                      rows="4"
                                      placeholder="Especifique el motivo de la reversión..."
                                      required></textarea>
                            <small class="text-muted">
                                Este motivo quedará registrado en el historial.
                            </small>
                        </div>

                        <div class="alert alert-warning small">
                            <div class="fw-semibold mb-1 d-flex align-items-center gap-2">
                                <i class="bi bi-info-circle"></i>
                                <span>Información sobre la reversión</span>
                            </div>
                            <ul class="mb-0 ps-3">
                                <li>Se crearán nuevos registros de precios con los valores anteriores.</li>
                                <li>Los precios actuales se marcarán como no vigentes.</li>
                                <li>El historial completo de precios quedará preservado.</li>
                                <li>Esta operación es <strong>transaccional</strong> (todo o nada).</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a asp-action="Preview"
                               asp-route-id="@Model.BatchId"
                               class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-arrow-left me-1"></i>Cancelar
                            </a>

                            <button type="submit"
                                    class="btn btn-danger btn-sm"
                                    data-confirm="¿Está ABSOLUTAMENTE SEGURO de revertir este cambio?\n\nEsta acción restaurará los precios anteriores para @Model.CantidadProductos productos.">
                                <i class="bi bi-arrow-counterclockwise me-1"></i>Revertir cambio ahora
                            </button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
