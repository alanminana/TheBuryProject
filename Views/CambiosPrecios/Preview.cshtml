@model TheBuryProject.ViewModels.SimulacionViewModel

@{
    ViewData["Title"] = "Detalle de simulación";
}

<div class="container-fluid py-4">

    @* Header unificado *@
    <partial name="_PageHeader" model='new PageHeaderModel {
        Breadcrumb = "Gestión de precios · Cambios masivos",
        Title = "Detalle de simulación",
        Icon = "eye",
        Subtitle = "Revisión de items, advertencias y acciones disponibles.",
        BackAction = "Index",
        BackText = "Volver"
    }' />

    @* Alertas unificadas *@
    <partial name="_Alerts" />

    <div class="row">
        <div class="col-12 col-xl-4">
            <div class="card card-animate border-0 mb-3">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <span class="fw-semibold">Resumen</span>
                    <span class="badge bg-dark-subtle text-light">@Model.Estado</span>
                </div>
                <div class="card-body small">
                    <dl class="row mb-0">
                        <dt class="col-5 text-muted">Nombre</dt>
                        <dd class="col-7 fw-semibold">@Model.Nombre</dd>

                        <dt class="col-5 text-muted">Tipo cambio</dt>
                        <dd class="col-7">@Model.TipoCambio</dd>

                        <dt class="col-5 text-muted">Aplicación</dt>
                        <dd class="col-7">@Model.TipoAplicacion</dd>

                        <dt class="col-5 text-muted">Valor</dt>
                        <dd class="col-7">@Model.ValorCambio.ToString("N2")</dd>

                        <dt class="col-5 text-muted">Productos</dt>
                        <dd class="col-7"><span class="fw-semibold text-primary">@Model.CantidadProductos</span></dd>

                        <dt class="col-5 text-muted">Solicitado</dt>
                        <dd class="col-7">
                            <div class="fw-semibold">@Model.SolicitadoPor</div>
                            <div class="text-muted">
                                <time datetime="@Model.FechaSolicitud.ToString("O")">
                                    @Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")
                                </time>
                            </div>
                        </dd>
                    </dl>

                    @if (Model.Estadisticas != null && Model.Estadisticas.Any())
                    {
                        <hr />
                        <div class="small text-muted mb-2">Estadísticas</div>
                        <pre class="mb-0 small">@System.Text.Json.JsonSerializer.Serialize(Model.Estadisticas, new System.Text.Json.JsonSerializerOptions { WriteIndented = true })</pre>
                    }
                </div>
            </div>

            <div class="d-flex flex-wrap gap-2">
                @if (Model.Estado == TheBuryProject.Models.Enums.EstadoBatch.Simulado)
                {
                    if (User.HasClaim("Permission", "precios:approve"))
                    {
                        <a asp-action="Autorizar" asp-route-id="@Model.BatchId" class="btn btn-warning btn-sm">
                            <i class="bi bi-shield-check me-1" aria-hidden="true"></i>Autorizar
                        </a>
                    }

                    if (User.HasClaim("Permission", "precios:approve"))
                    {
                        <form asp-action="Cancelar" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.BatchId" />
                            <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(Model.RowVersion ?? Array.Empty<byte>())" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm" data-confirm="¿Cancelar este batch?">
                                <i class="bi bi-ban me-1" aria-hidden="true"></i>Cancelar
                            </button>
                        </form>
                    }
                }

                @if (Model.Estado == TheBuryProject.Models.Enums.EstadoBatch.Aprobado)
                {
                    if (User.HasClaim("Permission", "precios:apply"))
                    {
                        <a asp-action="Aplicar" asp-route-id="@Model.BatchId" class="btn btn-success btn-sm">
                            <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Aplicar
                        </a>
                    }
                }

                @if (Model.Estado == TheBuryProject.Models.Enums.EstadoBatch.Aplicado)
                {
                    if (User.HasClaim("Permission", "precios:revert"))
                    {
                        <a asp-action="Revertir" asp-route-id="@Model.BatchId" class="btn btn-danger btn-sm">
                            <i class="bi bi-arrow-counterclockwise me-1" aria-hidden="true"></i>Revertir
                        </a>
                    }
                }
            </div>
        </div>

        <div class="col-12 col-xl-8">
            <div class="card card-animate border-0">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <span class="fw-semibold">Items</span>
                    <span class="badge bg-dark-subtle text-light">@Model.Items.Count</span>
                </div>
                <div class="card-body p-0">
                    @if (Model.Items.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover table-striped align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Código</th>
                                        <th scope="col">Producto</th>
                                        <th scope="col" class="text-end">Precio anterior</th>
                                        <th scope="col" class="text-end">Precio nuevo</th>
                                        <th scope="col" class="text-end">Δ%</th>
                                        <th scope="col">Advertencia</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@item.ProductoCodigo</td>
                                            <td>@item.ProductoNombre</td>
                                            <td class="text-end">@item.PrecioAnterior.ToString("N2")</td>
                                            <td class="text-end">@item.PrecioNuevo.ToString("N2")</td>
                                            <td class="text-end">@item.DiferenciaPorcentaje.ToString("N2")%</td>
                                            <td>
                                                @if (item.TieneAdvertencia)
                                                {
                                                    <span class="text-warning"><i class="bi bi-exclamation-triangle"></i> @item.MensajeAdvertencia</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">—</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-info-circle fs-1" aria-hidden="true"></i>
                            <div class="mt-2">No hay items para mostrar.</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
