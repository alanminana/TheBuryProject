@model TheBuryProject.ViewModels.AplicarBatchViewModel

@{
    ViewData["Title"] = "Aplicar Cambio de Precios";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-success">
                <div class="card-header bg-success text-white">
                    <h4><i class="bi bi-check-circle"></i> Aplicar Cambio de Precios</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle-fill"></i>
                        <strong>Este cambio ha sido aprobado y está listo para aplicarse.</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Nombre:</dt>
                        <dd class="col-sm-8"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-4">Productos Afectados:</dt>
                        <dd class="col-sm-8"><strong class="text-primary">@Model.CantidadProductos</strong></dd>

                        <dt class="col-sm-4">Aprobado por:</dt>
                        <dd class="col-sm-8">
                            @Model.AprobadoPor<br>
                            <small>@Model.FechaAprobacion?.ToString("dd/MM/yyyy HH:mm")</small>
                        </dd>
                    </dl>

                    <hr>

                    <form asp-action="AplicarConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.BatchId" />

                        <div class="mb-3">
                            <label asp-for="FechaVigencia" class="form-label">Fecha de Vigencia *</label>
                            <input asp-for="FechaVigencia" type="datetime-local" class="form-control" />
                            <small class="text-muted">Fecha desde la cual los nuevos precios serán válidos</small>
                            <span asp-validation-for="FechaVigencia" class="text-danger"></span>
                        </div>

                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>IMPORTANTE:</strong>
                            <ul class="mb-0">
                                <li>Esta acción modificará <strong>@Model.CantidadProductos precios</strong> en la base de datos</li>
                                <li>Los precios anteriores quedarán registrados en el historial</li>
                                <li>Esta operación es <strong>transaccional</strong> (todo o nada)</li>
                                <li>Podrá revertir el cambio posteriormente si es necesario</li>
                            </ul>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Preview" asp-route-id="@Model.BatchId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-success btn-lg" onclick="return confirm('¿Está ABSOLUTAMENTE SEGURO de aplicar este cambio de precios?\n\nEsta acción modificará ' + @Model.CantidadProductos + ' precios en la base de datos.')">
                                <i class="bi bi-check-circle"></i> Aplicar Cambio AHORA
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}