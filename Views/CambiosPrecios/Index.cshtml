@model TheBuryProject.ViewModels.BatchListViewModel

@{
    ViewData["Title"] = "Cambios Masivos de Precios";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shuffle"></i> Cambios Masivos de Precios</h2>
        @if (User.HasClaim("Permission", "precios:simulate"))
        {
            <a asp-action="Simular" class="btn btn-primary">
                <i class="bi bi-calculator"></i> Nueva Simulación
            </a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Estado</label>
                    <select name="estado" class="form-select" onchange="this.form.submit()">
                        <option value="">Todos los estados</option>
                        @foreach (var estado in Enum.GetValues<TheBuryProject.Models.Enums.EstadoBatch>())
                        {
                            <option value="@((int)estado)" selected="@(Model.EstadoFiltro == estado)">@estado</option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de Batches -->
    <div class="card shadow-sm">
        <div class="card-header">
            <i class="bi bi-list"></i> Listado de Batches
        </div>
        <div class="card-body">
            @if (Model.Batches.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Tipo</th>
                                <th class="text-center">Valor</th>
                                <th class="text-center">Productos</th>
                                <th class="text-center">% Promedio</th>
                                <th class="text-center">Estado</th>
                                <th>Solicitado</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var batch in Model.Batches)
                            {
                                <tr>
                                    <td>
                                        <strong>@batch.Nombre</strong>
                                        @if (batch.RequiereAutorizacion)
                                        {
                                            <i class="bi bi-shield-lock text-warning" title="Requiere autorización"></i>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@batch.TipoCambioDisplay</span>
                                    </td>
                                    <td class="text-center">
                                        @if (batch.TipoAplicacion == TheBuryProject.Models.Enums.TipoAplicacion.Aumento)
                                        {
                                            <span class="text-success">+@batch.ValorCambio.ToString("N2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">-@batch.ValorCambio.ToString("N2")</span>
                                        }
                                    </td>
                                    <td class="text-center">@batch.CantidadProductos</td>
                                    <td class="text-center">
                                        @if (batch.PorcentajePromedioCambio.HasValue)
                                        {
                                            <span>@batch.PorcentajePromedioCambio.Value.ToString("N2")%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @switch (batch.Estado)
                                        {
                                            case TheBuryProject.Models.Enums.EstadoBatch.Simulado:
                                                <span class="badge bg-info">Simulado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoBatch.Aprobado:
                                                <span class="badge bg-primary">Aprobado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoBatch.Aplicado:
                                                <span class="badge bg-success">Aplicado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoBatch.Revertido:
                                                <span class="badge bg-warning text-dark">Revertido</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoBatch.Rechazado:
                                                <span class="badge bg-danger">Rechazado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoBatch.Cancelado:
                                                <span class="badge bg-secondary">Cancelado</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            <strong>@batch.SolicitadoPor</strong><br>
                                            @batch.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Preview" asp-route-id="@batch.Id"
                                               class="btn btn-outline-info" title="Ver Detalle">
                                                <i class="bi bi-eye"></i>
                                            </a>

                                            @if (batch.Estado == TheBuryProject.Models.Enums.EstadoBatch.Simulado)
                                            {
                                                @if (User.HasClaim("Permission", "precios:authorize"))
                                                {
                                                    <a asp-action="Autorizar" asp-route-id="@batch.Id"
                                                       class="btn btn-outline-warning" title="Autorizar">
                                                        <i class="bi bi-shield-check"></i>
                                                    </a>
                                                }
                                            }

                                            @if (batch.Estado == TheBuryProject.Models.Enums.EstadoBatch.Aprobado)
                                            {
                                                @if (User.HasClaim("Permission", "precios:apply"))
                                                {
                                                    <a asp-action="Aplicar" asp-route-id="@batch.Id"
                                                       class="btn btn-outline-success" title="Aplicar">
                                                        <i class="bi bi-check-circle"></i>
                                                    </a>
                                                }
                                            }

                                            @if (batch.Estado == TheBuryProject.Models.Enums.EstadoBatch.Aplicado)
                                            {
                                                @if (User.HasClaim("Permission", "precios:revert"))
                                                {
                                                    <a asp-action="Revertir" asp-route-id="@batch.Id"
                                                       class="btn btn-outline-danger" title="Revertir">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </a>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle"></i> No hay batches de cambios registrados.
                </div>
            }
        </div>
    </div>
</div>