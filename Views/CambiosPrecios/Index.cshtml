@model TheBuryProject.ViewModels.BatchListViewModel

@{
    ViewData["Title"] = "Cambios masivos de precios";
}

<div class="container-fluid py-4">

    @* Header unificado *@
    <partial name="_PageHeader" model='new PageHeaderModel {
        Breadcrumb = "Gestión de precios · Cambios masivos",
        Title = "Cambios masivos de precios",
        Icon = "shuffle",
        Subtitle = "Simulaciones, aprobaciones y aplicación de cambios de precios sobre múltiples productos.",
        PrimaryAction = "Simular",
        PrimaryActionText = "Nueva simulación",
        PrimaryActionIcon = "calculator",
        PrimaryActionRequiredClaim = "precios:simulate"
    }' />

    @* Alertas unificadas *@
    <partial name="_Alerts" />

    <!-- Filtros -->
    <div class="card card-animate border-0 mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-end">
                <div class="col-12 col-md-4 col-lg-3">
                    <label class="form-label small mb-1">Estado</label>
                    <select name="estado"
                            class="form-select form-select-sm"
                            data-auto-submit="true">
                        <option value="">Todos los estados</option>
                        @foreach (var estado in Enum.GetValues<TheBuryProject.Models.Enums.EstadoBatch>())
                        {
                            <option value="@((int)estado)" selected="@(Model.EstadoFiltro == estado ? "selected" : null)">
                                @estado
                            </option>
                        }
                    </select>
                </div>
            </form>
        </div>
    </div>

    <!-- Lista de batches -->
    <div class="card card-animate border-0">
        <div class="card-header d-flex align-items-center justify-content-between">
            <div class="d-flex align-items-center gap-2">
                <i class="bi bi-list" aria-hidden="true"></i>
                <span class="fw-semibold">Listado de batches</span>
            </div>
            @if (Model.Batches.Any())
            {
                <span class="badge bg-dark-subtle text-light small">
                    @Model.Batches.Count batch(es)
                </span>
            }
        </div>

        <div class="card-body p-0">
            @if (Model.Batches.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover table-striped align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Nombre</th>
                                <th scope="col">Tipo</th>
                                <th scope="col" class="text-center">Valor</th>
                                <th scope="col" class="text-center">Productos</th>
                                <th scope="col" class="text-center">% promedio</th>
                                <th scope="col" class="text-center">Estado</th>
                                <th scope="col">Solicitado</th>
                                <th scope="col" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var batch in Model.Batches)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-semibold">@batch.Nombre</span>
                                            @if (batch.RequiereAutorizacion)
                                            {
                                                <span class="small text-warning d-inline-flex align-items-center gap-1">
                                                    <i class="bi bi-shield-lock"></i>
                                                    Requiere autorización
                                                </span>
                                            }
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge bg-secondary">
                                            @batch.TipoCambioDisplay
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        @if (batch.TipoAplicacion == TheBuryProject.Models.Enums.TipoAplicacion.Aumento)
                                        {
                                            <span class="text-success fw-semibold">
                                                +@batch.ValorCambio.ToString("N2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-semibold">
                                                -@batch.ValorCambio.ToString("N2")
                                            </span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <span class="badge bg-dark-subtle text-light">
                                            @batch.CantidadProductos
                                        </span>
                                    </td>

                                    <td class="text-center">
                                        @if (batch.PorcentajePromedioCambio.HasValue)
                                        {
                                            <span>@batch.PorcentajePromedioCambio.Value.ToString("N2")%</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">—</span>
                                        }
                                    </td>

                                    <td class="text-center">
                                        <partial name="_BadgeEstadoBatch" model="batch.Estado" />
                                    </td>

                                    <td>
                                        <small class="d-block fw-semibold">@batch.SolicitadoPor</small>
                                        <small class="text-muted d-block">
                                            <time datetime="@batch.FechaSolicitud.ToString("O")">
                                                @batch.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")
                                            </time>
                                        </small>
                                    </td>

                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Preview"
                                               asp-route-id="@batch.Id"
                                               class="btn btn-outline-info"
                                               aria-label="Ver detalle"
                                               title="Ver detalle">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                                <span class="visually-hidden">Ver detalle</span>
                                            </a>

                                            @* Autorizar (solo estado Simulado) *@
                                            @if (batch.Estado == TheBuryProject.Models.Enums.EstadoBatch.Simulado)
                                            {
                                                if (User.HasClaim("Permission", "precios:approve"))
                                                {
                                                    <a asp-action="Autorizar"
                                                       asp-route-id="@batch.Id"
                                                       class="btn btn-outline-warning"
                                                       aria-label="Autorizar"
                                                       title="Autorizar">
                                                        <i class="bi bi-shield-check" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Autorizar</span>
                                                    </a>
                                                }
                                            }

                                            @* Aplicar (solo estado Aprobado) *@
                                            @if (batch.Estado == TheBuryProject.Models.Enums.EstadoBatch.Aprobado)
                                            {
                                                if (User.HasClaim("Permission", "precios:apply"))
                                                {
                                                    <a asp-action="Aplicar"
                                                       asp-route-id="@batch.Id"
                                                       class="btn btn-outline-success"
                                                       aria-label="Aplicar"
                                                       title="Aplicar">
                                                        <i class="bi bi-check-circle" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Aplicar</span>
                                                    </a>
                                                }
                                            }

                                            @* Revertir (solo estado Aplicado) *@
                                            @if (batch.Estado == TheBuryProject.Models.Enums.EstadoBatch.Aplicado)
                                            {
                                                if (User.HasClaim("Permission", "precios:revert"))
                                                {
                                                    <a asp-action="Revertir"
                                                       asp-route-id="@batch.Id"
                                                       class="btn btn-outline-danger"
                                                       aria-label="Revertir"
                                                       title="Revertir">
                                                        <i class="bi bi-arrow-counterclockwise" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Revertir</span>
                                                    </a>
                                                }
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="py-5 text-center text-muted">
                    <i class="bi bi-info-circle fs-1" aria-hidden="true"></i>
                    <p class="mt-3 mb-1">No hay batches de cambios registrados.</p>
                    <p class="small mb-0">
                        Cuando registres una nueva simulación aparecerá aquí con su estado y acciones disponibles.
                    </p>
                </div>
            }
        </div>
    </div>
</div>
