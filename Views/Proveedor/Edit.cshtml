@model TheBuryProject.ViewModels.ProveedorViewModel
@{
    ViewData["Title"] = "Editar Proveedor";
}

<section class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 fw-bold text-light mb-0">
                <i class="bi bi-pencil-square text-warning me-2"></i> Editar Proveedor
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">Proveedores</a></li>
                    <li class="breadcrumb-item active text-secondary">Editar</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row g-4">
        <!-- Formulario principal -->
        <div class="col-lg-8">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Datos Fiscales -->
                        <h5 class="text-info mb-3 border-bottom pb-2">
                            <i class="bi bi-file-text me-2"></i>Datos Fiscales
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="Cuit" class="form-label text-light"></label>
                                <input asp-for="Cuit" class="form-control bg-body-secondary text-light border-0" maxlength="11" />
                                <span asp-validation-for="Cuit" class="text-danger small"></span>
                                <small class="text-muted">11 dígitos sin guiones</small>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="RazonSocial" class="form-label text-light"></label>
                                <input asp-for="RazonSocial" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="RazonSocial" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="NombreFantasia" class="form-label text-light"></label>
                                <input asp-for="NombreFantasia" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="NombreFantasia" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Datos de Contacto -->
                        <h5 class="text-info mb-3 border-bottom pb-2">
                            <i class="bi bi-telephone me-2"></i>Datos de Contacto
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label text-light"></label>
                                <input asp-for="Email" type="email" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label text-light"></label>
                                <input asp-for="Telefono" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Telefono" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Contacto" class="form-label text-light"></label>
                                <input asp-for="Contacto" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Contacto" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Cobertura -->
                        <h5 class="text-info mb-3 border-bottom pb-2">
                            <i class="bi bi-diagram-3 me-2"></i>Cobertura de Catálogo
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="CategoriasSeleccionadas" class="form-label text-light"></label>
                                <select asp-for="CategoriasSeleccionadas" class="form-select bg-body-secondary text-light border-0" asp-items="Model.CategoriasDisponibles" multiple></select>
                                <small class="text-muted d-block mt-1">Actualizá las categorías asociadas.</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MarcasSeleccionadas" class="form-label text-light"></label>
                                <select asp-for="MarcasSeleccionadas" class="form-select bg-body-secondary text-light border-0" asp-items="Model.MarcasDisponibles" multiple></select>
                                <small class="text-muted d-block mt-1">Seleccioná las marcas del proveedor.</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ProductosSeleccionados" class="form-label text-light"></label>
                                <select asp-for="ProductosSeleccionados" class="form-select bg-body-secondary text-light border-0" asp-items="Model.ProductosDisponibles" multiple size="8"></select>
                                <small class="text-muted d-block mt-1">Destacá productos frecuentes.</small>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <h5 class="text-info mb-3 border-bottom pb-2">
                            <i class="bi bi-geo-alt me-2"></i>Dirección
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-12">
                                <label asp-for="Direccion" class="form-label text-light"></label>
                                <input asp-for="Direccion" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Direccion" class="text-danger small"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="Ciudad" class="form-label text-light"></label>
                                <input asp-for="Ciudad" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Ciudad" class="text-danger small"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="Provincia" class="form-label text-light"></label>
                                <input asp-for="Provincia" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Provincia" class="text-danger small"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="CodigoPostal" class="form-label text-light"></label>
                                <input asp-for="CodigoPostal" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="CodigoPostal" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Información adicional -->
                        <h5 class="text-info mb-3 border-bottom pb-2">
                            <i class="bi bi-chat-text me-2"></i>Información Adicional
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-12">
                                <label asp-for="Aclaraciones" class="form-label text-light"></label>
                                <textarea asp-for="Aclaraciones" class="form-control bg-body-secondary text-light border-0" rows="4"></textarea>
                                <span asp-validation-for="Aclaraciones" class="text-danger small"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input asp-for="Activo" class="form-check-input" />
                                    <label asp-for="Activo" class="form-check-label text-light"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning text-dark fw-semibold">
                                <i class="bi bi-save me-2"></i>Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card bg-body-secondary border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="fw-bold mb-3 text-info">
                        <i class="bi bi-clock-history me-2"></i>Información del Registro
                    </h6>
                    <p class="small mb-0 text-light">
                        Editando proveedor <strong>@Model.RazonSocial</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
