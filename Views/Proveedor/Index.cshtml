@model TheBuryProject.ViewModels.ProveedorFilterViewModel
@{
    ViewData["Title"] = "Proveedores";
}

<section class="container-fluid py-4">
    <!-- Header -->
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h3 fw-bold text-light mb-0">
                <i class="bi bi-truck text-info me-2"></i> Gestión de Proveedores
            </h1>
            <p class="text-secondary mb-0">Administrá los proveedores registrados en el sistema</p>
        </div>
        <div class="col-auto d-flex gap-2 flex-wrap">
            <a asp-controller="OrdenCompra" asp-action="Index" class="btn btn-outline-light fw-semibold shadow-sm">
                <i class="bi bi-cart-check me-2"></i>Ver Órdenes de Compra
            </a>
            <a asp-action="Create" class="btn btn-info text-dark fw-semibold shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Proveedor
            </a>
        </div>
    </div>

    <!-- Mensajes -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card bg-dark border-0 shadow-sm mb-4">
        <div class="card-header border-bottom border-secondary bg-gradient">
            <button class="btn btn-link text-decoration-none text-light w-100 text-start p-0"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#filtrosCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Búsqueda y Filtros</h6>
                    <i class="bi bi-chevron-down"></i>
                </div>
            </button>
        </div>

        <div class="collapse show" id="filtrosCollapse">
            <div class="card-body bg-dark">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-light fw-semibold">
                                <i class="bi bi-search me-1"></i>Buscar proveedor
                            </label>
                            <input type="text" name="searchTerm" value="@Model.SearchTerm"
                                   class="form-control bg-body-secondary text-light border-0"
                                   placeholder="Buscar por CUIT, razón social, nombre de fantasía o email..." />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold">Opciones</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="soloActivos"
                                       id="soloActivos" value="true" @(Model.SoloActivos ? "checked" : "") />
                                <label class="form-check-label text-light" for="soloActivos">
                                    <i class="bi bi-check-circle text-success me-1"></i> Solo activos
                                </label>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label text-light fw-semibold">
                                <i class="bi bi-sort-down me-1"></i>Ordenar por
                            </label>
                            <select class="form-select bg-body-secondary text-light border-0" name="orderBy">
                                <option value="razonsocial" selected="@(Model.OrderBy == "razonsocial")">Razón Social</option>
                                <option value="cuit" selected="@(Model.OrderBy == "cuit")">CUIT</option>
                                <option value="email" selected="@(Model.OrderBy == "email")">Email</option>
                                <option value="telefono" selected="@(Model.OrderBy == "telefono")">Teléfono</option>
                            </select>
                        </div>

                        <div class="col-md-1">
                            <label class="form-label text-light fw-semibold">Dirección</label>
                            <select class="form-select bg-body-secondary text-light border-0" name="orderDirection">
                                <option value="asc" selected="@(Model.OrderDirection == "asc")">Asc</option>
                                <option value="desc" selected="@(Model.OrderDirection == "desc")">Desc</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-info text-dark fw-semibold">
                                    <i class="bi bi-search me-2"></i>Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light">
                                    <i class="bi bi-x-circle me-2"></i>Limpiar Filtros
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SoloActivos)
    {
        <div class="alert alert-info border-0 shadow-sm mb-3">
            <i class="bi bi-info-circle me-2"></i>
            Se encontraron <strong>@Model.TotalResultados</strong> proveedores que coinciden con los filtros.
        </div>
    }

    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle text-light mb-0">
                    <thead class="table-dark border-secondary">
                        <tr>
                            <th>CUIT</th>
                            <th>Razón Social</th>
                            <th>Productos</th>
                            <th>Contacto</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Proveedores.Any())
                        {
                            @foreach (var p in Model.Proveedores)
                            {
                                <tr>
                                    <td><span class="badge bg-secondary text-light">@p.Cuit</span></td>
                                    <td>
                                        <div class="fw-semibold">@p.RazonSocial</div>
                                        @if (!string.IsNullOrEmpty(p.NombreFantasia))
                                        {
                                            <small class="text-muted">@p.NombreFantasia</small>
                                        }
                                    </td>
                                    <td>
                                        @if (p.ProductosAsociados.Any())
                                        {
                                            <div class="d-flex flex-wrap gap-1">
                                                @foreach (var producto in p.ProductosAsociados.Take(3))
                                                {
                                                    <span class="badge bg-success-subtle text-success">@producto</span>
                                                }
                                                @if (p.ProductosAsociados.Count > 3)
                                                {
                                                    <span class="badge bg-secondary" title="@string.Join(", ", p.ProductosAsociados.Skip(3))">
                                                        +@(p.ProductosAsociados.Count - 3) más
                                                    </span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <small class="text-muted"><i class="bi bi-exclamation-triangle text-warning"></i> Sin productos</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="small text-muted">@(p.Contacto ?? "-")</div>
                                        <div class="small text-muted">@(p.Email ?? "-")</div>
                                        <div class="small text-muted">@(p.Telefono ?? "-")</div>
                                    </td>
                                    <td class="text-center">
                                        @if (p.Activo)
                                        {
                                            <span class="badge bg-success text-dark"><i class="bi bi-check-circle"></i> Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger text-light"><i class="bi bi-x-circle"></i> Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-info" title="Ver detalles"><i class="bi bi-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                                            <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger" title="Eliminar"><i class="bi bi-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center py-5 text-secondary">
                                    <i class="bi bi-inbox display-4 d-block mb-2"></i>
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SoloActivos)
                                    {
                                        <p>No se encontraron proveedores</p>
                                        <a asp-action="Index" class="btn btn-outline-light">Limpiar filtros</a>
                                    }
                                    else
                                    {
                                        <p>No hay proveedores registrados</p>
                                        <a asp-action="Create" class="btn btn-info text-dark fw-semibold">Crear proveedor</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.Proveedores.Any())
    {
        <div class="row mt-4 g-3">
            <div class="col-md-6">
                <div class="card bg-dark border-0 shadow-sm text-light">
                    <div class="card-body">
                        <h6 class="text-secondary mb-1">Total Proveedores</h6>
                        <h3 class="fw-bold">@Model.TotalResultados</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-dark border-0 shadow-sm text-light">
                    <div class="card-body">
                        <h6 class="text-secondary mb-1">Activos</h6>
                        <h3 class="fw-bold text-success">@Model.Proveedores.Count(p => p.Activo)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        [...tooltipTriggerList].forEach(t => new bootstrap.Tooltip(t));
    </script>
}
