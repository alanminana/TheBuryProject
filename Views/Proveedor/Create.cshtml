@model TheBuryProject.ViewModels.ProveedorViewModel
@{
    ViewData["Title"] = "Nuevo Proveedor";
}

<section class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="h3 fw-bold text-light mb-0">
                <i class="bi bi-plus-circle text-info me-2" aria-hidden="true"></i>Nuevo Proveedor
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a asp-action="Index" class="link-light">Proveedores</a></li>
                    <li class="breadcrumb-item active text-light">Nuevo</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Formulario principal -->
        <div class="col-lg-8">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" aria-label="Errores de validación"></div>
                        }

                        <!-- Datos Fiscales -->
                        <h5 class="text-info border-bottom pb-2 mb-3">
                            <i class="bi bi-file-text me-2" aria-hidden="true"></i>Datos Fiscales
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="Cuit" class="form-label text-light"></label>
                                <input asp-for="Cuit" class="form-control bg-body-secondary text-light border-0" maxlength="11" placeholder="20123456789" />
                                <span asp-validation-for="Cuit" class="text-danger"></span>
                                <small class="text-secondary">11 dígitos sin guiones</small>
                            </div>
                            <div class="col-md-8">
                                <label asp-for="RazonSocial" class="form-label text-light"></label>
                                <input asp-for="RazonSocial" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="RazonSocial" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="NombreFantasia" class="form-label text-light"></label>
                                <input asp-for="NombreFantasia" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="NombreFantasia" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Datos de Contacto -->
                        <h5 class="text-info border-bottom pb-2 mb-3">
                            <i class="bi bi-telephone me-2" aria-hidden="true"></i>Datos de Contacto
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label text-light"></label>
                                <input asp-for="Email" type="email" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Telefono" class="form-label text-light"></label>
                                <input asp-for="Telefono" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <label asp-for="Contacto" class="form-label text-light"></label>
                                <input asp-for="Contacto" class="form-control bg-body-secondary text-light border-0" placeholder="Nombre del contacto principal" />
                                <span asp-validation-for="Contacto" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Asociaciones -->
                        <h5 class="text-info border-bottom pb-2 mb-3">
                            <i class="bi bi-diagram-3 me-2" aria-hidden="true"></i>Cobertura de Catálogo
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-4">
                                <label asp-for="CategoriasSeleccionadas" class="form-label text-light"></label>
                                <select asp-for="CategoriasSeleccionadas" class="form-select bg-body-secondary text-light border-0" asp-items="Model.CategoriasDisponibles" multiple></select>
                                <small class="text-secondary d-block mt-1">Seleccioná las categorías que trabaja.</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MarcasSeleccionadas" class="form-label text-light"></label>
                                <select asp-for="MarcasSeleccionadas" class="form-select bg-body-secondary text-light border-0" asp-items="Model.MarcasDisponibles" multiple></select>
                                <small class="text-secondary d-block mt-1">Elegí las marcas con las que opera.</small>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ProductosSeleccionados" class="form-label text-light"></label>
                                <input type="text" id="productosFiltroInput" class="form-control form-control-sm bg-body-secondary text-light border-0 mb-2" placeholder="Buscar producto por código o nombre..." />
                                <select asp-for="ProductosSeleccionados" class="form-select bg-body-secondary text-light border-0" asp-items="Model.ProductosDisponibles" multiple size="8"></select>
                                <small class="text-secondary d-block mt-1">Marcá productos clave o habituales.</small>
                            </div>
                        </div>

                        <!-- Dirección -->
                        <h5 class="text-info border-bottom pb-2 mb-3">
                            <i class="bi bi-geo-alt me-2" aria-hidden="true"></i>Dirección
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-12">
                                <label asp-for="Direccion" class="form-label text-light"></label>
                                <input asp-for="Direccion" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="Ciudad" class="form-label text-light"></label>
                                <input asp-for="Ciudad" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Ciudad" class="text-danger"></span>
                            </div>
                            <div class="col-md-5">
                                <label asp-for="Provincia" class="form-label text-light"></label>
                                <input asp-for="Provincia" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Provincia" class="text-danger"></span>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="CodigoPostal" class="form-label text-light"></label>
                                <input asp-for="CodigoPostal" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Información Adicional -->
                        <h5 class="text-info border-bottom pb-2 mb-3">
                            <i class="bi bi-chat-text me-2" aria-hidden="true"></i>Información Adicional
                        </h5>
                        <div class="row g-3 mb-4">
                            <div class="col-md-12">
                                <label asp-for="Aclaraciones" class="form-label text-light"></label>
                                <textarea asp-for="Aclaraciones" class="form-control bg-body-secondary text-light border-0" rows="4" placeholder="Notas o condiciones especiales..."></textarea>
                                <span asp-validation-for="Aclaraciones" class="text-danger"></span>
                            </div>
                            <div class="col-md-12">
                                <div class="form-check">
                                    <input asp-for="Activo" class="form-check-input" />
                                    <label asp-for="Activo" class="form-check-label text-light"></label>
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-x-circle me-2" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-info text-dark fw-semibold">
                                <i class="bi bi-save me-2" aria-hidden="true"></i>Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card bg-body-secondary border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="fw-bold text-info mb-3">
                        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>Guía de Carga
                    </h6>
                    <p class="small text-light mb-2"><strong>CUIT:</strong> Ingresá 11 dígitos sin guiones.</p>
                    <p class="small text-light mb-2"><strong>Razón Social:</strong> Nombre legal según AFIP.</p>
                    <p class="small text-light mb-2"><strong>Fantasia:</strong> Nombre comercial (opcional).</p>
                    <p class="small text-light mb-0"><strong>Notas:</strong> Podés agregar aclaraciones, condiciones de pago o plazos de entrega.</p>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const filtroInput = document.getElementById('productosFiltroInput');
            const selectProductos = document.getElementById('ProductosSeleccionados');
            if (!filtroInput || !selectProductos) return;

            const allOptions = Array.from(selectProductos.options).map(function (opt) {
                return { value: opt.value, text: opt.text, selected: opt.selected };
            });

            function renderOptions() {
                const term = (filtroInput.value || '').trim().toLowerCase();
                const selectedValues = new Set(Array.from(selectProductos.selectedOptions).map(o => o.value));
                selectProductos.innerHTML = '';

                allOptions
                    .filter(function (o) { return !term || o.text.toLowerCase().includes(term); })
                    .forEach(function (o) {
                        const option = document.createElement('option');
                        option.value = o.value;
                        option.text = o.text;
                        option.selected = selectedValues.has(o.value) || o.selected;
                        selectProductos.appendChild(option);
                    });
            }

            selectProductos.addEventListener('change', function () {
                const selectedValues = new Set(Array.from(selectProductos.selectedOptions).map(o => o.value));
                allOptions.forEach(function (o) { o.selected = selectedValues.has(o.value); });
            });

            filtroInput.addEventListener('input', renderOptions);
        });
    </script>
}
