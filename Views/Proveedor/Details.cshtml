@model TheBuryProject.ViewModels.ProveedorViewModel

@{
    ViewData["Title"] = "Detalle de Proveedor";
}

<div class="container-fluid py-4">
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="h3 mb-0 fw-bold">
                <i class="bi bi-truck text-info"></i> Detalle de Proveedor
            </h1>
            <p class="text-muted mb-0">Información general y asociaciones del proveedor</p>
        </div>
        <div class="col-auto d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="bi bi-pencil-square me-2"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-2"></i>Volver al listado
            </a>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Información General
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Razón Social</dt>
                                <dd class="col-sm-7 fw-semibold">@Model.RazonSocial</dd>

                                <dt class="col-sm-5">Nombre Fantasía</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.NombreFantasia) ? "-" : Model.NombreFantasia)</dd>

                                <dt class="col-sm-5">CUIT</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-primary-subtle text-primary-emphasis">@Model.Cuit</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Activo</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success-subtle text-success-emphasis">
                                            <i class="bi bi-check-circle"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary-emphasis">
                                            <i class="bi bi-x-circle"></i> Inactivo
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Contacto</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.Contacto) ? "-" : Model.Contacto)</dd>

                                <dt class="col-sm-5">Email</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.Email) ? "-" : Model.Email)</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Teléfono</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.Telefono) ? "-" : Model.Telefono)</dd>

                                <dt class="col-sm-5">Código Postal</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.CodigoPostal) ? "-" : Model.CodigoPostal)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5">Ciudad</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.Ciudad) ? "-" : Model.Ciudad)</dd>

                                <dt class="col-sm-5">Provincia</dt>
                                <dd class="col-sm-7">@(string.IsNullOrWhiteSpace(Model.Provincia) ? "-" : Model.Provincia)</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Direccion))
                    {
                        <div class="mt-3">
                            <h6 class="text-muted text-uppercase small fw-semibold">Dirección</h6>
                            <p class="mb-0">@Model.Direccion</p>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Aclaraciones))
                    {
                        <div class="mt-3">
                            <h6 class="text-muted text-uppercase small fw-semibold">Aclaraciones</h6>
                            <p class="mb-0">@Model.Aclaraciones</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-diagram-3"></i> Asociaciones con el Catálogo
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <h6 class="fw-semibold">
                                <i class="bi bi-tag text-primary"></i> Categorías
                            </h6>
                            @if (Model.CategoriasAsociadas.Any())
                            {
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var categoria in Model.CategoriasAsociadas.OrderBy(c => c))
                                    {
                                        <li class="d-flex align-items-center gap-2">
                                            <i class="bi bi-dot text-primary"></i> @categoria
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted small mb-0">Sin categorías asociadas.</p>
                            }
                        </div>
                        <div class="col-md-4">
                            <h6 class="fw-semibold">
                                <i class="bi bi-award text-primary"></i> Marcas
                            </h6>
                            @if (Model.MarcasAsociadas.Any())
                            {
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var marca in Model.MarcasAsociadas.OrderBy(m => m))
                                    {
                                        <li class="d-flex align-items-center gap-2">
                                            <i class="bi bi-dot text-primary"></i> @marca
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted small mb-0">Sin marcas asociadas.</p>
                            }
                        </div>
                        <div class="col-md-4">
                            <h6 class="fw-semibold">
                                <i class="bi bi-box-seam text-primary"></i> Productos clave
                            </h6>
                            @if (Model.ProductosAsociados.Any())
                            {
                                <ul class="list-unstyled mb-0 small">
                                    @foreach (var producto in Model.ProductosAsociados.OrderBy(p => p))
                                    {
                                        <li class="d-flex align-items-center gap-2">
                                            <i class="bi bi-dot text-primary"></i> @producto
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted small mb-0">Sin productos asociados.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-graph-up"></i> Métricas rápidas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">Órdenes de compra</span>
                            <span class="badge bg-primary-subtle text-primary-emphasis">@Model.TotalOrdenesCompra</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">Cheques vigentes</span>
                            <span class="badge bg-info-subtle text-info-emphasis">@Model.ChequesVigentes</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">Deuda estimada</span>
                            <span class="fw-semibold">$@Model.TotalDeuda.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>