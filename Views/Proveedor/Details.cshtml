@model TheBuryProject.ViewModels.ProveedorViewModel
@{
    ViewData["Title"] = "Detalle de Proveedor";
}

<section class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4 align-items-center">
        <div class="col">
            <h1 class="h3 fw-bold text-light mb-0">
                <i class="bi bi-truck text-info me-2" aria-hidden="true"></i> Detalle de Proveedor
            </h1>
            <p class="text-secondary mb-0">Información general y asociaciones del proveedor</p>
        </div>
        <div class="col-auto d-flex gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-dark fw-semibold">
                <i class="bi bi-pencil-square me-2" aria-hidden="true"></i>Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Volver al listado
            </a>
        </div>
    </div>

    <div class="row g-4">
        <!-- Información General -->
        <div class="col-lg-8">
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-body-secondary border-0">
                    <h5 class="mb-0 text-info">
                        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>Información General
                    </h5>
                </div>
                <div class="card-body text-light">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Razón Social</dt>
                                <dd class="col-sm-7 fw-semibold">@Model.RazonSocial</dd>

                                <dt class="col-sm-5 text-secondary">Nombre Fantasía</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.NombreFantasia) ? Model.NombreFantasia : "-")</dd>

                                <dt class="col-sm-5 text-secondary">CUIT</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-info text-dark">@Model.Cuit</span>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Activo</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success text-dark"><i class="bi bi-check-circle" aria-hidden="true"></i> Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-light"><i class="bi bi-x-circle" aria-hidden="true"></i> Inactivo</span>
                                    }
                                </dd>

                                <dt class="col-sm-5 text-secondary">Contacto</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.Contacto) ? Model.Contacto : "-")</dd>

                                <dt class="col-sm-5 text-secondary">Email</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.Email) ? Model.Email : "-")</dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row g-3 mt-1">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Teléfono</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.Telefono) ? Model.Telefono : "-")</dd>

                                <dt class="col-sm-5 text-secondary">Código Postal</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.CodigoPostal) ? Model.CodigoPostal : "-")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Ciudad</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.Ciudad) ? Model.Ciudad : "-")</dd>

                                <dt class="col-sm-5 text-secondary">Provincia</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.Provincia) ? Model.Provincia : "-")</dd>
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Direccion))
                    {
                        <div class="mt-3">
                            <h6 class="text-secondary text-uppercase small fw-semibold">Dirección</h6>
                            <p class="mb-0 text-light">@Model.Direccion</p>
                        </div>
                    }

                    @if (!string.IsNullOrWhiteSpace(Model.Aclaraciones))
                    {
                        <div class="mt-3">
                            <h6 class="text-secondary text-uppercase small fw-semibold">Aclaraciones</h6>
                            <p class="mb-0 text-light">@Model.Aclaraciones</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Asociaciones -->
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-body-secondary border-0">
                    <h5 class="mb-0 text-info">
                        <i class="bi bi-diagram-3 me-2" aria-hidden="true"></i>Asociaciones con el Catálogo
                    </h5>
                </div>
                <div class="card-body text-light">
                    <div class="row g-4">
                        <div class="col-md-4">
                            <h6 class="fw-semibold text-info"><i class="bi bi-tag me-2" aria-hidden="true"></i>Categorías</h6>
                            @if (Model.CategoriasAsociadas.Any())
                            {
                                <ul class="list-unstyled small mb-0">
                                    @foreach (var c in Model.CategoriasAsociadas.OrderBy(c => c))
                                    {
                                        <li><i class="bi bi-dot text-info" aria-hidden="true"></i>@c</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-secondary small mb-0">Sin categorías asociadas.</p>
                            }
                        </div>

                        <div class="col-md-4">
                            <h6 class="fw-semibold text-info"><i class="bi bi-award me-2" aria-hidden="true"></i>Marcas</h6>
                            @if (Model.MarcasAsociadas.Any())
                            {
                                <ul class="list-unstyled small mb-0">
                                    @foreach (var m in Model.MarcasAsociadas.OrderBy(m => m))
                                    {
                                        <li><i class="bi bi-dot text-info" aria-hidden="true"></i>@m</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-secondary small mb-0">Sin marcas asociadas.</p>
                            }
                        </div>

                        <div class="col-md-4">
                            <h6 class="fw-semibold text-info"><i class="bi bi-box-seam me-2" aria-hidden="true"></i>Productos Clave</h6>
                            @if (Model.ProductosAsociados.Any())
                            {
                                <ul class="list-unstyled small mb-0">
                                    @foreach (var p in Model.ProductosAsociados.OrderBy(p => p))
                                    {
                                        <li><i class="bi bi-dot text-info" aria-hidden="true"></i>@p</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-secondary small mb-0">Sin productos asociados.</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Panel lateral -->
        <div class="col-lg-4">
            <div class="card bg-body-secondary border-0 shadow-sm mb-4">
                <div class="card-header border-0 bg-dark text-light">
                    <h5 class="mb-0 text-info"><i class="bi bi-graph-up me-2" aria-hidden="true"></i>Métricas rápidas</h5>
                </div>
                <div class="card-body text-light">
                    <div class="d-flex flex-column gap-3">
                        <div class="d-flex justify-content-between">
                            <span class="text-secondary">Órdenes de compra</span>
                            <span class="badge bg-info text-dark">@Model.TotalOrdenesCompra</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-secondary">Cheques vigentes</span>
                            <span class="badge bg-warning text-dark">@Model.ChequesVigentes</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-secondary">Deuda estimada</span>
                            <span class="fw-semibold text-light">$@Model.TotalDeuda.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
