@model TheBuryProject.ViewModels.OrdenCompraViewModel

@{
    ViewData["Title"] = "Detalle de Orden de Compra";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>
                <i class="bi bi-cart-check"></i> Orden de Compra #@Model.Numero
            </h2>
            <div>
                @if (Model.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida &&
                                Model.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada)
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                }
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="row">
            <!-- Columna principal -->
            <div class="col-md-8">
                <!-- Información general -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-info-circle"></i> Información General
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Número</dt>
                                    <dd class="col-sm-7"><strong>@Model.Numero</strong></dd>

                                    <dt class="col-sm-5">Proveedor</dt>
                                    <dd class="col-sm-7">
                                        <a asp-controller="Proveedor" asp-action="Details" asp-route-id="@Model.ProveedorId">
                                            @Model.ProveedorNombre
                                        </a>
                                    </dd>

                                    <dt class="col-sm-5">Estado</dt>
                                    <dd class="col-sm-7">
                                        @{
                                            var badgeClass = Model.Estado switch
                                            {
                                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Borrador => "bg-secondary",
                                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Enviada => "bg-info",
                                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Confirmada => "bg-primary",
                                                TheBuryProject.Models.Enums.EstadoOrdenCompra.EnTransito => "bg-warning",
                                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida => "bg-success",
                                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@Model.Estado.ToString()</span>
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-md-6">
                                <dl class="row">
                                    <dt class="col-sm-5">Fecha Emisión</dt>
                                    <dd class="col-sm-7">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>

                                    @if (Model.FechaEntregaEstimada.HasValue)
                                    {
                                        <dt class="col-sm-5">Entrega Estimada</dt>
                                        <dd class="col-sm-7">@Model.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")</dd>
                                    }

                                    @if (Model.FechaRecepcion.HasValue)
                                    {
                                        <dt class="col-sm-5">Fecha Recepción</dt>
                                        <dd class="col-sm-7">
                                            <strong class="text-success">@Model.FechaRecepcion.Value.ToString("dd/MM/yyyy")</strong>
                                        </dd>
                                    }
                                </dl>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Observaciones))
                        {
                            <div class="row mt-2">
                                <div class="col-12">
                                    <h6 class="text-muted">Observaciones</h6>
                                    <p class="text-muted mb-0">@Model.Observaciones</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Detalle de productos -->
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-box-seam"></i> Productos Ordenados
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Producto</th>
                                        <th class="text-end">Cantidad</th>
                                        <th class="text-end">Precio Unit.</th>
                                        <th class="text-end">Subtotal</th>
                                        <th class="text-end">Recibido</th>
                                        <th class="text-center">Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var detalle in Model.Detalles)
                                    {
                                        var completo = detalle.CantidadRecibida >= detalle.Cantidad;
                                        <tr>
                                            <td>
                                                <strong>@detalle.ProductoNombre</strong>
                                                @if (!string.IsNullOrEmpty(detalle.ProductoCodigo))
                                                {
                                                    <br />
                                                    <small class="text-muted">Código: @detalle.ProductoCodigo</small>
                                                }
                                            </td>
                                            <td class="text-end">@detalle.Cantidad.ToString("N2")</td>
                                            <td class="text-end">$@detalle.PrecioUnitario.ToString("N2")</td>
                                            <td class="text-end"><strong>$@detalle.Subtotal.ToString("N2")</strong></td>
                                            <td class="text-end">
                                                @if (detalle.CantidadRecibida > 0)
                                                {
                                                    <span class="text-success">@detalle.CantidadRecibida.ToString("N2")</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                @if (completo)
                                                {
                                                    <span class="badge bg-success">Completo</span>
                                                }
                                                else if (detalle.CantidadRecibida > 0)
                                                {
                                                    <span class="badge bg-warning">Parcial</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Pendiente</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Columna lateral -->
            <div class="col-md-4">
                <!-- Totales -->
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-calculator"></i> Totales
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-7">Subtotal:</dt>
                            <dd class="col-5 text-end">$@Model.Subtotal.ToString("N2")</dd>

                            @if (Model.Descuento > 0)
                            {
                                <dt class="col-7">Descuento:</dt>
                                <dd class="col-5 text-end text-danger">-$@Model.Descuento.ToString("N2")</dd>
                            }

                            <dt class="col-7">IVA (21%):</dt>
                            <dd class="col-5 text-end">$@Model.Iva.ToString("N2")</dd>

                            <dt class="col-7 border-top pt-2"><strong>Total:</strong></dt>
                            <dd class="col-5 text-end border-top pt-2">
                                <strong class="fs-4 text-primary">$@Model.Total.ToString("N2")</strong>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Cambiar estado -->
                @if (Model.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada)
                {
                    <div class="card mb-3">
                        <div class="card-header bg-warning">
                            <h5 class="mb-0">
                                <i class="bi bi-arrow-repeat"></i> Cambiar Estado
                            </h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="CambiarEstado" method="post">
                                <input type="hidden" name="id" value="@Model.Id" />

                                <div class="mb-3">
                                    <label class="form-label">Nuevo Estado</label>
                                    <select name="nuevoEstado" class="form-select">
                                        @foreach (TheBuryProject.Models.Enums.EstadoOrdenCompra estado in Enum.GetValues(typeof(TheBuryProject.Models.Enums.EstadoOrdenCompra)))
                                        {
                                            if (estado != Model.Estado)
                                            {
                                                <option value="@((int)estado)">@estado.ToString()</option>
                                            }
                                        }
                                    </select>
                                </div>

                                <div class="d-grid">
                                    <button type="submit" class="btn btn-warning">
                                        <i class="bi bi-check-circle"></i> Cambiar Estado
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                }

                <!-- Acciones -->
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-list-check"></i> Acciones
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            @if (Model.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida &&
                                                        Model.Estado != TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada)
                            {
                                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Editar Orden
                                </a>
                            }

                            <a href="#" class="btn btn-outline-primary disabled">
                                <i class="bi bi-printer"></i> Imprimir Orden
                            </a>
                            <small class="text-muted text-center">(Próximamente)</small>

                            <a href="#" class="btn btn-outline-primary disabled">
                                <i class="bi bi-credit-card"></i> Registrar Cheque
                            </a>
                            <small class="text-muted text-center">(Próximamente)</small>

                            <hr />

                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                                <i class="bi bi-trash"></i> Eliminar Orden
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Información de auditoría -->
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-clock-history"></i> Auditoría
                        </h6>
                    </div>
                    <div class="card-body">
                        <small class="text-muted">
                            <strong>Creado:</strong><br />
                            @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            <br /><br />
                            <strong>Última modificación:</strong><br />
                            @Model.UpdatedAt.ToString("dd/MM/yyyy HH:mm")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>