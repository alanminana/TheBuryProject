@model TheBuryProject.ViewModels.OrdenCompraViewModel
@{
    ViewData["Title"] = "Eliminar Orden de Compra";
}

<section class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-danger text-white border-0">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body text-light">
                    <div class="alert alert-danger border-0 shadow-sm">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>¿Está seguro de que desea eliminar esta orden de compra?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Número de Orden</dt>
                                <dd class="col-sm-7 fw-semibold text-light">@Model.Numero</dd>

                                <dt class="col-sm-5 text-secondary">Proveedor</dt>
                                <dd class="col-sm-7">@Model.ProveedorNombre</dd>

                                <dt class="col-sm-5 text-secondary">Fecha Emisión</dt>
                                <dd class="col-sm-7">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>

                                @if (Model.FechaEntregaEstimada.HasValue)
                                {
                                    <dt class="col-sm-5 text-secondary">Entrega Estimada</dt>
                                    <dd class="col-sm-7">@Model.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")</dd>
                                }
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Estado</dt>
                                <dd class="col-sm-7">
                                    @{
                                        var badgeClass = Model.Estado switch
                                        {
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Borrador => "bg-secondary text-light",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Enviada => "bg-info text-dark",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Confirmada => "bg-primary text-light",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.EnTransito => "bg-warning text-dark",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida => "bg-success text-dark",
                                            TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada => "bg-danger text-light",
                                            _ => "bg-secondary text-light"
                                        };
                                    }
                                    <span class="badge @badgeClass">@Model.Estado</span>
                                </dd>

                                <dt class="col-sm-5 text-secondary">Total de Ítems</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-info text-dark">@Model.Detalles.Count productos</span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <h5 class="text-info border-bottom pb-2 mb-3">
                        <i class="bi bi-calculator me-2"></i>Totales
                    </h5>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Subtotal</dt>
                        <dd class="col-sm-8 text-light">$@Model.Subtotal.ToString("N2")</dd>

                        @if (Model.Descuento > 0)
                        {
                            <dt class="col-sm-4 text-secondary">Descuento</dt>
                            <dd class="col-sm-8 text-danger">-$@Model.Descuento.ToString("N2")</dd>
                        }

                        <dt class="col-sm-4 text-secondary">IVA</dt>
                        <dd class="col-sm-8 text-light">$@Model.Iva.ToString("N2")</dd>

                        <dt class="col-sm-4 border-top border-secondary pt-2"><strong>Total</strong></dt>
                        <dd class="col-sm-8 border-top border-secondary pt-2">
                            <strong class="text-info fs-5">$@Model.Total.ToString("N2")</strong>
                        </dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.Observaciones))
                    {
                        <div class="mt-4">
                            <h6 class="text-secondary text-uppercase small fw-semibold">Observaciones</h6>
                            <p class="text-light">@Model.Observaciones</p>
                        </div>
                    }

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger fw-semibold">
                                <i class="bi bi-trash me-2"></i>Eliminar Orden
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
