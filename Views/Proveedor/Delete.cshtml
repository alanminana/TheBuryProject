@model TheBuryProject.ViewModels.ProveedorViewModel
@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<section class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-danger text-white border-0">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body text-light">
                    <div class="alert alert-danger border-0 shadow-sm" role="alert">
                        <i class="bi bi-exclamation-circle me-2" aria-hidden="true"></i>
                        <strong>¿Está seguro de que desea eliminar este proveedor?</strong>
                        <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                    </div>

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">CUIT</dt>
                                <dd class="col-sm-7 fw-semibold text-light">@Model.Cuit</dd>

                                <dt class="col-sm-5 text-secondary">Razón Social</dt>
                                <dd class="col-sm-7">@Model.RazonSocial</dd>

                                <dt class="col-sm-5 text-secondary">Nombre Fantasía</dt>
                                <dd class="col-sm-7">@(!string.IsNullOrWhiteSpace(Model.NombreFantasia) ? Model.NombreFantasia : "-")</dd>
                            </dl>
                        </div>

                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-5 text-secondary">Estado</dt>
                                <dd class="col-sm-7">
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success text-dark"><i class="bi bi-check-circle" aria-hidden="true"></i> Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger text-light"><i class="bi bi-x-circle" aria-hidden="true"></i> Inactivo</span>
                                    }
                                </dd>

                                <dt class="col-sm-5 text-secondary">Órdenes</dt>
                                <dd class="col-sm-7"><span class="badge bg-info text-dark">@Model.TotalOrdenesCompra</span></dd>

                                <dt class="col-sm-5 text-secondary">Cheques</dt>
                                <dd class="col-sm-7"><span class="badge bg-warning text-dark">@Model.ChequesVigentes</span></dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger fw-semibold">
                                <i class="bi bi-trash me-2" aria-hidden="true"></i>Eliminar Proveedor
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
