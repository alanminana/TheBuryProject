@model TheBuryProject.ViewModels.OrdenCompraViewModel

@{
    ViewData["Title"] = "Eliminar Orden de Compra";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-circle"></i>
                    <strong>¿Está seguro que desea eliminar esta orden de compra?</strong>
                    <p class="mb-0 mt-2">Esta acción no se puede deshacer.</p>
                </div>

                <dl class="row">
                    <dt class="col-sm-4">Número de Orden</dt>
                    <dd class="col-sm-8"><strong>@Model.Numero</strong></dd>

                    <dt class="col-sm-4">Proveedor</dt>
                    <dd class="col-sm-8">@Model.ProveedorNombre</dd>

                    <dt class="col-sm-4">Fecha Emisión</dt>
                    <dd class="col-sm-8">@Model.FechaEmision.ToString("dd/MM/yyyy")</dd>

                    @if (Model.FechaEntregaEstimada.HasValue)
                    {
                        <dt class="col-sm-4">Fecha Entrega Estimada</dt>
                        <dd class="col-sm-8">@Model.FechaEntregaEstimada.Value.ToString("dd/MM/yyyy")</dd>
                    }

                    <dt class="col-sm-4">Estado</dt>
                    <dd class="col-sm-8">
                        @{
                            var badgeClass = Model.Estado switch
                            {
                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Borrador => "bg-secondary",
                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Enviada => "bg-info",
                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Confirmada => "bg-primary",
                                TheBuryProject.Models.Enums.EstadoOrdenCompra.EnTransito => "bg-warning",
                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Recibida => "bg-success",
                                TheBuryProject.Models.Enums.EstadoOrdenCompra.Cancelada => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@Model.Estado.ToString()</span>
                    </dd>

                    <dt class="col-sm-4">Total de Items</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-info">@Model.Detalles.Count productos</span>
                    </dd>
                </dl>

                <h5 class="mt-3 mb-2">Totales</h5>
                <dl class="row">
                    <dt class="col-sm-4">Subtotal</dt>
                    <dd class="col-sm-8">$@Model.Subtotal.ToString("N2")</dd>

                    @if (Model.Descuento > 0)
                    {
                        <dt class="col-sm-4">Descuento</dt>
                        <dd class="col-sm-8 text-danger">-$@Model.Descuento.ToString("N2")</dd>
                    }

                    <dt class="col-sm-4">IVA</dt>
                    <dd class="col-sm-8">$@Model.Iva.ToString("N2")</dd>

                    <dt class="col-sm-4 border-top pt-2"><strong>Total</strong></dt>
                    <dd class="col-sm-8 border-top pt-2">
                        <strong class="text-primary fs-5">$@Model.Total.ToString("N2")</strong>
                    </dd>
                </dl>

                @if (!string.IsNullOrEmpty(Model.Observaciones))
                {
                    <h5 class="mt-3 mb-2">Observaciones</h5>
                    <p class="text-muted">@Model.Observaciones</p>
                }

                <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Eliminar Orden
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>