@model TheBuryProject.ViewModels.CategoriaViewModel
@{
    ViewData["Title"] = "Editar Categoría";
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-warning text-dark py-3">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-pencil-square me-2"></i>Editar Categoría
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        @* Solo mostrar el bloque de errores cuando haya errores en el modelo *@
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly"
                                 class="alert alert-danger d-flex align-items-center"
                                 role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>Corregí los errores antes de continuar.</div>
                            </div>
                        }

                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="Codigo"
                                           class="form-control bg-dark text-light border-secondary"
                                           id="floatingCodigo"
                                           placeholder="Código" />
                                    <label for="floatingCodigo">Código *</label>
                                    <span asp-validation-for="Codigo" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-8">
                                <div class="form-floating">
                                    <input asp-for="Nombre"
                                           class="form-control bg-dark text-light border-secondary"
                                           id="floatingNombre"
                                           placeholder="Nombre" />
                                    <label for="floatingNombre">Nombre *</label>
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Descripcion"
                                              class="form-control bg-dark text-light border-secondary"
                                              id="floatingDescripcion"
                                              placeholder="Descripción"
                                              style="height: 100px"></textarea>
                                    <label for="floatingDescripcion">Descripción (opcional)</label>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <select asp-for="ParentId"
                                            class="form-select bg-dark text-light border-secondary"
                                            id="floatingParent"
                                            asp-items="ViewBag.Categorias">
                                        <option value="">-- Categoría raíz (sin padre) --</option>
                                    </select>
                                    <label for="floatingParent">Categoría Padre</label>
                                    <span asp-validation-for="ParentId" class="text-danger small"></span>
                                </div>
                                <div class="form-text text-secondary">
                                    Dejá vacío para que sea una categoría principal
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="card bg-secondary bg-opacity-10 border-secondary">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="ControlSerieDefault"
                                                   class="form-check-input"
                                                   type="checkbox"
                                                   id="switchControlSerie" />
                                            <label class="form-check-label fw-medium" for="switchControlSerie">
                                                Control de Serie por Defecto
                                            </label>
                                        </div>
                                        <div class="form-text text-secondary mt-2">
                                            <i class="bi bi-info-circle me-1"></i>
                                            Si está activo, los productos de esta categoría requerirán número de serie.
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4 border-secondary" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Actualizar Categoría
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
