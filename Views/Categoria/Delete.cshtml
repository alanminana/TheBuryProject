@model TheBuryProject.ViewModels.CategoriaViewModel
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver al listado
                </a>
            </div>

            <div class="card bg-dark border-danger shadow-sm">
                <div class="card-header bg-danger text-light py-3">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Eliminar Categoría
                    </h4>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 d-flex align-items-start text-dark" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-3 me-3"></i>
                        <div>
                            <h5 class="fw-bold mb-2">¿Estás seguro que querés eliminar esta categoría?</h5>
                            <p class="mb-0">Esta acción no se puede deshacer. La categoría quedará inactiva y no podrá usarse en nuevos productos.</p>
                        </div>
                    </div>

                    <div class="card bg-secondary bg-opacity-10 border-secondary mt-4">
                        <div class="card-body">
                            <h6 class="text-uppercase text-secondary fw-semibold mb-3">Información de la Categoría</h6>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <small class="text-secondary d-block">Código</small>
                                    <span class="badge bg-primary text-light fs-6 px-3 py-2">@Model.Codigo</span>
                                </div>

                                <div class="col-md-6">
                                    <small class="text-secondary d-block">Control de Serie</small>
                                    @if (Model.ControlSerieDefault)
                                    {
                                        <span class="badge bg-success text-light fs-6 px-3 py-2">
                                            <i class="bi bi-check-lg"></i> Sí
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary text-light fs-6 px-3 py-2">No</span>
                                    }
                                </div>

                                <div class="col-12">
                                    <small class="text-secondary d-block">Nombre</small>
                                    <p class="fw-medium fs-5 mb-0">@Model.Nombre</p>
                                </div>

                                <div class="col-12">
                                    <small class="text-secondary d-block mb-1">Descripción</small>
                                    @if (!string.IsNullOrEmpty(Model.Descripcion))
                                    {
                                        <p class="mb-0">@Model.Descripcion</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic mb-0">Sin descripción</p>
                                    }
                                </div>

                                <div class="col-12">
                                    <small class="text-secondary d-block mb-1">Categoría Padre</small>
                                    @if (!string.IsNullOrEmpty(Model.ParentNombre))
                                    {
                                        <span class="badge bg-secondary text-light fs-6 px-3 py-2">
                                            <i class="bi bi-diagram-3 me-1"></i>@Model.ParentNombre
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary text-light fs-6 px-3 py-2">
                                            <i class="bi bi-star-fill me-1"></i>Categoría Raíz
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="bi bi-trash me-2"></i>Eliminar definitivamente
                            </button>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
