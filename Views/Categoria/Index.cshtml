@model TheBuryProject.ViewModels.CategoriaFilterViewModel
@{
    ViewData["Title"] = "Categorías";
}

<section class="container-fluid py-4 text-light">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h3 fw-bold">
                <i class="bi bi-tag text-primary"></i> Gestión de Categorías
            </h1>
            <p class="text-secondary mb-0">Administrá las categorías de productos del sistema</p>
        </div>
        <div class="col-auto d-flex gap-2">
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-light fw-semibold shadow-sm">
                <i class="bi bi-arrow-left me-2"></i>Volver al Catálogo
            </a>
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Nueva Categoría
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card bg-dark border-secondary shadow-sm mb-4">
        <div class="card-header bg-secondary bg-opacity-10 border-secondary">
            <button class="btn btn-link text-decoration-none text-light w-100 text-start p-0"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#filtrosCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="bi bi-funnel me-2"></i>Búsqueda y Filtros
                    </h6>
                    <i class="bi bi-chevron-down"></i>
                </div>
            </button>
        </div>
        <div class="collapse show" id="filtrosCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-search me-1"></i>Búsqueda por texto
                            </label>
                            <input type="text"
                                   class="form-control bg-dark text-light border-secondary"
                                   name="searchTerm"
                                   value="@Model.SearchTerm"
                                   placeholder="Buscar por nombre o descripción..." />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label fw-semibold">Opciones</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"
                                       name="soloActivos" id="soloActivos" value="true"
                                       @(Model.SoloActivos ? "checked" : "") />
                                <label class="form-check-label" for="soloActivos">
                                    <i class="bi bi-check-circle text-success me-1"></i>Solo categorías activas
                                </label>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-sort-down me-1"></i>Ordenar por
                            </label>
                            <select class="form-select bg-dark text-light border-secondary" name="orderBy">
                                <option value="nombre" selected="@(Model.OrderBy == "nombre" || string.IsNullOrEmpty(Model.OrderBy))">Nombre</option>
                                <option value="descripcion" selected="@(Model.OrderBy == "descripcion")">Descripción</option>
                                <option value="parent" selected="@(Model.OrderBy == "parent")">Categoría Padre</option>
                            </select>
                        </div>

                        <div class="col-md-1">
                            <label class="form-label fw-semibold">Dir.</label>
                            <select class="form-select bg-dark text-light border-secondary" name="orderDirection">
                                <option value="asc" selected="@(Model.OrderDirection == "asc" || string.IsNullOrEmpty(Model.OrderDirection))">Asc</option>
                                <option value="desc" selected="@(Model.OrderDirection == "desc")">Desc</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search me-2"></i>Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light">
                                    <i class="bi bi-x-circle me-2"></i>Limpiar Filtros
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SoloActivos)
    {
        <div class="alert alert-info d-flex align-items-center mb-3 text-dark">
            <i class="bi bi-info-circle me-2"></i>
            Se encontraron <strong>@Model.TotalResultados</strong> categorías que coinciden con los filtros.
        </div>
    }

    <div class="card bg-dark border-secondary shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover align-middle mb-0 border-secondary">
                    <thead class="table-secondary text-dark">
                        <tr>
                            <th class="px-4 py-3">Código</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                            <th>Categoría Padre</th>
                            <th class="text-center">Control Serie</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Categorias.Any())
                        {
                            @foreach (var categoria in Model.Categorias)
                            {
                                <tr>
                                    <td class="px-4"><span class="badge bg-primary">@categoria.Codigo</span></td>
                                    <td>@categoria.Nombre</td>
                                    <td class="text-secondary">@(categoria.Descripcion ?? "-")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(categoria.ParentNombre))
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-diagram-3"></i> @categoria.ParentNombre
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (categoria.ControlSerieDefault)
                                        {
                                            <span class="badge bg-info text-dark">
                                                <i class="bi bi-check-circle"></i> Sí
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (categoria.Activo)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center px-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@categoria.Id" class="btn btn-outline-info" data-bs-toggle="tooltip" title="Ver detalles">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@categoria.Id" class="btn btn-outline-warning" data-bs-toggle="tooltip" title="Editar">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@categoria.Id" class="btn btn-outline-danger" data-bs-toggle="tooltip" title="Eliminar">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5">
                                    <i class="bi bi-inbox display-1 text-secondary d-block mb-3"></i>
                                    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.SoloActivos)
                                    {
                                        <p class="text-secondary mb-2">No se encontraron categorías con los filtros aplicados</p>
                                        <a asp-action="Index" class="btn btn-outline-light">Limpiar filtros</a>
                                    }
                                    else
                                    {
                                        <p class="text-secondary mb-2">No hay categorías registradas</p>
                                        <a asp-action="Create" class="btn btn-primary">Crear la primera categoría</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model.Categorias.Any())
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card bg-dark border-secondary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-secondary mb-2">Total Categorías</h6>
                        <h3 class="fw-bold">@Model.TotalResultados</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card bg-dark border-secondary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-secondary mb-2">Categorías Activas</h6>
                        <h3 class="fw-bold text-success">@Model.Categorias.Count(c => c.Activo)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</section>

@section Scripts {
    <script>
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        [...tooltipTriggerList].forEach(t => new bootstrap.Tooltip(t));
    </script>
}
