@model TheBuryProject.ViewModels.CategoriaViewModel
@{
    ViewData["Title"] = "Nueva categoría";
}

<div class="container-fluid px-0 py-4">

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <div>
                <div class="text-muted text-uppercase small mb-1">Productos · Categorías</div>
                <h1 class="h4 mb-0 d-flex align-items-center gap-2 text-light">
                    <i class="bi bi-diagram-3"></i>
                    <span>Nueva categoría</span>
                </h1>
                <p class="text-muted small mb-0">
                    Creá una nueva categoría para clasificar tus productos.
                </p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i>
                    <span>Volver al listado</span>
                </a>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-lg-8 col-xl-7">
            <div class="card card-animate border-0 shadow-sm">
                <div class="card-body">

                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly"
                             class="alert alert-danger small mb-3"
                             role="alert">
                        </div>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Codigo"
                                       class="form-label small text-uppercase text-muted mb-1"></label>
                                <input asp-for="Codigo"
                                       class="form-control form-control-sm"
                                       placeholder="Ej: ELEC, FRIO, AUDIO" />
                                <span asp-validation-for="Codigo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="Nombre"
                                       class="form-label small text-uppercase text-muted mb-1"></label>
                                <input asp-for="Nombre"
                                       class="form-control form-control-sm" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Descripcion"
                                       class="form-label small text-uppercase text-muted mb-1"></label>
                                <textarea asp-for="Descripcion"
                                          class="form-control form-control-sm"
                                          rows="3"></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="ParentId"
                                       class="form-label small text-uppercase text-muted mb-1">Categoría padre</label>
                                <select asp-for="ParentId"
                                        class="form-select form-select-sm"
                                        asp-items="ViewBag.Categorias">
                                    <option value="">-- Categoría raíz (sin padre) --</option>
                                </select>
                                <span asp-validation-for="ParentId" class="text-danger small"></span>
                                <small class="text-muted d-block mt-1">
                                    Dejá vacío para crear una categoría principal.
                                </small>
                            </div>

                            <div class="col-12">
                                <div class="border rounded-3 p-3 bg-body-tertiary bg-opacity-10">
                                    <div class="form-check form-switch">
                                        <input asp-for="ControlSerieDefault"
                                               class="form-check-input"
                                               type="checkbox"
                                               id="switchControlSerie" />
                                        <label class="form-check-label" for="switchControlSerie">
                                            Control de serie por defecto
                                        </label>
                                    </div>
                                    <small class="text-muted d-block mt-2">
                                        <i class="bi bi-info-circle me-1"></i>
                                        Si está activo, los productos de esta categoría requerirán número de serie.
                                    </small>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                                <i class="bi bi-x-circle me-1"></i>
                                <span>Cancelar</span>
                            </a>
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="bi bi-check-circle me-1"></i>
                                <span>Guardar categoría</span>
                            </button>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
