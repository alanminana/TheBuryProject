@model TheBuryProject.ViewModels.CategoriaViewModel

@{
    ViewData["Title"] = "Detalles de Categoría";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index")!;
}

<section class="container-fluid py-4 text-light">

    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-between align-items-center">

            <div>
                <div class="text-muted text-uppercase small mb-1">Productos · Categorías</div>

                <h1 class="h4 mb-0 d-flex align-items-center gap-2">
                    <i class="bi bi-info-circle"></i>
                    <span>Detalles de categoría</span>
                </h1>
            </div>

            <div class="d-flex gap-2">
                <a href="@backUrl" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-arrow-left"></i>
                    Volver al listado
                </a>
            </div>

        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card bg-dark border-0 shadow-sm">

                <div class="card-header bg-info text-dark py-3">
                    <h4 class="mb-0 fw-semibold">
                        <i class="bi bi-diagram-3 me-2"></i>Información de la categoría
                    </h4>
                </div>

                <div class="card-body p-4">

                    <div class="row g-4">

                        <div class="col-md-6">
                            <label class="text-secondary small text-uppercase fw-semibold mb-2">Código</label>
                            <div>
                                <span class="badge bg-primary text-light fs-6 px-3 py-2">@Model.Codigo</span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <label class="text-secondary small text-uppercase fw-semibold mb-2">Control de serie</label>
                            <div>
                                @if (Model.ControlSerieDefault)
                                {
                                    <span class="badge bg-success text-light fs-6 px-3 py-2">
                                        <i class="bi bi-check-circle-fill me-1"></i>Activo
                                    </span>
                                    <p class="text-muted small mb-0 mt-2">Los productos requieren número de serie.</p>
                                }
                                else
                                {
                                    <span class="badge bg-secondary text-light fs-6 px-3 py-2">
                                        <i class="bi bi-x-circle-fill me-1"></i>Inactivo
                                    </span>
                                    <p class="text-muted small mb-0 mt-2">Los productos no requieren número de serie.</p>
                                }
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="text-secondary small text-uppercase fw-semibold mb-2">Descripción</label>
                            <div>
                                @if (!string.IsNullOrWhiteSpace(Model.Descripcion))
                                {
                                    <p class="mb-0">@Model.Descripcion</p>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted fst-italic">Sin descripción</p>
                                }
                            </div>
                        </div>

                        <div class="col-12">
                            <label class="text-secondary small text-uppercase fw-semibold mb-2">Categoría padre</label>
                            <div>
                                @if (!string.IsNullOrEmpty(Model.ParentNombre))
                                {
                                    <span class="badge bg-secondary text-light fs-6 px-3 py-2">
                                        <i class="bi bi-diagram-3 me-1"></i>@Model.ParentNombre
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-primary text-light fs-6 px-3 py-2">
                                        <i class="bi bi-star-fill me-1"></i>Categoría raíz
                                    </span>
                                    <p class="text-muted small mb-0 mt-2">Esta es una categoría principal.</p>
                                }
                            </div>
                        </div>

                    </div>

                    <hr class="my-4 border-secondary" />

                    <div class="d-flex justify-content-end flex-wrap gap-2">
                        <a href="@backUrl" class="btn btn-outline-light px-4">
                            <i class="bi bi-arrow-left-circle me-2"></i>Volver
                        </a>

                        <a asp-action="Edit" asp-route-id="@Model.Id" asp-route-returnUrl="@backUrl" class="btn btn-warning px-4">
                            <i class="bi bi-pencil me-2"></i>Editar
                        </a>

                        <a asp-action="Delete" asp-route-id="@Model.Id" asp-route-returnUrl="@backUrl" class="btn btn-danger px-4">
                            <i class="bi bi-trash me-2"></i>Eliminar
                        </a>
                    </div>

                </div>

            </div>

        </div>
    </div>

</section>

@section Styles {
    <link rel="stylesheet" href="~/css/catalogo.css" asp-append-version="true" />
}
