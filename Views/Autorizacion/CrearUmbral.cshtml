@model TheBuryProject.ViewModels.UmbralAutorizacionViewModel
@{
    ViewData["Title"] = "Crear Umbral de Autorización";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">🔐 Crear Nuevo Umbral de Autorización</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CrearUmbral" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label"></label>
                            <select asp-for="Rol" class="form-select" required>
                                <option value="">Seleccione un rol...</option>
                                @foreach (var rol in (ViewBag.Roles as List<string>)!)
                                {
                                    <option value="@rol">@rol</option>
                                }
                            </select>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TipoUmbral" class="form-label"></label>
                            <select asp-for="TipoUmbral" class="form-select" asp-items="Html.GetEnumSelectList<TheBuryProject.Models.Entities.TipoUmbral>()" required>
                                <option value="">Seleccione un tipo...</option>
                            </select>
                            <span asp-validation-for="TipoUmbral" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ValorMaximo" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="ValorMaximo" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <span asp-validation-for="ValorMaximo" class="text-danger"></span>
                            <small class="text-muted">
                                Para descuentos, ingrese el porcentaje (ej: 15 para 15%). Para montos, ingrese el valor en pesos.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" maxlength="500"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Activo" class="form-check-label"></label>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Umbral
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}