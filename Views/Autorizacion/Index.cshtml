@model TheBuryProject.ViewModels.UmbralesListViewModel
@{
    ViewData["Title"] = "Umbrales de Autorización";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>🔐 Umbrales de Autorización</h2>
            <p class="text-muted">Configure los límites por rol para diferentes operaciones</p>
        </div>
        <div class="col-auto">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="CrearUmbral" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nuevo Umbral
                </a>
            }
            <a asp-action="Solicitudes" class="btn btn-outline-info">
                <i class="bi bi-clipboard-check"></i> Ver Solicitudes
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Umbrales.Any())
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            No hay umbrales configurados. Los usuarios Admin tienen permisos ilimitados por defecto.
        </div>
    }
    else
    {
        <!-- Tabs por Rol -->
        <ul class="nav nav-tabs mb-3" role="tablist">
            @{
                var roles = new[] { "Admin", "Gerente", "Vendedor", "Contador" };
                var firstRole = true;
            }
            @foreach (var rol in roles)
            {
                var umbralRol = Model.UmbralesPorRol.ContainsKey(rol) ? Model.UmbralesPorRol[rol].Count : 0;
                <li class="nav-item">
                    <button class="nav-link @(firstRole ? "active" : "")"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-@rol"
                            type="button">
                        @rol
                        @if (umbralRol > 0)
                        {
                            <span class="badge bg-primary">@umbralRol</span>
                        }
                    </button>
                </li>
                firstRole = false;
            }
        </ul>

        <!-- Contenido de Tabs -->
        <div class="tab-content">
            @{
                firstRole = true;
            }
            @foreach (var rol in roles)
            {
                <div class="tab-pane fade @(firstRole ? "show active" : "")" id="tab-@rol">
                    @if (Model.UmbralesPorRol.ContainsKey(rol) && Model.UmbralesPorRol[rol].Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Tipo de Umbral</th>
                                        <th>Valor Máximo</th>
                                        <th>Descripción</th>
                                        <th>Estado</th>
                                        <th>Última Modificación</th>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <th>Acciones</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var umbral in Model.UmbralesPorRol[rol])
                                    {
                                        <tr>
                                            <td>
                                                <strong>
                                                    @umbral.TipoUmbral.ToString().Replace("DescuentoVenta", "Descuento en Venta")
                                                    .Replace("MontoTotalVenta", "Monto Total de Venta")
                                                    .Replace("MontoCredito", "Monto de Crédito")
                                                    .Replace("DescuentoCompra", "Descuento en Compra")
                                                </strong>
                                            </td>
                                            <td>
                                                @if (umbral.TipoUmbral == TheBuryProject.Models.Entities.TipoUmbral.DescuentoVenta ||
                                                                                umbral.TipoUmbral == TheBuryProject.Models.Entities.TipoUmbral.DescuentoCompra)
                                                {
                                                    <span class="badge bg-info">@umbral.ValorMaximo.ToString("N2")%</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">$@umbral.ValorMaximo.ToString("N2")</span>
                                                }
                                            </td>
                                            <td>@(umbral.Descripcion ?? "-")</td>
                                            <td>
                                                @if (umbral.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(umbral.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? umbral.CreatedAt.ToString("dd/MM/yyyy HH:mm"))
                                                </small>
                                            </td>
                                            @if (User.IsInRole("Admin"))
                                            {
                                                <td>
                                                    <a asp-action="EditarUmbral" asp-route-id="@umbral.Id"
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-pencil"></i> Editar
                                                    </a>
                                                    <form asp-action="EliminarUmbral" asp-route-id="@umbral.Id"
                                                          method="post" class="d-inline"
                                                          onsubmit="return confirm('¿Está seguro de eliminar este umbral?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                                            <i class="bi bi-trash"></i> Eliminar
                                                        </button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            No hay umbrales configurados para el rol <strong>@rol</strong>.
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="CrearUmbral" class="alert-link">Crear uno ahora</a>
                            }
                        </div>
                    }
                </div>
                firstRole = false;
            }
        </div>
    }

    <!-- Información adicional -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">ℹ️ Información sobre Umbrales</h5>
                </div>
                <div class="card-body">
                    <ul class="mb-0">
                        <li><strong>Descuento en Venta:</strong> Porcentaje máximo de descuento que puede aplicar el rol en una venta.</li>
                        <li><strong>Monto Total de Venta:</strong> Monto máximo que puede procesar el rol en una sola venta.</li>
                        <li><strong>Monto de Crédito:</strong> Monto máximo de crédito que puede aprobar el rol.</li>
                        <li><strong>Descuento en Compra:</strong> Porcentaje máximo de descuento que puede negociar en compras a proveedores.</li>
                        <li><strong>Rol Admin:</strong> Siempre tiene permisos ilimitados, independientemente de la configuración.</li>
                        <li><strong>Excepciones:</strong> Los usuarios pueden solicitar autorizaciones para exceder sus límites.</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>