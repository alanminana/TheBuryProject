@model TheBuryProject.ViewModels.UmbralesListViewModel
@using TheBuryProject.Models.Constants

@{
    ViewData["Title"] = "Umbrales de Autorización";
    var cleanedQuery = QueryString.Create(Context.Request.Query.Where(kvp => !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));
    var pageReturnUrl = Context.Request.Path + cleanedQuery;
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Autorizaciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <span>Umbrales de autorización</span>
            </h1>
            <p class="text-muted small mb-0">
                Configure los límites por rol para diferentes operaciones.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            @if (User.IsInRole(Roles.Administrador))
            {
                <a asp-action="CrearUmbral" asp-route-returnUrl="@pageReturnUrl" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle me-1"></i>Nuevo umbral
                </a>
            }
            <a asp-action="Solicitudes" asp-route-returnUrl="@pageReturnUrl" class="btn btn-outline-info btn-sm">
                <i class="bi bi-clipboard-check me-1"></i>Ver solicitudes
            </a>
        </div>
    </div>

    <!-- Alertas de feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Umbrales.Any())
    {
        <div class="card card-animate border-0">
            <div class="card-body">
                <div class="alert alert-warning mb-0">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    No hay umbrales configurados. Los usuarios Admin tienen permisos ilimitados por defecto.
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Tabs por rol -->
        <div class="card card-animate mb-4">
            <div class="card-body pb-0">

                <ul class="nav nav-tabs mb-3" role="tablist">
                    @{
                        var roles = new[] { Roles.Administrador, Roles.Gerente, Roles.Vendedor, Roles.Contador };
                        var firstRole = true;
                    }
                    @foreach (var rol in roles)
                    {
                        var umbralRol = Model.UmbralesPorRol.ContainsKey(rol) ? Model.UmbralesPorRol[rol].Count : 0;

                        <li class="nav-item" role="presentation">
                            <button class="nav-link @(firstRole ? "active" : "") d-flex align-items-center gap-1"
                                    data-bs-toggle="tab"
                                    data-bs-target="#tab-@rol"
                                    type="button"
                                    role="tab">
                                <span>@rol</span>
                                @if (umbralRol > 0)
                                {
                                    <span class="badge bg-primary">@umbralRol</span>
                                }
                            </button>
                        </li>

                        firstRole = false;
                    }
                </ul>
            </div>

            <!-- Contenido de tabs -->
            <div class="card-body pt-0">
                <div class="tab-content">
                    @{
                        firstRole = true;
                    }

                    @foreach (var rol in roles)
                    {
                        <div class="tab-pane fade @(firstRole ? "show active" : "")" id="tab-@rol" role="tabpanel">
                            @if (Model.UmbralesPorRol.ContainsKey(rol) && Model.UmbralesPorRol[rol].Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover table-sm align-middle">
                                        <thead class="table-dark">
                                            <tr>
                                                <th>Tipo de umbral</th>
                                                <th>Valor máximo</th>
                                                <th>Descripción</th>
                                                <th>Estado</th>
                                                <th>Última modificación</th>
                                                @if (User.IsInRole(Roles.Administrador))
                                                {
                                                    <th class="text-end">Acciones</th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var umbral in Model.UmbralesPorRol[rol])
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>
                                                            @umbral.TipoUmbral.ToString()
                                                            .Replace("DescuentoVenta", "Descuento en Venta")
                                                            .Replace("MontoTotalVenta", "Monto Total de Venta")
                                                            .Replace("MontoCredito", "Monto de Crédito")
                                                            .Replace("DescuentoCompra", "Descuento en Compra")
                                                        </strong>
                                                    </td>
                                                    <td>
                                                        @if (umbral.TipoUmbral == TheBuryProject.Models.Entities.TipoUmbral.DescuentoVenta
                                                                                                || umbral.TipoUmbral == TheBuryProject.Models.Entities.TipoUmbral.DescuentoCompra)
                                                        {
                                                            <span class="badge bg-info">
                                                                @umbral.ValorMaximo.ToString("N2")%
                                                            </span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-success">
                                                                $@umbral.ValorMaximo.ToString("N2")
                                                            </span>
                                                        }
                                                    </td>
                                                    <td class="small text-muted">
                                                        @(string.IsNullOrWhiteSpace(umbral.Descripcion) ? "-" : umbral.Descripcion)
                                                    </td>
                                                    <td>
                                                        @if (umbral.Activo)
                                                        {
                                                            <span class="badge bg-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">Inactivo</span>
                                                        }
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        @(umbral.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")
                                                                                                    ?? umbral.CreatedAt.ToString("dd/MM/yyyy HH:mm"))
                                        </small>
                                    </td>
                                    @if (User.IsInRole(Roles.Administrador))
                                                    {
                                                        <td class="text-end">
                                                            <div class="btn-group btn-group-sm" role="group">
                                                                <a asp-action="EditarUmbral"
                                                                   asp-route-id="@umbral.Id"
                                                                                         asp-route-returnUrl="@pageReturnUrl"
                                                                   class="btn btn-outline-primary">
                                                                    <i class="bi bi-pencil"></i>
                                                                    <span class="d-none d-md-inline">Editar</span>
                                                                </a>

                                                                <form asp-action="EliminarUmbral"
                                                                      asp-route-id="@umbral.Id"
                                                                      method="post"
                                                                      class="d-inline"
                                                                      data-confirm="¿Está seguro de eliminar este umbral?">
                                                                    @Html.AntiForgeryToken()
                                                                    <input type="hidden" name="returnUrl" value="@pageReturnUrl" />
                                                                    <button type="submit" class="btn btn-outline-danger">
                                                                        <i class="bi bi-trash"></i>
                                                                        <span class="d-none d-md-inline">Eliminar</span>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle me-1"></i>
                                    No hay umbrales configurados para el rol <strong>@rol</strong>.
                                    @if (User.IsInRole(Roles.Administrador))
                                    {
                                        <a asp-action="CrearUmbral" asp-route-returnUrl="@pageReturnUrl" class="alert-link ms-1">Crear uno ahora</a>
                                    }
                                </div>
                            }
                        </div>

                        firstRole = false;
                    }
                </div>
            </div>
        </div>
    }

    <!-- Información adicional -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card card-animate">
                <div class="card-header bg-info text-white">
                    <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-info-circle"></i>
                        <span>Información sobre umbrales</span>
                    </h2>
                </div>
                <div class="card-body">
                    <ul class="mb-0 small">
                        <li>
                            <strong>Descuento en Venta:</strong>
                            Porcentaje máximo de descuento que puede aplicar el rol en una venta.
                        </li>
                        <li>
                            <strong>Monto Total de Venta:</strong>
                            Monto máximo que puede procesar el rol en una sola venta.
                        </li>
                        <li>
                            <strong>Monto de Crédito:</strong>
                            Monto máximo de crédito que puede aprobar el rol.
                        </li>
                        <li>
                            <strong>Descuento en Compra:</strong>
                            Porcentaje máximo de descuento que puede negociar en compras a proveedores.
                        </li>
                        <li>
                            <strong>Rol Admin:</strong>
                            Siempre tiene permisos ilimitados, independientemente de la configuración.
                        </li>
                        <li>
                            <strong>Excepciones:</strong>
                            Los usuarios pueden solicitar autorizaciones para exceder sus límites.
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>
