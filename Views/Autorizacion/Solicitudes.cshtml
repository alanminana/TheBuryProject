@model TheBuryProject.ViewModels.SolicitudesListViewModel
@using TheBuryProject.Models.Constants

@{
    ViewData["Title"] = "Solicitudes de Autorización";
    var cleanedQuery = QueryString.Create(Context.Request.Query.Where(kvp => !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));
    var listReturnUrl = Context.Request.Path + cleanedQuery;
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Autorizaciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <span>Solicitudes de autorización</span>
            </h1>
            <p class="text-muted small mb-0">
                Gestione las solicitudes de excepciones a los umbrales configurados.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="CrearSolicitud" asp-route-returnUrl="@listReturnUrl" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1"></i>Nueva solicitud
            </a>
            <a asp-action="Index" asp-route-returnUrl="@listReturnUrl" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-gear me-1"></i>Configurar umbrales
            </a>
        </div>
    </div>

    <!-- Alertas de feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Resumen de estadísticas -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="card card-animate border-warning">
                <div class="card-body text-center py-3">
                    <h3 class="text-warning mb-1">@Model.TotalPendientes</h3>
                    <p class="text-muted mb-0 small">Pendientes</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card card-animate border-success">
                <div class="card-body text-center py-3">
                    <h3 class="text-success mb-1">@Model.TotalAprobadas</h3>
                    <p class="text-muted mb-0 small">Aprobadas</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card card-animate border-danger">
                <div class="card-body text-center py-3">
                    <h3 class="text-danger mb-1">@Model.TotalRechazadas</h3>
                    <p class="text-muted mb-0 small">Rechazadas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Card con tabs -->
    <div class="card card-animate">
        <div class="card-header border-bottom-0 pb-0">
            <ul class="nav nav-tabs card-header-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active d-flex align-items-center gap-1"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-pendientes"
                            type="button"
                            role="tab">
                        <span>Pendientes</span>
                        @if (Model.Pendientes.Any())
                        {
                            <span class="badge bg-warning">@Model.Pendientes.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link d-flex align-items-center gap-1"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-resueltas"
                            type="button"
                            role="tab">
                        <span>Resueltas</span>
                        @if (Model.Resueltas.Any())
                        {
                            <span class="badge bg-secondary">@Model.Resueltas.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link d-flex align-items-center gap-1"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-mis-solicitudes"
                            type="button"
                            role="tab">
                        <span>Mis solicitudes</span>
                        @if (Model.MisSolicitudes.Any())
                        {
                            <span class="badge bg-info">@Model.MisSolicitudes.Count</span>
                        }
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">

                <!-- Tab Pendientes -->
                <div class="tab-pane fade show active" id="tab-pendientes" role="tabpanel">
                    @if (!Model.Pendientes.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            No hay solicitudes pendientes.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Solicitante</th>
                                        <th>Rol</th>
                                        <th>Tipo</th>
                                        <th>Operación</th>
                                        <th>Valor solicitado</th>
                                        <th>Valor permitido</th>
                                        <th>Justificación</th>
                                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.Gerente))
                                        {
                                            <th class="text-end">Acciones</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in Model.Pendientes)
                                    {
                                        <tr>
                                            <td>
                                                <small>@solicitud.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                            </td>
                                            <td>@solicitud.UsuarioSolicitante</td>
                                            <td>
                                                <span class="badge bg-secondary">@solicitud.RolSolicitante</span>
                                            </td>
                                            <td>
                                                @solicitud.TipoUmbral.ToString().Replace("DescuentoVenta", "Descuento Venta")
                                            </td>
                                            <td>@solicitud.TipoOperacion</td>
                                            <td>
                                                <span class="text-danger fw-semibold">
                                                    $@solicitud.ValorSolicitado.ToString("N2")
                                                </span>
                                            </td>
                                            <td>
                                                <span class="text-success">
                                                    $@solicitud.ValorPermitido.ToString("N2")
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(solicitud.Justificacion.Length > 50
                                                                                                ? solicitud.Justificacion.Substring(0, 50) + "..."
                                                                                                : solicitud.Justificacion)
                                        </small>
                                    </td>
                                    @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.Gerente))
                                            {
                                                <td class="text-end">
                                                    <div class="btn-group btn-group-sm" role="group">
                                                        <a asp-action="DetallesSolicitud"
                                                           asp-route-id="@solicitud.Id"
                                                                                                                     asp-route-returnUrl="@listReturnUrl"
                                                           class="btn btn-outline-info">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <form asp-action="AprobarSolicitud"
                                                              asp-route-id="@solicitud.Id"
                                                              method="post"
                                                              class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                                                                                        <input type="hidden" name="returnUrl" value="@listReturnUrl" />
                                                            <button type="submit"
                                                                    class="btn btn-success"
                                                                    data-confirm="¿Aprobar esta solicitud?">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <!-- Tab Resueltas -->
                <div class="tab-pane fade" id="tab-resueltas" role="tabpanel">
                    @if (!Model.Resueltas.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            No hay solicitudes resueltas.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Fecha solicitud</th>
                                        <th>Solicitante</th>
                                        <th>Tipo</th>
                                        <th>Operación</th>
                                        <th>Valor</th>
                                        <th>Estado</th>
                                        <th>Fecha resolución</th>
                                        <th>Resuelto por</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in Model.Resueltas)
                                    {
                                        <tr>
                                            <td>
                                                <small>@solicitud.CreatedAt.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>@solicitud.UsuarioSolicitante</td>
                                            <td>
                                                @solicitud.TipoUmbral.ToString().Replace("DescuentoVenta", "Descuento")
                                            </td>
                                            <td>@solicitud.TipoOperacion</td>
                                            <td>
                                                $@solicitud.ValorSolicitado.ToString("N2")
                                            </td>
                                            <td>
                                                @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Aprobada)
                                                {
                                                    <span class="badge bg-success">Aprobada</span>
                                                }
                                                else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Rechazada)
                                                {
                                                    <span class="badge bg-danger">Rechazada</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Cancelada</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@solicitud.FechaResolucion?.ToString("dd/MM/yyyy")</small>
                                            </td>
                                            <td>@solicitud.UsuarioAutorizador</td>
                                            <td class="text-end">
                                                <a asp-action="DetallesSolicitud"
                                                   asp-route-id="@solicitud.Id"
                                                                    asp-route-returnUrl="@listReturnUrl"
                                                   class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <!-- Tab Mis Solicitudes -->
                <div class="tab-pane fade" id="tab-mis-solicitudes" role="tabpanel">
                    @if (!Model.MisSolicitudes.Any())
                    {
                        <div class="alert alert-info mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            No has creado solicitudes aún.
                            <a asp-action="CrearSolicitud" asp-route-returnUrl="@listReturnUrl" class="alert-link ms-1">Crear una ahora</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Fecha</th>
                                        <th>Tipo</th>
                                        <th>Operación</th>
                                        <th>Valor solicitado</th>
                                        <th>Estado</th>
                                        <th>Autorizador</th>
                                        <th class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in Model.MisSolicitudes)
                                    {
                                        <tr>
                                            <td>
                                                @solicitud.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                            </td>
                                            <td>@solicitud.TipoUmbral.ToString()</td>
                                            <td>@solicitud.TipoOperacion</td>
                                            <td>
                                                $@solicitud.ValorSolicitado.ToString("N2")
                                            </td>
                                            <td>
                                                @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Pendiente)
                                                {
                                                    <span class="badge bg-warning">Pendiente</span>
                                                }
                                                else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Aprobada)
                                                {
                                                    <span class="badge bg-success">Aprobada</span>
                                                }
                                                else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Rechazada)
                                                {
                                                    <span class="badge bg-danger">Rechazada</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Cancelada</span>
                                                }
                                            </td>
                                            <td>@(solicitud.UsuarioAutorizador ?? "-")</td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="DetallesSolicitud"
                                                       asp-route-id="@solicitud.Id"
                                                       asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-info">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Pendiente)
                                                    {
                                                        <form asp-action="CancelarSolicitud"
                                                              asp-route-id="@solicitud.Id"
                                                              method="post"
                                                              class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="returnUrl" value="@listReturnUrl" />
                                                            <button type="submit"
                                                                    class="btn btn-outline-danger"
                                                                    data-confirm="¿Cancelar esta solicitud?">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>
