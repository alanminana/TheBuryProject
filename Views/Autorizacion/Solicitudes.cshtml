@model TheBuryProject.ViewModels.SolicitudesListViewModel
@using TheBuryProject.Models.Constants

@{
    ViewData["Title"] = "Solicitudes de Autorización";
    var cleanedQuery = QueryString.Create(Context.Request.Query.Where(kvp => !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));
    var listReturnUrl = Context.Request.Path + cleanedQuery;
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header -->
    <div class="d-flex flex-wrap align-items-start justify-content-between gap-2 mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Autorizaciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-clipboard-check" aria-hidden="true"></i>
                <span>Solicitudes de autorización</span>
            </h1>
            <p class="text-muted small mb-0">
                Gestione las solicitudes de excepciones a los umbrales configurados.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="CrearSolicitud" asp-route-returnUrl="@listReturnUrl" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>Nueva solicitud
            </a>
            <a asp-action="Index" asp-route-returnUrl="@listReturnUrl" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-gear me-1" aria-hidden="true"></i>Configurar umbrales
            </a>
        </div>
    </div>

    <!-- Feedback -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-12 col-md-4">
            <div class="card card-animate border-warning">
                <div class="card-body text-center py-3">
                    <h2 class="h3 text-warning mb-1">@Model.TotalPendientes</h2>
                    <p class="text-muted mb-0 small">Pendientes</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card card-animate border-success">
                <div class="card-body text-center py-3">
                    <h2 class="h3 text-success mb-1">@Model.TotalAprobadas</h2>
                    <p class="text-muted mb-0 small">Aprobadas</p>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card card-animate border-danger">
                <div class="card-body text-center py-3">
                    <h2 class="h3 text-danger mb-1">@Model.TotalRechazadas</h2>
                    <p class="text-muted mb-0 small">Rechazadas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <div class="card card-animate">
        <div class="card-header border-bottom-0 pb-0">
            <ul class="nav nav-tabs card-header-tabs" role="tablist" aria-label="Solicitudes">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active d-flex align-items-center gap-1"
                            id="tab-pendientes-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-pendientes"
                            type="button"
                            role="tab"
                            aria-controls="tab-pendientes"
                            aria-selected="true">
                        <span>Pendientes</span>
                        @if (Model.Pendientes.Any())
                        {
                            <span class="badge bg-warning">@Model.Pendientes.Count</span>
                        }
                    </button>
                </li>

                <li class="nav-item" role="presentation">
                    <button class="nav-link d-flex align-items-center gap-1"
                            id="tab-resueltas-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-resueltas"
                            type="button"
                            role="tab"
                            aria-controls="tab-resueltas"
                            aria-selected="false">
                        <span>Resueltas</span>
                        @if (Model.Resueltas.Any())
                        {
                            <span class="badge bg-secondary">@Model.Resueltas.Count</span>
                        }
                    </button>
                </li>

                <li class="nav-item" role="presentation">
                    <button class="nav-link d-flex align-items-center gap-1"
                            id="tab-mis-tab"
                            data-bs-toggle="tab"
                            data-bs-target="#tab-mis"
                            type="button"
                            role="tab"
                            aria-controls="tab-mis"
                            aria-selected="false">
                        <span>Mis solicitudes</span>
                        @if (Model.MisSolicitudes.Any())
                        {
                            <span class="badge bg-info">@Model.MisSolicitudes.Count</span>
                        }
                    </button>
                </li>
            </ul>
        </div>

        <div class="card-body">
            <div class="tab-content">

                <!-- Pendientes -->
                <div class="tab-pane fade show active" id="tab-pendientes" role="tabpanel" aria-labelledby="tab-pendientes-tab" tabindex="0">
                    @if (!Model.Pendientes.Any())
                    {
                        <div class="alert alert-info mb-0" role="alert">
                            <i class="bi bi-info-circle me-1"></i>
                            No hay solicitudes pendientes.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <caption class="visually-hidden">Solicitudes pendientes</caption>
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Solicitante</th>
                                        <th scope="col">Rol</th>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Operación</th>
                                        <th scope="col">Valor solicitado</th>
                                        <th scope="col">Valor permitido</th>
                                        <th scope="col">Justificación</th>
                                        @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.Gerente))
                                        {
                                            <th scope="col" class="text-end">Acciones</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in Model.Pendientes)
                                    {
                                        var tipoTexto = solicitud.TipoUmbral.ToString()
                                            .Replace("DescuentoVenta", "Descuento en Venta")
                                            .Replace("MontoTotalVenta", "Monto Total de Venta")
                                            .Replace("MontoCredito", "Monto de Crédito")
                                            .Replace("DescuentoCompra", "Descuento en Compra");

                                        <tr>
                                            <td>
                                                <small>
                                                    <time datetime="@solicitud.CreatedAt.ToString("O")">@solicitud.CreatedAt.ToString("dd/MM/yyyy HH:mm")</time>
                                                </small>
                                            </td>
                                            <td>@solicitud.UsuarioSolicitante</td>
                                            <td><span class="badge bg-secondary">@solicitud.RolSolicitante</span></td>
                                            <td>@tipoTexto</td>
                                            <td>@solicitud.TipoOperacion</td>
                                            <td><span class="text-danger fw-semibold">$@solicitud.ValorSolicitado.ToString("N2")</span></td>
                                            <td><span class="text-success">$@solicitud.ValorPermitido.ToString("N2")</span></td>
                                            <td>
                                                <span class="d-inline-block text-truncate" style="max-width: 320px;" title="@solicitud.Justificacion">
                                                    @solicitud.Justificacion
                                                </span>
                                            </td>

                                            @if (User.IsInRole(Roles.Administrador) || User.IsInRole(Roles.Gerente))
                                            {
                                                <td class="text-end">
                                                    <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de solicitud pendiente">
                                                        <a asp-action="DetallesSolicitud"
                                                           asp-route-id="@solicitud.Id"
                                                           asp-route-returnUrl="@listReturnUrl"
                                                           class="btn btn-outline-info"
                                                           aria-label="Ver detalle de solicitud"
                                                           title="Ver detalle">
                                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                                            <span class="visually-hidden">Ver detalle</span>
                                                        </a>

                                                        <form asp-action="AprobarSolicitud"
                                                              asp-route-id="@solicitud.Id"
                                                              method="post"
                                                              class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="returnUrl" value="@listReturnUrl" />
                                                            <button type="submit"
                                                                    class="btn btn-success"
                                                                    data-confirm="¿Aprobar esta solicitud?"
                                                                    title="Aprobar">
                                                                <i class="bi bi-check-circle" aria-hidden="true"></i>
                                                                <span class="visually-hidden">Aprobar solicitud</span>
                                                            </button>
                                                        </form>
                                                    </div>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <!-- Resueltas -->
                <div class="tab-pane fade" id="tab-resueltas" role="tabpanel" aria-labelledby="tab-resueltas-tab" tabindex="0">
                    @if (!Model.Resueltas.Any())
                    {
                        <div class="alert alert-info mb-0" role="alert">
                            <i class="bi bi-info-circle me-1"></i>
                            No hay solicitudes resueltas.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <caption class="visually-hidden">Solicitudes resueltas</caption>
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Fecha solicitud</th>
                                        <th scope="col">Solicitante</th>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Operación</th>
                                        <th scope="col">Valor</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col">Fecha resolución</th>
                                        <th scope="col">Resuelto por</th>
                                        <th scope="col" class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in Model.Resueltas)
                                    {
                                        <tr>
                                            <td><small><time datetime="@solicitud.CreatedAt.ToString("O")">@solicitud.CreatedAt.ToString("dd/MM/yyyy")</time></small></td>
                                            <td>@solicitud.UsuarioSolicitante</td>
                                            <td>@solicitud.TipoUmbral.ToString()</td>
                                            <td>@solicitud.TipoOperacion</td>
                                            <td>$@solicitud.ValorSolicitado.ToString("N2")</td>
                                            <td>
                                                @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Aprobada)
                                                {
                                                    <span class="badge bg-success">Aprobada</span>
                                                }
                                                else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Rechazada)
                                                {
                                                    <span class="badge bg-danger">Rechazada</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Cancelada</span>
                                                }
                                            </td>
                                            <td>
                                                @if (solicitud.FechaResolucion.HasValue)
                                                {
                                                    <small><time datetime="@solicitud.FechaResolucion.Value.ToString("O")">@solicitud.FechaResolucion.Value.ToString("dd/MM/yyyy")</time></small>
                                                }
                                            </td>
                                            <td>@solicitud.UsuarioAutorizador</td>
                                            <td class="text-end">
                                                <a asp-action="DetallesSolicitud"
                                                   asp-route-id="@solicitud.Id"
                                                   asp-route-returnUrl="@listReturnUrl"
                                                   class="btn btn-sm btn-outline-info"
                                                   aria-label="Ver detalle de solicitud"
                                                   title="Ver detalle">
                                                    <i class="bi bi-eye" aria-hidden="true"></i>
                                                    <span class="visually-hidden">Ver detalle</span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

                <!-- Mis solicitudes -->
                <div class="tab-pane fade" id="tab-mis" role="tabpanel" aria-labelledby="tab-mis-tab" tabindex="0">
                    @if (!Model.MisSolicitudes.Any())
                    {
                        <div class="alert alert-info mb-0" role="alert">
                            <i class="bi bi-info-circle me-1"></i>
                            No has creado solicitudes aún.
                            <a asp-action="CrearSolicitud" asp-route-returnUrl="@listReturnUrl" class="alert-link ms-1">Crear una ahora</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <caption class="visually-hidden">Mis solicitudes</caption>
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col">Fecha</th>
                                        <th scope="col">Tipo</th>
                                        <th scope="col">Operación</th>
                                        <th scope="col">Valor solicitado</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col">Autorizador</th>
                                        <th scope="col" class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var solicitud in Model.MisSolicitudes)
                                    {
                                        <tr>
                                            <td><time datetime="@solicitud.CreatedAt.ToString("O")">@solicitud.CreatedAt.ToString("dd/MM/yyyy HH:mm")</time></td>
                                            <td>@solicitud.TipoUmbral.ToString()</td>
                                            <td>@solicitud.TipoOperacion</td>
                                            <td>$@solicitud.ValorSolicitado.ToString("N2")</td>
                                            <td>
                                                @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Pendiente)
                                                {
                                                    <span class="badge bg-warning">Pendiente</span>
                                                }
                                                else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Aprobada)
                                                {
                                                    <span class="badge bg-success">Aprobada</span>
                                                }
                                                else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Rechazada)
                                                {
                                                    <span class="badge bg-danger">Rechazada</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Cancelada</span>
                                                }
                                            </td>
                                            <td>@(solicitud.UsuarioAutorizador ?? "-")</td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de mi solicitud">
                                                    <a asp-action="DetallesSolicitud"
                                                       asp-route-id="@solicitud.Id"
                                                       asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-info"
                                                       aria-label="Ver detalle de solicitud"
                                                       title="Ver detalle">
                                                        <i class="bi bi-eye" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Ver detalle</span>
                                                    </a>

                                                    @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Pendiente)
                                                    {
                                                        <form asp-action="CancelarSolicitud"
                                                              asp-route-id="@solicitud.Id"
                                                              method="post"
                                                              class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="returnUrl" value="@listReturnUrl" />
                                                            <button type="submit"
                                                                    class="btn btn-outline-danger"
                                                                    data-confirm="¿Cancelar esta solicitud?"
                                                                    title="Cancelar">
                                                                <i class="bi bi-x-circle" aria-hidden="true"></i>
                                                                <span class="visually-hidden">Cancelar solicitud</span>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</section>

@* 
MEJORAS (solo HTML):
- Tabs con atributos ARIA completos (Bootstrap-friendly).
- Alertas dismissible con btn-close + aria-label.
- Tablas con <caption> (visually-hidden) y <th scope="col">.
- Justificación en pendientes: truncado visual con title para ver completo sin JS extra.
- Se encapsularon fechas en <time datetime="...">.
- Líneas: aumentan por ARIA/caption/time; no puedo confirmar el número exacto sin comparar contra tu archivo en el repo.
*@
