@model TheBuryProject.ViewModels.SolicitudesListViewModel
@{
    ViewData["Title"] = "Solicitudes de Autorización";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>📋 Solicitudes de Autorización</h2>
            <p class="text-muted">Gestione las solicitudes de excepciones a umbrales</p>
        </div>
        <div class="col-auto">
            <a asp-action="CrearSolicitud" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Nueva Solicitud
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-gear"></i> Configurar Umbrales
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Resumen de estadísticas -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning">@Model.TotalPendientes</h3>
                    <p class="text-muted mb-0">Pendientes</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-success">
                <div class="card-body text-center">
                    <h3 class="text-success">@Model.TotalAprobadas</h3>
                    <p class="text-muted mb-0">Aprobadas</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h3 class="text-danger">@Model.TotalRechazadas</h3>
                    <p class="text-muted mb-0">Rechazadas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabs -->
    <ul class="nav nav-tabs mb-3" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-pendientes" type="button">
                Pendientes
                @if (Model.Pendientes.Any())
                {
                    <span class="badge bg-warning">@Model.Pendientes.Count</span>
                }
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-resueltas" type="button">
                Resueltas
                @if (Model.Resueltas.Any())
                {
                    <span class="badge bg-secondary">@Model.Resueltas.Count</span>
                }
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-mis-solicitudes" type="button">
                Mis Solicitudes
                @if (Model.MisSolicitudes.Any())
                {
                    <span class="badge bg-info">@Model.MisSolicitudes.Count</span>
                }
            </button>
        </li>
    </ul>

    <!-- Contenido de Tabs -->
    <div class="tab-content">
        <!-- Tab Pendientes -->
        <div class="tab-pane fade show active" id="tab-pendientes">
            @if (!Model.Pendientes.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay solicitudes pendientes
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Solicitante</th>
                                <th>Rol</th>
                                <th>Tipo</th>
                                <th>Operación</th>
                                <th>Valor Solicitado</th>
                                <th>Valor Permitido</th>
                                <th>Justificación</th>
                                @if (User.IsInRole("Admin") || User.IsInRole("Gerente"))
                                {
                                    <th>Acciones</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model.Pendientes)
                            {
                                <tr>
                                    <td>
                                        <small>@solicitud.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>@solicitud.UsuarioSolicitante</td>
                                    <td><span class="badge bg-secondary">@solicitud.RolSolicitante</span></td>
                                    <td>@solicitud.TipoUmbral.ToString().Replace("DescuentoVenta", "Descuento Venta")</td>
                                    <td>@solicitud.TipoOperacion</td>
                                    <td>
                                        <span class="text-danger fw-bold">$@solicitud.ValorSolicitado.ToString("N2")</span>
                                    </td>
                                    <td>
                                        <span class="text-success">$@solicitud.ValorPermitido.ToString("N2")</span>
                                    </td>
                                    <td>
                                        <small>@(solicitud.Justificacion.Length > 50 ? solicitud.Justificacion.Substring(0, 50) + "..." : solicitud.Justificacion)</small>
                                    </td>
                                    @if (User.IsInRole("Admin") || User.IsInRole("Gerente"))
                                    {
                                        <td>
                                            <a asp-action="DetallesSolicitud" asp-route-id="@solicitud.Id"
                                               class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-eye"></i> Ver
                                            </a>
                                            <form asp-action="AprobarSolicitud" asp-route-id="@solicitud.Id"
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-success"
                                                        onclick="return confirm('¿Aprobar esta solicitud?');">
                                                    <i class="bi bi-check-circle"></i> Aprobar
                                                </button>
                                            </form>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <!-- Tab Resueltas -->
        <div class="tab-pane fade" id="tab-resueltas">
            @if (!Model.Resueltas.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No hay solicitudes resueltas
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha Solicitud</th>
                                <th>Solicitante</th>
                                <th>Tipo</th>
                                <th>Operación</th>
                                <th>Valor</th>
                                <th>Estado</th>
                                <th>Fecha Resolución</th>
                                <th>Resuelto Por</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model.Resueltas)
                            {
                                <tr>
                                    <td><small>@solicitud.CreatedAt.ToString("dd/MM/yyyy")</small></td>
                                    <td>@solicitud.UsuarioSolicitante</td>
                                    <td>@solicitud.TipoUmbral.ToString().Replace("DescuentoVenta", "Descuento")</td>
                                    <td>@solicitud.TipoOperacion</td>
                                    <td>$@solicitud.ValorSolicitado.ToString("N2")</td>
                                    <td>
                                        @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Aprobada)
                                        {
                                            <span class="badge bg-success">Aprobada</span>
                                        }
                                        else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Rechazada)
                                        {
                                            <span class="badge bg-danger">Rechazada</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Cancelada</span>
                                        }
                                    </td>
                                    <td><small>@solicitud.FechaResolucion?.ToString("dd/MM/yyyy")</small></td>
                                    <td>@solicitud.UsuarioAutorizador</td>
                                    <td>
                                        <a asp-action="DetallesSolicitud" asp-route-id="@solicitud.Id"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

        <!-- Tab Mis Solicitudes -->
        <div class="tab-pane fade" id="tab-mis-solicitudes">
            @if (!Model.MisSolicitudes.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No has creado solicitudes aún.
                    <a asp-action="CrearSolicitud" class="alert-link">Crear una ahora</a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Operación</th>
                                <th>Valor Solicitado</th>
                                <th>Estado</th>
                                <th>Autorizador</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var solicitud in Model.MisSolicitudes)
                            {
                                <tr>
                                    <td>@solicitud.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@solicitud.TipoUmbral.ToString()</td>
                                    <td>@solicitud.TipoOperacion</td>
                                    <td>$@solicitud.ValorSolicitado.ToString("N2")</td>
                                    <td>
                                        @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Pendiente)
                                        {
                                            <span class="badge bg-warning">Pendiente</span>
                                        }
                                        else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Aprobada)
                                        {
                                            <span class="badge bg-success">Aprobada</span>
                                        }
                                        else if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Rechazada)
                                        {
                                            <span class="badge bg-danger">Rechazada</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Cancelada</span>
                                        }
                                    </td>
                                    <td>@(solicitud.UsuarioAutorizador ?? "-")</td>
                                    <td>
                                        <a asp-action="DetallesSolicitud" asp-route-id="@solicitud.Id"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i> Ver
                                        </a>
                                        @if (solicitud.Estado == TheBuryProject.Models.Entities.EstadoSolicitud.Pendiente)
                                        {
                                            <form asp-action="CancelarSolicitud" asp-route-id="@solicitud.Id"
                                                  method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('¿Cancelar esta solicitud?');">
                                                    <i class="bi bi-x-circle"></i> Cancelar
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>