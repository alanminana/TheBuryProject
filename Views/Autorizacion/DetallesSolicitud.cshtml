@model TheBuryProject.ViewModels.GestionarSolicitudViewModel
@using TheBuryProject.Models.Constants
@using TheBuryProject.Models.Entities

@{
    ViewData["Title"] = "Detalle de Solicitud";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Solicitudes", "Autorizacion")!;
    var pageReturnUrl = Context.Request.Path + Context.Request.QueryString;

    var esPendiente = Model.Estado == EstadoSolicitud.Pendiente;
    var puedeGestionar = User.IsInRole(Roles.SuperAdmin) || User.IsInRole(Roles.Gerente) || User.IsInRole(Roles.Administrador);
    var esSolicitante = string.Equals(User?.Identity?.Name, Model.UsuarioSolicitante, StringComparison.OrdinalIgnoreCase);
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header -->
    <div class="d-flex flex-wrap align-items-start justify-content-between gap-2 mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Autorizaciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                <span>Detalle de solicitud</span>
                <span class="badge @(esPendiente ? "bg-warning" : "bg-secondary")">@Model.Estado</span>
            </h1>
            <p class="text-muted small mb-0">
                Revisá la información y gestioná la solicitud si corresponde.
            </p>
        </div>

        <a href="@backUrl" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver
        </a>
    </div>

    <div class="row g-3">
        <!-- Datos -->
        <div class="col-12 col-lg-7">
            <div class="card card-animate">
                <div class="card-header">
                    <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                        <span>Datos de la solicitud</span>
                    </h2>
                </div>
                <div class="card-body">

                    <dl class="row g-3 mb-0">
                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Solicitante</dt>
                            <dd class="mb-0">
                                <div class="fw-semibold">@Model.UsuarioSolicitante</div>
                                <span class="badge bg-secondary mt-1">@Model.RolSolicitante</span>
                            </dd>
                        </div>

                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Fecha</dt>
                            <dd class="mb-0 fw-semibold">
                                <time datetime="@Model.FechaSolicitud.ToString("O")">
                                    @Model.FechaSolicitud.ToString("dd/MM/yyyy HH:mm")
                                </time>
                            </dd>
                        </div>

                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Tipo de umbral</dt>
                            <dd class="mb-0 fw-semibold">@Model.TipoUmbral</dd>
                        </div>

                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Tipo de operación</dt>
                            <dd class="mb-0 fw-semibold">@Model.TipoOperacion</dd>
                        </div>

                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Valor solicitado</dt>
                            <dd class="mb-0 fw-semibold text-danger">$@Model.ValorSolicitado.ToString("N2")</dd>
                        </div>

                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Valor permitido</dt>
                            <dd class="mb-0 fw-semibold text-success">$@Model.ValorPermitido.ToString("N2")</dd>
                        </div>

                        <div class="col-12 col-md-6">
                            <dt class="text-muted small">Referencia (ID)</dt>
                            <dd class="mb-0 fw-semibold">@(Model.ReferenciaOperacionId?.ToString() ?? "-")</dd>
                        </div>

                        <div class="col-12">
                            <dt class="text-muted small">Justificación</dt>
                            <dd class="mb-0">
                                <div class="border rounded p-3 bg-body-secondary bg-opacity-25">@Model.Justificacion</div>
                            </dd>
                        </div>

                        @if (!string.IsNullOrWhiteSpace(Model.ComentarioResolucion) && !esPendiente)
                        {
                            <div class="col-12">
                                <dt class="text-muted small">Comentario de resolución</dt>
                                <dd class="mb-0">
                                    <div class="border rounded p-3">@Model.ComentarioResolucion</div>
                                </dd>
                            </div>
                        }
                    </dl>

                </div>
            </div>
        </div>

        <!-- Acciones -->
        <div class="col-12 col-lg-5">
            <div class="card card-animate">
                <div class="card-header">
                    <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-clipboard-check" aria-hidden="true"></i>
                        <span>Acciones</span>
                    </h2>
                </div>

                <div class="card-body">
                    @if (!esPendiente)
                    {
                        <div class="alert alert-info mb-0" role="alert">
                            <i class="bi bi-info-circle me-1"></i>
                            Esta solicitud ya fue gestionada.
                        </div>
                    }
                    else
                    {
                        <div class="d-grid gap-2">
                            @if (puedeGestionar)
                            {
                                <form asp-action="AprobarSolicitud" asp-route-id="@Model.Id" method="post" class="d-grid">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="returnUrl" value="@pageReturnUrl" />
                                    <button type="submit"
                                            class="btn btn-success"
                                            data-confirm="¿Aprobar esta solicitud?"
                                            data-prompt="Comentario (opcional):"
                                            data-prompt-name="comentario">
                                        <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Aprobar
                                    </button>
                                </form>

                                <form asp-action="RechazarSolicitud" asp-route-id="@Model.Id" method="post" class="d-grid">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="returnUrl" value="@pageReturnUrl" />
                                    <button type="submit"
                                            class="btn btn-danger"
                                            data-confirm="¿Rechazar esta solicitud?"
                                            data-prompt="Motivo del rechazo (requerido):"
                                            data-prompt-name="comentario"
                                            data-prompt-required="true">
                                        <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Rechazar
                                    </button>
                                </form>
                            }

                            @if (esSolicitante)
                            {
                                <form asp-action="CancelarSolicitud" asp-route-id="@Model.Id" method="post" class="d-grid">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="returnUrl" value="@pageReturnUrl" />
                                    <button type="submit" class="btn btn-outline-secondary" data-confirm="¿Cancelar esta solicitud?">
                                        <i class="bi bi-slash-circle me-1" aria-hidden="true"></i>Cancelar
                                    </button>
                                </form>
                            }

                            @if (!puedeGestionar && !esSolicitante)
                            {
                                <div class="alert alert-warning mb-0" role="alert">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    No tenés permisos para gestionar esta solicitud.
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@* 
MEJORAS (solo HTML):
- Se reemplazó el grid suelto por <dl> (dt/dd) para datos (semántica más clara).
- Se encapsuló fecha en <time datetime="..."> (mejor semántica/parseo).
- Se agregaron role="alert" en mensajes.
- Líneas: pueden aumentar por semántica (<dl>/<time>); no puedo confirmar el número exacto sin comparar contra tu archivo en el repo.
*@
