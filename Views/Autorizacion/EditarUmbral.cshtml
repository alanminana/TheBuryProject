@model TheBuryProject.ViewModels.UmbralAutorizacionViewModel

@{
    ViewData["Title"] = "Editar Umbral de Autorización";
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Autorizaciones</div>
            <h1 class="h4 mb-1">Editar umbral de autorización</h1>
            <p class="text-muted small mb-0">
                Ajusta los límites máximos de autorización para el rol seleccionado.
            </p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Volver al listado
        </a>
    </div>

    <div class="row">
        <div class="col-12 col-lg-8 col-xl-6">

            <div class="card card-animate">
                <div class="card-body">

                    <form asp-action="EditarUmbral" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <!-- Rol (solo lectura) -->
                        <div class="mb-3">
                            <label asp-for="Rol" class="form-label"></label>
                            <input asp-for="Rol" class="form-control" readonly />
                            <div class="form-text">
                                El rol no puede ser modificado.
                            </div>
                        </div>

                        <!-- Tipo de umbral (solo lectura) -->
                        <div class="mb-3">
                            <label asp-for="TipoUmbral" class="form-label"></label>
                            <input type="text"
                                   value="@Model.TipoUmbral.ToString()"
                                   class="form-control"
                                   readonly />
                            <div class="form-text">
                                El tipo de umbral no puede ser modificado.
                            </div>
                        </div>

                        <!-- Valor máximo -->
                        <div class="mb-3">
                            <label asp-for="ValorMaximo" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="ValorMaximo"
                                       class="form-control"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       required />
                            </div>
                            <span asp-validation-for="ValorMaximo" class="text-danger small d-block"></span>
                            <div class="form-text">
                                Para descuentos, ingrese el porcentaje (ej: 15 para 15%).<br />
                                Para montos, ingrese el valor en pesos.
                            </div>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion"
                                      class="form-control"
                                      rows="3"
                                      maxlength="500"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <!-- Activo -->
                        <div class="mb-3 form-check">
                            <input asp-for="Activo" class="form-check-input" />
                            <label asp-for="Activo" class="form-check-label"></label>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Guardar cambios
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
