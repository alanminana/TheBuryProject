@model List<AccionViewModel>

@{
    ViewData["Title"] = "Gestión de Acciones";
    var cleanedQuery = QueryString.Create(Context.Request.Query.Where(kvp => !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));
    var listReturnUrl = Context.Request.Path + cleanedQuery;
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Acciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-lightning" aria-hidden="true"></i>
                <span>Gestión de acciones</span>
            </h1>
            <p class="text-muted small mb-0">
                Administra las acciones disponibles para cada módulo.
            </p>
        </div>

        <div class="text-end">
            <a asp-action="Create" asp-route-returnUrl="@listReturnUrl" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>
                Crear acción
            </a>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3" role="status">
            <i class="bi bi-check-circle me-2" aria-hidden="true"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <!-- Card principal -->
    <div class="card card-animate">
        <div class="card-body">

            @if (Model != null && Model.Any())
            {
                var modulosGroup = Model.GroupBy(a => a.ModuloNombre ?? "Sin módulo");

                var groupIndex = 0;

                @foreach (var grupo in modulosGroup.OrderBy(g => g.Key))
                {
                    var headingId = $"modulo-{groupIndex++}";
                    var totalAcciones = grupo.Count();

                    <section class="mb-4" aria-labelledby="@headingId">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h2 class="h6 mb-0" id="@headingId">@grupo.Key</h2>
                            <span class="badge bg-secondary text-light small">
                                @totalAcciones acción@(totalAcciones == 1 ? "" : "es")
                            </span>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-middle mb-0">
                                <caption class="visually-hidden">
                                    Acciones del módulo @grupo.Key
                                </caption>
                                <thead class="table-dark border-bottom-0">
                                    <tr>
                                        <th scope="col">Acción</th>
                                        <th scope="col">Clave</th>
                                        <th scope="col">Descripción</th>
                                        <th scope="col" class="text-center">Estado</th>
                                        <th scope="col" class="text-end">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var accion in grupo.OrderBy(a => a.Nombre))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@accion.Nombre</strong>
                                            </td>
                                            <td>
                                                <code>@accion.Clave</code>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(string.IsNullOrWhiteSpace(accion.Descripcion) ? "-" : accion.Descripcion)
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                @if (accion.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Opciones de la acción @accion.Nombre">
                                                    <a asp-action="Details"
                                                       asp-route-id="@accion.Id"
                                                       asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-info"
                                                       aria-label="Ver detalles de @accion.Nombre"
                                                       title="Ver detalles">
                                                        <i class="bi bi-eye" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Ver detalles</span>
                                                    </a>
                                                    <a asp-action="Edit"
                                                       asp-route-id="@accion.Id"
                                                       asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-primary"
                                                       aria-label="Editar @accion.Nombre"
                                                       title="Editar">
                                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Editar</span>
                                                    </a>
                                                    <a asp-action="Delete"
                                                       asp-route-id="@accion.Id"
                                                       asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-danger"
                                                       aria-label="Eliminar @accion.Nombre"
                                                       title="Eliminar">
                                                        <i class="bi bi-trash" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Eliminar</span>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-lightning fs-1" aria-hidden="true"></i>
                    <p class="mt-3 mb-1">No hay acciones configuradas</p>
                    <p class="small mb-0">
                        Crea la primera acción para comenzar a gestionar permisos por módulo.
                    </p>
                    <a asp-action="Create" asp-route-returnUrl="@listReturnUrl" class="btn btn-primary btn-sm mt-3">
                        <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>
                        Crear acción
                    </a>
                </div>
            }

        </div>
    </div>
</div>
