@model List<AccionViewModel>

@{
    ViewData["Title"] = "Gestión de Acciones";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2><i class="bi bi-lightning me-2"></i>Gestión de Acciones</h2>
            <p class="text-muted">Administra las acciones disponibles para cada módulo</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>Crear Acción
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                var modulosGroup = Model.GroupBy(a => a.ModuloNombre ?? "Sin módulo");

                @foreach (var grupo in modulosGroup.OrderBy(g => g.Key))
                {
                    <h5 class="mt-3 mb-2 border-bottom pb-2">@grupo.Key</h5>
                    <div class="table-responsive">
                        <table class="table table-sm table-hover">
                            <thead>
                                <tr>
                                    <th>Acción</th>
                                    <th>Clave</th>
                                    <th>Descripción</th>
                                    <th class="text-center">Estado</th>
                                    <th class="text-end">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var accion in grupo.OrderBy(a => a.Nombre))
                                {
                                    <tr>
                                        <td><strong>@accion.Nombre</strong></td>
                                        <td><code>@accion.Clave</code></td>
                                        <td><small>@(accion.Descripcion ?? "-")</small></td>
                                        <td class="text-center">
                                            @if (accion.Activo)
                                            {
                                                <span class="badge bg-success">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactivo</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@accion.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@accion.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@accion.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-lightning" style="font-size: 4rem;"></i>
                    <p class="mt-3">No hay acciones configuradas</p>
                </div>
            }
        </div>
    </div>
</div>