@model List<AccionViewModel>

@{
    ViewData["Title"] = "Gestión de Acciones";
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Acciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-lightning"></i>
                <span>Gestión de acciones</span>
            </h1>
            <p class="text-muted small mb-0">
                Administra las acciones disponibles para cada módulo.
            </p>
        </div>

        <div class="text-end">
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1"></i>
                Crear acción
            </a>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-3">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Card principal -->
    <div class="card card-animate">
        <div class="card-body">

            @if (Model != null && Model.Any())
            {
                var modulosGroup = Model.GroupBy(a => a.ModuloNombre ?? "Sin módulo");

                @foreach (var grupo in modulosGroup.OrderBy(g => g.Key))
                {
                    <section class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <h2 class="h6 mb-0">@grupo.Key</h2>
                            <span class="badge bg-secondary-subtle text-light small">
                                @grupo.Count() acción@(grupo.Count() == 1 ? "" : "es")
                            </span>
                        </div>

                        <div class="table-responsive">
                            <table class="table table-sm table-hover align-middle mb-0">
                                <thead class="table-dark border-bottom-0">
                                    <tr>
                                        <th>Acción</th>
                                        <th>Clave</th>
                                        <th>Descripción</th>
                                        <th class="text-center">Estado</th>
                                        <th class="text-end">Opciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var accion in grupo.OrderBy(a => a.Nombre))
                                    {
                                        <tr>
                                            <td>
                                                <strong>@accion.Nombre</strong>
                                            </td>
                                            <td>
                                                <code>@accion.Clave</code>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @(string.IsNullOrWhiteSpace(accion.Descripcion) ? "-" : accion.Descripcion)
                                                </small>
                                            </td>
                                            <td class="text-center">
                                                @if (accion.Activo)
                                                {
                                                    <span class="badge bg-success">Activo</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactivo</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@accion.Id" class="btn btn-outline-info">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@accion.Id" class="btn btn-outline-primary">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@accion.Id" class="btn btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </section>
                }
            }
            else
            {
                <div class="text-center py-5 text-muted">
                    <i class="bi bi-lightning" style="font-size: 3.5rem;"></i>
                    <p class="mt-3 mb-1">No hay acciones configuradas</p>
                    <p class="small mb-0">
                        Crea la primera acción para comenzar a gestionar permisos por módulo.
                    </p>
                </div>
            }

        </div>
    </div>
</div>
