@model CrearAccionViewModel

@{
    ViewData["Title"] = "Crear Acción";
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Acciones</div>
            <h1 class="h4 mb-0">Crear nueva acción</h1>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>
            Volver al listado
        </a>
    </div>

    <!-- Contenido -->
    <div class="row">
        <div class="col-12 col-lg-8 col-xl-6">

            <div class="card card-animate">
                <div class="card-body">

                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <!-- Módulo -->
                        <div class="mb-3">
                            <label asp-for="ModuloId" class="form-label"></label>
                            <select asp-for="ModuloId" class="form-select" asp-items="ViewBag.Modulos">
                                <option value="">Seleccione un módulo...</option>
                            </select>
                            <span asp-validation-for="ModuloId" class="text-danger small"></span>
                        </div>

                        <!-- Nombre / Clave -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej: Crear" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Clave" class="form-label"></label>
                                <input asp-for="Clave" class="form-control" placeholder="Ej: create" />
                                <span asp-validation-for="Clave" class="text-danger small d-block"></span>
                                <div class="form-text">
                                    Solo letras minúsculas, números y guiones.
                                </div>
                            </div>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"
                                      placeholder="Descripción breve de la acción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <!-- Activo -->
                        <div class="mb-3 form-check">
                            <input asp-for="Activo" class="form-check-input" />
                            <label asp-for="Activo" class="form-check-label"></label>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Crear acción
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
