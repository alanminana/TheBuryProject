@model CrearAccionViewModel

@{
    ViewData["Title"] = "Crear Acción";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Acciones")!;
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header de página -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Acciones</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-plus-circle" aria-hidden="true"></i>
                <span>Crear nueva acción</span>
            </h1>
            <p class="text-muted small mb-0">
                Define una nueva acción para administrar permisos por módulo.
            </p>
        </div>

        <a href="@backUrl" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>
            Volver al listado
        </a>
    </div>

    <!-- Contenido -->
    <div class="row">
        <div class="col-12 col-lg-8 col-xl-6">

            <div class="card card-animate">
                <div class="card-body">

                    <form asp-action="Create" method="post" novalidate>
                        @if (!string.IsNullOrWhiteSpace(returnUrl))
                        {
                            <input type="hidden" name="returnUrl" value="@returnUrl" />
                        }

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                        }

                        <!-- Módulo -->
                        <div class="mb-3">
                            <label asp-for="ModuloId" class="form-label"></label>
                            <select asp-for="ModuloId" class="form-select" asp-items="ViewBag.Modulos">
                                <option value="">Seleccione un módulo...</option>
                            </select>
                            <span asp-validation-for="ModuloId" class="text-danger small" id="ModuloIdError"></span>
                        </div>

                        <!-- Nombre / Clave -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej: Crear" />
                                <span asp-validation-for="Nombre" class="text-danger small" id="NombreError"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Clave" class="form-label"></label>
                                <input asp-for="Clave"
                                       class="form-control"
                                       placeholder="Ej: create"
                                       aria-describedby="ClaveHelp ClaveError" />

                                <span asp-validation-for="Clave" class="text-danger small d-block" id="ClaveError"></span>

                                <div class="form-text" id="ClaveHelp">
                                    Solo letras minúsculas, números y guiones.
                                </div>
                            </div>
                        </div>

                        <!-- Descripción -->
                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3"
                                      placeholder="Descripción breve de la acción"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small" id="DescripcionError"></span>
                        </div>

                        <!-- Activo -->
                        <div class="mb-3 form-check form-switch">
                            <input asp-for="Activo" class="form-check-input" type="checkbox" />
                            <label asp-for="Activo" class="form-check-label"></label>
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a href="@backUrl" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg me-1" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1" aria-hidden="true"></i>Crear acción
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>

</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
