@using System.Globalization
@model TheBuryProject.ViewModels.EvaluacionCreditoViewModel

@if (Model != null)
{
    var puntaje = Math.Clamp(Convert.ToDecimal(Model.PuntajeFinal), 0m, 100m);
    var puntajeCss = puntaje.ToString("0.##", CultureInfo.InvariantCulture);
    var reglas = Model.Reglas ?? Enumerable.Empty<TheBuryProject.ViewModels.ReglaEvaluacionViewModel>();

    <div class="card border-@Model.ColorSemaforo shadow-sm mb-4">
        <div class="card-header bg-@Model.ColorSemaforo text-white">
            <h5 class="mb-0">
                <i class="bi @Model.IconoSemaforo me-2" aria-hidden="true"></i>
                Evaluación Crediticia: @Model.ResultadoTexto
            </h5>
        </div>

        <div class="card-body">
            <!-- Puntaje Final -->
            <div class="row mb-3">
                <div class="col-12">
                    <h6 class="text-body-secondary mb-2">Puntaje Final</h6>
                    <div class="progress" style="height: 30px;" role="progressbar"
                         aria-valuenow="@puntaje" aria-valuemin="0" aria-valuemax="100"
                         aria-label="Puntaje final">
                        <div class="progress-bar bg-@Model.ColorSemaforo" style="width: @puntajeCss%">
                            <strong class="fs-6">@puntaje.ToString("N0") / 100</strong>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Motivo -->
            <div class="alert alert-@Model.ColorSemaforo border-0 mb-3">
                <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                <strong>Análisis:</strong> @Model.Motivo
            </div>

            <!-- Datos de la evaluación -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <dl class="row mb-0">
                        <dt class="col-sm-6">Monto Solicitado:</dt>
                        <dd class="col-sm-6">@Model.MontoSolicitado.ToString("C2")</dd>

                        <dt class="col-sm-6">Puntaje Riesgo:</dt>
                        <dd class="col-sm-6">@Model.PuntajeRiesgoCliente.ToString("N1") / 10</dd>

                        @if (Model.SueldoCliente.HasValue)
                        {
                            <dt class="col-sm-6">Sueldo Declarado:</dt>
                            <dd class="col-sm-6">@Model.SueldoCliente.Value.ToString("C2")</dd>
                        }
                    </dl>
                </div>

                <div class="col-md-6">
                    <dl class="row mb-0">
                        @if (Model.RelacionCuotaIngreso.HasValue)
                        {
                            <dt class="col-sm-7">Compromiso Ingreso:</dt>
                            <dd class="col-sm-5">@Model.RelacionCuotaIngreso.Value.ToString("P1")</dd>
                        }

                        <dt class="col-sm-7">Fecha Evaluación:</dt>
                        <dd class="col-sm-5"><time datetime="@Model.FechaEvaluacion.ToString("s")">@Model.FechaEvaluacion.ToString("dd/MM/yyyy HH:mm")</time></dd>
                    </dl>
                </div>
            </div>

            <!-- Reglas Evaluadas -->
            <h6 class="text-body-secondary mb-2 mt-3">
                <i class="bi bi-list-check me-1" aria-hidden="true"></i>Criterios Evaluados
            </h6>

            <div class="table-responsive">
                <table class="table table-sm table-hover align-middle mb-0">
                    <thead>
                        <tr class="small text-body-secondary text-uppercase">
                            <th scope="col">Criterio</th>
                            <th scope="col">Detalle</th>
                            <th scope="col" class="text-center">Estado</th>
                            <th scope="col" class="text-end">Puntos</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var regla in reglas)
                        {
                            <tr class="@(regla.Cumple ? "" : "table-warning")">
                                <td>
                                    <i class="bi @(regla.Cumple ? "bi-check-circle text-success" : "bi-x-circle text-danger") me-1" aria-hidden="true"></i>
                                    @regla.Nombre
                                </td>
                                <td class="text-body-secondary small">@regla.Detalle</td>
                                <td class="text-center">
                                    @if (regla.Cumple)
                                    {
                                        <span class="badge bg-success">Cumple</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">No Cumple</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <span class="badge bg-@(regla.Peso >= 0 ? "primary" : "danger")">
                                        @(regla.Peso >= 0 ? "+" : "")@regla.Peso
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="3" class="text-end"><strong>Puntaje Total:</strong></td>
                            <td class="text-end">
                                <strong class="text-@Model.ColorSemaforo fs-5">@Model.PuntajeFinal</strong>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            @if (!string.IsNullOrEmpty(Model.Observaciones))
            {
                <div class="mt-3">
                    <h6 class="text-body-secondary mb-2">Observaciones</h6>
                    <p class="text-body-secondary mb-0">@Model.Observaciones</p>
                </div>
            }
        </div>
    </div>
}
