@*
    Partial: Badge unificado para EstadoBatch
    Uso: <partial name="_BadgeEstadoBatch" model="batch.Estado" />
*@
@model TheBuryProject.Models.Enums.EstadoBatch

@{
    var (texto, clases) = Model switch
    {
        TheBuryProject.Models.Enums.EstadoBatch.Simulado  => ("Simulado",  "bg-info"),
        TheBuryProject.Models.Enums.EstadoBatch.Aprobado  => ("Aprobado",  "bg-primary"),
        TheBuryProject.Models.Enums.EstadoBatch.Aplicado  => ("Aplicado",  "bg-success"),
        TheBuryProject.Models.Enums.EstadoBatch.Revertido => ("Revertido", "bg-warning text-dark"),
        TheBuryProject.Models.Enums.EstadoBatch.Rechazado => ("Rechazado", "bg-danger"),
        TheBuryProject.Models.Enums.EstadoBatch.Cancelado => ("Cancelado", "bg-secondary"),
        _ => (Model.ToString(), "bg-dark")
    };
}

<span class="badge @clases">@texto</span>
