@using Microsoft.AspNetCore.Hosting
@model ErrorViewModel
@inject IWebHostEnvironment Env

@{
    ViewData["Title"] = "Error";
}

<div class="container-fluid py-4">
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-start gap-3">
                <i class="bi bi-exclamation-triangle-fill text-danger fs-3" aria-hidden="true"></i>
                <div class="flex-grow-1">
                    <h1 class="h4 mb-1 text-danger">Ocurrió un error</h1>
                    <p class="text-body-secondary mb-0">No se pudo procesar la solicitud.</p>

                    @if (Model.ShowRequestId)
                    {
                        <div class="mt-3">
                            <span class="text-body-secondary">Request ID:</span>
                            <code>@Model.RequestId</code>
                        </div>
                    }

                    @if (Env.IsDevelopment())
                    {
                        <hr class="my-4" />
                        <h2 class="h6 mb-2">Development Mode</h2>
                        <p class="text-body-secondary mb-2">
                            Estás en <strong>Development</strong>. Se recomienda NO habilitarlo en entornos desplegados.
                        </p>
                        <p class="text-body-secondary mb-0">
                            Para debug local, configurar <code>ASPNETCORE_ENVIRONMENT</code> = <strong>Development</strong> y reiniciar.
                        </p>
                    }

                    <div class="mt-4 d-flex gap-2 flex-wrap">
                        <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house me-2" aria-hidden="true"></i>Ir al inicio
                        </a>
                        <button type="button" class="btn btn-outline-primary" onclick="history.back()">
                            <i class="bi bi-arrow-left me-2" aria-hidden="true"></i>Volver
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
