<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TheBuryProject</title>

    <!-- Vendor CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared-components.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
    @{
        var cleanedQuery = QueryString.Create(Context.Request.Query.Where(kvp => !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));
        var currentUrl = Context.Request.Path + cleanedQuery;
    }
    <div class="layout-container">

        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-inner">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop text-primary fs-4"></i>
                    <span>TheBuryProject</span>
                </a>

                <nav class="nav flex-column sidebar-nav mt-2">

                    <!-- PRINCIPAL -->
                    <div class="section-title">Principal</div>
                    <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2"></i>
                        <span>Dashboard</span>
                    </a>

                    <!-- VENTAS -->
                    <div class="section-title">Ventas</div>
                    <a class="nav-link" asp-controller="Venta" asp-action="Index">
                        <i class="bi bi-cart-check"></i>
                        <span>Ventas</span>
                    </a>
                    <a class="nav-link" asp-controller="Credito" asp-action="Index">
                        <i class="bi bi-credit-card"></i>
                        <span>Créditos</span>
                    </a>
                    <a class="nav-link" asp-controller="DocumentoCliente" asp-action="Index">
                        <i class="bi bi-file-earmark-text"></i>
                        <span>Documentos</span>
                    </a>

                    <!-- CLIENTES -->
                    <div class="section-title">Clientes</div>
                    <a class="nav-link" asp-controller="Cliente" asp-action="Index">
                        <i class="bi bi-person-lines-fill"></i>
                        <span>Clientes</span>
                    </a>

                    <!-- CATÁLOGO -->
                    <div class="section-title">Catálogo</div>
                    <a class="nav-link" asp-controller="Catalogo" asp-action="Index">
                        <i class="bi bi-grid"></i>
                        <span>Catálogo</span>
                    </a>
                    <a class="nav-link" asp-controller="Proveedor" asp-action="Index">
                        <i class="bi bi-truck"></i>
                        <span>Proveedores</span>
                    </a>
                    <a class="nav-link" asp-controller="ListasPrecios" asp-action="Index">
                        <i class="bi bi-tags"></i>
                        <span>Listas de Precios</span>
                    </a>
                    <a class="nav-link" asp-controller="CambiosPrecios" asp-action="Index">
                        <i class="bi bi-shuffle"></i>
                        <span>Cambios Masivos</span>
                    </a>

                    <!-- OPERACIONES -->
                    <div class="section-title">Operaciones</div>
                    <a class="nav-link" asp-controller="Caja" asp-action="Index">
                        <i class="bi bi-cash-stack"></i>
                        <span>Cajas</span>
                    </a>
                    <a class="nav-link" asp-controller="Devolucion" asp-action="Index">
                        <i class="bi bi-arrow-return-left"></i>
                        <span>Devoluciones</span>
                    </a>
                    <a class="nav-link" asp-controller="Autorizacion" asp-action="Index" asp-route-returnUrl="@currentUrl">
                        <i class="bi bi-shield-check"></i>
                        <span>Autorizaciones</span>
                    </a>

                    <!-- ADMINISTRACIÓN -->
                    <div class="section-title">Administración</div>
                    <a class="nav-link" asp-controller="Usuarios" asp-action="Index" asp-route-returnUrl="@currentUrl">
                        <i class="bi bi-people"></i>
                        <span>Usuarios</span>
                    </a>
                    <a class="nav-link" asp-controller="Roles" asp-action="Index" asp-route-returnUrl="@currentUrl">
                        <i class="bi bi-shield"></i>
                        <span>Roles</span>
                    </a>
                    <a class="nav-link" asp-controller="Modulos" asp-action="Index" asp-route-returnUrl="@currentUrl">
                        <i class="bi bi-grid"></i>
                        <span>Módulos</span>
                    </a>
                    <a class="nav-link" asp-controller="Acciones" asp-action="Index" asp-route-returnUrl="@currentUrl">
                        <i class="bi bi-lightning"></i>
                        <span>Acciones</span>
                    </a>

                    <!-- SISTEMA -->
                    <div class="section-title">Sistema</div>
                    <a class="nav-link" asp-controller="ConfiguracionPago" asp-action="Index">
                        <i class="bi bi-gear"></i>
                        <span>Configuración</span>
                    </a>
                </nav>
            </div>
        </aside>

        <!-- Overlay para mobile -->
        <div class="overlay" id="sidebarOverlay"></div>

        <!-- MAIN WRAPPER -->
        <div class="main-wrapper">

            <!-- TOPBAR -->
            <header class="topbar">
                <div class="d-flex align-items-center gap-2">

                    <!-- Botón: en mobile abre/cierra sidebar; en desktop fija/desfija -->
                    <button id="toggleSidebar" class="btn btn-sm btn-outline-secondary d-flex align-items-center">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Buscador -->
                    <div class="input-group input-group-sm topbar-search">
                        <span class="input-group-text border-0 bg-transparent">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-0" placeholder="Buscar productos, clientes..." />
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3">

                    <!-- Notificaciones -->
                    <div class="dropdown">
                        <button type="button" class="nav-link position-relative btn btn-link p-0 border-0" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-bell fs-5"></i>
                            <span id="notificacionesBadge" class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle d-none">0</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow" style="width: 350px; max-height: 400px; overflow-y: auto;">
                            <li class="dropdown-header d-flex justify-content-between align-items-center">
                                <span class="fw-semibold">Notificaciones</span>
                                <button id="marcarTodasLeidasBtn" type="button" class="btn btn-sm btn-link text-decoration-none">
                                    Marcar como leídas
                                </button>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li id="noNotificacionesMsg" class="text-center py-3 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                <span>No hay notificaciones</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Usuario -->
                    <div class="dropdown">
                        <button type="button" class="nav-link d-flex align-items-center gap-2 btn btn-link p-0 border-0" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5"></i>
                            <span class="d-none d-md-inline">@User.Identity?.Name</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow">
                            <li>
                                <button type="button" class="dropdown-item" disabled aria-disabled="true">
                                    <i class="bi bi-person me-2"></i>Mi Perfil
                                </button>
                            </li>
                            <li>
                                <button type="button" class="dropdown-item" disabled aria-disabled="true">
                                    <i class="bi bi-gear me-2"></i>Configuración
                                </button>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </header>

            <!-- CONTENIDO -->
            <main class="main-content page-animate">
                @RenderBody()
            </main>

            <footer>
                © @DateTime.Now.Year - TheBuryProject
            </footer>
        </div>
    </div>

    <!-- Modals (fuera del layout-container para evitar problemas de z-index/transform) -->
    @await RenderSectionAsync("Modals", required: false)
    
    <!-- Modal de confirmación global -->
    <partial name="_ConfirmModal" />

    <!-- Vendor JS -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" crossorigin="anonymous"></script>

    <!-- App JS -->
    <script src="~/js/shared-ui.js" asp-append-version="true"></script>
    <!-- Temporalmente deshabilitado para debug:
    <script src="~/js/modal-form-submit.js" asp-append-version="true"></script>
    -->
    <script src="~/js/notificaciones.js" asp-append-version="true"></script>

    <script src="~/js/layout.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
