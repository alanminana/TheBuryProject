<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TheBuryProject</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/shared-components.css" asp-append-version="true">
    @RenderSection("Styles", required: false)
    <style>
        :root {
            --sidebar-width: 260px;
            --sidebar-collapsed-width: 70px;
            --navbar-height: 60px;
        }

        body {
            overflow-x: hidden;
        }

        /* Navbar Superior */
        .top-navbar {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            height: var(--navbar-height);
            z-index: 1030;
            background: #1a1d20;
            border-bottom: 1px solid #2d3338;
        }

        /* Sidebar */
        .sidebar {
            position: fixed;
            top: var(--navbar-height);
            left: 0;
            bottom: 0;
            width: var(--sidebar-width);
            background: #1a1d20;
            border-right: 1px solid #2d3338;
            overflow-y: auto;
            overflow-x: hidden;
            transition: all 0.3s;
            z-index: 1020;
        }

            .sidebar.collapsed {
                width: var(--sidebar-collapsed-width);
            }

            .sidebar::-webkit-scrollbar {
                width: 6px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: #3a3f44;
                border-radius: 3px;
            }

        /* Main Content */
        .main-content {
            margin-left: var(--sidebar-width);
            margin-top: var(--navbar-height);
            padding: 20px;
            transition: margin-left 0.3s;
            min-height: calc(100vh - var(--navbar-height));
        }

        .sidebar.collapsed ~ .main-content {
            margin-left: var(--sidebar-collapsed-width);
        }

        /* Menú Items */
        .menu-section {
            margin: 15px 0;
        }

        .menu-section-title {
            padding: 8px 16px;
            font-size: 11px;
            font-weight: 600;
            text-transform: uppercase;
            color: #6c757d;
            letter-spacing: 0.5px;
            transition: all 0.3s;
        }

        .sidebar.collapsed .menu-section-title {
            opacity: 0;
            height: 0;
            padding: 0;
            overflow: hidden;
        }

        .menu-item {
            display: flex;
            align-items: center;
            padding: 12px 16px;
            color: #adb5bd;
            text-decoration: none;
            transition: all 0.2s;
            border-left: 3px solid transparent;
        }

            .menu-item:hover {
                background: #242729;
                color: #fff;
                border-left-color: #0d6efd;
            }

            .menu-item.active {
                background: #242729;
                color: #0d6efd;
                border-left-color: #0d6efd;
            }

            .menu-item i {
                width: 24px;
                font-size: 18px;
                margin-right: 12px;
                text-align: center;
            }

        .sidebar.collapsed .menu-item {
            justify-content: center;
            padding: 12px 0;
        }

            .sidebar.collapsed .menu-item span {
                display: none;
            }

            .sidebar.collapsed .menu-item i {
                margin-right: 0;
            }

        /* Submenu */
        .submenu {
            background: #0f1113;
        }

            .submenu .menu-item {
                padding-left: 52px;
                font-size: 14px;
            }

        .sidebar.collapsed .submenu {
            display: none;
        }

        /* Toggle Button */
        .sidebar-toggle {
            position: absolute;
            top: 10px;
            right: -15px;
            width: 30px;
            height: 30px;
            background: #0d6efd;
            border: none;
            border-radius: 50%;
            color: white;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s;
        }

            .sidebar-toggle:hover {
                background: #0b5ed7;
            }

        /* Badges */
        .menu-badge {
            margin-left: auto;
            font-size: 11px;
        }

        .sidebar.collapsed .menu-badge {
            display: none;
        }
    </style>
</head>

<body class="bg-dark text-light">
    <!-- Navbar Superior -->
    <nav class="top-navbar">
        <div class="container-fluid h-100">
            <div class="row h-100 align-items-center">
                <div class="col-auto">
                    <a class="navbar-brand fw-bold text-primary d-flex align-items-center" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-shop fs-4 me-2"></i>
                        <span>TheBuryProject</span>
                    </a>
                </div>
                <div class="col">
                    <form class="d-flex" role="search" style="max-width: 400px;">
                        <input class="form-control form-control-sm bg-dark text-light border-0" type="search" placeholder="Buscar productos, clientes..." aria-label="Buscar">
                    </form>
                </div>
                <div class="col-auto">
                    <div class="d-flex align-items-center gap-3">
                        <!-- Notificaciones -->
                        <div class="dropdown">
                            <a class="nav-link position-relative" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-bell fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="notificacionesBadge" style="display: none;">0</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark shadow" style="width: 400px; max-height: 500px; overflow-y: auto;" id="notificacionesLista">
                                <li class="dropdown-header d-flex justify-content-between align-items-center">
                                    <span class="fw-bold">Notificaciones</span>
                                    <button type="button" class="btn btn-sm btn-link text-decoration-none" id="marcarTodasLeidasBtn">Marcar como leídas</button>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li class="text-center py-3 text-muted" id="noNotificacionesMsg">
                                    <i class="bi bi-inbox fs-1"></i>
                                    <p class="mb-0">No hay notificaciones</p>
                                </li>
                            </ul>
                        </div>
                        <!-- Usuario -->
                        <div class="dropdown">
                            <a class="nav-link d-flex align-items-center gap-2" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle fs-5"></i>
                                <span class="d-none d-md-inline">@User.Identity?.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person me-2"></i>Mi Perfil</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear me-2"></i>Configuración</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <button class="sidebar-toggle" id="sidebarToggle">
            <i class="bi bi-chevron-left"></i>
        </button>

        <!-- Dashboard -->
        <div class="menu-section">
            <a class="menu-item" asp-controller="Dashboard" asp-action="Index">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </div>

        <!-- VENTAS -->
        <div class="menu-section">
            <div class="menu-section-title">Ventas</div>
            <a class="menu-item" asp-controller="Venta" asp-action="Index">
                <i class="bi bi-cart-check"></i>
                <span>Ventas</span>
            </a>
            <a class="menu-item" asp-controller="Cliente" asp-action="Index">
                <i class="bi bi-people"></i>
                <span>Clientes</span>
            </a>
            <a class="menu-item" asp-controller="Credito" asp-action="Index">
                <i class="bi bi-credit-card"></i>
                <span>Créditos</span>
            </a>
            <a class="menu-item" asp-controller="DocumentoCliente" asp-action="Index">
                <i class="bi bi-file-earmark-text"></i>
                <span>Documentos</span>
            </a>
        </div>

        <!-- INVENTARIO -->
        <div class="menu-section">
            <div class="menu-section-title">Inventario</div>
            <a class="menu-item" asp-controller="Producto" asp-action="Index">
                <i class="bi bi-box-seam"></i>
                <span>Productos</span>
            </a>
            <a class="menu-item" asp-controller="Proveedor" asp-action="Index">
                <i class="bi bi-truck"></i>
                <span>Proveedores</span>
            </a>
        </div>

        <!-- PRECIOS -->
        <div class="menu-section">
            <div class="menu-section-title">Gestión de Precios</div>
            <a class="menu-item" asp-controller="ListasPrecios" asp-action="Index">
                <i class="bi bi-tags"></i>
                <span>Listas de Precios</span>
            </a>
            <a class="menu-item" asp-controller="CambiosPrecios" asp-action="Index">
                <i class="bi bi-shuffle"></i>
                <span>Cambios Masivos</span>
            </a>
        </div>

        <!-- OPERACIONES -->
        <div class="menu-section">
            <div class="menu-section-title">Operaciones</div>
            <a class="menu-item" asp-controller="Caja" asp-action="Index">
                <i class="bi bi-cash-stack"></i>
                <span>Cajas</span>
            </a>
            <a class="menu-item" asp-controller="Devolucion" asp-action="Index">
                <i class="bi bi-arrow-return-left"></i>
                <span>Devoluciones</span>
            </a>
            <a class="menu-item" asp-controller="Autorizacion" asp-action="Index">
                <i class="bi bi-shield-check"></i>
                <span>Autorizaciones</span>
            </a>
        </div>

        <!-- ADMINISTRACIÓN -->
        <div class="menu-section">
            <div class="menu-section-title">Administración</div>
            <a class="menu-item" asp-controller="Usuarios" asp-action="Index">
                <i class="bi bi-people"></i>
                <span>Usuarios</span>
            </a>
            <a class="menu-item" asp-controller="Roles" asp-action="Index">
                <i class="bi bi-shield"></i>
                <span>Roles</span>
            </a>
            <a class="menu-item" asp-controller="Modulos" asp-action="Index">
                <i class="bi bi-grid"></i>
                <span>Módulos</span>
            </a>
            <a class="menu-item" asp-controller="Acciones" asp-action="Index">
                <i class="bi bi-lightning"></i>
                <span>Acciones</span>
            </a>
        </div>

        <!-- CONFIGURACIÓN -->
        <div class="menu-section">
            <div class="menu-section-title">Sistema</div>
            <a class="menu-item" asp-controller="ConfiguracionPago" asp-action="Index">
                <i class="bi bi-gear"></i>
                <span>Configuración</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/shared-ui.js" asp-append-version="true"></script>
    <script src="~/js/notificaciones.js" asp-append-version="true"></script>

    <script>
        // Sidebar Toggle
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');

            const icon = this.querySelector('i');
            if (sidebar.classList.contains('collapsed')) {
                icon.className = 'bi bi-chevron-right';
            } else {
                icon.className = 'bi bi-chevron-left';
            }

            // Guardar estado en localStorage
            localStorage.setItem('sidebarCollapsed', sidebar.classList.contains('collapsed'));
        });

        // Restaurar estado del sidebar
        if (localStorage.getItem('sidebarCollapsed') === 'true') {
            document.getElementById('sidebar').classList.add('collapsed');
            document.getElementById('sidebarToggle').querySelector('i').className = 'bi bi-chevron-right';
        }

        // Marcar item activo basado en la URL actual
        const currentPath = window.location.pathname;
        document.querySelectorAll('.menu-item').forEach(item => {
            const href = item.getAttribute('href');
            if (href && currentPath.startsWith(href) && href !== '/') {
                item.classList.add('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>