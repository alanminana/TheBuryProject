<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="color-scheme" content="dark" />
    <title>@ViewData["Title"] - TheBuryProject</title>

    <!-- Vendor CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />

    <!-- App CSS -->
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/shared-components.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>

<body>
@{
    var cleanedQuery = QueryString.Create(
        Context.Request.Query.Where(kvp =>
            !string.Equals(kvp.Key, "returnUrl", StringComparison.OrdinalIgnoreCase)));

    var currentUrl = Context.Request.Path + cleanedQuery;

    string? currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    string? currentAction = ViewContext.RouteData.Values["action"]?.ToString();

    bool IsActive(string controller, string? action = null) =>
        string.Equals(currentController, controller, StringComparison.OrdinalIgnoreCase) &&
        (action == null || string.Equals(currentAction, action, StringComparison.OrdinalIgnoreCase));
}

<div class="layout-container">

    <!-- SIDEBAR -->
    <aside class="sidebar" id="sidebar" aria-label="Menú lateral">
        <div class="sidebar-inner">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop text-primary fs-4" aria-hidden="true"></i>
                <span>TheBuryProject</span>
            </a>

            <nav class="nav flex-column sidebar-nav mt-2" aria-label="Navegación principal">

                <!-- PRINCIPAL -->
                @if (User.TienePermiso("dashboard", "view"))
                {
                    <div class="section-title">Principal</div>
                    <a class="nav-link @(IsActive("Dashboard") ? "active" : "")" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-speedometer2" aria-hidden="true"></i>
                        <span>Dashboard</span>
                    </a>
                }

                <!-- VENTAS -->
                @{
                    var mostrarSeccionVentas = User.TieneCualquierPermiso(
                        ("ventas", "view"),
                        ("creditos", "view"),
                        ("documentoscliente", "view")
                    );
                }
                @if (mostrarSeccionVentas)
                {
                    <div class="section-title">Ventas</div>

                    @if (User.TienePermiso("ventas", "view"))
                    {
                        <a class="nav-link @(IsActive("Venta") ? "active" : "")" asp-controller="Venta" asp-action="Index">
                            <i class="bi bi-cart-check" aria-hidden="true"></i>
                            <span>Ventas</span>
                        </a>
                    }
                    @if (User.TienePermiso("creditos", "view"))
                    {
                        <a class="nav-link @(IsActive("Credito") ? "active" : "")" asp-controller="Credito" asp-action="Index">
                            <i class="bi bi-credit-card" aria-hidden="true"></i>
                            <span>Créditos</span>
                        </a>
                    }
                    @if (User.TienePermiso("documentoscliente", "view"))
                    {
                        <a class="nav-link @(IsActive("DocumentoCliente") ? "active" : "")" asp-controller="DocumentoCliente" asp-action="Index">
                            <i class="bi bi-file-earmark-text" aria-hidden="true"></i>
                            <span>Documentos</span>
                        </a>
                    }
                }

                <!-- CLIENTES -->
                @if (User.TienePermiso("clientes", "view"))
                {
                    <div class="section-title">Clientes</div>
                    <a class="nav-link @(IsActive("Cliente") ? "active" : "")" asp-controller="Cliente" asp-action="Index">
                        <i class="bi bi-person-lines-fill" aria-hidden="true"></i>
                        <span>Clientes</span>
                    </a>
                }

                <!-- CATÁLOGO -->
                @{
                    var mostrarSeccionCatalogo = User.TieneCualquierPermiso(
                        ("catalogo", "view"),
                        ("proveedores", "view")
                    );
                }
                @if (mostrarSeccionCatalogo)
                {
                    <div class="section-title">Catálogo</div>
                    @if (User.TienePermiso("catalogo", "view"))
                    {
                        <a class="nav-link @(IsActive("Catalogo") ? "active" : "")" asp-controller="Catalogo" asp-action="Index">
                            <i class="bi bi-grid" aria-hidden="true"></i>
                            <span>Catálogo</span>
                        </a>
                    }
                    @if (User.TienePermiso("proveedores", "view"))
                    {
                        <a class="nav-link @(IsActive("Proveedor") ? "active" : "")" asp-controller="Proveedor" asp-action="Index">
                            <i class="bi bi-truck" aria-hidden="true"></i>
                            <span>Proveedores</span>
                        </a>
                    }
                }

                <!-- OPERACIONES -->
                @{
                    var mostrarSeccionOperaciones = User.TieneCualquierPermiso(
                        ("caja", "view"),
                        ("devoluciones", "view"),
                        ("autorizaciones", "view")
                    );
                }
                @if (mostrarSeccionOperaciones)
                {
                    <div class="section-title">Operaciones</div>
                    @if (User.TienePermiso("caja", "view"))
                    {
                        <a class="nav-link @(IsActive("Caja") ? "active" : "")" asp-controller="Caja" asp-action="Index">
                            <i class="bi bi-cash-stack" aria-hidden="true"></i>
                            <span>Cajas</span>
                        </a>
                    }
                    @if (User.TienePermiso("devoluciones", "view"))
                    {
                        <a class="nav-link @(IsActive("Devolucion") ? "active" : "")" asp-controller="Devolucion" asp-action="Index">
                            <i class="bi bi-arrow-return-left" aria-hidden="true"></i>
                            <span>Devoluciones</span>
                        </a>
                    }
                    @if (User.TienePermiso("autorizaciones", "view"))
                    {
                        <a class="nav-link @(IsActive("Autorizacion") ? "active" : "")"
                           asp-controller="Autorizacion" asp-action="Index" asp-route-returnUrl="@currentUrl">
                            <i class="bi bi-shield-check" aria-hidden="true"></i>
                            <span>Autorizaciones</span>
                        </a>
                    }
                }

                <!-- ADMINISTRACIÓN -->
                @{
                    var mostrarSeccionAdministracion = User.TieneCualquierPermiso(
                        ("usuarios", "view"),
                        ("roles", "view"),
                        ("modulos", "view"),
                        ("acciones", "view")
                    );
                }
                @if (mostrarSeccionAdministracion)
                {
                    <div class="section-title">Administración</div>

                    @if (User.TienePermiso("usuarios", "view"))
                    {
                        <a class="nav-link @(IsActive("Usuarios") ? "active" : "")"
                           asp-controller="Usuarios" asp-action="Index" asp-route-returnUrl="@currentUrl">
                            <i class="bi bi-people" aria-hidden="true"></i>
                            <span>Usuarios</span>
                        </a>
                    }
                    @if (User.TienePermiso("roles", "view"))
                    {
                        <a class="nav-link @(IsActive("Roles") ? "active" : "")"
                           asp-controller="Roles" asp-action="Index" asp-route-returnUrl="@currentUrl">
                            <i class="bi bi-shield" aria-hidden="true"></i>
                            <span>Roles</span>
                        </a>
                    }
                    @if (User.TienePermiso("modulos", "view"))
                    {
                        <a class="nav-link @(IsActive("Modulos") ? "active" : "")"
                           asp-controller="Modulos" asp-action="Index" asp-route-returnUrl="@currentUrl">
                            <i class="bi bi-grid" aria-hidden="true"></i>
                            <span>Módulos</span>
                        </a>
                    }
                    @if (User.TienePermiso("acciones", "view"))
                    {
                        <a class="nav-link @(IsActive("Acciones") ? "active" : "")"
                           asp-controller="Acciones" asp-action="Index" asp-route-returnUrl="@currentUrl">
                            <i class="bi bi-lightning" aria-hidden="true"></i>
                            <span>Acciones</span>
                        </a>
                    }
                }

                <!-- SISTEMA -->
                <!-- Módulo de Configuración de Pagos movido al modal de Ventas -->
            </nav>
        </div>
    </aside>

    <!-- Overlay para mobile -->
    <div class="overlay" id="sidebarOverlay"></div>

    <!-- MAIN WRAPPER -->
    <div class="main-wrapper">

        <!-- TOPBAR -->
        <header class="topbar" role="banner">
            <div class="d-flex align-items-center gap-2">
                <button id="toggleSidebar" type="button" class="btn btn-sm btn-outline-secondary d-flex align-items-center" aria-label="Abrir/cerrar menú">
                    <i class="bi bi-list" aria-hidden="true"></i>
                </button>

                <div class="input-group input-group-sm topbar-search">
                    <span class="input-group-text border-0 bg-transparent">
                        <i class="bi bi-search text-body-secondary" aria-hidden="true"></i>
                    </span>
                    <input type="text" class="form-control border-0" placeholder="Buscar productos, clientes..." aria-label="Buscar" autocomplete="off" />
                </div>
            </div>

            <div class="d-flex align-items-center gap-3">

                <!-- Notificaciones -->
                <div class="dropdown">
                    <button type="button"
                            class="nav-link position-relative btn btn-link p-0 border-0"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            aria-label="Abrir notificaciones">
                        <i class="bi bi-bell fs-5" aria-hidden="true"></i>
                        <span id="notificacionesBadge"
                              class="badge bg-danger rounded-pill position-absolute top-0 start-100 translate-middle d-none">0</span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end shadow"
                        data-bs-theme="dark"
                        style="width: 350px; max-height: 400px; overflow-y: auto;">
                        <li class="dropdown-header d-flex justify-content-between align-items-center">
                            <span class="fw-semibold">Notificaciones</span>
                            <button id="marcarTodasLeidasBtn" type="button" class="btn btn-sm btn-link text-decoration-none">
                                Marcar como leídas
                            </button>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li id="noNotificacionesMsg" class="text-center py-3 text-body-secondary">
                            <i class="bi bi-inbox fs-1 d-block mb-2" aria-hidden="true"></i>
                            <span>No hay notificaciones</span>
                        </li>
                    </ul>
                </div>

                <!-- Usuario -->
                <div class="dropdown">
                    <button type="button"
                            class="nav-link d-flex align-items-center gap-2 btn btn-link p-0 border-0"
                            data-bs-toggle="dropdown"
                            aria-expanded="false"
                            aria-label="Abrir menú de usuario">
                        <i class="bi bi-person-circle fs-5" aria-hidden="true"></i>
                        <span class="d-none d-md-inline">@User.Identity?.Name</span>
                    </button>

                    <ul class="dropdown-menu dropdown-menu-end shadow" data-bs-theme="dark">
                        <li>
                            <button type="button" class="dropdown-item" disabled aria-disabled="true">
                                <i class="bi bi-person me-2" aria-hidden="true"></i>Mi Perfil
                            </button>
                        </li>
                        <li>
                            <button type="button" class="dropdown-item" disabled aria-disabled="true">
                                <i class="bi bi-gear me-2" aria-hidden="true"></i>Configuración
                            </button>
                        </li>
                        <li><hr class="dropdown-divider" /></li>
                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item">
                                    <i class="bi bi-box-arrow-right me-2" aria-hidden="true"></i>Cerrar Sesión
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>

            </div>
        </header>

        <!-- CONTENIDO -->
        <main class="main-content page-animate" role="main">
            @RenderBody()
        </main>

        <footer>
            © @DateTime.Now.Year - TheBuryProject
        </footer>
    </div>
</div>

<!-- =========================================================
     MODALS: SIEMPRE fuera de .page-animate (evita issues con transform)
     ========================================================= -->
@await RenderSectionAsync("Modals", required: false)

<!-- Modal global (siempre disponible) -->
<partial name="_ConfirmModal" />

<!-- Vendor JS -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.7/signalr.min.js" crossorigin="anonymous"></script>

<!-- App JS -->
<script src="~/js/shared-ui.js" asp-append-version="true"></script>
<!-- Temporalmente deshabilitado para debug:
<script src="~/js/modal-form-submit.js" asp-append-version="true"></script>
-->
<script src="~/js/notificaciones.js" asp-append-version="true"></script>
<script src="~/js/layout.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
