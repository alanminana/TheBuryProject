<!DOCTYPE html>
<html lang="es" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TheBuryProject</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dark-theme.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true">
</head>

<body>
    <div class="layout-container">
        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar d-flex flex-column p-2">
            <a class="navbar-brand mb-3" asp-controller="Home" asp-action="Index">
                <i class="bi bi-shop text-primary"></i><span class="ms-2 fw-bold">TheBuryProject</span>
            </a>

            

                <!-- CLIENTE -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Cliente" asp-action="Index">
                        <i class="bi bi-people"></i><span> Clientes</span>
                    </a>
                </li>

                <!-- CRÉDITO -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Credito" asp-action="Index">
                        <i class="bi bi-cash-coin"></i><span> Créditos</span>
                    </a>
                </li>
           
                <!-- PRODUCTOS + STOCK -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Producto" asp-action="Index">
                        <i class="bi bi-box-seam"></i><span> Productos</span>
                    </a>
                </li>
        
                <!-- PROVEEDORES -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Proveedor" asp-action="Index">
                        <i class="bi bi-truck"></i><span> Proveedores</span>
                    </a>
                </li>

                <!-- CONFIGURACIÓN -->
                <li class="nav-item">
                    <a class="nav-link" asp-controller="ConfiguracionPago" asp-action="Index">
                        <i class="bi bi-gear"></i><span> Configuración</span>
                    </a>
                </li>
            </ul>
        </nav>

        <!-- Panel Principal -->
        <div class="main-wrapper d-flex flex-column flex-grow-1">
            <!-- Topbar -->
            <div class="topbar">
                <div class="d-flex align-items-center gap-2">
                    <button id="toggleSidebar" class="btn btn-sm btn-outline-light d-none d-lg-inline">
                        <i class="bi bi-list"></i>
                    </button>
                    <button id="mobileToggle" class="btn btn-sm btn-outline-light d-lg-none">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="input-group input-group-sm ms-2">
                        <span class="input-group-text bg-dark border-0 text-secondary">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control bg-dark border-0 text-light" placeholder="Buscar...">
                    </div>
                </div>
                <div class="d-flex align-items-center gap-3">
                    <i class="bi bi-bell text-light"></i>
                    <i class="bi bi-person-circle text-light"></i>
                </div>
            </div>

            <!-- Contenido -->
            <main role="main" class="main-content">
                @RenderBody()
            </main>

            <footer>
                &copy; @DateTime.Now.Year - TheBuryProject
            </footer>
        </div>
    </div>

    <div id="overlay" class="overlay"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
