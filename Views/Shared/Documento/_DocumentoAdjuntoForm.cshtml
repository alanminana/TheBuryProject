@model TheBuryProject.ViewModels.DocumentoClienteViewModel

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<div class="mb-3">
    <label asp-for="ClienteId" class="form-label text-light fw-semibold">
        <i class="bi bi-person me-1"></i>Cliente *
    </label>
    <select asp-for="ClienteId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Clientes" required>
        <option value="">Seleccione un cliente...</option>
    </select>
    <span asp-validation-for="ClienteId" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="TipoDocumento" class="form-label text-light fw-semibold">
        <i class="bi bi-file-earmark me-1"></i>Tipo de Documento *
    </label>
    <select asp-for="TipoDocumento" class="form-select bg-body-secondary text-light border-0" required asp-items="ViewBag.TiposDocumento">
        <option value="">Seleccione el tipo...</option>
    </select>
    <span asp-validation-for="TipoDocumento" class="text-danger"></span>
</div>

<div class="mb-3">
    <label asp-for="Archivo" class="form-label text-light fw-semibold">
        <i class="bi bi-paperclip me-1"></i>Archivo *
    </label>
    <input asp-for="Archivo" type="file" class="form-control bg-body-secondary text-light border-0" required
           accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" />
    <span asp-validation-for="Archivo" class="text-danger"></span>
    <small class="form-text text-muted">Tamaño máximo: 5 MB</small>
</div>

<div class="mb-3">
    <label asp-for="FechaVencimiento" class="form-label text-light fw-semibold">
        <i class="bi bi-calendar me-1"></i>Fecha de Vencimiento (Opcional)
    </label>
    <input asp-for="FechaVencimiento" type="date" class="form-control bg-body-secondary text-light border-0" />
    <small class="form-text text-muted">Para documentos que expiran (ej: recibo de sueldo, servicios)</small>
</div>

<div class="mb-3">
    <label asp-for="Observaciones" class="form-label text-light fw-semibold">
        <i class="bi bi-chat-left-text me-1"></i>Observaciones
    </label>
    <textarea asp-for="Observaciones" class="form-control bg-body-secondary text-light border-0" rows="3"></textarea>
</div>
