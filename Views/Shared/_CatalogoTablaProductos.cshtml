@model TheBuryProject.ViewModels.CatalogoUnificadoViewModel

@*
    Partial view reutilizable para la tabla de productos del catálogo.
    Muestra: código, nombre, categoría, marca, precios, stock, estado y acciones.
    Incluye checkboxes para selección múltiple y acciones masivas.
*@

@if (Model.TieneFiltrosActivos)
{
    <div class="alert alert-info border-0 shadow-sm d-flex align-items-center mb-3">
        <i class="bi bi-info-circle me-2"></i>
        <span>Se encontraron <strong>@Model.TotalResultados</strong> productos coincidentes.</span>
    </div>
}

@* Barra sticky de Cambio de Precios (siempre visible para usuarios autorizados) *@
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Gerente") || User.HasClaim("Permission", "precios:simulate"))
{
    <div id="barraCambioPrecios" class="sticky-top bg-dark border border-secondary rounded shadow mb-3 p-3" style="top: 60px; z-index: 1020;">
        <form id="formCambioPreciosRapido" asp-controller="Catalogo" asp-action="AplicarCambioPrecioDirecto" method="post">
            <div class="row g-2 align-items-center">
                @* Indicador de selección *@
                <div class="col-auto">
                    <div class="d-flex align-items-center gap-2">
                        <i class="bi bi-cash-coin text-warning fs-5"></i>
                        <span class="fw-semibold text-light">Cambio de precios</span>
                    </div>
                </div>

                @* Selector: Aplicar a *@
                <div class="col-auto">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-secondary border-secondary text-light">Aplicar a</span>
                        <select class="form-select form-select-sm bg-dark text-light border-secondary" 
                                name="Alcance" id="selectAlcanceCambio" style="min-width: 180px;">
                            <option value="seleccionados">Seleccionados (<span id="contadorEnSelect">0</span>)</option>
                            <option value="filtrados">Resultados filtrados (@Model.TotalResultados)</option>
                        </select>
                    </div>
                </div>

                @* Input porcentaje *@
                <div class="col-auto">
                    <div class="input-group input-group-sm" style="width: 140px;">
                        <input type="number" class="form-control bg-dark text-light border-secondary text-end" 
                               name="ValorPorcentaje" id="inputPorcentajeCambio" 
                               placeholder="+/-10" step="0.1" 
                               title="Valor positivo = aumento, negativo = descuento">
                        <span class="input-group-text bg-secondary border-secondary text-light">%</span>
                    </div>
                </div>

                @* Motivo (opcional) *@
                <div class="col-auto">
                    <input type="text" class="form-control form-control-sm bg-dark text-light border-secondary"
                           name="Motivo" id="inputMotivoCambio" placeholder="Motivo (opcional)" style="min-width: 220px;">
                </div>
                @* Botones de accion *@
                <div class="col-auto">
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-success" id="btnAplicarRapido" disabled
                                data-bs-toggle="modal" data-bs-target="#modalConfirmarAplicar">
                            <i class="bi bi-check-circle me-1"></i>Aplicar
                        </button>
                        
                        <a class="btn btn-outline-info" asp-controller="Catalogo" asp-action="HistorialCambiosPrecio">
                            <i class="bi bi-clock-history me-1"></i>Historial
                        </a>

                    </div>
                </div>

                @* Indicador de seleccionados *@
                <div class="col-auto ms-auto">
                    <span class="badge bg-primary" id="badgeSeleccionados" style="display: none;">
                        <i class="bi bi-check2-square me-1"></i><span id="contadorSeleccionados">0</span> seleccionado(s)
                    </span>
                    <button type="button" class="btn btn-outline-secondary btn-sm" id="btnLimpiarSeleccion" style="display: none;">
                        <i class="bi bi-x-circle"></i>
                    </button>
                </div>
            </div>

            @* Campos ocultos *@
            <input type="hidden" name="ProductoIdsText" id="hiddenProductoIds">
            <input type="hidden" name="Alcance" id="hiddenAlcance" value="seleccionados">
            @{
                // Serializar filtros de forma segura para atributo HTML
                var filtrosObj = new { 
                    categoriaId = Model.CategoriaId, 
                    marcaId = Model.MarcaId, 
                    busqueda = Model.SearchTerm,
                    soloActivos = Model.SoloActivos,
                    stockBajo = Model.StockBajo,
                    listaPrecioId = Model.ListaPrecioId
                };
                var filtrosJsonString = System.Text.Json.JsonSerializer.Serialize(filtrosObj);
            }
            <input type="hidden" name="FiltrosJson" id="hiddenFiltrosJson" 
                   value="@System.Web.HttpUtility.HtmlAttributeEncode(filtrosJsonString)">
        </form>
    </div>

}

<div class="card bg-dark border-0 shadow-sm">
    <div class="card-header bg-secondary text-light d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-2">
            <i class="bi bi-table"></i>
            <span class="fw-semibold">Productos</span>
            <span class="badge bg-light text-dark">@Model.TotalResultados</span>
        </div>
        <div class="d-flex align-items-center gap-2 small">
            <i class="bi bi-tags text-info"></i>
            <span class="text-info">Lista: @Model.ListaPrecioActualNombre</span>
        </div>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-dark align-middle mb-0" id="tablaProductosCatalogo">
                <thead class="bg-secondary text-light">
                    <tr>
                        <th class="px-3" style="width: 40px;">
                            <div class="form-check mb-0">
                                <input class="form-check-input" type="checkbox" id="checkMaster" title="Seleccionar todos">
                            </div>
                        </th>
                        <th class="px-2">Código</th>
                        <th>Nombre</th>
                        <th>Categoría</th>
                        <th>Marca</th>
                        <th class="text-end">Costo</th>
                        <th class="text-end">Precio Venta</th>
                        <th class="text-end">Margen</th>
                        <th class="text-center">Stock</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center px-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Productos.Any())
                    {
                        @foreach (var p in Model.Productos)
                        {
                            <tr data-producto-id="@p.ProductoId" data-producto-codigo="@p.Codigo" data-producto-nombre="@p.Nombre">
                                <td class="px-3">
                                    <div class="form-check mb-0">
                                        <input class="form-check-input check-producto" type="checkbox" 
                                               value="@p.ProductoId" data-codigo="@p.Codigo" data-nombre="@p.Nombre">
                                    </div>
                                </td>
                                <td class="px-2">
                                    <span class="badge bg-info text-dark font-monospace">@p.Codigo</span>
                                </td>
                                <td>
                                    <div class="fw-semibold text-light">@p.Nombre</div>
                                    @if (!string.IsNullOrEmpty(p.Descripcion))
                                    {
                                        <small class="text-secondary d-block text-truncate" style="max-width: 200px;" title="@p.Descripcion">
                                            @p.Descripcion
                                        </small>
                                    }
                                </td>
                                <td class="text-secondary">
                                    @if (!string.IsNullOrEmpty(p.CategoriaNombre))
                                    {
                                        <i class="bi bi-tag me-1 text-primary"></i>@p.CategoriaNombre
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-secondary">
                                    @if (!string.IsNullOrEmpty(p.MarcaNombre))
                                    {
                                        <i class="bi bi-award me-1 text-success"></i>@p.MarcaNombre
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-end text-secondary">@p.Costo.ToString("C2")</td>
                                <td class="text-end">
                                    <span class="fw-bold text-light">@p.PrecioActual.ToString("C2")</span>
                                    @if (p.TienePrecioLista)
                                    {
                                        <i class="bi bi-check-circle text-success ms-1" title="Precio de lista"></i>
                                    }
                                </td>
                                <td class="text-end">
                                    @{
                                        var margenClass = p.MargenPorcentaje >= 30 ? "text-success"
                                            : p.MargenPorcentaje >= 15 ? "text-warning"
                                            : "text-danger";
                                    }
                                    <span class="@margenClass fw-semibold">@p.MargenPorcentaje.ToString("0.0")%</span>
                                </td>
                                <td class="text-center">
                                    @{
                                        var stockClass = p.EstadoStock == "Sin Stock" ? "bg-danger"
                                            : p.EstadoStock == "Stock Bajo" ? "bg-warning text-dark"
                                            : "bg-success";
                                    }
                                    <span class="badge rounded-pill @stockClass">
                                        @p.StockActual.ToString("0.##") UN
                                    </span>
                                </td>
                                <td class="text-center">
                                    @if (p.Activo)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactivo</span>
                                    }
                                </td>
                                <td class="text-center px-4">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Producto" asp-action="Details" asp-route-id="@p.ProductoId"
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="CambiosPrecios" asp-action="Historial" asp-route-productoId="@p.ProductoId"
                                           class="btn btn-outline-primary" title="Historial de precios">
                                            <i class="bi bi-clock-history"></i>
                                        </a>
                                        <a asp-controller="Producto" asp-action="Edit" asp-route-id="@p.ProductoId"
                                           class="btn btn-outline-warning" title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-controller="Producto" asp-action="Delete" asp-route-id="@p.ProductoId"
                                           class="btn btn-outline-danger" title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="11" class="text-center py-5">
                                <i class="bi bi-inbox display-5 text-secondary d-block mb-3"></i>
                                <p class="text-secondary mb-2">No hay productos que coincidan con los filtros</p>
                                <a asp-controller="Producto" asp-action="Create" class="btn btn-primary">
                                    <i class="bi bi-plus-circle me-2"></i>Agregar Producto
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@* Métricas resumen *@
@if (Model.Productos.Any())
{
    <div class="row mt-4 g-3">
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam text-info fs-4 d-block mb-2"></i>
                    <h6 class="text-secondary mb-1">Total Productos</h6>
                    <h3 class="fw-bold text-light mb-0">@Model.TotalResultados</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-check-circle text-success fs-4 d-block mb-2"></i>
                    <h6 class="text-secondary mb-1">Activos</h6>
                    <h3 class="fw-bold text-success mb-0">@Model.ProductosActivos</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-exclamation-triangle text-warning fs-4 d-block mb-2"></i>
                    <h6 class="text-secondary mb-1">Stock Bajo</h6>
                    <h3 class="fw-bold text-warning mb-0">@Model.ProductosStockBajo</h3>
                </div>
            </div>
        </div>
        
    </div>
}

