@model TheBuryProject.ViewModels.ClienteViewModel
@{
    var mostrarToggleActivo = ViewData["MostrarToggleActivo"] as bool? ?? false;
    var mensajeDocumentacion = ViewData["MensajeDocumentacion"]?.ToString();
}

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<div class="card bg-dark border-primary mb-3 shadow-sm">
    <div class="card-header bg-primary text-light">
        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Datos Personales</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <label asp-for="TipoDocumento" class="form-label"></label>
                <select asp-for="TipoDocumento" class="form-select" asp-items="ViewBag.TiposDocumento"></select>
                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="NumeroDocumento" class="form-label"></label>
                <input asp-for="NumeroDocumento" class="form-control" />
                <span asp-validation-for="NumeroDocumento" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Apellido" class="form-label"></label>
                <input asp-for="Apellido" class="form-control" />
                <span asp-validation-for="Apellido" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="FechaNacimiento" class="form-label"></label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="EstadoCivil" class="form-label"></label>
                <select asp-for="EstadoCivil" class="form-select" asp-items="ViewBag.EstadosCiviles">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="EstadoCivil" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

<div class="card bg-dark border-info mb-3 shadow-sm">
    <div class="card-header bg-info text-dark">
        <h5 class="mb-0"><i class="bi bi-telephone me-2"></i>Datos de Contacto</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="TelefonoAlternativo" class="form-label"></label>
                <input asp-for="TelefonoAlternativo" class="form-control" />
                <span asp-validation-for="TelefonoAlternativo" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

<div class="card bg-dark border-success mb-3 shadow-sm">
    <div class="card-header bg-success text-light">
        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Domicilio</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="Domicilio" class="form-label"></label>
                <input asp-for="Domicilio" class="form-control" />
                <span asp-validation-for="Domicilio" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="Localidad" class="form-label"></label>
                <input asp-for="Localidad" class="form-control" />
                <span asp-validation-for="Localidad" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="Provincia" class="form-label"></label>
                <select asp-for="Provincia" class="form-select" asp-items="ViewBag.Provincias">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>
            <div class="col-md-1">
                <label asp-for="CodigoPostal" class="form-label"></label>
                <input asp-for="CodigoPostal" class="form-control" />
                <span asp-validation-for="CodigoPostal" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

<div class="card bg-dark border-warning mb-3 shadow-sm">
    <div class="card-header bg-warning text-dark">
        <h5 class="mb-0"><i class="bi bi-briefcase me-2"></i>Datos Laborales</h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="Empleador" class="form-label"></label>
                <input asp-for="Empleador" class="form-control" />
                <span asp-validation-for="Empleador" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="TipoEmpleo" class="form-label"></label>
                <select asp-for="TipoEmpleo" class="form-select" asp-items="ViewBag.TiposEmpleo">
                    <option value="">Seleccione...</option>
                </select>
                <span asp-validation-for="TipoEmpleo" class="text-danger"></span>
            </div>
            <div class="col-md-2">
                <label asp-for="Sueldo" class="form-label"></label>
                <input asp-for="Sueldo" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="Sueldo" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label asp-for="TelefonoLaboral" class="form-label"></label>
                <input asp-for="TelefonoLaboral" class="form-control" />
                <span asp-validation-for="TelefonoLaboral" class="text-danger"></span>
            </div>
        </div>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(mensajeDocumentacion))
{
    <div class="alert alert-info border-0 shadow-sm mb-3">
        <i class="bi bi-info-circle-fill me-2"></i>
        @Html.Raw(mensajeDocumentacion)
    </div>
}

<div class="card bg-dark border-light mb-3 shadow-sm">
    <div class="card-header bg-light text-dark">
        <h5 class="mb-0"><i class="bi bi-chat-text me-2"></i>Observaciones</h5>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label asp-for="Observaciones" class="form-label"></label>
            <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Observaciones" class="text-danger"></span>
        </div>
        @if (mostrarToggleActivo)
        {
            <div class="form-check form-switch">
                <input asp-for="Activo" class="form-check-input" />
                <label asp-for="Activo" class="form-check-label"></label>
            </div>
        }
    </div>
</div>
