@model TheBuryProject.ViewModels.ClienteDetalleViewModel

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<div class="container-fluid py-4 text-light">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold">
                    <i class="bi bi-person text-primary"></i> @Model.Cliente.NombreCompleto
                </h2>
                <div class="d-flex gap-2 flex-wrap">
                    @if (Model.Cliente.Activo)
                    {
                        <a asp-controller="Credito" asp-action="Create" asp-route-clienteId="@Model.Cliente.Id" class="btn btn-success">
                            <i class="bi bi-cash-coin"></i> Solicitar Crédito
                        </a>
                    }
                    <a asp-action="Edit" asp-route-id="@Model.Cliente.Id" class="btn btn-warning">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-3" id="clienteTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link @(Model.TabActivo == "informacion" ? "active" : "")" href="#informacion" data-bs-toggle="tab">Información</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.TabActivo == "documentos" ? "active" : "")" href="#documentos" data-bs-toggle="tab">Documentos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.TabActivo == "creditos" ? "active" : "")" href="#creditos" data-bs-toggle="tab">Créditos</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(Model.TabActivo == "evaluacion" ? "active" : "")" href="#evaluacion" data-bs-toggle="tab">Evaluación Crediticia</a>
                </li>
            </ul>

            <div class="tab-content" id="clienteTabsContent">
                <!-- Información -->
                <div class="tab-pane fade @(Model.TabActivo == "informacion" ? "show active" : "")" id="informacion">
                            <partial name="_InformacionCliente" model="Model.Cliente" />
                </div>

                <!-- Documentos -->
                <div class="tab-pane fade @(Model.TabActivo == "documentos" ? "show active" : "")" id="documentos">
                    <partial name="_DocumentacionCliente" model="Model" />
                </div>

                <!-- Créditos -->
                <div class="tab-pane fade @(Model.TabActivo == "creditos" ? "show active" : "")" id="creditos">
                    <div class="card bg-dark border-0 shadow-sm mb-3">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0"><i class="bi bi-cash-coin"></i> Créditos Activos</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.CreditosActivos?.Count > 0)
                            {
                                <table class="table table-dark table-striped">
                                    <thead>
                                        <tr>
                                            <th>Monto</th>
                                            <th>Estado</th>
                                            <th>Fecha</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var c in Model.CreditosActivos)
                                        {
                                            <tr>
                                                <td>@c.MontoAprobado.ToString("C")</td>
                                                <td>@c.Estado</td>
                                                <td>@(c.FechaAprobacion?.ToShortDateString() ?? c.FechaSolicitud.ToShortDateString())</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-secondary text-center">No tiene créditos activos.</p>
                            }
                        </div>
                    </div>
                </div>

                <!-- Evaluación Crediticia -->
                <div class="tab-pane fade @(Model.TabActivo == "evaluacion" ? "show active" : "")" id="evaluacion">
                    <partial name="_SolicitarCredito" model="Model" />
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Documentación se carga desde la sección de documentos
        });
    </script>
}
