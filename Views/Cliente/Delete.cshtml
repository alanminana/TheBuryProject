@model TheBuryProject.ViewModels.ClienteViewModel
@{
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Eliminar Cliente";
    ViewData["PageTitle"] = "Eliminar Cliente";
    ViewData["PageSubtitle"] = "Confirmá la eliminación del cliente";

    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index")!;
}

@section PageActions {
    <a href="@backUrl" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-danger text-white border-0">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle me-2"></i>Confirmar Eliminación
                    </h4>
                </div>

                <div class="card-body">
                    <div class="alert alert-danger bg-opacity-25 border-danger text-light shadow-sm">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>¡Atención!</strong> El cliente será marcado como eliminado y dejará de estar disponible en los listados.
                    </div>

                    <div class="card bg-dark border-secondary shadow-sm">
                        <div class="card-header bg-secondary text-light">
                            <h5 class="mb-0">
                                <i class="bi bi-person me-2"></i>Cliente a eliminar
                            </h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-3 text-secondary">Cliente</dt>
                                <dd class="col-sm-9 fw-semibold">@(Model.NombreCompleto ?? (Model.Apellido + " " + Model.Nombre))</dd>

                                <dt class="col-sm-3 text-secondary">Documento</dt>
                                <dd class="col-sm-9">@Model.TipoDocumento: @Model.NumeroDocumento</dd>

                                <dt class="col-sm-3 text-secondary">Teléfono</dt>
                                <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Telefono) ? "-" : Model.Telefono)</dd>

                                <dt class="col-sm-3 text-secondary">Domicilio</dt>
                                <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(Model.Domicilio) ? "-" : Model.Domicilio)</dd>
                            </dl>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <div class="d-flex justify-content-between">
                            <a href="@backUrl" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger fw-semibold"
                                    data-confirm="¿Eliminar este cliente? Esta acción lo marcará como eliminado.">
                                <i class="bi bi-trash me-2"></i>Eliminar Cliente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


