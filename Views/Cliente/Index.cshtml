@model TheBuryProject.ViewModels.ClienteFilterViewModel
@{
    ViewData["Title"] = "Clientes";
    var listReturnUrl = Context.Request.Path + Context.Request.QueryString;

    var filtrosActivos =
        !string.IsNullOrWhiteSpace(Model.SearchTerm)
        || Model.SoloActivos.HasValue
        || Model.PuntajeMinimo.HasValue
        || !string.IsNullOrWhiteSpace(Model.TipoDocumento);
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-12">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-people text-info me-2"></i>Clientes
                </h2>
                <a asp-action="Create" asp-route-returnUrl="@listReturnUrl" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Nuevo Cliente
                </a>
            </div>

            <!-- Filtros -->
            <div class="card bg-dark border-0 shadow-sm mb-4">
                <div class="card-header bg-body-secondary text-light border-0 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-semibold">
                        <i class="bi bi-funnel me-2"></i>Filtros de Búsqueda
                    </h5>
                    <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosCliente">
                        <i class="bi bi-chevron-down"></i>
                    </button>
                </div>

                <div class="collapse @(filtrosActivos ? "show" : "")" id="filtrosCliente">
                    <div class="card-body">
                        <form asp-action="Index" method="get" class="row g-3 align-items-end">

                            <div class="col-md-4">
                                <label asp-for="SearchTerm" class="form-label fw-semibold">Búsqueda</label>
                                <input asp-for="SearchTerm"
                                       class="form-control bg-body-secondary text-light border-0"
                                       placeholder="Nombre, DNI, teléfono, email..." />
                            </div>

                            <div class="col-md-2">
                                <label asp-for="TipoDocumento" class="form-label fw-semibold">Tipo Documento</label>
                                <select asp-for="TipoDocumento"
                                        class="form-select bg-body-secondary text-light border-0"
                                        asp-items="ViewBag.TiposDocumento">
                                    <option value="">Todos</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="SoloActivos" class="form-label fw-semibold">Estado</label>
                                <select asp-for="SoloActivos" class="form-select bg-body-secondary text-light border-0">
                                    <option value="">Todos</option>
                                    <option value="true">Solo Activos</option>
                                    <option value="false">Solo Inactivos</option>
                                </select>
                            </div>

                            <div class="col-md-2">
                                <label asp-for="PuntajeMinimo" class="form-label fw-semibold">Puntaje Mínimo</label>
                                <input asp-for="PuntajeMinimo"
                                       type="number"
                                       class="form-control bg-body-secondary text-light border-0"
                                       min="0" max="10" step="0.1" />
                            </div>

                            <div class="col-md-2 d-flex gap-2">
                                <button type="submit" class="btn btn-primary flex-fill">
                                    <i class="bi bi-search"></i> Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light flex-fill">
                                    <i class="bi bi-x-circle"></i> Limpiar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Mensajes -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm">
                    <i class="bi bi-x-circle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Resultados -->
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-secondary text-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="bi bi-list me-2"></i>Resultados (@Model.TotalResultados)
                    </h5>
                </div>

                <div class="card-body p-0">
                    @if (Model.Clientes.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-dark table-hover align-middle mb-0">
                                <thead class="table-secondary text-dark">
                                    <tr>
                                        <th>Documento</th>
                                        <th>Cliente</th>
                                        <th>Contacto</th>
                                        <th>Domicilio</th>
                                        <th class="text-center">Puntaje</th>
                                        <th class="text-center">Créditos</th>
                                        <th class="text-center">Estado</th>
                                        <th class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cliente in Model.Clientes)
                                    {
                                        var badgeClass = cliente.PuntajeRiesgo >= 7
                                        ? "bg-success"
                                        : cliente.PuntajeRiesgo >= 4
                                        ? "bg-warning text-dark"
                                        : "bg-danger";

                                        <tr>
                                            <td>
                                                <strong>@cliente.TipoDocumento</strong><br />
                                                <small class="text-muted">@cliente.NumeroDocumento</small>
                                            </td>
                                            <td>
                                                <strong>@cliente.NombreCompleto</strong>
                                                @if (cliente.Edad.HasValue)
                                                {
                                                    <br />
                                                    <small class="text-muted">@cliente.Edad años</small>
                                                }
                                            </td>
                                            <td>
                                                <i class="bi bi-telephone"></i> @cliente.Telefono<br />
                                                @if (!string.IsNullOrEmpty(cliente.Email))
                                                {
                                                    <small>
                                                        <i class="bi bi-envelope"></i> @cliente.Email
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                @cliente.Domicilio
                                                @if (!string.IsNullOrEmpty(cliente.Localidad))
                                                {
                                                    <br />
                                                    <small class="text-muted">@cliente.Localidad</small>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @badgeClass fs-6">
                                                    @cliente.PuntajeRiesgo.ToString("F1")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                @if (cliente.CreditosActivos > 0)
                                                {
                                                    <span class="badge bg-info">@cliente.CreditosActivos</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <span class="badge @(cliente.Activo ? "bg-success" : "bg-secondary")">
                                                    @(cliente.Activo ? "Activo" : "Inactivo")
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@cliente.Id"
                                                           asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-info" title="Ver detalles">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@cliente.Id"
                                                           asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-warning" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@cliente.Id"
                                                           asp-route-returnUrl="@listReturnUrl"
                                                       class="btn btn-outline-danger" title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="py-5 text-center text-muted">
                            <i class="bi bi-inbox fs-1"></i>
                            <p class="mt-2">No se encontraron clientes</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Crear Primer Cliente
                            </a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</section>
