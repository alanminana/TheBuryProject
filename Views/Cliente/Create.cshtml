@model TheBuryProject.ViewModels.ClienteViewModel
@{
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Nuevo Cliente";
    ViewData["PageTitle"] = "Nuevo Cliente";
    ViewData["PageSubtitle"] = "Carga inicial del cliente, contacto y domicilio";
    ViewData["MostrarToggleActivo"] = true;
    ViewData["MensajeDocumentacion"] = "<strong>Documentación:</strong> Los documentos del cliente se cargan después de crear el registro, en la sección de \"Documentación\" en los detalles del cliente.";
}

@section PageActions {
    <a asp-action="Index" class="btn btn-outline-light">
        <i class="bi bi-arrow-left"></i> Volver
    </a>
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <form asp-action="Create" method="post" class="needs-validation" novalidate>
            <partial name="~/Views/Shared/Cliente/_ClienteFormFields.cshtml" model="Model" />

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="bi bi-check-circle"></i> Crear Cliente
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
