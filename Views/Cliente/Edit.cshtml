@model TheBuryProject.ViewModels.ClienteViewModel
@{
    ViewData["Title"] = "Editar Cliente";
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <!-- Encabezado -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-pencil text-warning me-2"></i>Editar Cliente
                </h2>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="PuntajeRiesgo" />
                <input type="hidden" asp-for="CreatedAt" />
                <input type="hidden" asp-for="CreatedBy" />

                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Datos Personales -->
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-light">
                        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Datos Personales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="TipoDocumento" class="form-label fw-semibold"></label>
                                <select asp-for="TipoDocumento" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.TiposDocumento"></select>
                                <span asp-validation-for="TipoDocumento" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="NumeroDocumento" class="form-label fw-semibold"></label>
                                <input asp-for="NumeroDocumento" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="NumeroDocumento" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Apellido" class="form-label fw-semibold"></label>
                                <input asp-for="Apellido" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Apellido" class="text-danger small"></span>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Nombre" class="form-label fw-semibold"></label>
                                <input asp-for="Nombre" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="FechaNacimiento" class="form-label fw-semibold"></label>
                                <input asp-for="FechaNacimiento" type="date" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="EstadoCivil" class="form-label fw-semibold"></label>
                                <select asp-for="EstadoCivil" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.EstadosCiviles">
                                    <option value="">Seleccione...</option>
                                </select>
                                <span asp-validation-for="EstadoCivil" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Datos de Contacto -->
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-info text-light">
                        <h5 class="mb-0"><i class="bi bi-telephone me-2"></i>Datos de Contacto</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <label asp-for="Telefono" class="form-label fw-semibold"></label>
                                <input asp-for="Telefono" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TelefonoAlternativo" class="form-label fw-semibold"></label>
                                <input asp-for="TelefonoAlternativo" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" type="email" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Domicilio -->
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-success text-light">
                        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Domicilio</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="Domicilio" class="form-label fw-semibold"></label>
                                <input asp-for="Domicilio" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Localidad" class="form-label fw-semibold"></label>
                                <input asp-for="Localidad" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Provincia" class="form-label fw-semibold"></label>
                                <select asp-for="Provincia" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Provincias">
                                    <option value="">Seleccione...</option>
                                </select>
                            </div>
                            <div class="col-md-1">
                                <label asp-for="CodigoPostal" class="form-label fw-semibold"></label>
                                <input asp-for="CodigoPostal" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Datos Laborales -->
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="mb-0"><i class="bi bi-briefcase me-2"></i>Datos Laborales</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="Empleador" class="form-label fw-semibold"></label>
                                <input asp-for="Empleador" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TipoEmpleo" class="form-label fw-semibold"></label>
                                <select asp-for="TipoEmpleo" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.TiposEmpleo">
                                    <option value="">Seleccione...</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label asp-for="Sueldo" class="form-label fw-semibold"></label>
                                <input asp-for="Sueldo" type="number" step="0.01" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                            <div class="col-md-3">
                                <label asp-for="TelefonoLaboral" class="form-label fw-semibold"></label>
                                <input asp-for="TelefonoLaboral" class="form-control bg-body-secondary text-light border-0" />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Documentación -->
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-secondary text-light">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Documentación</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            @foreach (var doc in new[] { nameof(Model.TieneReciboSueldo), nameof(Model.TieneVeraz), nameof(Model.TieneImpuesto), nameof(Model.TieneServicioLuz), nameof(Model.TieneServicioGas), nameof(Model.TieneServicioAgua) })
                            {
                                <div class="col-md-4">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="@(Model.GetType().GetProperty(doc)?.GetValue(Model))" />
                                        <label class="form-check-label text-light">@doc.Replace("Tiene", "Tiene ").Replace("Servicio", "Servicio ")</label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Observaciones -->
                <div class="card bg-dark border-0 shadow-sm mb-4">
                    <div class="card-header bg-light text-dark">
                        <h5 class="mb-0"><i class="bi bi-chat-text me-2"></i>Observaciones</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <label asp-for="Observaciones" class="form-label fw-semibold"></label>
                                <textarea asp-for="Observaciones" class="form-control bg-body-secondary text-light border-0" rows="3"></textarea>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input asp-for="Activo" class="form-check-input" />
                                    <label asp-for="Activo" class="form-check-label fw-semibold"></label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Botones -->
                <div class="d-flex justify-content-end gap-3 mt-4">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light px-4">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-check-circle me-1"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
