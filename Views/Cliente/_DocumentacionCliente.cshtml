@model TheBuryProject.ViewModels.ClienteDetalleViewModel
@using TheBuryProject.Models.Enums
@using TheBuryProject.Helpers

<!-- Alertas de documentación -->
@if (!Model.EvaluacionCredito.TieneDocumentosCompletos)
{
    <div class="alert alert-warning border-0 shadow-sm mb-3">
        <h6 class="alert-heading mb-2">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>Documentación Incompleta
        </h6>
        <p class="mb-2">El cliente no tiene todos los documentos requeridos. Faltan:</p>
        <ul class="mb-0">
            @foreach (var doc in Model.EvaluacionCredito.DocumentosFaltantes)
            {
                <li>@doc</li>
            }
        </ul>
    </div>
}
else
{
    <div class="alert alert-success border-0 shadow-sm mb-3">
        <i class="bi bi-check-circle-fill me-2"></i>
        <strong>Documentación Completa</strong> - El cliente tiene todos los documentos requeridos.
    </div>
}

<!-- Formulario de carga inline -->
<div class="card bg-dark border-0 shadow-sm mb-3">
    <div class="card-header bg-secondary">
        <h5 class="mb-0 text-light"><i class="bi bi-upload"></i> Subir Nuevo Documento</h5>
    </div>
    <div class="card-body">
        <form asp-controller="DocumentoCliente" asp-action="Upload" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" name="ClienteId" value="@Model.Cliente.Id" />
            <input type="hidden" name="ReturnToDetails" value="true" />

            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label text-light fw-semibold">Tipo de Documento *</label>
                    <select name="TipoDocumento" class="form-select bg-body-secondary text-light border-0" required>
                        <option value="">Seleccione...</option>
                        @foreach (TipoDocumentoCliente tipo in Enum.GetValues(typeof(TipoDocumentoCliente)))
                        {
                            <option value="@((int)tipo)">@tipo.GetDisplayName()</option>
                        }
                    </select>
                </div>

                <div class="col-md-4">
                    <label class="form-label text-light fw-semibold">Archivo *</label>
                    <input type="file" name="Archivo" class="form-control bg-body-secondary text-light border-0"
                           accept=".pdf,.jpg,.jpeg,.png,.doc,.docx" required />
                    <div class="form-text text-muted">Formatos: PDF, JPG, PNG, DOC, DOCX (Max 5MB)</div>
                </div>

                <div class="col-md-2">
                    <label class="form-label text-light fw-semibold">Vencimiento</label>
                    <input type="date" name="FechaVencimiento" class="form-control bg-body-secondary text-light border-0" />
                </div>

                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-info text-dark fw-semibold w-100">
                        <i class="bi bi-upload me-2"></i>Subir
                    </button>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-12">
                    <label class="form-label text-light fw-semibold">Observaciones</label>
                    <textarea name="Observaciones" class="form-control bg-body-secondary text-light border-0"
                              rows="2" placeholder="Observaciones adicionales sobre el documento"></textarea>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Lista de documentos existentes -->
<div class="card bg-dark border-0 shadow-sm">
    <div class="card-header bg-secondary">
        <h5 class="mb-0 text-light">
            <i class="bi bi-file-earmark-text"></i> Documentos del Cliente
            <span class="badge bg-info text-dark ms-2">@Model.Documentos.Count</span>
        </h5>
    </div>
    <div class="card-body p-0">
        @if (Model.Documentos.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-dark align-middle mb-0">
                    <thead class="bg-secondary text-light">
                        <tr>
                            <th class="px-4">Tipo de Documento</th>
                            <th>Archivo</th>
                            <th>Tamaño</th>
                            <th class="text-center">Estado</th>
                            <th>Fecha Subida</th>
                            <th>Vencimiento</th>
                            <th class="text-center px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.Documentos.OrderByDescending(d => d.FechaSubida))
                        {
                            <tr>
                                <td class="px-4">
                                    <span class="badge bg-secondary">@doc.TipoDocumentoNombre</span>
                                </td>
                                <td>
                                    <i class="bi bi-file-earmark me-1"></i>
                                    @doc.NombreArchivo
                                </td>
                                <td class="text-secondary">@doc.TamanoFormateado</td>
                                <td class="text-center">
                                    <span class="badge bg-@doc.EstadoColor">
                                        <i class="bi @doc.EstadoIcono"></i> @doc.EstadoNombre
                                    </span>
                                </td>
                                <td class="text-secondary">@doc.FechaSubida.ToString("dd/MM/yyyy")</td>
                                <td class="text-secondary">
                                    @if (doc.FechaVencimiento.HasValue)
                                    {
                                        var diasRestantes = (doc.FechaVencimiento.Value - DateTime.Now).Days;
                                        if (diasRestantes < 0)
                                        {
                                            <span class="text-danger">
                                                <i class="bi bi-exclamation-circle"></i> Vencido
                                            </span>
                                        }
                                        else if (diasRestantes <= 30)
                                        {
                                            <span class="text-warning">
                                                @doc.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                                <small>(en @diasRestantes días)</small>
                                            </span>
                                        }
                                        else
                                        {
                                            <span>@doc.FechaVencimiento.Value.ToString("dd/MM/yyyy")</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin vencimiento</span>
                                    }
                                </td>
                                <td class="text-center px-4">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="DocumentoCliente" asp-action="Details" asp-route-id="@doc.Id"
                                           class="btn btn-outline-info" title="Ver detalles">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-controller="DocumentoCliente" asp-action="Descargar" asp-route-id="@doc.Id"
                                           class="btn btn-outline-success" title="Descargar">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        @if (doc.Estado == EstadoDocumento.Pendiente)
                                        {
                                            <form asp-controller="DocumentoCliente" asp-action="Delete" asp-route-id="@doc.Id"
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('¿Está seguro de eliminar este documento?')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Eliminar">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-inbox display-5 text-secondary d-block mb-3"></i>
                <p class="text-secondary mb-0">No hay documentos cargados para este cliente</p>
                <p class="text-muted small">Utilice el formulario arriba para subir documentos</p>
            </div>
        }
    </div>
</div>

<!-- Resumen de verificación -->
@if (Model.Documentos.Any())
{
    <div class="row mt-3">
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Total</h6>
                    <h3 class="fw-bold text-light mb-0">@Model.Documentos.Count</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Verificados</h6>
                    <h3 class="fw-bold text-success mb-0">
                        @Model.Documentos.Count(d => d.Estado == EstadoDocumento.Verificado)
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Pendientes</h6>
                    <h3 class="fw-bold text-warning mb-0">
                        @Model.Documentos.Count(d => d.Estado == EstadoDocumento.Pendiente)
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Rechazados</h6>
                    <h3 class="fw-bold text-danger mb-0">
                        @Model.Documentos.Count(d => d.Estado == EstadoDocumento.Rechazado)
                    </h3>
                </div>
            </div>
        </div>
    </div>
}