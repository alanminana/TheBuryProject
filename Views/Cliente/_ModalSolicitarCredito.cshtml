@model TheBuryProject.ViewModels.ClienteDetalleViewModel

@{
    var eval = Model.EvaluacionCredito;
    var puedeAprobarNormal = eval.CumpleRequisitos;
    var requiereExcepcion = !eval.CumpleRequisitos && eval.PuedeAprobarConExcepcion;
}

<div class="modal fade" id="solicitarCreditoModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bg-dark text-light">
            <form asp-controller="Cliente" asp-action="SolicitarCredito" method="post" id="formSolicitarCredito">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ClienteId" value="@Model.Cliente.Id" />
                
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">
                        <i class="bi bi-cash-coin text-success me-2"></i>Solicitar Crédito
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                
                <div class="modal-body">
                    <!-- Resumen del cliente -->
                    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom border-secondary">
                        <div>
                            <strong>@Model.Cliente.NombreCompleto</strong>
                            <span class="text-secondary ms-2">@Model.Cliente.TipoDocumento: @Model.Cliente.NumeroDocumento</span>
                        </div>
                        <div class="text-end">
                            <small class="text-secondary d-block">Score</small>
                            <span class="badge @(eval.ScoreCrediticio >= 700 ? "bg-success" : eval.ScoreCrediticio >= 500 ? "bg-warning text-dark" : "bg-danger")">
                                @eval.ScoreCrediticio
                            </span>
                        </div>
                    </div>

                    <!-- Alerta si requiere excepción -->
                    @if (requiereExcepcion)
                    {
                        <div class="alert alert-warning border-0 mb-4">
                            <h6 class="alert-heading mb-1">
                                <i class="bi bi-exclamation-triangle me-2"></i>Requiere Autorización
                            </h6>
                            <p class="mb-0 small">El cliente no cumple todos los requisitos estándar. Se necesita aprobación de un supervisor.</p>
                        </div>
                    }

                    <!-- Formulario principal -->
                    <div class="row g-3">
                        <div class="col-md-5">
                            <label class="form-label">Monto Solicitado *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-secondary border-0">$</span>
                                <input type="number" name="MontoSolicitado" id="montoSolicitado"
                                       class="form-control bg-body-secondary text-light border-0"
                                       min="1000" max="@eval.MontoMaximoDisponible" step="1000" required />
                            </div>
                            <small class="text-secondary">Máximo: @eval.MontoMaximoDisponible.ToString("C0")</small>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Cuotas *</label>
                            <select name="CantidadCuotas" id="cantidadCuotas" class="form-select bg-body-secondary text-light border-0" required>
                                <option value="3">3 cuotas</option>
                                <option value="6" selected>6 cuotas</option>
                                <option value="12">12 cuotas</option>
                                <option value="18">18 cuotas</option>
                                <option value="24">24 cuotas</option>
                                <option value="36">36 cuotas</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Tasa % *</label>
                            <input type="number" name="TasaInteres" id="tasaInteres"
                                   class="form-control bg-body-secondary text-light border-0"
                                   value="5.0" min="0" max="15" step="0.1" required />
                            <small class="text-secondary">Mensual</small>
                        </div>
                    </div>

                    <!-- Preview de cuota -->
                    <div class="bg-body-secondary rounded p-3 mt-4">
                        <div class="row text-center">
                            <div class="col-4">
                                <small class="text-secondary d-block">Cuota Mensual</small>
                                <strong class="fs-5 text-success" id="cuotaMensual">$0</strong>
                            </div>
                            <div class="col-4">
                                <small class="text-secondary d-block">Total a Pagar</small>
                                <strong id="montoTotalConInteres">$0</strong>
                            </div>
                            <div class="col-4">
                                <small class="text-secondary d-block">Capacidad de Pago</small>
                                <strong class="text-info">@eval.CapacidadPagoMensual.ToString("C0")</strong>
                            </div>
                        </div>
                    </div>

                    <!-- Observaciones -->
                    <div class="mt-4">
                        <label class="form-label">Observaciones</label>
                        <textarea name="Observaciones" class="form-control bg-body-secondary text-light border-0"
                                  rows="2" placeholder="Opcional"></textarea>
                    </div>

                    <!-- Sección Garante (condicional) -->
                    @if (eval.RequiereGarante)
                    {
                        <div class="mt-4 pt-4 border-top border-secondary">
                            <h6 class="mb-3">
                                <i class="bi bi-person-check text-warning me-2"></i>Garante
                                <span class="badge bg-warning text-dark ms-2">Requerido</span>
                            </h6>
                            
                            @if (eval.TieneGarante)
                            {
                                <div class="alert alert-success border-0 py-2 mb-0">
                                    <i class="bi bi-check-circle me-2"></i>@eval.GaranteNombre
                                </div>
                            }
                            else
                            {
                                <div class="row g-3">
                                    <div class="col-md-5">
                                        <input type="text" name="GaranteNombre" class="form-control bg-body-secondary text-light border-0"
                                               placeholder="Nombre completo *" required />
                                    </div>
                                    <div class="col-md-4">
                                        <input type="text" name="GaranteDocumento" class="form-control bg-body-secondary text-light border-0"
                                               placeholder="DNI *" required />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="tel" name="GaranteTelefono" class="form-control bg-body-secondary text-light border-0"
                                               placeholder="Teléfono *" required />
                                    </div>
                                </div>
                            }
                        </div>
                    }

                    <!-- Sección Excepción (condicional) -->
                    @if (requiereExcepcion)
                    {
                        <div class="mt-4 pt-4 border-top border-secondary">
                            <h6 class="mb-3">
                                <i class="bi bi-shield-exclamation text-warning me-2"></i>Autorización
                            </h6>
                            
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="checkbox" name="AprobarConExcepcion" 
                                       id="aprobarConExcepcion" value="true" required />
                                <label class="form-check-label" for="aprobarConExcepcion">
                                    Confirmo autorización de excepción
                                </label>
                            </div>
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <textarea name="MotivoExcepcion" class="form-control bg-body-secondary text-light border-0"
                                              rows="2" placeholder="Motivo de la excepción *" required></textarea>
                                </div>
                                <div class="col-md-6">
                                    <input type="text" name="AutorizadoPor" class="form-control bg-body-secondary text-light border-0"
                                           placeholder="Autorizado por (supervisor) *" required />
                                </div>
                            </div>
                        </div>
                    }
                </div>
                
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success px-4" id="btnSolicitar">
                        <i class="bi bi-check-circle me-2"></i>Solicitar Crédito
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const montoInput = document.getElementById('montoSolicitado');
        const cuotasSelect = document.getElementById('cantidadCuotas');
        const tasaInput = document.getElementById('tasaInteres');
        const cuotaDisplay = document.getElementById('cuotaMensual');
        const totalDisplay = document.getElementById('montoTotalConInteres');
        const capacidadPago = @eval.CapacidadPagoMensual.ToString("F2", System.Globalization.CultureInfo.InvariantCulture);

        function calcularCuota() {
            const monto = parseFloat(montoInput?.value) || 0;
            const cuotas = parseInt(cuotasSelect?.value) || 1;
            const tasaMensual = (parseFloat(tasaInput?.value) || 0) / 100;

            if (monto > 0 && cuotas > 0) {
                let cuotaMensual;
                if (tasaMensual > 0) {
                    const factor = Math.pow(1 + tasaMensual, cuotas);
                    cuotaMensual = monto * (tasaMensual * factor) / (factor - 1);
                } else {
                    cuotaMensual = monto / cuotas;
                }

                const montoTotal = cuotaMensual * cuotas;

                cuotaDisplay.textContent = cuotaMensual.toLocaleString('es-AR', {
                    style: 'currency', currency: 'ARS', maximumFractionDigits: 0
                });

                totalDisplay.textContent = montoTotal.toLocaleString('es-AR', {
                    style: 'currency', currency: 'ARS', maximumFractionDigits: 0
                });

                // Alerta visual si excede capacidad
                if (cuotaMensual > capacidadPago) {
                    cuotaDisplay.classList.remove('text-success');
                    cuotaDisplay.classList.add('text-danger');
                } else {
                    cuotaDisplay.classList.remove('text-danger');
                    cuotaDisplay.classList.add('text-success');
                }
            }
        }

        montoInput?.addEventListener('input', calcularCuota);
        cuotasSelect?.addEventListener('change', calcularCuota);
        tasaInput?.addEventListener('input', calcularCuota);
        
        calcularCuota();
    });
</script>
