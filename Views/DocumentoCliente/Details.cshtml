@model TheBuryProject.ViewModels.DocumentoClienteViewModel
@{
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Detalles del Documento";
    ViewData["PageTitle"] = "Detalles del Documento";
    ViewData["PageSubtitle"] = $"{Model.TipoDocumentoNombre} - {Model.ClienteNombre}";
    
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index")!;
    var clienteDetailsUrl = Url.Action("Details", "Cliente", new { id = Model.ClienteId, tab = "documentos" })!;
}

@section PageActions {
    <a href="@backUrl" class="btn btn-outline-light me-2">
        <i class="bi bi-arrow-left" aria-hidden="true"></i> Volver
    </a>
    <a asp-action="Descargar" asp-route-id="@Model.Id" asp-route-returnUrl="@returnUrl" class="btn btn-success">
        <i class="bi bi-download me-2" aria-hidden="true"></i>Descargar
    </a>
}

<section class="container-fluid">
    <div class="row">
        <div class="col-md-10 mx-auto">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2" aria-hidden="true"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                </div>
            }

            <div class="row">
                <!-- Información Principal -->
                <div class="col-md-7">
                    <div class="card bg-dark border-0 shadow-sm mb-3">
                        <div class="card-header bg-secondary text-light">
                            <h5 class="mb-0"><i class="bi bi-info-circle me-2" aria-hidden="true"></i>Información del Documento</h5>
                        </div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Cliente:</dt>
                                <dd class="col-sm-8">
                                    <a asp-controller="Cliente" asp-action="Details" asp-route-id="@Model.ClienteId" asp-route-tab="documentos" class="text-info">
                                        @Model.ClienteNombre
                                    </a>
                                </dd>

                                <dt class="col-sm-4">Tipo:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-secondary">@Model.TipoDocumentoNombre</span>
                                </dd>

                                <dt class="col-sm-4">Archivo:</dt>
                                <dd class="col-sm-8">
                                    <i class="bi bi-file-earmark me-1" aria-hidden="true"></i>@Model.NombreArchivo
                                </dd>

                                <dt class="col-sm-4">Tamaño:</dt>
                                <dd class="col-sm-8 text-secondary">@Model.TamanoFormateado</dd>

                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-@Model.EstadoColor">
                                        <i class="bi @Model.EstadoIcono" aria-hidden="true"></i> @Model.EstadoNombre
                                    </span>
                                </dd>

                                <dt class="col-sm-4">Fecha Subida:</dt>
                                <dd class="col-sm-8"><time datetime="@Model.FechaSubida.ToString("s")">@Model.FechaSubida.ToString("dd/MM/yyyy HH:mm")</time></dd>

                                @if (Model.FechaVencimiento.HasValue)
                                {
                                    <dt class="col-sm-4">Vencimiento:</dt>
                                    <dd class="col-sm-8">
                                        <time datetime="@Model.FechaVencimiento.Value.ToString("yyyy-MM-dd")">@Model.FechaVencimiento.Value.ToString("dd/MM/yyyy")</time>
                                        @if (Model.FechaVencimiento.Value < DateTime.Today)
                                        {
                                            <span class="badge bg-danger ms-2">Vencido</span>
                                        }
                                        else if (Model.FechaVencimiento.Value < DateTime.Today.AddDays(30))
                                        {
                                            <span class="badge bg-warning text-dark ms-2">Próximo a vencer</span>
                                        }
                                    </dd>
                                }

                                @if (!string.IsNullOrEmpty(Model.Observaciones))
                                {
                                    <dt class="col-sm-4">Observaciones:</dt>
                                    <dd class="col-sm-8 text-secondary">@Model.Observaciones</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Verificación -->
                    @if (Model.FechaVerificacion.HasValue)
                    {
                        <div class="card bg-dark border-0 shadow-sm mb-3">
                            <div class="card-header bg-secondary text-light">
                                <h5 class="mb-0"><i class="bi bi-shield-check me-2" aria-hidden="true"></i>Verificación</h5>
                            </div>
                            <div class="card-body">
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Verificado por:</dt>
                                    <dd class="col-sm-8">@Model.VerificadoPor</dd>

                                    <dt class="col-sm-4">Fecha:</dt>
                                    <dd class="col-sm-8"><time datetime="@Model.FechaVerificacion.Value.ToString("s")">@Model.FechaVerificacion.Value.ToString("dd/MM/yyyy HH:mm")</time></dd>

                                    @if (!string.IsNullOrEmpty(Model.MotivoRechazo))
                                    {
                                        <dt class="col-sm-4">Motivo Rechazo:</dt>
                                        <dd class="col-sm-8">
                                            <div class="alert alert-danger mb-0">
                                                @Model.MotivoRechazo
                                            </div>
                                        </dd>
                                    }
                                </dl>
                            </div>
                        </div>
                    }
                </div>

                <!-- Acciones -->
                <div class="col-md-5">
                    <div class="card bg-dark border-0 shadow-sm mb-3">
                        <div class="card-header bg-secondary text-light">
                            <h5 class="mb-0"><i class="bi bi-gear me-2" aria-hidden="true"></i>Acciones</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                @if (Model.Estado == TheBuryProject.Models.Enums.EstadoDocumento.Pendiente)
                                {
                                    <button type="button" class="btn btn-info text-dark" data-bs-toggle="modal" data-bs-target="#verificarModal">
                                        <i class="bi bi-check-circle me-2" aria-hidden="true"></i>Verificar
                                    </button>

                                    <button type="button" class="btn btn-warning text-dark" data-bs-toggle="modal" data-bs-target="#rechazarModal">
                                        <i class="bi bi-x-circle me-2" aria-hidden="true"></i>Rechazar
                                    </button>

                                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                                          data-confirm="¿Está seguro de eliminar este documento?">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                                        <button type="submit" class="btn btn-danger w-100">
                                            <i class="bi bi-trash me-2" aria-hidden="true"></i>Eliminar
                                        </button>
                                    </form>
                                }

                                <a href="@clienteDetailsUrl" class="btn btn-outline-light">
                                    <i class="bi bi-person me-2" aria-hidden="true"></i>Ver Cliente
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Preview (si es imagen o PDF) -->
                    @if (Model.TipoMIME?.StartsWith("image/") == true)
                    {
                        <div class="card bg-dark border-0 shadow-sm">
                            <div class="card-header bg-secondary text-light">
                                <h5 class="mb-0"><i class="bi bi-image me-2" aria-hidden="true"></i>Vista Previa</h5>
                            </div>
                            <div class="card-body">
                                <img src="/@Model.RutaArchivo" alt="Vista previa del documento" class="img-fluid rounded" />
                            </div>
                        </div>
                    }
                    else if (Model.TipoMIME == "application/pdf")
                    {
                        <div class="card bg-dark border-0 shadow-sm">
                            <div class="card-header bg-secondary text-light">
                                <h5 class="mb-0"><i class="bi bi-file-pdf me-2" aria-hidden="true"></i>Vista Previa PDF</h5>
                            </div>
                            <div class="card-body p-0">
                                <embed src="/@Model.RutaArchivo" type="application/pdf" width="100%" height="400px" class="rounded" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

@section Modals {
    <!-- Modal Verificar -->
    <div class="modal fade" id="verificarModal" tabindex="-1" aria-labelledby="verificarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark">
                <form asp-action="Verificar" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                    <div class="modal-header border-secondary">
                        <h5 class="modal-title text-light" id="verificarModalLabel">
                            <i class="bi bi-check-circle text-success me-2"></i>Verificar Documento
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <p class="text-light">¿Confirma que el documento es correcto y está verificado?</p>
                        <div class="mb-3">
                            <label class="form-label text-light">Observaciones (opcional)</label>
                            <textarea name="observaciones" class="form-control bg-body-secondary text-light border-0" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-2"></i>Verificar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Modal Rechazar -->
    <div class="modal fade" id="rechazarModal" tabindex="-1" aria-labelledby="rechazarModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark">
                <form asp-action="Rechazar" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                    <div class="modal-header border-secondary">
                        <h5 class="modal-title text-light" id="rechazarModalLabel">
                            <i class="bi bi-x-circle text-danger me-2"></i>Rechazar Documento
                        </h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <p class="text-light">Indique el motivo del rechazo:</p>
                        <div class="mb-3">
                            <label class="form-label text-light">Motivo *</label>
                            <textarea name="motivo" class="form-control bg-body-secondary text-light border-0" rows="3" required></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-circle me-2"></i>Rechazar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.querySelectorAll('form[data-confirm]').forEach(form => {
            form.addEventListener('submit', e => {
                if (!confirm(form.dataset.confirm)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}