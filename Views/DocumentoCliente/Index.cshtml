@model TheBuryProject.ViewModels.DocumentoClienteFilterViewModel
@using TheBuryProject.ViewModels
@{
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Documentos de Clientes";
    ViewData["PageTitle"] = "Documentos de Clientes";
    ViewData["PageSubtitle"] = "Gestión y seguimiento de documentación";
}

@section PageActions {
    <button type="button"
            class="btn btn-info text-dark fw-semibold shadow-sm"
            data-bs-toggle="modal"
            data-bs-target="#uploadDocumentoModal"
            data-return-to-venta-id="@Model.ReturnToVentaId"
            data-cliente-id="@Model.ClienteId">
        <i class="bi bi-upload me-2"></i>Subir Documento
    </button>
}

@section PageFilters {
    <!-- Filtros -->
    <div class="card bg-dark border-0 shadow-sm shared-panel mb-4">
        <div class="card-header bg-secondary text-light border-0 shared-panel-header">
            <button class="btn btn-link text-decoration-none text-light w-100 text-start p-0"
                    type="button" data-bs-toggle="collapse" data-bs-target="#filtrosCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Filtros de Búsqueda</h6>
                    <i class="bi bi-chevron-down"></i>
                </div>
            </button>
        </div>

        <div class="collapse show" id="filtrosCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    @if (Model.ReturnToVentaId.HasValue)
                    {
                        <input type="hidden" name="ReturnToVentaId" value="@Model.ReturnToVentaId" />
                    }
                    <div class="row g-3">

                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold">Cliente</label>
                            <select name="clienteId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Clientes">
                                <option value="">Todos los clientes</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold">Tipo de Documento</label>
                            <select name="tipoDocumento" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.TiposDocumento">
                                <option value="">Todos los tipos</option>
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label text-light fw-semibold">Estado</label>
                            <select name="estado" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Estados">
                                <option value="">Todos los estados</option>
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label text-light fw-semibold">Filtros Rápidos</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="soloPendientes" id="soloPendientes"
                                       value="true" @(Model.SoloPendientes ? "checked" : "") />
                                <label class="form-check-label text-light" for="soloPendientes">
                                    Solo pendientes
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="soloVencidos" id="soloVencidos"
                                       value="true" @(Model.SoloVencidos ? "checked" : "") />
                                <label class="form-check-label text-light" for="soloVencidos">
                                    Solo vencidos
                                </label>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label text-light fw-semibold">&nbsp;</label>
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-info text-dark fw-semibold w-100">
                                    <i class="bi bi-search me-2"></i>Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.ReturnToVentaId.HasValue)
{
    <div class="alert alert-warning d-flex justify-content-between align-items-center mb-3">
        <div>
            <i class="bi bi-exclamation-triangle me-2"></i>
            Falta documentación obligatoria para continuar con el crédito de la venta @Model.ReturnToVentaId.
            @if (ViewBag.DocumentacionPendiente is DocumentacionClienteEstadoViewModel estadoDocs && !estadoDocs.Completa)
            {
                <div class="mt-1 small">
                    <strong>Documentos faltantes:</strong>
                    <span class="badge bg-light text-dark">@string.Join(", ", estadoDocs.Faltantes)</span>
                </div>
            }
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-light" asp-controller="Venta" asp-action="ValidarDocumentacionCredito" asp-route-ventaId="@Model.ReturnToVentaId">
                Validar y continuar
            </a>
            <a class="btn btn-outline-light" asp-controller="Venta" asp-action="Details" asp-route-id="@Model.ReturnToVentaId">
                Volver a la venta
            </a>
        </div>
    </div>
}

@if (Model.TotalResultados > 0)
{
    <div class="alert alert-info border-0 shadow-sm mb-3">
        <i class="bi bi-info-circle me-2"></i>
        Se encontraron <strong>@Model.TotalResultados</strong> documento(s).
    </div>
}

<!-- Tabla -->
<div class="card bg-dark border-0 shadow-sm shared-panel">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-dark align-middle mb-0">
                <thead class="bg-secondary text-light">
                    <tr>
                        <th class="px-4">Cliente</th>
                        <th>Tipo de Documento</th>
                        <th>Archivo</th>
                        <th>Tamaño</th>
                        <th class="text-center">Estado</th>
                        <th>Fecha Subida</th>
                        <th>Vencimiento</th>
                        <th class="text-center px-4">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Documentos.Any())
                    {
                        @foreach (var doc in Model.Documentos)
                        {
                            <tr>
                                <td class="px-4">
                                    <a asp-controller="Cliente" asp-action="Details" asp-route-id="@doc.ClienteId" class="text-info">
                                        @doc.ClienteNombre
                                    </a>
                                </td>
                                <td><span class="badge bg-secondary">@doc.TipoDocumentoNombre</span></td>
                                <td><i class="bi bi-file-earmark me-1"></i>@doc.NombreArchivo</td>
                                <td class="text-secondary">@doc.TamanoFormateado</td>
                                <td class="text-center">
                                    <span class="badge bg-@doc.EstadoColor">
                                        <i class="bi @doc.EstadoIcono"></i> @doc.EstadoNombre
                                    </span>
                                </td>
                                <td class="text-secondary">@doc.FechaSubida.ToString("dd/MM/yyyy")</td>
                                <td class="text-secondary">
                                    @if (doc.FechaVencimiento.HasValue)
                                    {
                                        <span>@doc.FechaVencimiento.Value.ToString("dd/MM/yyyy")</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="text-center px-4">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-id="@doc.Id" class="btn btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Descargar" asp-route-id="@doc.Id" class="btn btn-outline-success">
                                            <i class="bi bi-download"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-warning text-dark"
                                                data-bs-toggle="modal"
                                                data-bs-target="#uploadDocumentoModal"
                                                data-cliente-id="@doc.ClienteId"
                                                data-replace-id="@doc.Id"
                                                data-replace-name="@doc.NombreArchivo"
                                                data-return-to-venta-id="@Model.ReturnToVentaId">
                                            <i class="bi bi-arrow-repeat"></i>
                                        </button>
                                        <form asp-action="Delete" asp-route-id="@doc.Id" method="post"
                                              onsubmit="return confirm('¿Está seguro de eliminar este documento?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <i class="bi bi-inbox display-5 text-secondary d-block mb-3"></i>
                                <p class="text-secondary mb-2">No hay documentos disponibles</p>
                                @if (Model.ReturnToVentaId.HasValue)
                                {
                                    <button type="button"
                                            class="btn btn-info text-dark"
                                            data-bs-toggle="modal"
                                            data-bs-target="#uploadDocumentoModal"
                                            data-return-to-venta-id="@Model.ReturnToVentaId"
                                            data-cliente-id="@Model.ClienteId">
                                        Subir Documento
                                    </button>
                                }
                                else
                                {
                                    <button type="button"
                                            class="btn btn-info text-dark"
                                            data-bs-toggle="modal"
                                            data-bs-target="#uploadDocumentoModal">
                                        Subir Documento
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Estadísticas -->
@if (Model.Documentos.Any())
{
    <div class="row mt-4">

        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm shared-stat-card">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Total Documentos</h6>
                    <h3 class="fw-bold text-light mb-0">@Model.TotalResultados</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm shared-stat-card">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Pendientes</h6>
                    <h3 class="fw-bold text-warning mb-0">
                        @Model.Documentos.Count(d => d.Estado == TheBuryProject.Models.Enums.EstadoDocumento.Pendiente)
                    </h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm shared-stat-card">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Verificados</h6>
                    <h3 class="fw-bold text-success mb-0">
                        @Model.Documentos.Count(d => d.Estado == TheBuryProject.Models.Enums.EstadoDocumento.Verificado)
                    </h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-dark border-0 shadow-sm shared-stat-card">
                <div class="card-body">
                    <h6 class="text-secondary mb-2">Rechazados</h6>
                    <h3 class="fw-bold text-danger mb-0">
                        @Model.Documentos.Count(d => d.Estado == TheBuryProject.Models.Enums.EstadoDocumento.Rechazado)
                    </h3>
                </div>
            </div>
        </div>

    </div>
}

<!-- Modal de carga de documentos -->
<div class="modal fade" id="uploadDocumentoModal" tabindex="-1" aria-labelledby="uploadDocumentoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content bg-dark text-light border-secondary">
            <div class="modal-header border-secondary">
                <h5 class="modal-title" id="uploadDocumentoModalLabel">
                    <i class="bi bi-upload me-2"></i>Subir o reemplazar documento
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-info border-0 shadow-sm">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>Formatos permitidos:</strong> PDF, JPG, PNG, DOC, DOCX (máximo 5 MB)
                </div>
                <div class="alert alert-warning border-0 shadow-sm d-none" data-reemplazo-alert>
                    <i class="bi bi-arrow-repeat me-2"></i>
                    <span data-reemplazo-text></span>
                </div>
                <form id="uploadDocumentoForm"
                      asp-action="Upload"
                      method="post"
                      enctype="multipart/form-data"
                      data-documentos-url="@Url.Action("GetDocumentosByCliente", "DocumentoCliente")"
                      data-documento-seleccionado="@Model.UploadModel.DocumentoAReemplazarId"
                      data-default-cliente-id="@Model.UploadModel.ClienteId"
                      data-default-return-to-venta-id="@Model.UploadModel.ReturnToVentaId">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="ReturnToVentaId" value="@Model.UploadModel.ReturnToVentaId" />
                    <partial name="~/Views/Shared/Documento/_DocumentoAdjuntoForm.cshtml" model="Model.UploadModel" />

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-info text-dark fw-semibold">
                            <i class="bi bi-upload me-2"></i>Subir Documento
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/documento-cliente-upload.js" asp-append-version="true"></script>
    <script src="~/js/documento-cliente-modal.js" asp-append-version="true"></script>
}
