@model ConfiguracionMoraViewModel
@using TheBuryProject.Models.Entities
@using TheBuryProject.Models.Enums
@using TheBuryProject.ViewModels

@{
    ViewData["Title"] = "Dashboard de Mora";
    var alertasActivas = ViewBag.AlertasActivas as List<AlertaCobranzaViewModel> ?? new List<AlertaCobranzaViewModel>();
    var historialEjecuciones = ViewBag.HistorialEjecuciones as List<LogMora> ?? new List<LogMora>();
    var alertasCriticas = ViewBag.AlertasCriticas ?? 0;
    var alertasNoLeidas = ViewBag.AlertasNoLeidas ?? 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-speedometer2 me-2"></i>Dashboard de Mora</h2>
        <div>
            <a asp-action="Configuracion" class="btn btn-outline-primary">
                <i class="bi bi-gear me-2"></i>Configuración
            </a>
            <a asp-action="Alertas" class="btn btn-outline-info">
                <i class="bi bi-bell me-2"></i>Ver Todas las Alertas
            </a>
        </div>
    </div>

    <!-- Tarjetas de Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Alertas Activas</h6>
                            <h2 class="mb-0">@alertasActivas.Count</h2>
                        </div>
                        <i class="bi bi-bell-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-danger shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Alertas Críticas</h6>
                            <h2 class="mb-0">@alertasCriticas</h2>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">No Leídas</h6>
                            <h2 class="mb-0">@alertasNoLeidas</h2>
                        </div>
                        <i class="bi bi-envelope-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white @(Model.JobActivo ? "bg-success" : "bg-secondary") shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Estado del Job</h6>
                            <h3 class="mb-0">@(Model.JobActivo ? "Activo" : "Inactivo")</h3>
                        </div>
                        <i class="bi bi-@(Model.JobActivo ? "play-circle-fill" : "pause-circle-fill")" style="font-size: 3rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Configuración Actual y Ejecutar Job -->
    <div class="row mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Configuración Actual</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Tasa de Mora Diaria:</strong> @Model.TasaMoraDiaria%</p>
                            <p class="mb-2"><strong>Días de Gracia:</strong> @Model.DiasGraciaMora días</p>
                            <p class="mb-2"><strong>Recargo Primer Mes:</strong> @Model.PorcentajeRecargoPrimerMes%</p>
                            <p class="mb-2"><strong>Recargo Segundo Mes:</strong> @Model.PorcentajeRecargoSegundoMes%</p>
                        </div>
                        <div class="col-md-6">
                            <p class="mb-2"><strong>Recargo Tercer Mes:</strong> @Model.PorcentajeRecargoTercerMes%</p>
                            <p class="mb-2"><strong>Días Antes de Alerta:</strong> @Model.DiasAntesAlertaVencimiento días</p>
                            <p class="mb-2"><strong>Hora de Ejecución:</strong> @Model.HoraEjecucion.ToString(@"hh\:mm")</p>
                            <p class="mb-2">
                                <strong>Última Ejecución:</strong>
                                @if (Model.UltimaEjecucion.HasValue)
                                {
                                    @Model.UltimaEjecucion.Value.ToString("dd/MM/yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Nunca ejecutado</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-primary">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-lightning-charge me-2"></i>Ejecución Manual</h5>
                </div>
                <div class="card-body text-center">
                    <p class="mb-3">Ejecutar el proceso de cálculo de mora inmediatamente</p>
                    <form asp-action="EjecutarJob" method="post">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-play-fill me-2"></i>Ejecutar Ahora
                        </button>
                    </form>
                    <small class="text-muted mt-2 d-block">
                        Esto procesará todas las cuotas vencidas y generará alertas
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas Activas Recientes -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Alertas Activas Recientes</h5>
            <a asp-action="Alertas" class="btn btn-sm btn-dark">Ver Todas</a>
        </div>
        <div class="card-body p-0">
            @if (!alertasActivas.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle" style="font-size: 3rem; color: #198754;"></i>
                    <p class="text-muted mt-3">No hay alertas activas</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Tipo</th>
                                <th>Cliente</th>
                                <th>Título</th>
                                <th>Prioridad</th>
                                <th>Fecha</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alerta in alertasActivas.Take(10))
                            {
                                <tr class="@(!alerta.Leida ? "table-primary" : "")">
                                    <td>
                                        <span class="badge bg-@alerta.ColorAlerta">
                                            <i class="@alerta.IconoAlerta me-1"></i>
                                            @alerta.TipoNombre
                                        </span>
                                    </td>
                                    <td>@alerta.ClienteNombre</td>
                                    <td><strong>@alerta.Titulo</strong></td>
                                    <td>
                                        @switch (alerta.Prioridad)
                                        {
                                            case PrioridadAlerta.Baja:
                                                <span class="badge bg-secondary">Baja</span>
                                                break;
                                            case PrioridadAlerta.Media:
                                                <span class="badge bg-warning">Media</span>
                                                break;
                                            case PrioridadAlerta.Alta:
                                                <span class="badge bg-danger">Alta</span>
                                                break;
                                            case PrioridadAlerta.Critica:
                                                <span class="badge bg-dark">Crítica</span>
                                                break;
                                        }
                                    </td>
                                    <td>@alerta.CreatedAt.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (!alerta.Leida)
                                            {
                                                <form asp-action="MarcarLeida" asp-route-id="@alerta.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-primary" title="Marcar como leída">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="Resolver" asp-route-id="@alerta.Id" method="post" class="d-inline">
                                                <button type="submit" class="btn btn-outline-success" title="Resolver">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                            <a asp-controller="Creditos" asp-action="Details" asp-route-id="@alerta.CreditoId" class="btn btn-outline-info" title="Ver Crédito">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Historial de Ejecuciones -->
    <div class="card shadow-sm">
        <div class="card-header bg-secondary text-white">
            <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Historial de Ejecuciones</h5>
        </div>
        <div class="card-body p-0">
            @if (!historialEjecuciones.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="text-muted mt-3">No hay ejecuciones registradas</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Cuotas Procesadas</th>
                                <th>Cuotas con Mora</th>
                                <th>Alertas Generadas</th>
                                <th>Total Mora</th>
                                <th>Recargos</th>
                                <th>Duración</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in historialEjecuciones)
                            {
                                <tr>
                                    <td>@log.FechaEjecucion.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (log.Exitoso)
                                        {
                                            <span class="badge bg-success">Exitoso</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger" title="@log.Errores">Error</span>
                                        }
                                    </td>
                                    <td>@log.CuotasProcesadas</td>
                                    <td>@log.CuotasConMora</td>
                                    <td>@log.AlertasGeneradas</td>
                                    <td>$@log.TotalMora.ToString("N2")</td>
                                    <td>$@log.TotalRecargosAplicados.ToString("N2")</td>
                                    <td>@log.DuracionEjecucion.ToString(@"mm\:ss")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh alertas cada 5 minutos
        setTimeout(function() {
            location.reload();
        }, 300000);
    </script>
}

<style>
    .bg-orange {
        background-color: #fd7e14 !important;
    }
</style>