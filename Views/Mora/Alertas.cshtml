@model IEnumerable<AlertaCobranzaViewModel>
@using TheBuryProject.Models.Enums
@using TheBuryProject.ViewModels
@{
    ViewData["Title"] = "Alertas de Cobranza";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-bell-fill me-2"></i>Alertas de Cobranza</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver al Dashboard
        </a>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Alertas" id="filtrosForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Tipo de Alerta</label>
                        <select name="tipo" class="form-select" onchange="document.getElementById('filtrosForm').submit();">
                            <option value="">Todas</option>
                            <option value="0">Próximo a Vencer</option>
                            <option value="1">Vencida</option>
                            <option value="2">Mora Leve</option>
                            <option value="3">Mora Moderada</option>
                            <option value="4">Mora Grave</option>
                            <option value="5">Mora Crítica</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Prioridad</label>
                        <select name="prioridad" class="form-select" onchange="document.getElementById('filtrosForm').submit();">
                            <option value="">Todas</option>
                            <option value="1">Baja</option>
                            <option value="2">Media</option>
                            <option value="3">Alta</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select" onchange="document.getElementById('filtrosForm').submit();">
                            <option value="">Todas</option>
                            <option value="noLeidas">No Leídas</option>
                            <option value="leidas">Leídas</option>
                            <option value="noResueltas">No Resueltas</option>
                            <option value="resueltas">Resueltas</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cliente</label>
                        <input type="text" name="cliente" class="form-control" placeholder="Buscar cliente..." value="@ViewBag.ClienteFiltro">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>Filtrar
                        </button>
                        <a asp-action="Alertas" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Limpiar Filtros
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resumen de Alertas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-danger shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Críticas</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Prioridad == 3 && !a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill" style="font-size: 2rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Media Prioridad</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Prioridad == 2 && !a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-exclamation-circle-fill" style="font-size: 2rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Baja Prioridad</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Prioridad == 1 && !a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-info-circle-fill" style="font-size: 2rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Resueltas</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-check-circle-fill" style="font-size: 2rem; opacity: 0.5;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Alertas -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Listado de Alertas (@Model.Count())</h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="text-muted mt-3">No hay alertas que mostrar</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>Tipo</th>
                                <th>Cliente</th>
                                <th>Título</th>
                                <th>Mensaje</th>
                                <th style="width: 100px;">Prioridad</th>
                                <th style="width: 120px;">Fecha</th>
                                <th style="width: 100px;">Estado</th>
                                <th style="width: 180px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alerta in Model.OrderByDescending(a => a.Prioridad).ThenByDescending(a => a.CreatedAt))
                            {
                                <tr class="@(!alerta.Leida ? "table-primary" : "") @(alerta.Resuelta ? "table-success" : "")">
                                    <td class="text-center">
                                        @if (!alerta.Leida)
                                        {
                                            <i class="bi bi-circle-fill text-primary" title="No leída"></i>
                                        }
                                        else if (alerta.Resuelta)
                                        {
                                            <i class="bi bi-check-circle-fill text-success" title="Resuelta"></i>
                                        }
                                    </td>
                                    <td>
                                        @switch (alerta.Tipo)
                                        {
                                            case TipoAlerta.ProximoVencimiento:
                                                <span class="badge bg-info">Próximo Vencimiento</span>
                                                break;
                                            case TipoAlerta.MoraLeve:
                                                <span class="badge bg-warning">Mora Leve</span>
                                                break;
                                            case TipoAlerta.MoraModerada:
                                                <span class="badge bg-orange text-white">Mora Moderada</span>
                                                break;
                                            case TipoAlerta.MoraGrave:
                                                <span class="badge bg-danger">Mora Grave</span>
                                                break;
                                            case TipoAlerta.MoraCritica:
                                                <span class="badge bg-dark">Mora Crítica</span>
                                                break;
                                        }
                                    </td>
                                    <td>@alerta.ClienteNombre</td>
                                    <td><strong>@alerta.Titulo</strong></td>
                                    <td>@alerta.Mensaje</td>
                                    <td>
                                        @switch (alerta.Prioridad)
                                        {
                                            case 1:
                                                <span class="badge bg-secondary">Baja</span>
                                                break;
                                            case 2:
                                                <span class="badge bg-warning">Media</span>
                                                break;
                                            case 3:
                                                <span class="badge bg-danger">Alta</span>
                                                break;
                                        }
                                    </td>
                                    <td>@alerta.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (alerta.Resuelta)
                                        {
                                            <span class="badge bg-success">Resuelta</span>
                                        }
                                        else if (alerta.Leida)
                                        {
                                            <span class="badge bg-info">Leída</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Nueva</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (!alerta.Leida)
                                            {
                                                <a asp-action="MarcarLeida" asp-route-id="@alerta.Id" class="btn btn-outline-primary" title="Marcar como leída">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            }
                                            @if (!alerta.Resuelta)
                                            {
                                                <a asp-action="Resolver" asp-route-id="@alerta.Id" class="btn btn-outline-success" title="Resolver">
                                                    <i class="bi bi-check-lg"></i>
                                                </a>
                                            }
                                            <a asp-controller="Creditos" asp-action="Details" asp-route-id="@alerta.CreditoId" class="btn btn-outline-info" title="Ver Crédito">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-submit on Enter in search input
        document.querySelector('input[name="cliente"]').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                document.getElementById('filtrosForm').submit();
            }
        });
    </script>
}

<style>
    .bg-orange {
        background-color: #fd7e14 !important;
    }

    tr.table-primary {
        font-weight: 500;
    }

    tr.table-success {
        opacity: 0.7;
    }
</style>