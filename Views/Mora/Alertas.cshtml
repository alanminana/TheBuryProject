@model IEnumerable<AlertaCobranzaViewModel>
@using TheBuryProject.Models.Enums
@using TheBuryProject.ViewModels
@{
    ViewData["Title"] = "Alertas de Cobranza";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Mora")!;
    var listReturnUrl = Context.Request.Path + Context.Request.QueryString;

    string? qTipo = Context.Request.Query["tipo"].FirstOrDefault();
    string? qPrioridad = Context.Request.Query["prioridad"].FirstOrDefault();
    string? qEstado = Context.Request.Query["estado"].FirstOrDefault();
}

<div class="container-fluid mora-page">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-bell-fill me-2"></i>Alertas de Cobranza</h2>
        <a href="@backUrl" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Volver al Dashboard
        </a>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" asp-action="Alertas" id="filtrosForm">
                <input type="hidden" name="returnUrl" value="@returnUrl" />
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Tipo de Alerta</label>
                        <select name="tipo" class="form-select" data-auto-submit="true">
                            <option value="">Todas</option>
                            <option value="1" selected="@(qTipo == "1")">Cuota Vencida</option>
                            <option value="2" selected="@(qTipo == "2")">Próximo Vencimiento</option>
                            <option value="3" selected="@(qTipo == "3")">Mora Elevada</option>
                            <option value="4" selected="@(qTipo == "4")">Cliente Riesgo</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Prioridad</label>
                        <select name="prioridad" class="form-select" data-auto-submit="true">
                            <option value="">Todas</option>
                            <option value="1" selected="@(qPrioridad == "1")">Baja</option>
                            <option value="2" selected="@(qPrioridad == "2")">Media</option>
                            <option value="3" selected="@(qPrioridad == "3")">Alta</option>
                            <option value="4" selected="@(qPrioridad == "4")">Crítica</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Estado</label>
                        <select name="estado" class="form-select" data-auto-submit="true">
                            <option value="">Todas</option>
                            <option value="noLeidas" selected="@(qEstado == "noLeidas")">No Leídas</option>
                            <option value="leidas" selected="@(qEstado == "leidas")">Leídas</option>
                            <option value="noResueltas" selected="@(qEstado == "noResueltas")">No Resueltas</option>
                            <option value="resueltas" selected="@(qEstado == "resueltas")">Resueltas</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cliente</label>
                        <input type="text" name="cliente" class="form-control" placeholder="Buscar cliente..." value="@ViewBag.ClienteFiltro">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>Filtrar
                        </button>
                        <a asp-action="Alertas" asp-route-returnUrl="@returnUrl" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-2"></i>Limpiar Filtros
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resumen de Alertas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-danger shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Críticas</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Prioridad == PrioridadAlerta.Critica && !a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-exclamation-triangle-fill fs-2 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Media Prioridad</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Prioridad == PrioridadAlerta.Media && !a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-exclamation-circle-fill fs-2 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-info shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Baja Prioridad</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Prioridad == PrioridadAlerta.Baja && !a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-info-circle-fill fs-2 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow-sm">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0">Resueltas</h6>
                            <h3 class="mb-0">@Model.Count(a => a.Resuelta)</h3>
                        </div>
                        <i class="bi bi-check-circle-fill fs-2 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Alertas -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Listado de Alertas (@Model.Count())</h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                    <p class="text-muted mt-3">No hay alertas que mostrar</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th style="width: 50px;"></th>
                                <th>Tipo</th>
                                <th>Cliente</th>
                                <th>Título</th>
                                <th>Mensaje</th>
                                <th style="width: 100px;">Prioridad</th>
                                <th style="width: 120px;">Fecha</th>
                                <th style="width: 100px;">Estado</th>
                                <th style="width: 180px;">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alerta in Model.OrderByDescending(a => a.Prioridad).ThenByDescending(a => a.CreatedAt))
                            {
                                <tr class="@(!alerta.Leida ? "table-primary" : "") @(alerta.Resuelta ? "table-success" : "")">
                                    <td class="text-center">
                                        @if (!alerta.Leida)
                                        {
                                            <i class="bi bi-circle-fill text-primary" title="No leída"></i>
                                        }
                                        else if (alerta.Resuelta)
                                        {
                                            <i class="bi bi-check-circle-fill text-success" title="Resuelta"></i>
                                        }
                                    </td>
                                    <td>
                                        @switch (alerta.Tipo)
                                        {
                                            case TipoAlertaCobranza.CuotaVencida:
                                                <span class="badge bg-warning">Cuota Vencida</span>
                                                break;
                                            case TipoAlertaCobranza.ProximoVencimiento:
                                                <span class="badge bg-info">Próximo Vencimiento</span>
                                                break;
                                            case TipoAlertaCobranza.MoraElevada:
                                                <span class="badge bg-danger">Mora Elevada</span>
                                                break;
                                            case TipoAlertaCobranza.ClienteRiesgo:
                                                <span class="badge bg-dark">Cliente de Riesgo</span>
                                                break;
                                        }
                                    </td>
                                    <td>@alerta.ClienteNombre</td>
                                    <td><strong>@alerta.Titulo</strong></td>
                                    <td>@alerta.Mensaje</td>
                                    <td>
                                        @switch (alerta.Prioridad)
                                        {
                                            case PrioridadAlerta.Baja:
                                                <span class="badge bg-secondary">Baja</span>
                                                break;
                                            case PrioridadAlerta.Media:
                                                <span class="badge bg-warning">Media</span>
                                                break;
                                            case PrioridadAlerta.Alta:
                                                <span class="badge bg-danger">Alta</span>
                                                break;
                                            case PrioridadAlerta.Critica:
                                                <span class="badge bg-dark">Crítica</span>
                                                break;
                                        }
                                    </td>
                                    <td>@alerta.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        @if (alerta.Resuelta)
                                        {
                                            <span class="badge bg-success">Resuelta</span>
                                        }
                                        else if (alerta.Leida)
                                        {
                                            <span class="badge bg-info">Leída</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">Nueva</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            @if (!alerta.Leida)
                                            {
                                                <form asp-action="MarcarLeida" asp-route-id="@alerta.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="rowVersion" value="@(alerta.RowVersion != null ? Convert.ToBase64String(alerta.RowVersion) : "")" />
                                                    <input type="hidden" name="returnUrl" value="@listReturnUrl" />
                                                    <button type="submit" class="btn btn-outline-primary" title="Marcar como leída">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                </form>
                                            }
                                            @if (!alerta.Resuelta)
                                            {
                                                <form asp-action="Resolver" asp-route-id="@alerta.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="rowVersion" value="@(alerta.RowVersion != null ? Convert.ToBase64String(alerta.RowVersion) : "")" />
                                                    <input type="hidden" name="returnUrl" value="@listReturnUrl" />
                                                    <button type="submit" class="btn btn-outline-success" title="Resolver" data-confirm="¿Resolver esta alerta?">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                </form>
                                            }
                                            <a asp-controller="Credito" asp-action="Details" asp-route-id="@alerta.CreditoId" asp-route-returnUrl="@listReturnUrl" class="btn btn-outline-info" title="Ver Crédito">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/mora-alertas.js" asp-append-version="true"></script>
}