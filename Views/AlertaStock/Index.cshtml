@model TheBuryProject.ViewModels.PaginatedResult<TheBuryProject.ViewModels.AlertaStockViewModel>

@{
    ViewData["Title"] = "Alertas de Stock";
    var filtro = ViewBag.Filtro as TheBuryProject.ViewModels.AlertaStockFiltroViewModel;
    var tiposAlerta = ViewBag.TiposAlerta as TheBuryProject.Models.Enums.TipoAlertaStock[];
    var prioridades = ViewBag.Prioridades as TheBuryProject.Models.Enums.PrioridadAlerta[];
    var estados = ViewBag.Estados as TheBuryProject.Models.Enums.EstadoAlerta[];
    var returnUrl = $"{ViewContext.HttpContext.Request.Path}{ViewContext.HttpContext.Request.QueryString}";
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Alertas de stock</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-bell" aria-hidden="true"></i>
                <span>Gestión de alertas</span>
            </h1>
            <p class="text-muted small mb-0">
                Gestión de alertas automáticas de productos con stock bajo.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Pendientes" class="btn btn-warning btn-sm">
                <i class="bi bi-exclamation-triangle me-1" aria-hidden="true"></i>Pendientes
            </a>
            <a asp-action="Criticos" class="btn btn-danger btn-sm">
                <i class="bi bi-exclamation-octagon me-1" aria-hidden="true"></i>Productos críticos
            </a>
            <a asp-action="Estadisticas" class="btn btn-info btn-sm">
                <i class="bi bi-bar-chart me-1" aria-hidden="true"></i>Estadísticas
            </a>
            <form asp-action="GenerarAlertas" method="post" class="d-inline-block">
                @Html.AntiForgeryToken()
                <button type="submit"
                        class="btn btn-primary btn-sm"
                        data-confirm="¿Generar alertas de stock manualmente?">
                    <i class="bi bi-arrow-clockwise me-1" aria-hidden="true"></i>Generar alertas
                </button>
            </form>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card card-animate mb-3">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label" for="FiltroProductoCodigo">Código producto</label>
                        <input id="FiltroProductoCodigo"
                               type="text"
                               class="form-control"
                               name="ProductoCodigo"
                               value="@filtro?.ProductoCodigo"
                               placeholder="Buscar por código..." />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label" for="FiltroProductoNombre">Nombre producto</label>
                        <input id="FiltroProductoNombre"
                               type="text"
                               class="form-control"
                               name="ProductoNombre"
                               value="@filtro?.ProductoNombre"
                               placeholder="Buscar por nombre..." />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label" for="FiltroTipo">Tipo</label>
                        <select id="FiltroTipo" class="form-select" name="Tipo">
                            <option value="">Todos</option>
                            @if (tiposAlerta != null)
                            {
                                foreach (var tipo in tiposAlerta)
                                {
                                    var selected = (filtro?.Tipo == tipo) ? "selected" : null;
                                    <option value="@((int)tipo)" selected="@selected">@tipo</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label" for="FiltroPrioridad">Prioridad</label>
                        <select id="FiltroPrioridad" class="form-select" name="Prioridad">
                            <option value="">Todas</option>
                            @if (prioridades != null)
                            {
                                foreach (var prioridad in prioridades)
                                {
                                    var selected = (filtro?.Prioridad == prioridad) ? "selected" : null;
                                    <option value="@((int)prioridad)" selected="@selected">@prioridad</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label" for="FiltroEstado">Estado</label>
                        <select id="FiltroEstado" class="form-select" name="Estado">
                            <option value="">Todos</option>
                            @if (estados != null)
                            {
                                foreach (var estado in estados)
                                {
                                    var selected = (filtro?.Estado == estado) ? "selected" : null;
                                    <option value="@((int)estado)" selected="@selected">@estado</option>
                                }
                            }
                        </select>
                    </div>
                </div>

                <div class="row g-3 mt-2">
                    <div class="col-md-3">
                        <div class="form-check mt-4">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SoloUrgentes"
                                   value="true"
                                   id="soloUrgentes"
                                   @(filtro?.SoloUrgentes == true ? "checked" : "") />
                            <label class="form-check-label" for="soloUrgentes">
                                Solo urgentes
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-check mt-4">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="SoloVencidas"
                                   value="true"
                                   id="soloVencidas"
                                   @(filtro?.SoloVencidas == true ? "checked" : "") />
                            <label class="form-check-label" for="soloVencidas">
                                Solo vencidas (&gt; 7 días)
                            </label>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label visually-hidden" for="btnBuscar">Buscar</label>
                        <div class="d-grid">
                            <button id="btnBuscar" type="submit" class="btn btn-primary">
                                <i class="bi bi-search me-1" aria-hidden="true"></i>Buscar
                            </button>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label visually-hidden" for="btnLimpiar">Limpiar</label>
                        <div class="d-grid">
                            <a id="btnLimpiar" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Limpiar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Resultados -->
    @if (Model.TotalRecords == 0)
    {
        <div class="card card-animate border-0">
            <div class="card-body text-center py-5" role="status" aria-live="polite">
                <div class="mb-3">
                    <i class="bi bi-check-circle text-success fs-1" aria-hidden="true"></i>
                </div>
                <h2 class="h5 mb-2">No hay alertas de stock</h2>
                <p class="text-muted mb-0">
                    No se encontraron alertas con los filtros especificados.
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="card card-animate">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>@Model.TotalRecords</strong> alertas encontradas
                    <span class="text-muted small">
                        (Mostrando @Model.FirstRecord - @Model.LastRecord)
                    </span>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <caption class="visually-hidden">Listado de alertas de stock</caption>
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Producto</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Prioridad</th>
                                <th scope="col">Stock</th>
                                <th scope="col">Reposición</th>
                                <th scope="col">Fecha</th>
                                <th scope="col">Estado</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var alerta in Model.Items)
                            {
                                var rowClass = "";
                                if (alerta.NotificacionUrgente)
                                {
                                    rowClass = "table-danger";
                                }
                                else if (alerta.EstaVencida)
                                {
                                    rowClass = "table-warning";
                                }

                                <tr class="@rowClass">
                                    <td>
                                        <div class="fw-semibold">@alerta.ProductoCodigo</div>
                                        <div class="small text-muted">@alerta.ProductoNombre</div>
                                        <div class="mt-1">
                                            <span class="badge bg-secondary">@alerta.CategoriaNombre</span>
                                        </div>
                                    </td>

                                    <td>
                                        <span class="badge @alerta.BadgeTipo">
                                            <i class="@alerta.IconoTipo" aria-hidden="true"></i> @alerta.TipoDescripcion
                                        </span>
                                    </td>

                                    <td>
                                        <span class="badge @alerta.BadgePrioridad">
                                            @alerta.PrioridadDescripcion
                                        </span>
                                    </td>

                                    <td>
                                        <div class="fw-semibold">
                                            @alerta.StockActual / @alerta.StockMinimo
                                        </div>
                                        <small class="text-muted">
                                            @alerta.PorcentajeStockMinimo.ToString("N0")%
                                        </small>
                                    </td>

                                    <td>
                                        @if (alerta.CantidadSugeridaReposicion.HasValue)
                                        {
                                            <span class="badge bg-info">
                                                +@alerta.CantidadSugeridaReposicion.Value.ToString("N0") u.
                                            </span>
                                        }
                                    </td>

                                    <td>
                                        <small>
                                            <time datetime="@alerta.FechaAlerta.ToString("yyyy-MM-ddTHH:mm:ss")">
                                                @alerta.FechaAlerta.ToString("dd/MM/yyyy HH:mm")
                                            </time>
                                        </small>
                                        <br />
                                        @if (alerta.EstaVencida)
                                        {
                                            <small class="text-danger">
                                                <i class="bi bi-clock me-1" aria-hidden="true"></i>Vencida (@alerta.DiasDesdeAlerta días)
                                            </small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">
                                                Hace @alerta.DiasDesdeAlerta día(s)
                                            </small>
                                        }
                                    </td>

                                    <td>
                                        <span class="badge @alerta.BadgeEstado">
                                            @alerta.EstadoDescripcion
                                        </span>
                                    </td>

                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de la alerta">
                                            <a asp-controller="Producto"
                                               asp-action="Details"
                                               asp-route-id="@alerta.ProductoId"
                                               class="btn btn-outline-info"
                                               title="Ver producto"
                                               aria-label="Ver producto">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                                <span class="visually-hidden">Ver producto</span>
                                            </a>

                                            @if (alerta.Estado == TheBuryProject.Models.Enums.EstadoAlerta.Pendiente)
                                            {
                                                <form asp-action="Resolver" asp-route-id="@alerta.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                                    @if (alerta.RowVersion != null)
                                                    {
                                                        <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(alerta.RowVersion)" />
                                                    }
                                                    <button type="submit"
                                                            class="btn btn-outline-success"
                                                            data-prompt="@($"Resolver alerta de \"{alerta.ProductoNombre}\".\\n\\nObservaciones (opcional):")"
                                                            data-prompt-name="observaciones"
                                                            title="Resolver"
                                                            aria-label="Resolver alerta">
                                                        <i class="bi bi-check-circle" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Resolver alerta</span>
                                                    </button>
                                                </form>

                                                <form asp-action="Ignorar" asp-route-id="@alerta.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                                                    @if (alerta.RowVersion != null)
                                                    {
                                                        <input type="hidden" name="rowVersion" value="@Convert.ToBase64String(alerta.RowVersion)" />
                                                    }
                                                    <button type="submit"
                                                            class="btn btn-outline-secondary"
                                                            data-confirm="@($"¿Ignorar alerta de \"{alerta.ProductoNombre}\"?")"
                                                            data-prompt="Motivo (opcional):"
                                                            data-prompt-name="observaciones"
                                                            title="Ignorar"
                                                            aria-label="Ignorar alerta">
                                                        <i class="bi bi-x-circle" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Ignorar alerta</span>
                                                    </button>
                                                </form>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            @if (Model.TotalPages > 1)
            {
                <div class="card-footer">
                    <nav aria-label="Paginación de alertas">
                        <ul class="pagination pagination-sm mb-0 justify-content-center">
                            <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-ProductoCodigo="@filtro?.ProductoCodigo"
                                   asp-route-ProductoNombre="@filtro?.ProductoNombre"
                                   asp-route-Tipo="@(filtro?.Tipo != null ? (int)filtro.Tipo : (int?)null)"
                                   asp-route-Prioridad="@(filtro?.Prioridad != null ? (int)filtro.Prioridad : (int?)null)"
                                   asp-route-Estado="@(filtro?.Estado != null ? (int)filtro.Estado : (int?)null)"
                                   asp-route-SoloUrgentes="@(filtro?.SoloUrgentes == true ? "true" : (string?)null)"
                                   asp-route-SoloVencidas="@(filtro?.SoloVencidas == true ? "true" : (string?)null)"
                                   asp-route-PageNumber="@(Model.PageNumber - 1)"
                                   aria-disabled="@(Model.HasPreviousPage ? "false" : "true")"
                                   tabindex="@(Model.HasPreviousPage ? "0" : "-1")">
                                    Anterior
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages && i <= 10; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link"
                                       asp-action="Index"
                                       asp-route-ProductoCodigo="@filtro?.ProductoCodigo"
                                       asp-route-ProductoNombre="@filtro?.ProductoNombre"
                                       asp-route-Tipo="@(filtro?.Tipo != null ? (int)filtro.Tipo : (int?)null)"
                                       asp-route-Prioridad="@(filtro?.Prioridad != null ? (int)filtro.Prioridad : (int?)null)"
                                       asp-route-Estado="@(filtro?.Estado != null ? (int)filtro.Estado : (int?)null)"
                                       asp-route-SoloUrgentes="@(filtro?.SoloUrgentes == true ? "true" : (string?)null)"
                                       asp-route-SoloVencidas="@(filtro?.SoloVencidas == true ? "true" : (string?)null)"
                                       asp-route-PageNumber="@i"
                                       aria-current="@(i == Model.PageNumber ? "page" : (string?)null)">
                                        @i
                                    </a>
                                </li>
                            }

                            <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-ProductoCodigo="@filtro?.ProductoCodigo"
                                   asp-route-ProductoNombre="@filtro?.ProductoNombre"
                                   asp-route-Tipo="@(filtro?.Tipo != null ? (int)filtro.Tipo : (int?)null)"
                                   asp-route-Prioridad="@(filtro?.Prioridad != null ? (int)filtro.Prioridad : (int?)null)"
                                   asp-route-Estado="@(filtro?.Estado != null ? (int)filtro.Estado : (int?)null)"
                                   asp-route-SoloUrgentes="@(filtro?.SoloUrgentes == true ? "true" : (string?)null)"
                                   asp-route-SoloVencidas="@(filtro?.SoloVencidas == true ? "true" : (string?)null)"
                                   asp-route-PageNumber="@(Model.PageNumber + 1)"
                                   aria-disabled="@(Model.HasNextPage ? "false" : "true")"
                                   tabindex="@(Model.HasNextPage ? "0" : "-1")">
                                    Siguiente
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            }
        </div>
    }
</section>

@*
MEJORAS (solo HTML/markup):
- Labels asociados con for/id en inputs/selects (mejor accesibilidad).
- Tabla: caption + th scope="col" + <time datetime="...">.
- Botones solo-ícono con aria-label.
- Paginación con aria-current, aria-disabled y tabindex en disabled.
- Clase visually-hidden usada para etiquetas no visibles (Bootstrap). 
*@
