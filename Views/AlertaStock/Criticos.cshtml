@model List<TheBuryProject.ViewModels.ProductoCriticoViewModel>

@{
    ViewData["Title"] = "Productos Críticos";
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Alertas</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <span>Productos en estado crítico</span>
            </h1>
            <p class="text-muted small mb-0">
                Productos con stock agotado o en nivel crítico que requieren atención inmediata.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Volver a alertas
            </a>

            <form asp-action="GenerarAlertas" method="post" class="d-inline-block">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="bi bi-arrow-clockwise me-1"></i>Actualizar
                </button>
            </form>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card card-animate border-0">
            <div class="card-body text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h2 class="h5 mb-2">No hay productos en estado crítico</h2>
                <p class="text-muted mb-0">
                    Todos los productos tienen un stock adecuado en este momento.
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show mb-3">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Atención:</strong>
            Hay <strong>@Model.Count</strong> producto(s) en estado crítico que requieren reposición urgente.
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>

        <!-- Tarjetas de productos críticos -->
        <div class="row g-3">
            @foreach (var producto in Model
                    .OrderBy(p => p.StockActual)
                    .ThenByDescending(p => p.DiasDesdeUltimaVenta))
            {
                var porcentajeStock = producto.StockMinimo > 0
                ? (decimal)producto.StockActual / producto.StockMinimo * 100m
                : 0m;

                var cardClass = producto.StockActual <= 0
                ? "border-danger bg-danger bg-opacity-10"
                : "border-warning bg-warning bg-opacity-10";

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card card-animate h-100 @cardClass">
                        <div class="card-header @(producto.StockActual <= 0 ? "bg-danger text-white" : "bg-warning")">
                            <div class="d-flex justify-content-between align-items-center">
                                <strong class="d-flex align-items-center gap-1">
                                    @if (producto.StockActual <= 0)
                                    {
                                        <i class="bi bi-exclamation-octagon-fill"></i>
                                        <span>Agotado</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                        <span>Crítico</span>
                                    }
                                </strong>
                                <span class="badge bg-dark">
                                    @porcentajeStock.ToString("N0")% del mínimo
                                </span>
                            </div>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title mb-1">
                                <span class="badge bg-secondary">@producto.Codigo</span>
                            </h5>
                            <h6 class="card-subtitle mb-2">@producto.Nombre</h6>

                            <p class="text-muted mb-3">
                                <small>
                                    <i class="bi bi-tag"></i> @producto.CategoriaNombre
                                    @if (!string.IsNullOrEmpty(producto.MarcaNombre))
                                    {
                                        <span> · @producto.MarcaNombre</span>
                                    }
                                </small>
                            </p>

                            <hr />

                            <div class="row text-center mb-3">
                                <div class="col-4">
                                    <small class="text-muted d-block">Stock actual</small>
                                    <h3 class="mb-0 @(producto.StockActual <= 0 ? "text-danger" : "text-warning")">
                                        @producto.StockActual.ToString("N0")
                                    </h3>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block">Mínimo</small>
                                    <h3 class="mb-0 text-secondary">
                                        @producto.StockMinimo.ToString("N0")
                                    </h3>
                                </div>
                                <div class="col-4">
                                    <small class="text-muted d-block">Faltante</small>
                                    <h3 class="mb-0 text-danger">
                                        @((producto.StockMinimo - producto.StockActual).ToString("N0"))
                                    </h3>
                                </div>
                            </div>

                            @if (producto.CantidadSugeridaReposicion > 0)
                            {
                                <div class="alert alert-info mb-3">
                                    <div class="d-flex gap-2 align-items-start">
                                        <i class="bi bi-lightbulb mt-1"></i>
                                        <div>
                                            <strong>Reposición sugerida</strong>
                                            <h4 class="mb-0 mt-2">
                                                +@producto.CantidadSugeridaReposicion.Value.ToString("N0") unidades
                                            </h4>
                                            <small class="text-muted">
                                                Stock objetivo: @((producto.StockMinimo * 3).ToString("N0")) unidades.
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            }

                            <div class="mb-3">
                                <small class="text-muted d-block">
                                    <i class="bi bi-cash-coin"></i>
                                    <strong>Precio compra:</strong>
                                    $@producto.PrecioCompra.ToString("N2")
                                </small>
                                <small class="text-muted d-block">
                                    <i class="bi bi-tag"></i>
                                    <strong>Precio venta:</strong>
                                    $@producto.PrecioVenta.ToString("N2")
                                </small>
                            </div>

                            @if (producto.UltimaVenta.HasValue)
                            {
                                var alertaClase = producto.DiasDesdeUltimaVenta > 30 ? "warning" : "secondary";
                                var textoClase = producto.DiasDesdeUltimaVenta > 30 ? "text-danger" : "";

                                <div class="alert alert-@alertaClase mb-3">
                                    <small>
                                        <i class="bi bi-clock-history"></i>
                                        <strong>Última venta:</strong>
                                        @producto.UltimaVenta.Value.ToString("dd/MM/yyyy")<br />
                                        <span class="@textoClase">
                                            Hace @producto.DiasDesdeUltimaVenta día(s)
                                        </span>
                                    </small>
                                </div>
                            }

                            @if (producto.AlertasPendientes > 0)
                            {
                                <div class="alert alert-danger mb-0">
                                    <i class="bi bi-bell-fill me-1"></i>
                                    <strong>@producto.AlertasPendientes</strong> alerta(s) pendiente(s)
                                </div>
                            }
                        </div>

                        <div class="card-footer bg-transparent border-0 pt-0 pb-3 px-3">
                            <div class="btn-group w-100" role="group">
                                <a asp-controller="Producto" asp-action="Details" asp-route-id="@producto.Id"
                                   class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                                <a asp-controller="Producto" asp-action="Edit" asp-route-id="@producto.Id"
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Editar stock
                                </a>
                                <a asp-action="PorProducto" asp-route-id="@producto.Id"
                                   class="btn btn-sm btn-outline-warning">
                                    <i class="bi bi-list-ul"></i> Alertas
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Resumen -->
        <div class="card card-animate mt-4">
            <div class="card-body">
                <h2 class="h6 mb-4 d-flex align-items-center gap-2">
                    <span>Resumen</span>
                </h2>
                <div class="row text-center g-3">
                    <div class="col-6 col-md-3">
                        <h3 class="text-danger mb-1">
                            @Model.Count(p => p.StockActual <= 0)
                        </h3>
                        <small class="text-muted d-block">Productos agotados</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <h3 class="text-warning mb-1">
                            @Model.Count(p => p.StockActual > 0)
                        </h3>
                        <small class="text-muted d-block">Stock crítico</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <h3 class="text-info mb-1">
                            @Model.Sum(p => p.CantidadSugeridaReposicion ?? 0).ToString("N0")
                        </h3>
                        <small class="text-muted d-block">Unidades sugeridas</small>
                    </div>
                    <div class="col-6 col-md-3">
                        <h3 class="text-primary mb-1">
                            $@Model.Sum(p => (p.CantidadSugeridaReposicion ?? 0) * p.PrecioCompra).ToString("N2")
                        </h3>
                        <small class="text-muted d-block">Inversión estimada</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
