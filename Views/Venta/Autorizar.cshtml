@model TheBuryProject.ViewModels.VentaViewModel
@{
    ViewData["Title"] = "Autorizar Venta";
}

<section class="container-fluid px-0">
    <div class="col-lg-8 mx-auto">
        <!-- Encabezado -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0"><i class="bi bi-check-circle text-success me-2"></i> Autorizar Venta</h2>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <!-- Alerta -->
        <div class="alert alert-warning border-0">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Atención:</strong> Está por autorizar una venta que excede el límite de crédito del cliente.
        </div>

        <!-- Datos de la venta -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-surface-soft border-bottom border-dark-subtle">
                <h5 class="mb-0 text-success"><i class="bi bi-receipt me-2"></i> Datos de la Venta</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">Número:</dt>
                    <dd class="col-sm-8">@Model.Numero</dd>

                    <dt class="col-sm-4 text-muted">Cliente:</dt>
                    <dd class="col-sm-8">@Model.ClienteNombre (@Model.ClienteDocumento)</dd>

                    <dt class="col-sm-4 text-muted">Fecha:</dt>
                    <dd class="col-sm-8">@Model.FechaVenta.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4 text-muted">Tipo de Pago:</dt>
                    <dd class="col-sm-8">@Model.TipoPago</dd>

                    <dt class="col-sm-4 text-muted">Total:</dt>
                    <dd class="col-sm-8 fw-semibold text-success">@Model.Total.ToString("C2")</dd>
                </dl>

                @if (!string.IsNullOrEmpty(Model.MotivoAutorizacion))
                {
                    <div class="alert alert-info mt-3 mb-0">
                        <strong>Motivo de la solicitud:</strong><br />
                        @Model.MotivoAutorizacion
                    </div>
                }

                @if (Model.FechaSolicitudAutorizacion.HasValue)
                {
                    <p class="text-muted small mt-2 mb-0">
                        Solicitada por: <strong>@Model.UsuarioSolicita</strong><br />
                        Fecha: @Model.FechaSolicitudAutorizacion.Value.ToString("dd/MM/yyyy HH:mm")
                    </p>
                }
            </div>
        </div>

        <!-- Productos -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-surface-soft border-bottom border-dark-subtle">
                <h5 class="mb-0 text-info"><i class="bi bi-box-seam me-2"></i> Productos</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Precio</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.ProductoCodigo - @detalle.ProductoNombre</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">@detalle.PrecioUnitario.ToString("C2")</td>
                                    <td class="text-end">@detalle.Subtotal.ToString("C2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Formulario -->
        <form asp-action="Autorizar" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-surface-soft border-bottom border-dark-subtle">
                    <h5 class="mb-0 text-success"><i class="bi bi-chat-left-text me-2"></i> Observaciones</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="motivo" class="form-label fw-semibold">Observaciones de Autorización</label>
                        <textarea id="motivo" name="motivo" class="form-control" rows="3" required
                                  placeholder="Ingrese el motivo de la autorización"></textarea>
                        <div class="form-text">Este campo es obligatorio para autorizar la venta.</div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-check-lg"></i> Autorizar Venta
                </button>
            </div>
        </form>
    </div>
</section>
