@model List<TheBuryProject.ViewModels.VentaViewModel>
@using System.Linq

@{
    ViewData["Title"] = "Ventas y Cotizaciones";
    var filter = ViewBag.Filter as TheBuryProject.ViewModels.VentaFilterViewModel;
}

    <section class="container-fluid px-0">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0">
                <i class="bi bi-cart-check me-2 text-primary"></i> Ventas y Cotizaciones
            </h2>
            <div class="btn-group">
                <a asp-action="Cotizar" class="btn btn-outline-info">
                    <i class="bi bi-file-earmark-text"></i> Cotizar
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Nueva Venta
                </a>
            </div>
        </div>

        <!-- Filtros -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center bg-surface-soft">
                <h5 class="mb-0"><i class="bi bi-funnel"></i> Filtros</h5>
                <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosCollapse">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>

            <div class="collapse" id="filtrosCollapse">
                <div class="card-body">
                    <form asp-action="Index" method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Cliente</label>
                            <select name="ClienteId" class="form-select" asp-items="ViewBag.Clientes">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Número</label>
                            <input type="text" name="Numero" class="form-control" value="@filter?.Numero">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Desde</label>
                            <input type="date" name="FechaDesde" class="form-control" value="@filter?.FechaDesde?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Hasta</label>
                            <input type="date" name="FechaHasta" class="form-control" value="@filter?.FechaHasta?.ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Estado</label>
                            <select name="Estado" class="form-select" asp-items="ViewBag.Estados">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Tipo Pago</label>
                            <select name="TipoPago" class="form-select" asp-items="ViewBag.TiposPago">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Autorización</label>
                            <select name="EstadoAutorizacion" class="form-select" asp-items="ViewBag.EstadosAutorizacion">
                                <option value="">Todos</option>
                            </select>
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="bi bi-search"></i> Buscar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Limpiar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Alertas -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Warning"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Tabla -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Número</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Estado</th>
                                <th>Autorización</th>
                                <th>Tipo Pago</th>
                                <th class="text-end">Total</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var venta in Model)
                                {
                                    <tr>
                                        <td><strong>@venta.Numero</strong></td>
                                        <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                        <td>
                                            <div>@venta.ClienteNombre</div>
                                            <small class="text-muted">@venta.ClienteDocumento</small>
                                        </td>
                                        <td>
                                            @switch (venta.Estado)
                                            {
                                                case TheBuryProject.Models.Enums.EstadoVenta.Cotizacion:
                                                    <span class="badge bg-secondary">Cotización</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoVenta.Presupuesto:
                                                    <span class="badge bg-info">Presupuesto</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoVenta.Confirmada:
                                                    <span class="badge bg-primary">Confirmada</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoVenta.Facturada:
                                                    <span class="badge bg-success">Facturada</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoVenta.Entregada:
                                                    <span class="badge bg-dark">Entregada</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoVenta.Cancelada:
                                                    <span class="badge bg-danger">Cancelada</span>
                                                    ; break;
                                            }
                                        </td>
                                        <td>
                                            @switch (venta.EstadoAutorizacion)
                                            {
                                                case TheBuryProject.Models.Enums.EstadoAutorizacionVenta.NoRequiere:
                                                    <span class="badge bg-dark text-light">No Requiere</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoAutorizacionVenta.PendienteAutorizacion:
                                                    <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Pendiente</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoAutorizacionVenta.Autorizada:
                                                    <span class="badge bg-success"><i class="bi bi-check-circle"></i> Autorizada</span>
                                                    ; break;
                                                case TheBuryProject.Models.Enums.EstadoAutorizacionVenta.Rechazada:
                                                    <span class="badge bg-danger"><i class="bi bi-x-circle"></i> Rechazada</span>
                                                    ; break;
                                            }
                                        </td>
                                        <td><small>@venta.TipoPago</small></td>
                                        <td class="text-end"><strong>@venta.Total.ToString("C2")</strong></td>
                                        <td class="text-center">
                                            <div class="btn-group btn-group-sm">
                                                <a asp-action="Details" asp-route-id="@venta.Id" class="btn btn-outline-primary" title="Ver Detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                @if (venta.EstadoAutorizacion == TheBuryProject.Models.Enums.EstadoAutorizacionVenta.PendienteAutorizacion)
                                                {
                                                    <a asp-action="Autorizar" asp-route-id="@venta.Id" class="btn btn-outline-success" title="Autorizar">
                                                        <i class="bi bi-check-lg"></i>
                                                    </a>
                                                    <a asp-action="Rechazar" asp-route-id="@venta.Id" class="btn btn-outline-danger" title="Rechazar">
                                                        <i class="bi bi-x-lg"></i>
                                                    </a>
                                                }
                                                @if (venta.Estado == TheBuryProject.Models.Enums.EstadoVenta.Cotizacion ||
                                                                                        venta.Estado == TheBuryProject.Models.Enums.EstadoVenta.Presupuesto)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@venta.Id" class="btn btn-outline-warning" title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-5">
                                        <i class="bi bi-inbox display-6"></i>
                                        <p class="mt-2 mb-0">No se encontraron registros</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3 text-end text-muted">
            <small><i class="bi bi-info-circle"></i> Total de registros: <strong>@Model.Count</strong></small>
        </div>
    </section>
