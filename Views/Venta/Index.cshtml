@model List<TheBuryProject.ViewModels.VentaViewModel>
@using System.Linq

@{
    ViewData["Title"] = "Ventas y Cotizaciones";
    ViewData["PageTitle"] = "Ventas y Cotizaciones";
    ViewData["PageSubtitle"] = "Gestioná cotizaciones, confirmaciones y facturación";
    var filter = ViewBag.Filter as TheBuryProject.ViewModels.VentaFilterViewModel;
}

@section Styles {
    <link rel="stylesheet" href="~/css/venta.css" asp-append-version="true" />
}

@Html.AntiForgeryToken()

<section class="container-fluid py-4 text-light venta-section">
    <div class="row g-3">
        <div class="col-12">
            <div class="venta-header d-flex flex-wrap justify-content-between align-items-center gap-3">
                <div>
                    <h2 class="mb-1"><i class="bi bi-cart-check me-2 text-primary"></i> Ventas y Cotizaciones</h2>
                    <p class="mb-0 text-muted">Filtrá, consultá y accedé rápidamente a las acciones principales.</p>
                </div>
                <div class="btn-group">
                    @* Botón Configurar Pagos - requiere permiso configuraciones.view *@
                    @if (User.TienePermiso("configuraciones", "view"))
                    {
                        <button type="button" class="btn btn-outline-warning" id="btnConfigPago">
                            <i class="bi bi-gear"></i> Configurar recargos / descuentos
                        </button>
                    }

                    @* Botón Cotizar - requiere permiso ventas.create *@
                    @if (User.TienePermiso("ventas", "create"))
                    {
                        <a asp-action="Cotizar" class="btn btn-outline-info">
                            <i class="bi bi-file-earmark-text"></i> Cotizar
                        </a>
                    }

                    @* Botón Nueva Venta - requiere permiso ventas.create + caja abierta *@
                    @if (User.TienePermiso("ventas", "create"))
                    {
                        @if ((ViewBag.PuedeCrearVenta as bool?) == true)
                        {
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Nueva Venta
                            </a>
                        }
                        else
                        {
                            <button type="button" class="btn btn-primary" disabled title="Debe abrir una caja para registrar una venta.">
                                <i class="bi bi-plus-circle"></i> Nueva Venta
                            </button>
                        }
                    }
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card bg-dark border-0 shadow-sm mb-2">
                <div class="card-header bg-secondary text-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-funnel me-2"></i> Filtros</h5>
                    <button class="btn btn-sm btn-outline-light filter-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosCollapse">
                        <i class="bi bi-sliders"></i>
                    </button>
        </div>

        <div class="collapse show" id="filtrosCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get" class="row g-3 align-items-end">
                    <div class="col-md-3">
                        <label class="form-label" for="clienteFiltro">Cliente</label>
                        <select id="clienteFiltro" name="ClienteId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Clientes">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" for="numeroFiltro">Número</label>
                        <input id="numeroFiltro" type="text" name="Numero" class="form-control bg-body-secondary text-light border-0" value="@filter?.Numero" placeholder="Ej: VTA-001" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" for="desdeFiltro">Desde</label>
                        <input id="desdeFiltro" type="date" name="FechaDesde" class="form-control bg-body-secondary text-light border-0" value="@filter?.FechaDesde?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label" for="hastaFiltro">Hasta</label>
                        <input id="hastaFiltro" type="date" name="FechaHasta" class="form-control bg-body-secondary text-light border-0" value="@filter?.FechaHasta?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="estadoFiltro">Estado</label>
                        <select id="estadoFiltro" name="Estado" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Estados">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="tipoPagoFiltro">Tipo Pago</label>
                        <select id="tipoPagoFiltro" name="TipoPago" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.TiposPago">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" for="autorizacionFiltro">Autorización</label>
                        <select id="autorizacionFiltro" name="EstadoAutorizacion" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.EstadosAutorizacion">
                            <option value="">Todos</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-x-circle"></i> Limpiar
                        </a>
                    </div>
                </form>
            </div>
        </div>
            </div>
        </div>

        <div class="col-12">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Warning"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
        </div>

        <div class="col-12">
            <div class="card bg-dark border-0 shadow-sm table-card">
                <div class="card-header bg-secondary text-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-list-check me-2"></i> Listado</h5>
                    <span class="badge badge-soft"><i class="bi bi-collection"></i> @Model.Count registros</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle mb-0">
                            <thead class="table-secondary text-dark">
                                <tr>
                                    <th>Número</th>
                                    <th>Fecha</th>
                                    <th>Cliente</th>
                                    <th>Estado</th>
                                    <th>Autorización</th>
                                    <th>Tipo Pago</th>
                                    <th class="text-end">Total</th>
                                    <th class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var venta in Model)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@venta.Numero</td>
                                            <td>@venta.FechaVenta.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <div>@venta.ClienteNombre</div>
                                                <small class="text-muted">@venta.ClienteDocumento</small>
                                            </td>
                                            <td>
                                                <span class="@venta.EstadoBadgeClass">@venta.EstadoDisplay</span>
                                            </td>
                                            <td>
                                                <span class="@venta.EstadoAutorizacionBadgeClass">
                                                    @if (!string.IsNullOrEmpty(venta.EstadoAutorizacionIconClass))
                                                    {
                                                        <i class="@venta.EstadoAutorizacionIconClass"></i>
                                                    }
                                                    @venta.EstadoAutorizacionDisplay
                                                </span>
                                            </td>
                                            <td><small class="text-muted">@venta.TipoPago</small></td>
                                            <td class="text-end fw-semibold">@venta.Total.ToString("C2")</td>
                                            <td class="text-center">
                                                <div class="btn-group btn-group-sm">
                                                    @* Ver Detalles - requiere ventas.view *@
                                                    @if (User.TienePermiso("ventas", "view"))
                                                    {
                                                        <a asp-action="Details" asp-route-id="@venta.Id" class="btn btn-outline-light" title="Ver Detalles">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    }

                                                    @* Autorizar/Rechazar - requiere ventas.authorize + lógica de negocio *@
                                                    @if (venta.PuedeAutorizar && User.TienePermiso("ventas", "authorize"))
                                                    {
                                                        <a asp-action="Autorizar" asp-route-id="@venta.Id" class="btn btn-outline-success" title="Autorizar">
                                                            <i class="bi bi-check-lg"></i>
                                                        </a>
                                                    }
                                                    @if (venta.PuedeAutorizar && User.TienePermiso("ventas", "reject"))
                                                    {
                                                        <a asp-action="Rechazar" asp-route-id="@venta.Id" class="btn btn-outline-danger" title="Rechazar">
                                                            <i class="bi bi-x-lg"></i>
                                                        </a>
                                                    }

                                                    @* Editar - requiere ventas.update + lógica de negocio *@
                                                    @if (venta.PuedeEditar && User.TienePermiso("ventas", "update"))
                                                    {
                                                        <a asp-action="Edit" asp-route-id="@venta.Id" class="btn btn-outline-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center table-empty py-5">
                                            <i class="bi bi-inbox display-6"></i>
                                            <p class="mt-2 mb-0">No se encontraron registros</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Modals {
    <!-- Modal de configuración de pagos -->
    <div class="modal fade" id="modalConfigPago" tabindex="-1" aria-labelledby="modalConfigPagoLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content bg-dark text-light">
                <div class="modal-header bg-secondary border-0">
                    <h5 class="modal-title" id="modalConfigPagoLabel">
                        <i class="bi bi-gear me-2"></i>Configurar Recargos / Descuentos por Tipo de Pago
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="configPagoContent">
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-3">Cargando configuraciones...</p>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bg-secondary border-0">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </button>
                    <button type="button" class="btn btn-primary" id="btnGuardarConfig">
                        <i class="bi bi-save"></i> Guardar Configuración
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script src="~/js/venta-config-pago.js" asp-append-version="true"></script>
}
