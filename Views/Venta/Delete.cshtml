@model TheBuryProject.ViewModels.VentaViewModel

@{
    ViewData["Title"] = "Eliminar Venta";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-trash"></i> Eliminar Venta</h2>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>¿Está seguro de que desea eliminar esta venta?</strong>
            <p class="mb-0">Esta acción no se puede deshacer.</p>
        </div>

        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Datos de la Venta</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Número:</dt>
                    <dd class="col-sm-9">@Model.Numero</dd>

                    <dt class="col-sm-3">Fecha:</dt>
                    <dd class="col-sm-9">@Model.FechaVenta.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3">Cliente:</dt>
                    <dd class="col-sm-9">@Model.ClienteNombre</dd>

                    <dt class="col-sm-3">Estado:</dt>
                    <dd class="col-sm-9">@Model.Estado</dd>

                    <dt class="col-sm-3">Tipo de Pago:</dt>
                    <dd class="col-sm-9">@Model.TipoPago</dd>

                    <dt class="col-sm-3">Total:</dt>
                    <dd class="col-sm-9"><strong>@Model.Total.ToString("C")</strong></dd>
                </dl>

                <hr />

                <h6>Productos:</h6>
                <ul>
                    @foreach (var detalle in Model.Detalles)
                    {
                        <li>@detalle.ProductoNombre - Cant: @detalle.Cantidad - @detalle.Subtotal.ToString("C")</li>
                    }
                </ul>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
</div>