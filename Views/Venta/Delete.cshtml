@model TheBuryProject.ViewModels.VentaViewModel
@{
    ViewData["Title"] = "Eliminar Venta";
}

<section class="container-fluid px-0">
    <div class="col-lg-8 mx-auto">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="mb-0"><i class="bi bi-trash text-danger me-2"></i> Eliminar Venta</h2>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <!-- Alerta principal -->
        <div class="alert alert-warning border-0">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>¿Está seguro de eliminar esta venta?</strong>
            <p class="mb-0">Esta acción es permanente y no se puede deshacer.</p>
        </div>

        <!-- Datos de la venta -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-surface-soft border-bottom border-dark-subtle">
                <h5 class="mb-0 text-danger"><i class="bi bi-receipt me-2"></i> Detalles de la Venta</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted">Número:</dt>
                    <dd class="col-sm-9">@Model.Numero</dd>

                    <dt class="col-sm-3 text-muted">Fecha:</dt>
                    <dd class="col-sm-9">@Model.FechaVenta.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-3 text-muted">Cliente:</dt>
                    <dd class="col-sm-9">@Model.ClienteNombre</dd>

                    <dt class="col-sm-3 text-muted">Estado:</dt>
                    <dd class="col-sm-9">
                        <span class="badge 
                            @(Model.Estado switch {
                                TheBuryProject.Models.Enums.EstadoVenta.Cotizacion => "bg-light text-dark",
                                TheBuryProject.Models.Enums.EstadoVenta.Presupuesto => "bg-info",
                                TheBuryProject.Models.Enums.EstadoVenta.Confirmada => "bg-success",
                                TheBuryProject.Models.Enums.EstadoVenta.Facturada => "bg-warning text-dark",
                                TheBuryProject.Models.Enums.EstadoVenta.Cancelada => "bg-danger",
                                _ => "bg-secondary"
                            })">
                            @Model.Estado
                        </span>
                    </dd>

                    <dt class="col-sm-3 text-muted">Tipo de Pago:</dt>
                    <dd class="col-sm-9">@Model.TipoPago</dd>

                    <dt class="col-sm-3 text-muted">Total:</dt>
                    <dd class="col-sm-9 fw-semibold text-success">@Model.Total.ToString("C")</dd>
                </dl>

                <hr class="my-3 border-secondary" />

                <h6 class="fw-semibold text-info mb-2"><i class="bi bi-box-seam me-2"></i> Productos</h6>
                <div class="table-responsive">
                    <table class="table table-sm table-hover align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Producto</th>
                                <th class="text-center">Cantidad</th>
                                <th class="text-end">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var detalle in Model.Detalles)
                            {
                                <tr>
                                    <td>@detalle.ProductoNombre</td>
                                    <td class="text-center">@detalle.Cantidad</td>
                                    <td class="text-end">@detalle.Subtotal.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Formulario de eliminación -->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Confirmar Eliminación
                </button>
            </div>
        </form>
    </div>
</section>
