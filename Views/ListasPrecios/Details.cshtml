@model TheBuryProject.ViewModels.ListaPrecioViewModel

@{
    ViewData["Title"] = "Detalles - " + Model.Nombre;
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4><i class="bi bi-eye" aria-hidden="true"></i> Detalles de Lista de Precios</h4>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil" aria-hidden="true"></i> Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary btn-sm">
                            <i class="bi bi-arrow-left" aria-hidden="true"></i> Volver
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Información Básica -->
                        <div class="col-md-6">
                            <h5 class="mb-3"><i class="bi bi-info-circle" aria-hidden="true"></i> Información Básica</h5>

                            <dl class="row">
                                <dt class="col-sm-4">Código:</dt>
                                <dd class="col-sm-8">
                                    <strong>@Model.Codigo</strong>
                                    @if (Model.EsPredeterminada)
                                    {
                                        <span class="badge bg-warning text-dark ms-1">
                                            <i class="bi bi-star-fill" aria-hidden="true"></i> Predeterminada
                                        </span>
                                    }
                                </dd>

                                <dt class="col-sm-4">Nombre:</dt>
                                <dd class="col-sm-8">@Model.Nombre</dd>

                                <dt class="col-sm-4">Tipo:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.TipoDisplay</span>
                                </dd>

                                <dt class="col-sm-4">Estado:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.Activa)
                                    {
                                        <span class="badge bg-success">Activa</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactiva</span>
                                    }
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Descripcion))
                                {
                                    <dt class="col-sm-4">Descripción:</dt>
                                    <dd class="col-sm-8">@Model.Descripcion</dd>
                                }
                            </dl>
                        </div>

                        <!-- Configuración de Precios -->
                        <div class="col-md-6">
                            <h5 class="mb-3"><i class="bi bi-calculator" aria-hidden="true"></i> Configuración de Precios</h5>

                            <dl class="row">
                                <dt class="col-sm-5">Margen de Ganancia:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.MargenPorcentaje.HasValue)
                                    {
                                        <strong>@Model.MargenPorcentaje.Value.ToString("N2")%</strong>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No especificado</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Recargo Adicional:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.RecargoPorcentaje.HasValue && Model.RecargoPorcentaje > 0)
                                    {
                                        <span>@Model.RecargoPorcentaje.Value.ToString("N2")%</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin recargo</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Margen Mínimo:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.MargenMinimoPorcentaje.HasValue && Model.MargenMinimoPorcentaje > 0)
                                    {
                                        <span>@Model.MargenMinimoPorcentaje.Value.ToString("N2")%</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Sin mínimo</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Cantidad de Cuotas:</dt>
                                <dd class="col-sm-7">
                                    @if (Model.CantidadCuotas.HasValue && Model.CantidadCuotas > 1)
                                    {
                                        <span>@Model.CantidadCuotas cuotas</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Pago único</span>
                                    }
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.ReglaRedondeo))
                                {
                                    <dt class="col-sm-5">Redondeo:</dt>
                                    <dd class="col-sm-7">@Model.ReglaRedondeo</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Notas))
                    {
                        <hr class="my-3">
                        <div>
                            <h6><i class="bi bi-sticky" aria-hidden="true"></i> Notas:</h6>
                            <p class="text-muted">@Model.Notas</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ReglasJson))
                    {
                        <hr class="my-3">
                        <div>
                            <h6><i class="bi bi-code-square" aria-hidden="true"></i> Reglas Personalizadas (JSON):</h6>
                            <pre class="bg-dark text-light p-3 rounded"><code>@Model.ReglasJson</code></pre>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>