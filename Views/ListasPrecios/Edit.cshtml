@model TheBuryProject.ViewModels.EditarListaPrecioViewModel

@{
    ViewData["Title"] = "Editar Lista de Precios";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h4><i class="bi bi-pencil"></i> Editar Lista de Precios</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Información Básica -->
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="bi bi-info-circle"></i> Información Básica</h5>

                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label">Nombre *</label>
                                    <input asp-for="Nombre" class="form-control" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label">Código *</label>
                                    <input asp-for="Codigo" class="form-control" />
                                    <span asp-validation-for="Codigo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Tipo" class="form-label">Tipo *</label>
                                    <select asp-for="Tipo" class="form-select" asp-items="Html.GetEnumSelectList<TheBuryProject.Models.Enums.TipoListaPrecio>()">
                                    </select>
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="EsPredeterminada" class="form-check-input" />
                                    <label asp-for="EsPredeterminada" class="form-check-label">
                                        Lista Predeterminada
                                        <small class="text-muted d-block">Solo puede haber una lista predeterminada</small>
                                    </label>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Activa" class="form-check-input" />
                                    <label asp-for="Activa" class="form-check-label">Lista Activa</label>
                                </div>
                            </div>

                            <!-- Configuración de Precios -->
                            <div class="col-md-6">
                                <h5 class="mb-3"><i class="bi bi-calculator"></i> Configuración de Precios</h5>

                                <div class="mb-3">
                                    <label asp-for="MargenPorcentaje" class="form-label">Margen de Ganancia % *</label>
                                    <div class="input-group">
                                        <input asp-for="MargenPorcentaje" type="number" step="0.01" class="form-control" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="MargenPorcentaje" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="RecargoPorcentaje" class="form-label">Recargo Adicional %</label>
                                    <div class="input-group">
                                        <input asp-for="RecargoPorcentaje" type="number" step="0.01" class="form-control" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="RecargoPorcentaje" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="MargenMinimoPorcentaje" class="form-label">Margen Mínimo %</label>
                                    <div class="input-group">
                                        <input asp-for="MargenMinimoPorcentaje" type="number" step="0.01" class="form-control" />
                                        <span class="input-group-text">%</span>
                                    </div>
                                    <span asp-validation-for="MargenMinimoPorcentaje" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CantidadCuotas" class="form-label">Cantidad de Cuotas</label>
                                    <input asp-for="CantidadCuotas" type="number" min="1" class="form-control" />
                                    <span asp-validation-for="CantidadCuotas" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ReglaRedondeo" class="form-label">Regla de Redondeo</label>
                                    <input asp-for="ReglaRedondeo" class="form-control" />
                                    <span asp-validation-for="ReglaRedondeo" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Notas" class="form-label">Notas</label>
                                    <textarea asp-for="Notas" class="form-control" rows="3"></textarea>
                                    <span asp-validation-for="Notas" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}