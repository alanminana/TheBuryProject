@model AsignarPermisosViewModel

@{
    ViewData["Title"] = "Asignar Permisos";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Details", "Roles", new { id = Model.RoleId, returnUrl })!;
}

<div class="container-fluid" id="permisosApp" data-toggle-url="@Url.Action("TogglePermiso", "Roles")">
    <div class="d-none">
        @Html.AntiForgeryToken()
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RoleId" asp-route-returnUrl="@returnUrl">@Model.RoleName</a></li>
                    <li class="breadcrumb-item active">Asignar Permisos</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2><i class="bi bi-key me-2" aria-hidden="true"></i>Asignar Permisos: @Model.RoleName</h2>
                <a href="@backUrl" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-info" role="alert">
                <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                <strong>Instrucciones:</strong> Selecciona o deselecciona los permisos para este rol. Los cambios se guardan automáticamente.
            </div>
        </div>
    </div>

    @if (Model.Modulos.Any())
    {
        @* Agrupar por categoría *@
        var categorias = Model.Modulos.GroupBy(m => m.Categoria).OrderBy(g => g.Key);

        @foreach (var categoria in categorias)
        {
            <div class="row mb-4">
                <div class="col-md-12">
                    <h4 class="border-bottom pb-2">
                        <i class="bi bi-folder me-2" aria-hidden="true"></i>@categoria.Key
                    </h4>
                </div>
            </div>

            <div class="row mb-4">
                @foreach (var modulo in categoria.OrderBy(m => m.ModuloNombre))
                {
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-header bg-light">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0">
                                        <i class="@modulo.Icono me-1" aria-hidden="true"></i>
                                        @modulo.ModuloNombre
                                    </h6>
                                    <small class="text-muted">@modulo.ModuloClave</small>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (modulo.Acciones.Any())
                                {
                                    @foreach (var accion in modulo.Acciones.OrderBy(a => a.AccionNombre))
                                    {
                                        <div class="form-check mb-2">
                                            <input class="form-check-input permiso-checkbox"
                                                   type="checkbox"
                                                   id="permiso_@(modulo.ModuloId)_@(accion.AccionId)"
                                                   data-role-id="@Model.RoleId"
                                                   data-modulo-id="@modulo.ModuloId"
                                                   data-accion-id="@accion.AccionId"
                                                   @(accion.Seleccionada ? "checked" : "") />
                                            <label class="form-check-label" for="permiso_@(modulo.ModuloId)_@(accion.AccionId)">
                                                @accion.AccionNombre
                                                <small class="text-muted">(@accion.AccionClave)</small>
                                            </label>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <p class="text-muted mb-0"><small>Sin acciones disponibles</small></p>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                    No hay módulos disponibles en el sistema.
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="~/js/roles-asignar-permisos.js" asp-append-version="true"></script>
}