@model CrearRolViewModel

@{
    ViewData["Title"] = "Crear Rol";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Roles")!;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@backUrl">Roles</a></li>
                    <li class="breadcrumb-item active">Crear Rol</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-shield-plus me-2"></i>Crear Nuevo Rol</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Supervisor" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                            <small class="form-text text-muted">
                                El nombre del rol debe ser único y descriptivo
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Nota:</strong> Después de crear el rol, podrás asignarle permisos específicos desde la lista de roles.
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@backUrl" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Crear Rol
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}