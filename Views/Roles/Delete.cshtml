@model EliminarRolViewModel

@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
                    <li class="breadcrumb-item active">Eliminar Rol</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-trash me-2"></i>Confirmar Eliminación</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>¿Está seguro que desea eliminar este rol?</strong>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Rol:</dt>
                        <dd class="col-sm-9"><strong>@Model.Nombre</strong></dd>

                        <dt class="col-sm-3">Usuarios asignados:</dt>
                        <dd class="col-sm-9">
                            @if (Model.CantidadUsuarios > 0)
                            {
                                <span class="badge bg-warning text-dark">
                                    @Model.CantidadUsuarios usuario@(Model.CantidadUsuarios != 1 ? "s" : "")
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">Ninguno</span>
                            }
                        </dd>
                    </dl>

                    @if (Model.CantidadUsuarios > 0)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <strong>Advertencia:</strong> Este rol tiene usuarios asignados. Al eliminarlo, estos usuarios perderán los permisos asociados.
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Eliminar Rol
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>