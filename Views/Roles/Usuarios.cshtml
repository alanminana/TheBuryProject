@model UsuariosEnRolViewModel

@{
    ViewData["Title"] = "Usuarios del Rol";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Details", "Roles", new { id = Model.RoleId, returnUrl })!;
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Roles</a></li>
                    <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.RoleId" asp-route-returnUrl="@returnUrl">@Model.RoleName</a></li>
                    <li class="breadcrumb-item active">Usuarios</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>
                    <i class="bi bi-people me-2" aria-hidden="true"></i>
                    Usuarios con rol: <span class="badge bg-primary">@Model.RoleName</span>
                </h2>
                <a href="@backUrl" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    @if (Model.Usuarios.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col"><i class="bi bi-person me-1" aria-hidden="true"></i>Usuario</th>
                                        <th scope="col"><i class="bi bi-envelope me-1" aria-hidden="true"></i>Email</th>
                                        <th scope="col" class="text-center"><i class="bi bi-check-circle me-1" aria-hidden="true"></i>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var usuario in Model.Usuarios.OrderBy(u => u.UserName))
                                    {
                                        <tr>
                                            <td>
                                                <i class="bi bi-person-circle me-2" aria-hidden="true"></i>
                                                <strong>@usuario.UserName</strong>
                                            </td>
                                            <td>@usuario.Email</td>
                                            <td class="text-center">
                                                @if (usuario.EmailConfirmed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Verificado
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="bi bi-exclamation-circle me-1" aria-hidden="true"></i>Pendiente
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
                            Total de usuarios con este rol: <strong>@Model.Usuarios.Count</strong>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-people fs-1 text-muted" aria-hidden="true"></i>
                            <p class="mt-3 text-muted">No hay usuarios asignados a este rol</p>
                            <p class="text-muted">
                                Los usuarios pueden ser asignados a roles desde la gestión de usuarios.
                            </p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>