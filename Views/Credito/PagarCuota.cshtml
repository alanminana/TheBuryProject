@model TheBuryProject.ViewModels.PagarCuotaViewModel
@{
    ViewData["Title"] = "Pagar Cuota";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Details", "Credito", new { id = Model.CreditoId })!;
}

<section class="container-fluid py-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-cash-coin text-success me-2" aria-hidden="true"></i>Registrar Pago de Cuota
        </h2>
        <a href="@backUrl" class="btn btn-outline-light">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> Volver
        </a>
    </div>

    <form asp-action="PagarCuota" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="CreditoId" />
        <input type="hidden" name="returnUrl" value="@returnUrl" />

        <div class="row g-4">
            <!-- Información de la Cuota -->
            <div class="col-md-4">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-header bg-info text-light">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-info-circle me-2" aria-hidden="true"></i>Información de la Cuota
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Cuota N°</dt>
                            <dd class="col-sm-7 fw-semibold">@Model.NumeroCuota</dd>

                            @if (!string.IsNullOrEmpty(Model.NumeroCreditoTexto))
                            {
                                <dt class="col-sm-5">Crédito</dt>
                                <dd class="col-sm-7">@Model.NumeroCreditoTexto</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.ClienteNombre))
                            {
                                <dt class="col-sm-5">Cliente</dt>
                                <dd class="col-sm-7">@Model.ClienteNombre</dd>
                            }

                            <dt class="col-sm-5">Monto Cuota</dt>
                            <dd class="col-sm-7">@Model.MontoCuota.ToString("C2")</dd>

                            <dt class="col-sm-5">Punitorio</dt>
                            <dd class="col-sm-7 @(Model.MontoPunitorio > 0 ? "text-danger fw-bold" : "text-muted")">
                                @Model.MontoPunitorio.ToString("C2")
                            </dd>

                            <dt class="col-sm-5">Total a Pagar</dt>
                            <dd class="col-sm-7 fw-bold text-success">@Model.TotalAPagar.ToString("C2")</dd>

                            <dt class="col-sm-5">Vencimiento</dt>
                            <dd class="col-sm-7"><time datetime="@Model.FechaVencimiento.ToString("yyyy-MM-dd")">@Model.FechaVencimiento.ToString("dd/MM/yyyy")</time></dd>

                            @if (Model.EstaVencida)
                            {
                                <dt class="col-sm-5">Estado</dt>
                                <dd class="col-sm-7">
                                    <span class="badge bg-danger">Vencida</span>
                                    <br />
                                    <small>@Model.DiasAtraso días de atraso</small>
                                </dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Datos del Pago -->
            <div class="col-md-8">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-header bg-success text-light">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-wallet2 me-2" aria-hidden="true"></i>Datos del Pago
                        </h5>
                    </div>

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger @(ViewData.ModelState.IsValid ? "d-none" : string.Empty)" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CuotaId" class="form-label fw-semibold">Cuota a pagar</label>
                                <select asp-for="CuotaId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Cuotas" required>
                                    <option value="">Seleccione una cuota...</option>
                                </select>
                                <span asp-validation-for="CuotaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MontoPagado" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-light border-0">$</span>
                                    <input asp-for="MontoPagado" class="form-control bg-body-secondary text-light border-0" type="number" step="0.01" required />
                                </div>
                                <span asp-validation-for="MontoPagado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FechaPago" class="form-label fw-semibold"></label>
                                <input asp-for="FechaPago" class="form-control bg-body-secondary text-light border-0" type="date" required />
                                <span asp-validation-for="FechaPago" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MedioPago" class="form-label fw-semibold"></label>
                                <select asp-for="MedioPago" class="form-select bg-body-secondary text-light border-0">
                                    <option value="Efectivo">Efectivo</option>
                                    <option value="Transferencia">Transferencia</option>
                                    <option value="Cheque">Cheque</option>
                                    <option value="Tarjeta Débito">Tarjeta de Débito</option>
                                    <option value="Tarjeta Crédito">Tarjeta de Crédito</option>
                                </select>
                                <span asp-validation-for="MedioPago" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ComprobantePago" class="form-label fw-semibold"></label>
                                <input asp-for="ComprobantePago" class="form-control bg-body-secondary text-light border-0"
                                       type="text" placeholder="Nro de recibo o referencia" />
                                <span asp-validation-for="ComprobantePago" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Observaciones" class="form-label fw-semibold"></label>
                                <textarea asp-for="Observaciones" class="form-control bg-body-secondary text-light border-0"
                                          rows="3" placeholder="Comentarios adicionales..."></textarea>
                                <span asp-validation-for="Observaciones" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-dark border-0 d-flex justify-content-end gap-2 py-3">
                        <button type="submit" class="btn btn-success btn-lg px-4">
                            <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Registrar Pago
                        </button>
                        <a href="@backUrl" class="btn btn-outline-light btn-lg px-4">
                            <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
