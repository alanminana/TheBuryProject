@model TheBuryProject.ViewModels.PagarCuotaViewModel
@{
    ViewData["Title"] = "Adelantar Cuota";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Details", "Credito", new { id = Model.CreditoId })!;
}

<section class="container-fluid py-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-lightning-charge text-warning me-2" aria-hidden="true"></i>Adelantar Cuota
        </h2>
        <a href="@backUrl" class="btn btn-outline-light">
            <i class="bi bi-arrow-left" aria-hidden="true"></i> Volver
        </a>
    </div>

    <div class="alert alert-info bg-opacity-25 border-info text-light shadow-sm mb-4">
        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
        <strong>Adelanto de cuota:</strong> Al adelantar, se paga la <strong>última cuota pendiente</strong> del crédito,
        reduciendo así el plazo total del mismo. Esto no afecta las cuotas anteriores que siguen su vencimiento normal.
    </div>

    <form asp-action="AdelantarCuota" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="CreditoId" />
        <input type="hidden" asp-for="CuotaId" />
        <input type="hidden" asp-for="NumeroCuota" />
        <input type="hidden" name="returnUrl" value="@returnUrl" />

        <div class="row g-4">
            <!-- Información de la Cuota a Adelantar -->
            <div class="col-md-4">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-calendar-check me-2" aria-hidden="true"></i>Cuota a Adelantar
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            <dt class="col-sm-5">Cuota N°</dt>
                            <dd class="col-sm-7 fw-semibold text-warning">@Model.NumeroCuota (Última pendiente)</dd>

                            @if (!string.IsNullOrEmpty(Model.NumeroCreditoTexto))
                            {
                                <dt class="col-sm-5">Crédito</dt>
                                <dd class="col-sm-7">@Model.NumeroCreditoTexto</dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.ClienteNombre))
                            {
                                <dt class="col-sm-5">Cliente</dt>
                                <dd class="col-sm-7">@Model.ClienteNombre</dd>
                            }

                            <dt class="col-sm-5">Monto Cuota</dt>
                            <dd class="col-sm-7 fw-bold text-success">@Model.MontoCuota.ToString("C2")</dd>

                            <dt class="col-sm-5">Vencimiento Original</dt>
                            <dd class="col-sm-7"><time datetime="@Model.FechaVencimiento.ToString("yyyy-MM-dd")">@Model.FechaVencimiento.ToString("dd/MM/yyyy")</time></dd>

                            <dt class="col-sm-5">Estado</dt>
                            <dd class="col-sm-7">
                                <span class="badge bg-info">Adelanto</span>
                                <br />
                                <small class="text-muted">Sin punitorios</small>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Datos del Pago -->
            <div class="col-md-8">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-header bg-success text-light">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-wallet2 me-2" aria-hidden="true"></i>Datos del Adelanto
                        </h5>
                    </div>

                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger @(ViewData.ModelState.IsValid ? "d-none" : string.Empty)" role="alert"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="MontoPagado" class="form-label fw-semibold">Monto a Pagar</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-light border-0">$</span>
                                    <input asp-for="MontoPagado" class="form-control bg-body-secondary text-light border-0" type="number" step="0.01" min="0.01" required />
                                </div>
                                <span asp-validation-for="MontoPagado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="FechaPago" class="form-label fw-semibold">Fecha de Pago</label>
                                <input asp-for="FechaPago" class="form-control bg-body-secondary text-light border-0" type="date" required />
                                <span asp-validation-for="FechaPago" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MedioPago" class="form-label fw-semibold">Medio de Pago</label>
                                <select asp-for="MedioPago" class="form-select bg-body-secondary text-light border-0" required>
                                    <option value="Efectivo">Efectivo</option>
                                    <option value="Tarjeta Débito">Tarjeta Débito</option>
                                    <option value="Tarjeta Crédito">Tarjeta Crédito</option>
                                    <option value="Transferencia">Transferencia</option>
                                    <option value="Cheque">Cheque</option>
                                </select>
                                <span asp-validation-for="MedioPago" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ComprobantePago" class="form-label fw-semibold">N° Comprobante (opcional)</label>
                                <input asp-for="ComprobantePago" class="form-control bg-body-secondary text-light border-0" placeholder="Ej: 0001-00012345" />
                            </div>

                            <div class="col-12">
                                <label asp-for="Observaciones" class="form-label fw-semibold">Observaciones (opcional)</label>
                                <textarea asp-for="Observaciones" class="form-control bg-body-secondary text-light border-0" rows="2" placeholder="Notas adicionales sobre el adelanto..."></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-dark border-top border-secondary">
                        <div class="d-flex justify-content-end gap-2">
                            <a href="@backUrl" class="btn btn-outline-light">
                                <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning text-dark">
                                <i class="bi bi-lightning-charge me-1" aria-hidden="true"></i>Confirmar Adelanto
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
