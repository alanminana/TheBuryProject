@model TheBuryProject.ViewModels.CreditoViewModel

@{
    ViewData["Title"] = "Editar Línea de Crédito";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2><i class="bi bi-pencil-square"></i> Editar Línea de Crédito - @Model.Numero</h2>
        </div>
    </div>

    @if (Model.Estado != TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i>
            <strong>Atención:</strong> Solo se pueden editar líneas de crédito en estado "Solicitado". Esta línea de crédito está en estado "@Model.Estado".
        </div>
    }

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Numero" />
        <input type="hidden" asp-for="Estado" />
        <input type="hidden" asp-for="FechaSolicitud" />

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Datos de la Línea de Crédito</h5>
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    Las cuotas se definirán cuando el cliente realice compras usando este crédito.
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3">Datos del Cliente</h5>

                        <div class="mb-3">
                            <label asp-for="ClienteId" class="form-label">Cliente *</label>
                            <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes" required>
                                <option value="">Seleccione un cliente...</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="RequiereGarante" class="form-check-input" type="checkbox" id="chkRequiereGarante">
                                <label class="form-check-label" for="chkRequiereGarante">Requiere Garante</label>
                            </div>
                        </div>

                        <div class="mb-3" id="garanteField" style="display: @(Model.RequiereGarante ? "block" : "none");">
                            <label asp-for="GaranteId" class="form-label">Garante</label>
                            <select asp-for="GaranteId" class="form-select" asp-items="ViewBag.Garantes">
                                <option value="">Seleccione un garante...</option>
                            </select>
                            <span asp-validation-for="GaranteId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3">Configuración del Crédito</h5>

                        <div class="mb-3">
                            <label asp-for="MontoSolicitado" class="form-label">Límite del Crédito *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MontoSolicitado" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <small class="form-text text-muted">Monto total disponible para compras</small>
                            <span asp-validation-for="MontoSolicitado" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TasaInteres" class="form-label">Tasa de Interés Mensual *</label>
                            <div class="input-group">
                                <input asp-for="TasaInteres" class="form-control" type="number" step="0.01" min="0" max="100" required />
                                <span class="input-group-text">%</span>
                            </div>
                            <small class="form-text text-muted">Ejemplo: 5.00 = 5% mensual. Se aplica a todas las compras con cuotas.</small>
                            <span asp-validation-for="TasaInteres" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label">Observaciones</label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3" placeholder="Información adicional sobre esta línea de crédito..."></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary" @(Model.Estado != TheBuryProject.Models.Enums.EstadoCredito.Solicitado ? "disabled" : "")>
                        <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#chkRequiereGarante').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#garanteField').show();
                } else {
                    $('#garanteField').hide();
                    $('#GaranteId').val('');
                }
            });
        });
    </script>
}