@model TheBuryProject.ViewModels.CreditoViewModel
@{
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Editar Línea de Crédito";
    ViewData["PageTitle"] = $"Editar Línea de Crédito – {Model.Numero}";
    ViewData["PageSubtitle"] = "Modificá la configuración de la línea mientras esté solicitada";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

@section PageActions {
    <a asp-action="Details" asp-route-id="@Model.Id" asp-route-returnUrl="@returnUrl" class="btn btn-outline-light">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
}

@if (Model.Estado != TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
{
    <div class="alert alert-warning bg-opacity-25 border-warning text-light shadow-sm">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Solo se pueden editar líneas de crédito en estado <strong>“Solicitado”</strong>. Esta línea está actualmente en estado <strong>@Model.Estado</strong>.
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Numero" />
    <input type="hidden" asp-for="Estado" />
    <input type="hidden" asp-for="FechaSolicitud" />
    <input type="hidden" name="returnUrl" value="@returnUrl" />

    <div class="card bg-dark border-0 shadow-lg">
        <div class="card-header bg-primary text-light py-3">
            <h5 class="fw-bold mb-0">
                <i class="bi bi-credit-card me-2"></i>Datos de la Línea de Crédito
            </h5>
        </div>

        <div class="card-body p-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm"></div>

            <div class="alert alert-info bg-opacity-25 border-info text-light shadow-sm">
                <i class="bi bi-info-circle me-2"></i>
                Las cuotas se generarán automáticamente cuando el cliente utilice este crédito.
            </div>

            <partial name="~/Views/Shared/Credito/_CreditoForm.cshtml" model="Model" />
        </div>

        <div class="card-footer bg-dark border-0 py-3 d-flex justify-content-end gap-2">
            <a asp-action="Details" asp-route-id="@Model.Id" asp-route-returnUrl="@returnUrl" class="btn btn-outline-light btn-lg px-4">
                <i class="bi bi-x-circle me-1"></i>Cancelar
            </a>
            <button type="submit" class="btn btn-primary btn-lg px-4"
                    @(Model.Estado != TheBuryProject.Models.Enums.EstadoCredito.Solicitado ? "disabled" : "")>
                <i class="bi bi-save me-1"></i>Guardar Cambios
            </button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/credito-edit.js" asp-append-version="true"></script>
}
