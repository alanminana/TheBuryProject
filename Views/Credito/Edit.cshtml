@model TheBuryProject.ViewModels.CreditoViewModel

@{
    ViewData["Title"] = "Editar Crédito";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2><i class="fas fa-edit"></i> Editar Crédito - @Model.Numero</h2>
        </div>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Numero" />
        <input type="hidden" asp-for="Estado" />
        <input type="hidden" asp-for="FechaSolicitud" />

        <div class="card">
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="row">
                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3">Datos del Cliente</h5>

                        <div class="mb-3">
                            <label asp-for="ClienteId" class="form-label"></label>
                            <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes">
                                <option value="">-- Seleccione un cliente --</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequiereGarante" class="form-label"></label>
                            <div class="form-check form-switch">
                                <input asp-for="RequiereGarante" class="form-check-input" type="checkbox" id="requireGarante">
                                <label class="form-check-label" for="requireGarante">¿Requiere Garante?</label>
                            </div>
                        </div>

                        <div class="mb-3" id="garanteField" style="display: @(Model.RequiereGarante ? "block" : "none");">
                            <label asp-for="GaranteId" class="form-label"></label>
                            <select asp-for="GaranteId" class="form-select" asp-items="ViewBag.Garantes">
                                <option value="">-- Seleccione un garante --</option>
                            </select>
                            <span asp-validation-for="GaranteId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="border-bottom pb-2 mb-3">Datos del Crédito</h5>

                        <div class="mb-3">
                            <label asp-for="MontoSolicitado" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="MontoSolicitado" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="MontoSolicitado" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TasaInteres" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="TasaInteres" class="form-control" type="number" step="0.01" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="TasaInteres" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CantidadCuotas" class="form-label"></label>
                            <input asp-for="CantidadCuotas" class="form-control" type="number" />
                            <span asp-validation-for="CantidadCuotas" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaPrimeraCuota" class="form-label"></label>
                            <input asp-for="FechaPrimeraCuota" class="form-control" type="date" />
                            <span asp-validation-for="FechaPrimeraCuota" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label"></label>
                            <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Guardar Cambios
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('requireGarante').addEventListener('change', function() {
            var garanteField = document.getElementById('garanteField');
            garanteField.style.display = this.checked ? 'block' : 'none';
        });
    </script>
}