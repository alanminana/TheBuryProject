@model TheBuryProject.ViewModels.CreditoDetalleViewModel
@{ 
    ViewData["Title"] = "Detalle de Línea de Crédito";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Credito")!;
}

@section Styles {
    <link rel="stylesheet" href="~/css/credito.css" asp-append-version="true" />
}

<section class="container-fluid py-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-credit-card text-success me-2" aria-hidden="true"></i>Línea de Crédito
        </h2>
        <div class="d-flex flex-wrap gap-2">
            @if (Model.Credito.Estado == TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
            {
                <form asp-action="Aprobar" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Credito.Id" />
                    <input type="hidden" name="returnUrl" value="@returnUrl" />
                    <button type="submit" class="btn btn-success" data-confirm="¿Aprobar esta línea de crédito?">
                        <i class="bi bi-check-circle me-1" aria-hidden="true"></i>Aprobar
                    </button>
                </form>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rechazarModal">
                    <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Rechazar
                </button>
            }
            @if (Model.Credito.Estado == TheBuryProject.Models.Enums.EstadoCredito.Activo || Model.Credito.Estado == TheBuryProject.Models.Enums.EstadoCredito.Aprobado)
            {
                <button type="button" class="btn btn-warning text-dark" data-bs-toggle="modal" data-bs-target="#cancelarModal">
                    <i class="bi bi-ban me-1" aria-hidden="true"></i>Cancelar Crédito
                </button>
            }
            <a href="@backUrl" class="btn btn-outline-light">
                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2" aria-hidden="true"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
        </div>
    }

    <div class="alert alert-info bg-opacity-25 border-info text-light shadow-sm mb-4" role="alert">
        <i class="bi bi-info-circle me-2" aria-hidden="true"></i>
        <strong>Línea de Crédito:</strong> Límite disponible para que el cliente realice compras. Las cuotas se generan automáticamente al usarla.
    </div>

    <div class="row g-4">
        <!-- Información General -->
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-primary text-light py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-info-circle me-2" aria-hidden="true"></i>Información General</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Número</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Credito.Numero</dd>

                        <dt class="col-sm-4 text-secondary">Cliente</dt>
                        <dd class="col-sm-8">@Model.Credito.ClienteNombre</dd>

                        <dt class="col-sm-4 text-secondary">Estado</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Credito.Estado)
                            {
                                case TheBuryProject.Models.Enums.EstadoCredito.Solicitado:
                                    <span class="badge bg-info text-dark">Solicitado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Aprobado:
                                    <span class="badge bg-success">Aprobado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Activo:
                                    <span class="badge bg-primary">Activo</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Finalizado:
                                    <span class="badge bg-secondary">Finalizado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Rechazado:
                                    <span class="badge bg-danger">Rechazado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Cancelado:
                                    <span class="badge bg-warning text-dark">Cancelado</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4 text-secondary">Fecha Solicitud</dt>
                        <dd class="col-sm-8"><time datetime="@Model.Credito.FechaSolicitud.ToString("yyyy-MM-dd")">@Model.Credito.FechaSolicitud.ToString("dd/MM/yyyy")</time></dd>

                        @if (Model.Credito.FechaAprobacion.HasValue)
                        {
                            <dt class="col-sm-4 text-secondary">Fecha Aprobación</dt>
                            <dd class="col-sm-8"><time datetime="@Model.Credito.FechaAprobacion.Value.ToString("yyyy-MM-dd")">@Model.Credito.FechaAprobacion.Value.ToString("dd/MM/yyyy")</time></dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.Credito.AprobadoPor))
                        {
                            <dt class="col-sm-4 text-secondary">Aprobado Por</dt>
                            <dd class="col-sm-8">@Model.Credito.AprobadoPor</dd>
                        }

                        <dt class="col-sm-4 text-secondary">Puntaje de Riesgo</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Credito.PuntajeRiesgoInicial.ToString("N2") / 10</dd>

                        @if (Model.Credito.RequiereGarante && !string.IsNullOrEmpty(Model.Credito.GaranteNombre))
                        {
                            <dt class="col-sm-4 text-secondary">Garante</dt>
                            <dd class="col-sm-8">@Model.Credito.GaranteNombre</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <!-- Información de Crédito -->
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-success text-dark py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-cash-stack me-2" aria-hidden="true"></i>Información de Crédito</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-secondary">Límite Total</dt>
                        <dd class="col-sm-7 fw-bold fs-5">@Model.Credito.MontoAprobado.ToString("C2")</dd>

                        <dt class="col-sm-5 text-secondary">Saldo Disponible</dt>
                        <dd class="col-sm-7 fw-bold text-success fs-5">@Model.Credito.SaldoPendiente.ToString("C2")</dd>

                        <dt class="col-sm-5 text-secondary">Monto Utilizado</dt>
                        <dd class="col-sm-7 fw-semibold text-danger">@((Model.Credito.MontoAprobado - Model.Credito.SaldoPendiente).ToString("C2"))</dd>

                        <dt class="col-sm-5 text-secondary">% Utilizado</dt>
                        <dd class="col-sm-7">
                            @{
                                var porcentajeUtilizado = Model.Credito.MontoAprobado > 0
                                ? ((Model.Credito.MontoAprobado - Model.Credito.SaldoPendiente) / Model.Credito.MontoAprobado * 100)
                                : 0;
                            }
                            <div class="progress credit-progress mt-1">
                                <div class="progress-bar @(porcentajeUtilizado > 80 ? "bg-danger" : porcentajeUtilizado > 50 ? "bg-warning text-dark" : "bg-success")"
                                     role="progressbar"
                                     style="width: @porcentajeUtilizado%"
                                     aria-valuenow="@porcentajeUtilizado"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @porcentajeUtilizado.ToString("N1")%
                                </div>
                            </div>
                        </dd>

                        <dt class="col-sm-5 text-secondary">Tasa de Interés</dt>
                        <dd class="col-sm-7">@Model.Credito.TasaInteres.ToString("N2")% mensual</dd>

                        <dt class="col-sm-5 text-secondary">Comparativa de cupo</dt>
                        <dd class="col-sm-7">
                            @if (!Model.CupoGlobalConError && Model.CupoGlobalDisponible.HasValue)
                            {
                                var saldoLinea = Model.Credito.SaldoPendiente;
                                var cupoGlobal = Model.CupoGlobalDisponible.Value;
                                var delta = cupoGlobal - saldoLinea;
                                var estadoClass = delta >= 0
                                    ? "bg-success"
                                    : "bg-danger";
                                var estadoTexto = delta >= 0
                                    ? "Dentro de cupo global"
                                    : "Excede cupo global";
                                var deltaClase = delta >= 0 ? "text-success" : "text-danger";
                                var deltaSigno = delta >= 0 ? "+" : "-";

                                <div class="small text-secondary">Saldo de esta línea</div>
                                <div class="fw-semibold text-success mb-1">@saldoLinea.ToString("C2")</div>
                                <div class="small text-secondary">Cupo global cliente</div>
                                <div class="fw-semibold text-info">@cupoGlobal.ToString("C2")</div>
                                <div class="small text-muted">Origen límite global: @Model.CupoGlobalOrigenLimite</div>
                                <span class="badge @estadoClass mt-2">@estadoTexto</span>
                                <div class="small fw-semibold @deltaClase mt-1">Diferencia: @deltaSigno@Math.Abs(delta).ToString("C2")</div>
                            }
                            else
                            {
                                <span class="text-warning small">No se pudo calcular el cupo global del cliente.</span>
                            }
                        </dd>

                        <dd class="col-sm-12">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1" aria-hidden="true"></i>Aplicable a todas las compras con cuotas.
                            </small>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Evaluación Crediticia -->
    @if (Model.Evaluacion != null)
    {
        <div class="mt-4">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-info text-dark py-3">
                    <h5 class="fw-bold mb-0">
                        <i class="bi bi-speedometer2 me-2" aria-hidden="true"></i>Evaluación Crediticia
                    </h5>
                </div>
                <div class="card-body">
                    <partial name="_EvaluacionSemaforoPartial" model="Model.Evaluacion" />
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Credito.Observaciones))
    {
        <div class="card bg-dark border-0 shadow-sm mt-4">
            <div class="card-header bg-secondary text-light py-3">
                <h5 class="fw-bold mb-0"><i class="bi bi-chat-left-text me-2" aria-hidden="true"></i>Observaciones</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Credito.Observaciones</p>
            </div>
        </div>
    }

    <!-- Sección de Cuotas -->
    @if (Model.Credito.Cuotas != null && Model.Credito.Cuotas.Any())
    {
        var cuotasPendientes = Model.Credito.Cuotas.Where(c => 
            c.Estado == TheBuryProject.Models.Enums.EstadoCuota.Pendiente || 
            c.Estado == TheBuryProject.Models.Enums.EstadoCuota.Vencida || 
            c.Estado == TheBuryProject.Models.Enums.EstadoCuota.Parcial).ToList();
        var cuotasPagadas = Model.Credito.Cuotas.Where(c => c.Estado == TheBuryProject.Models.Enums.EstadoCuota.Pagada).ToList();
        var primeraCuotaPendiente = cuotasPendientes.OrderBy(c => c.NumeroCuota).FirstOrDefault();
        var ultimaCuotaPendiente = cuotasPendientes.OrderByDescending(c => c.NumeroCuota).FirstOrDefault();
        
        <div class="card bg-dark border-0 shadow-sm mt-4">
            <div class="card-header bg-primary text-light py-3 d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">
                    <i class="bi bi-calendar3 me-2" aria-hidden="true"></i>Plan de Cuotas
                    <span class="badge bg-light text-dark ms-2">@cuotasPagadas.Count / @Model.Credito.Cuotas.Count pagadas</span>
                </h5>
                @if (cuotasPendientes.Any())
                {
                    <div class="d-flex gap-2">
                        <a asp-action="PagarCuota" asp-route-id="@Model.Credito.Id" asp-route-returnUrl="@returnUrl" 
                           class="btn btn-success btn-sm">
                            <i class="bi bi-cash-coin me-1" aria-hidden="true"></i>Pagar Cuota
                            @if (primeraCuotaPendiente != null)
                            {
                                <span class="badge bg-light text-success ms-1">#@primeraCuotaPendiente.NumeroCuota</span>
                            }
                        </a>
                        <a asp-action="AdelantarCuota" asp-route-id="@Model.Credito.Id" asp-route-returnUrl="@returnUrl" 
                           class="btn btn-warning btn-sm text-dark">
                            <i class="bi bi-lightning-charge me-1" aria-hidden="true"></i>Adelantar
                            @if (ultimaCuotaPendiente != null)
                            {
                                <span class="badge bg-dark text-warning ms-1">#@ultimaCuotaPendiente.NumeroCuota</span>
                            }
                        </a>
                    </div>
                }
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-dark table-hover mb-0">
                        <thead class="table-secondary text-dark">
                            <tr>
                                <th scope="col" class="text-center">#</th>
                                <th scope="col">Vencimiento</th>
                                <th scope="col" class="text-end">Capital</th>
                                <th scope="col" class="text-end">Interés</th>
                                <th scope="col" class="text-end">Total</th>
                                <th scope="col" class="text-end">Pagado</th>
                                <th scope="col" class="text-center">Estado</th>
                                <th scope="col" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cuota in Model.Credito.Cuotas.OrderBy(c => c.NumeroCuota))
                            {
                                var esVencida = cuota.FechaVencimiento.Date < DateTime.Today && cuota.Estado != TheBuryProject.Models.Enums.EstadoCuota.Pagada;
                                var rowClass = cuota.Estado == TheBuryProject.Models.Enums.EstadoCuota.Pagada ? "table-success" :
                                               esVencida ? "table-danger" : "";
                                <tr class="@rowClass">
                                    <td class="text-center fw-bold">@cuota.NumeroCuota</td>
                                    <td>
                                        <time datetime="@cuota.FechaVencimiento.ToString("yyyy-MM-dd")">@cuota.FechaVencimiento.ToString("dd/MM/yyyy")</time>
                                        @if (esVencida)
                                        {
                                            var diasAtraso = (DateTime.Today - cuota.FechaVencimiento.Date).Days;
                                            <br /><small class="text-danger">@diasAtraso días de atraso</small>
                                        }
                                    </td>
                                    <td class="text-end">@cuota.MontoCapital.ToString("C2")</td>
                                    <td class="text-end">@cuota.MontoInteres.ToString("C2")</td>
                                    <td class="text-end fw-semibold">@cuota.MontoTotal.ToString("C2")</td>
                                    <td class="text-end">
                                        @if (cuota.MontoPagado > 0)
                                        {
                                            <span class="text-success">@cuota.MontoPagado.ToString("C2")</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        @switch (cuota.Estado)
                                        {
                                            case TheBuryProject.Models.Enums.EstadoCuota.Pendiente:
                                                <span class="badge bg-secondary">Pendiente</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCuota.Vencida:
                                                <span class="badge bg-danger">Vencida</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCuota.Parcial:
                                                <span class="badge bg-warning text-dark">Parcial</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCuota.Pagada:
                                                <span class="badge bg-success">Pagada</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-center">
                                        @if (cuota.Estado != TheBuryProject.Models.Enums.EstadoCuota.Pagada)
                                        {
                                            <a asp-action="PagarCuota" asp-route-id="@Model.Credito.Id" 
                                               asp-route-cuotaId="@cuota.Id" asp-route-returnUrl="@returnUrl"
                                               class="btn btn-outline-success btn-sm" title="Pagar esta cuota" aria-label="Pagar cuota @cuota.NumeroCuota">
                                                <i class="bi bi-cash" aria-hidden="true"></i>
                                                <span class="visually-hidden">Pagar cuota</span>
                                            </a>
                                        }
                                        else if (cuota.FechaPago.HasValue)
                                        {
                                            <small class="text-muted"><time datetime="@cuota.FechaPago.Value.ToString("yyyy-MM-dd")">@cuota.FechaPago.Value.ToString("dd/MM")</time></small>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-secondary text-dark">
                            <tr class="fw-bold">
                                <td colspan="4" class="text-end">Totales:</td>
                                <td class="text-end">@Model.Credito.Cuotas.Sum(c => c.MontoTotal).ToString("C2")</td>
                                <td class="text-end text-success">@Model.Credito.Cuotas.Sum(c => c.MontoPagado).ToString("C2")</td>
                                <td colspan="2" class="text-center">
                                    Saldo: @((Model.Credito.Cuotas.Sum(c => c.MontoTotal) - Model.Credito.Cuotas.Sum(c => c.MontoPagado)).ToString("C2"))
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
</section>

<!-- Modal Rechazar -->
<div class="modal fade" id="rechazarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Rechazar" method="post">
            <input type="hidden" name="id" value="@Model.Credito.Id" />
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div class="modal-content bg-dark text-light border-danger">
                <div class="modal-header bg-danger text-light">
                    <h5 class="modal-title"><i class="bi bi-x-circle me-2" aria-hidden="true"></i>Rechazar Línea de Crédito</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <label for="motivo" class="form-label">Motivo del rechazo</label>
                    <textarea name="motivo" id="motivo" class="form-control bg-body-secondary text-light border-0" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Rechazar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal Cancelar -->
<div class="modal fade" id="cancelarModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="Cancelar" method="post">
            <input type="hidden" name="id" value="@Model.Credito.Id" />
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div class="modal-content bg-dark text-light border-warning">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="bi bi-ban me-2" aria-hidden="true"></i>Cancelar Línea de Crédito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning bg-opacity-25 border-warning text-light">
                        <i class="bi bi-exclamation-triangle me-2" aria-hidden="true"></i>
                        <strong>Atención:</strong> El cliente no podrá usar esta línea de crédito tras cancelarla.
                    </div>
                    <label for="motivoCancelar" class="form-label">Motivo de cancelación</label>
                    <textarea name="motivo" id="motivoCancelar" class="form-control bg-body-secondary text-light border-0" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-warning text-dark">Cancelar Crédito</button>
                </div>
            </div>
        </form>
    </div>
</div>
