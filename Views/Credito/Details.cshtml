@model TheBuryProject.ViewModels.CreditoViewModel

@{
    ViewData["Title"] = "Detalle de Línea de Crédito";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2><i class="bi bi-credit-card"></i> Línea de Crédito</h2>
        </div>
        <div class="col-md-6 text-end">
            @if (Model.Estado == TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
            {
                <form asp-action="Aprobar" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success" onclick="return confirm('¿Está seguro de aprobar esta línea de crédito?')">
                        <i class="bi bi-check-circle"></i> Aprobar
                    </button>
                </form>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rechazarModal">
                    <i class="bi bi-x-circle"></i> Rechazar
                </button>
            }
            @if (Model.Estado == TheBuryProject.Models.Enums.EstadoCredito.Activo || Model.Estado == TheBuryProject.Models.Enums.EstadoCredito.Aprobado)
            {
                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#cancelarModal">
                    <i class="bi bi-ban"></i> Cancelar Crédito
                </button>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-info mb-3">
        <i class="bi bi-info-circle"></i>
        <strong>Línea de Crédito:</strong> Límite disponible para que el cliente realice compras. Las cuotas se generan automáticamente cuando el cliente realiza una compra.
    </div>

    <!-- Información General -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Información General</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Número:</dt>
                        <dd class="col-sm-8"><strong>@Model.Numero</strong></dd>

                        <dt class="col-sm-4">Cliente:</dt>
                        <dd class="col-sm-8">@Model.ClienteNombre</dd>

                        <dt class="col-sm-4">Estado:</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Estado)
                            {
                                case TheBuryProject.Models.Enums.EstadoCredito.Solicitado:
                                    <span class="badge bg-info">Solicitado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Aprobado:
                                    <span class="badge bg-success">Aprobado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Activo:
                                    <span class="badge bg-primary">Activo</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Finalizado:
                                    <span class="badge bg-secondary">Finalizado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Rechazado:
                                    <span class="badge bg-danger">Rechazado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Cancelado:
                                    <span class="badge bg-warning text-dark">Cancelado</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4">Fecha Solicitud:</dt>
                        <dd class="col-sm-8">@Model.FechaSolicitud.ToString("dd/MM/yyyy")</dd>

                        @if (Model.FechaAprobacion.HasValue)
                        {
                            <dt class="col-sm-4">Fecha Aprobación:</dt>
                            <dd class="col-sm-8">@Model.FechaAprobacion.Value.ToString("dd/MM/yyyy")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.AprobadoPor))
                        {
                            <dt class="col-sm-4">Aprobado Por:</dt>
                            <dd class="col-sm-8">@Model.AprobadoPor</dd>
                        }

                        <dt class="col-sm-4">Puntaje de Riesgo:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.PuntajeRiesgoInicial.ToString("N2")</strong>/10
                        </dd>

                        @if (Model.RequiereGarante && !string.IsNullOrEmpty(Model.GaranteNombre))
                        {
                            <dt class="col-sm-4">Garante:</dt>
                            <dd class="col-sm-8">@Model.GaranteNombre</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Información de Crédito</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Límite Total:</dt>
                        <dd class="col-sm-7"><strong class="fs-5">@Model.MontoAprobado.ToString("C2")</strong></dd>

                        <dt class="col-sm-5">Saldo Disponible:</dt>
                        <dd class="col-sm-7">
                            <strong class="fs-5 text-success">@Model.SaldoPendiente.ToString("C2")</strong>
                        </dd>

                        <dt class="col-sm-5">Monto Utilizado:</dt>
                        <dd class="col-sm-7">
                            <strong class="text-danger">@((Model.MontoAprobado - Model.SaldoPendiente).ToString("C2"))</strong>
                        </dd>

                        <dt class="col-sm-5">% Utilizado:</dt>
                        <dd class="col-sm-7">
                            @{
                                var porcentajeUtilizado = Model.MontoAprobado > 0
                                ? ((Model.MontoAprobado - Model.SaldoPendiente) / Model.MontoAprobado * 100)
                                : 0;
                            }
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar @(porcentajeUtilizado > 80 ? "bg-danger" : porcentajeUtilizado > 50 ? "bg-warning" : "bg-success")"
                                     role="progressbar"
                                     style="width: @porcentajeUtilizado%"
                                     aria-valuenow="@porcentajeUtilizado"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @porcentajeUtilizado.ToString("N1")%
                                </div>
                            </div>
                        </dd>

                        <dt class="col-sm-5">Tasa de Interés:</dt>
                        <dd class="col-sm-8">@Model.TasaInteres.ToString("N2")% mensual</dd>
                        <dd class="col-sm-12">
                            <small class="text-muted">
                                <i class="bi bi-info-circle"></i> Esta tasa se aplica a todas las compras realizadas con cuotas.
                            </small>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Ventas realizadas con este crédito -->
    @* TODO: Implementar lista de ventas realizadas con este crédito
    Esto se haría consultando VentaCreditoCuota filtrando por CreditoId *@

    @if (!string.IsNullOrEmpty(Model.Observaciones))
    {
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-chat-left-text"></i> Observaciones</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Observaciones</p>
            </div>
        </div>
    }
</div>

<!-- Modal Rechazar -->
<div class="modal fade" id="rechazarModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Rechazar" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Rechazar Línea de Crédito</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="motivo" class="form-label">Motivo del rechazo:</label>
                        <textarea name="motivo" id="motivo" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Rechazar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal Cancelar -->
<div class="modal fade" id="cancelarModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Cancelar" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title">Cancelar Línea de Crédito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Atención:</strong> Al cancelar esta línea de crédito, el cliente ya no podrá realizar nuevas compras con ella.
                    </p>
                    <div class="mb-3">
                        <label for="motivoCancelar" class="form-label">Motivo de la cancelación:</label>
                        <textarea name="motivo" id="motivoCancelar" class="form-control" rows="3" required></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-warning">Cancelar Crédito</button>
                </div>
            </div>
        </form>
    </div>
</div>