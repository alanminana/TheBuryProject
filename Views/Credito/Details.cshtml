@model TheBuryProject.ViewModels.CreditoViewModel
@{
    ViewData["Title"] = "Detalle de Línea de Crédito";
}

<section class="container-fluid py-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-credit-card text-success me-2"></i>Línea de Crédito
        </h2>
        <div class="d-flex flex-wrap gap-2">
            @if (Model.Estado == TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
            {
                <form asp-action="Aprobar" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success" onclick="return confirm('¿Aprobar esta línea de crédito?')">
                        <i class="bi bi-check-circle me-1"></i>Aprobar
                    </button>
                </form>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#rechazarModal">
                    <i class="bi bi-x-circle me-1"></i>Rechazar
                </button>
            }
            @if (Model.Estado == TheBuryProject.Models.Enums.EstadoCredito.Activo || Model.Estado == TheBuryProject.Models.Enums.EstadoCredito.Aprobado)
            {
                <button type="button" class="btn btn-warning text-dark" data-bs-toggle="modal" data-bs-target="#cancelarModal">
                    <i class="bi bi-ban me-1"></i>Cancelar Crédito
                </button>
            }
            <a asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-arrow-left me-1"></i>Volver
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="alert alert-info bg-opacity-25 border-info text-light shadow-sm mb-4">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Línea de Crédito:</strong> Límite disponible para que el cliente realice compras. Las cuotas se generan automáticamente al usarla.
    </div>

    <div class="row g-4">
        <!-- Información General -->
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-primary text-light py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-info-circle me-2"></i>Información General</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-secondary">Número</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.Numero</dd>

                        <dt class="col-sm-4 text-secondary">Cliente</dt>
                        <dd class="col-sm-8">@Model.ClienteNombre</dd>

                        <dt class="col-sm-4 text-secondary">Estado</dt>
                        <dd class="col-sm-8">
                            @switch (Model.Estado)
                            {
                                case TheBuryProject.Models.Enums.EstadoCredito.Solicitado:
                                    <span class="badge bg-info text-dark">Solicitado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Aprobado:
                                    <span class="badge bg-success">Aprobado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Activo:
                                    <span class="badge bg-primary">Activo</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Finalizado:
                                    <span class="badge bg-secondary">Finalizado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Rechazado:
                                    <span class="badge bg-danger">Rechazado</span>
                                    break;
                                case TheBuryProject.Models.Enums.EstadoCredito.Cancelado:
                                    <span class="badge bg-warning text-dark">Cancelado</span>
                                    break;
                            }
                        </dd>

                        <dt class="col-sm-4 text-secondary">Fecha Solicitud</dt>
                        <dd class="col-sm-8">@Model.FechaSolicitud.ToString("dd/MM/yyyy")</dd>

                        @if (Model.FechaAprobacion.HasValue)
                        {
                            <dt class="col-sm-4 text-secondary">Fecha Aprobación</dt>
                            <dd class="col-sm-8">@Model.FechaAprobacion.Value.ToString("dd/MM/yyyy")</dd>
                        }

                        @if (!string.IsNullOrEmpty(Model.AprobadoPor))
                        {
                            <dt class="col-sm-4 text-secondary">Aprobado Por</dt>
                            <dd class="col-sm-8">@Model.AprobadoPor</dd>
                        }

                        <dt class="col-sm-4 text-secondary">Puntaje de Riesgo</dt>
                        <dd class="col-sm-8 fw-semibold">@Model.PuntajeRiesgoInicial.ToString("N2") / 10</dd>

                        @if (Model.RequiereGarante && !string.IsNullOrEmpty(Model.GaranteNombre))
                        {
                            <dt class="col-sm-4 text-secondary">Garante</dt>
                            <dd class="col-sm-8">@Model.GaranteNombre</dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <!-- Información de Crédito -->
        <div class="col-md-6">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-success text-dark py-3">
                    <h5 class="fw-bold mb-0"><i class="bi bi-cash-stack me-2"></i>Información de Crédito</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5 text-secondary">Límite Total</dt>
                        <dd class="col-sm-7 fw-bold fs-5">@Model.MontoAprobado.ToString("C2")</dd>

                        <dt class="col-sm-5 text-secondary">Saldo Disponible</dt>
                        <dd class="col-sm-7 fw-bold text-success fs-5">@Model.SaldoPendiente.ToString("C2")</dd>

                        <dt class="col-sm-5 text-secondary">Monto Utilizado</dt>
                        <dd class="col-sm-7 fw-semibold text-danger">@((Model.MontoAprobado - Model.SaldoPendiente).ToString("C2"))</dd>

                        <dt class="col-sm-5 text-secondary">% Utilizado</dt>
                        <dd class="col-sm-7">
                            @{
                                var porcentajeUtilizado = Model.MontoAprobado > 0
                                ? ((Model.MontoAprobado - Model.SaldoPendiente) / Model.MontoAprobado * 100)
                                : 0;
                            }
                            <div class="progress mt-1" style="height: 24px;">
                                <div class="progress-bar @(porcentajeUtilizado > 80 ? "bg-danger" : porcentajeUtilizado > 50 ? "bg-warning text-dark" : "bg-success")"
                                     role="progressbar"
                                     style="width: @porcentajeUtilizado%"
                                     aria-valuenow="@porcentajeUtilizado"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @porcentajeUtilizado.ToString("N1")%
                                </div>
                            </div>
                        </dd>

                        <dt class="col-sm-5 text-secondary">Tasa de Interés</dt>
                        <dd class="col-sm-7">@Model.TasaInteres.ToString("N2")% mensual</dd>
                        <dd class="col-sm-12">
                            <small class="text-muted">
                                <i class="bi bi-info-circle me-1"></i>Aplicable a todas las compras con cuotas.
                            </small>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Evaluación Crediticia -->
    @if (ViewBag.Evaluacion != null)
    {
        <div class="mt-4">
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-info text-dark py-3">
                    <h5 class="fw-bold mb-0">
                        <i class="bi bi-speedometer2 me-2"></i>Evaluación Crediticia
                    </h5>
                </div>
                <div class="card-body">
                    <partial name="_EvaluacionSemaforoPartial" model="ViewBag.Evaluacion" />
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Observaciones))
    {
        <div class="card bg-dark border-0 shadow-sm mt-4">
            <div class="card-header bg-secondary text-light py-3">
                <h5 class="fw-bold mb-0"><i class="bi bi-chat-left-text me-2"></i>Observaciones</h5>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Observaciones</p>
            </div>
        </div>
    }
</section>

<!-- Modal Rechazar -->
<div class="modal fade" id="rechazarModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Rechazar" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="modal-content bg-dark text-light border-danger">
                <div class="modal-header bg-danger text-light">
                    <h5 class="modal-title"><i class="bi bi-x-circle me-2"></i>Rechazar Línea de Crédito</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <label for="motivo" class="form-label">Motivo del rechazo</label>
                    <textarea name="motivo" id="motivo" class="form-control bg-body-secondary text-light border-0" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Rechazar</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal Cancelar -->
<div class="modal fade" id="cancelarModal" tabindex="-1">
    <div class="modal-dialog">
        <form asp-action="Cancelar" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="modal-content bg-dark text-light border-warning">
                <div class="modal-header bg-warning text-dark">
                    <h5 class="modal-title"><i class="bi bi-ban me-2"></i>Cancelar Línea de Crédito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-warning bg-opacity-25 border-warning text-light">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <strong>Atención:</strong> El cliente no podrá usar esta línea de crédito tras cancelarla.
                    </div>
                    <label for="motivoCancelar" class="form-label">Motivo de cancelación</label>
                    <textarea name="motivo" id="motivoCancelar" class="form-control bg-body-secondary text-light border-0" rows="3" required></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-light" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-warning text-dark">Cancelar Crédito</button>
                </div>
            </div>
        </form>
    </div>
</div>
