@model TheBuryProject.ViewModels.SimularCreditoViewModel

@{
    ViewData["Title"] = "Simular Crédito";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-12">
            <h2><i class="fas fa-calculator"></i> Simulador de Crédito</h2>
        </div>
    </div>

    <form asp-action="Simular" method="post">
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Parámetros del Crédito</h5>
                    </div>
                    <div class="card-body">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Monto" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="TasaInteres" class="form-label"></label>
                            <div class="input-group">
                                <input asp-for="TasaInteres" class="form-control" type="number" step="0.01" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="TasaInteres" class="text-danger"></span>
                            <small class="text-muted">Tasa mensual</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CantidadCuotas" class="form-label"></label>
                            <input asp-for="CantidadCuotas" class="form-control" type="number" />
                            <span asp-validation-for="CantidadCuotas" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FechaPrimeraCuota" class="form-label"></label>
                            <input asp-for="FechaPrimeraCuota" class="form-control" type="date" />
                            <span asp-validation-for="FechaPrimeraCuota" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-calculator"></i> Simular
                        </button>
                    </div>
                </div>
            </div>

            @if (Model.PlanPagos != null && Model.PlanPagos.Any())
            {
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="fas fa-chart-line"></i> Resultado de la Simulación</h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3">
                                    <div class="border rounded p-3">
                                        <h6 class="text-muted">Monto Cuota</h6>
                                        <h4 class="text-primary">@Model.MontoCuota.ToString("C2")</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="border rounded p-3">
                                        <h6 class="text-muted">Total a Pagar</h6>
                                        <h4 class="text-info">@Model.TotalAPagar.ToString("C2")</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="border rounded p-3">
                                        <h6 class="text-muted">Total Intereses</h6>
                                        <h4 class="text-warning">@Model.TotalIntereses.ToString("C2")</h4>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="border rounded p-3">
                                        <h6 class="text-muted">CFTEA</h6>
                                        <h4 class="text-danger">@Model.CFTEA.ToString("N2")%</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0"><i class="fas fa-list"></i> Plan de Pagos</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                                <table class="table table-striped table-sm">
                                    <thead class="table-dark" style="position: sticky; top: 0;">
                                        <tr>
                                            <th>Cuota</th>
                                            <th>Vencimiento</th>
                                            <th>Capital</th>
                                            <th>Interés</th>
                                            <th>Total</th>
                                            <th>Saldo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var cuota in Model.PlanPagos)
                                        {
                                            <tr>
                                                <td><strong>@cuota.NumeroCuota</strong></td>
                                                <td>@cuota.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                                                <td>@cuota.MontoCapital.ToString("C2")</td>
                                                <td>@cuota.MontoInteres.ToString("C2")</td>
                                                <td><strong>@cuota.MontoTotal.ToString("C2")</strong></td>
                                                <td>@cuota.SaldoCapital.ToString("C2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-body text-center text-muted py-5">
                            <i class="fas fa-calculator fa-4x mb-3"></i>
                            <h5>Complete los datos y presione "Simular" para ver el plan de pagos</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </form>

    <div class="row mt-3">
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}