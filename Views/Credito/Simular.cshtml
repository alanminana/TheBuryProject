@model TheBuryProject.ViewModels.SimularCreditoViewModel
@{
    ViewData["Title"] = "Simular Crédito";
    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl ?? Url.Action("Index", "Credito")!;
}

<section class="container-fluid py-4 text-light">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold mb-0">
                    <i class="bi bi-calculator text-info me-2"></i>Simulador de Crédito
                </h2>
                <a href="@backUrl" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                    <i class="bi bi-x-circle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Formulario de simulación -->
            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-info text-light">
                    <h5 class="fw-semibold mb-0">
                        <i class="bi bi-sliders me-2"></i>Datos para Simulación
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Simular" method="post">
                        <input type="hidden" name="returnUrl" value="@returnUrl" />
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="MontoSolicitado" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-light border-0">$</span>
                                    <input asp-for="MontoSolicitado" class="form-control bg-body-secondary text-light border-0"
                                           type="number" step="0.01" min="0" required />
                                </div>
                                <span asp-validation-for="MontoSolicitado" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="CantidadCuotas" class="form-label fw-semibold"></label>
                                <select asp-for="CantidadCuotas" class="form-select bg-body-secondary text-light border-0">
                                    <option value="3">3 cuotas</option>
                                    <option value="6">6 cuotas</option>
                                    <option value="12">12 cuotas</option>
                                    <option value="18">18 cuotas</option>
                                    <option value="24">24 cuotas</option>
                                    <option value="36">36 cuotas</option>
                                </select>
                                <span asp-validation-for="CantidadCuotas" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="TasaInteresMensual" class="form-label fw-semibold"></label>
                                <div class="input-group">
                                    <input asp-for="TasaInteresMensual" class="form-control bg-body-secondary text-light border-0"
                                           type="number" step="0.01" min="0" required />
                                    <span class="input-group-text bg-secondary text-light border-0">%</span>
                                </div>
                                <small class="form-text text-muted">Ejemplo: 0.05 = 5% mensual</small>
                                <span asp-validation-for="TasaInteresMensual" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-info btn-lg px-4">
                                <i class="bi bi-calculator me-1"></i>Simular
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Resultado de la simulación -->
            @if (Model.MontoCuota > 0)
            {
                <div class="card bg-dark border-0 shadow-sm mt-4">
                    <div class="card-header bg-success text-light">
                        <h5 class="fw-semibold mb-0">
                            <i class="bi bi-check-circle me-2"></i>Resultado de la Simulación
                        </h5>
                    </div>

                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label class="form-label fw-bold">Monto Solicitado</label>
                                    <p class="fs-5">@Model.MontoSolicitado.ToString("C2")</p>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label fw-bold">Cantidad de Cuotas</label>
                                    <p class="fs-5">@Model.CantidadCuotas cuotas</p>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label fw-bold">Tasa Mensual (TNA)</label>
                                    <p class="fs-5">@Model.TasaInteresMensual.ToString("P2")</p>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-2">
                                    <label class="form-label fw-bold">Monto de Cuota</label>
                                    <p class="fs-4 fw-bold text-success">@Model.MontoCuota.ToString("C2")</p>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label fw-bold">Total a Pagar</label>
                                    <p class="fs-5">@Model.TotalAPagar.ToString("C2")</p>
                                </div>
                                <div class="mb-2">
                                    <label class="form-label fw-bold">CFTEA (Costo Anual)</label>
                                    <p class="fs-5 text-danger">@Model.CFTEA.ToString("P2")</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
