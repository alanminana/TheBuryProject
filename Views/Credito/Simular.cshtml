@model TheBuryProject.ViewModels.SimularCreditoViewModel

@{
    ViewData["Title"] = "Simular Crédito";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-calculator"></i> Simulador de Crédito</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-x-circle"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Datos para Simulación</h5>
            </div>
            <div class="card-body">
                <form asp-action="Simular" method="post">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="MontoSolicitado" class="form-label"></label>
                            <input asp-for="MontoSolicitado" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="MontoSolicitado" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="CantidadCuotas" class="form-label"></label>
                            <select asp-for="CantidadCuotas" class="form-select">
                                <option value="3">3 cuotas</option>
                                <option value="6">6 cuotas</option>
                                <option value="12" selected>12 cuotas</option>
                                <option value="18">18 cuotas</option>
                                <option value="24">24 cuotas</option>
                                <option value="36">36 cuotas</option>
                            </select>
                            <span asp-validation-for="CantidadCuotas" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="TasaInteresMensual" class="form-label"></label>
                            <input asp-for="TasaInteresMensual" class="form-control" type="number" step="0.01" />
                            <small class="form-text text-muted">Ejemplo: 0.05 = 5% mensual</small>
                            <span asp-validation-for="TasaInteresMensual" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-calculator"></i> Simular
                        </button>
                    </div>
                </form>
            </div>
        </div>

        @if (Model.MontoCuota > 0)
        {
            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-check-circle"></i> Resultado de la Simulación</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Monto Solicitado:</label>
                                <p class="fs-5">@Model.MontoSolicitado.ToString("C")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Cantidad de Cuotas:</label>
                                <p class="fs-5">@Model.CantidadCuotas cuotas</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Tasa Mensual (TNA):</label>
                                <p class="fs-5">@Model.TasaInteresMensual.ToString("P2")</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Monto de Cuota:</label>
                                <p class="fs-4 text-success fw-bold">@Model.MontoCuota.ToString("C")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Total a Pagar:</label>
                                <p class="fs-5">@Model.TotalAPagar.ToString("C")</p>
                            </div>
                            <div class="mb-3">
                                <label class="form-label fw-bold">CFTEA (Costo Anual):</label>
                                <p class="fs-5 text-danger">@Model.CFTEA.ToString("P2")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}