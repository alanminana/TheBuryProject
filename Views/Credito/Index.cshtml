@model List<TheBuryProject.ViewModels.CreditoViewModel>
@{ 
    ViewData["Title"] = "Créditos";
    var filter = ViewBag.Filter as TheBuryProject.ViewModels.CreditoFilterViewModel;
    var listReturnUrl = Context.Request.Path + Context.Request.QueryString;
}

@section Styles {
    <link rel="stylesheet" href="~/css/credito.css" asp-append-version="true" />
}

<section class="container-fluid py-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-2">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-credit-card text-primary me-2" aria-hidden="true"></i>@ViewData["Title"]
        </h2>
        <div class="d-flex gap-2">
            <a asp-action="CuotasVencidas" asp-route-returnUrl="@listReturnUrl" class="btn btn-outline-warning fw-semibold shadow-sm">
                <i class="bi bi-exclamation-circle me-2" aria-hidden="true"></i>Ver moras
            </a>
            <a asp-action="Simular" asp-route-returnUrl="@listReturnUrl" class="btn btn-outline-info fw-semibold shadow-sm">
                <i class="bi bi-calculator me-2" aria-hidden="true"></i>Simular Crédito
            </a>
            <a asp-action="Create" asp-route-returnUrl="@listReturnUrl" class="btn btn-success btn-lg shadow-sm">
                <i class="bi bi-plus-circle me-2" aria-hidden="true"></i>Nuevo Crédito
            </a>
        </div>
    </div>

    <!-- Alertas -->
    @foreach (var tipo in new[] { "Success", "Error", "Warning" })
    {
        if (TempData[tipo] != null)
        {
            var color = tipo == "Success" ? "success"
            : tipo == "Error" ? "danger"
            : "warning";
            var icon = tipo == "Success" ? "check-circle-fill"
            : tipo == "Error" ? "x-circle-fill"
            : "exclamation-triangle-fill";

            <div class="alert alert-@color alert-dismissible fade show shadow-sm" role="alert">
                <i class="bi bi-@icon me-2" aria-hidden="true"></i>@TempData[tipo]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
        }
    }
    <!-- Filtros -->
    <div class="card bg-dark border-0 shadow-sm mb-4">
        <div class="card-header bg-body-secondary text-light border-0 d-flex justify-content-between align-items-center">
            <h6 class="mb-0 fw-semibold">
                <i class="bi bi-funnel me-2" aria-hidden="true"></i>Filtros de búsqueda
            </h6>
            <button class="btn btn-sm btn-outline-light" type="button" data-bs-toggle="collapse" data-bs-target="#filtrosCredito" aria-controls="filtrosCredito" aria-expanded="false" aria-label="Mostrar u ocultar filtros de búsqueda">
                <i class="bi bi-chevron-down" aria-hidden="true"></i>
            </button>
        </div>

        <div class="collapse" id="filtrosCredito">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Cliente</label>
                            <input type="text" name="Cliente" class="form-control bg-body-secondary text-light border-0"
                                   value="@filter?.Cliente" placeholder="Nombre o documento..." />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Estado</label>
                            <select name="Estado" class="form-select bg-body-secondary text-light border-0">
                                <option value="">Todos</option>
                                @foreach (var estado in Enum.GetValues(typeof(TheBuryProject.Models.Enums.EstadoCredito)))
                                {
                                    <option value="@estado" selected="@(filter?.Estado?.ToString() == estado.ToString())">@estado</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Número</label>
                            <input type="text" name="Numero" class="form-control bg-body-secondary text-light border-0"
                                   value="@filter?.Numero" placeholder="CRE-..." />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Fecha Desde</label>
                            <input type="date" name="FechaDesde" class="form-control bg-body-secondary text-light border-0"
                                   value="@filter?.FechaDesde?.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Fecha Hasta</label>
                            <input type="date" name="FechaHasta" class="form-control bg-body-secondary text-light border-0"
                                   value="@filter?.FechaHasta?.ToString("yyyy-MM-dd")" />
                        </div>

                        <div class="col-md-1 d-flex align-items-end">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-search" aria-hidden="true"></i>
                                <span class="visually-hidden">Buscar</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <!-- Tabla -->
    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-hover align-middle mb-0">
                        <thead class="table-secondary text-dark">
                            <tr>
                                <th scope="col">Número</th>
                                <th scope="col">Cliente</th>
                                <th scope="col">Estado</th>
                                <th scope="col" class="text-end">Monto Aprobado</th>
                                <th scope="col" class="text-end">Saldo Pendiente</th>
                                <th scope="col">Cuotas</th>
                                <th scope="col">Fecha Aprobación</th>
                                <th scope="col" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var credito in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">@credito.Numero</td>
                                    <td>@credito.ClienteNombre</td>
                                    <td>
                                        @switch (credito.Estado)
                                        {
                                            case TheBuryProject.Models.Enums.EstadoCredito.Solicitado:
                                                <span class="badge bg-warning text-dark">Solicitado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Aprobado:
                                                <span class="badge bg-success">Aprobado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Rechazado:
                                                <span class="badge bg-danger">Rechazado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Activo:
                                                <span class="badge bg-primary">Activo</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Finalizado:
                                                <span class="badge bg-secondary">Finalizado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Cancelado:
                                                <span class="badge bg-dark">Cancelado</span>
                                                break;
                                        }
                                    </td>
                                    <td class="text-end">@credito.MontoAprobado.ToString("C2")</td>
                                    <td class="text-end">
                                        <span class="fw-semibold @(credito.SaldoPendiente > 0 ? "text-success" : "text-muted")">
                                            @credito.SaldoPendiente.ToString("C2")
                                        </span>
                                    </td>
                                    <td>@credito.CantidadCuotas</td>
                                    <td>
                                        @if (credito.FechaAprobacion.HasValue)
                                        {
                                            <time datetime="@credito.FechaAprobacion.Value.ToString("yyyy-MM-dd")">@credito.FechaAprobacion.Value.ToString("dd/MM/yyyy")</time>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@credito.Id"
                                               asp-route-returnUrl="@listReturnUrl"
                                               class="btn btn-outline-info" title="Ver detalles" aria-label="Ver detalles del crédito @credito.Numero">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                                <span class="visually-hidden">Ver detalles</span>
                                            </a>
                                            @if (credito.Estado == TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
                                            {
                                                <a asp-action="Edit" asp-route-id="@credito.Id"
                                                   asp-route-returnUrl="@listReturnUrl"
                                                   class="btn btn-outline-warning text-dark" title="Editar" aria-label="Editar crédito @credito.Numero">
                                                    <i class="bi bi-pencil" aria-hidden="true"></i>
                                                    <span class="visually-hidden">Editar</span>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="p-3 border-top border-secondary d-flex justify-content-between align-items-center">
                    <div><strong>Total de créditos:</strong> @Model.Count</div>
               
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-secondary credit-empty-icon" aria-hidden="true"></i>
                    <h5 class="text-muted mt-3">No se encontraron créditos</h5>
                    <p class="text-muted">
                        @if (filter != null && (!string.IsNullOrEmpty(filter.Cliente)
                                            || !string.IsNullOrEmpty(filter.Numero) || filter.Estado.HasValue))
                        {
                            <span>No hay créditos que coincidan con los filtros aplicados.</span>
                        }
                        else
                        {
                            <span>Aún no hay créditos registrados. Cree uno nuevo para comenzar.</span>
                        }
                    </p>
                    <a asp-action="Create" asp-route-returnUrl="@listReturnUrl" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>Crear Primer Crédito
                    </a>
                </div>
            }
        </div>
    </div>
</section>
