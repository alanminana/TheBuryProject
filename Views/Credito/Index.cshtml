@model List<TheBuryProject.ViewModels.CreditoViewModel>

@{
    ViewData["Title"] = "Créditos";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2><i class="fas fa-hand-holding-usd"></i> Créditos</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Simular" class="btn btn-info">
                <i class="fas fa-calculator"></i> Simular Crédito
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nuevo Crédito
            </a>
            <a asp-action="CuotasVencidas" class="btn btn-warning">
                <i class="fas fa-exclamation-triangle"></i> Cuotas Vencidas
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card mb-3">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-filter"></i> Filtros de Búsqueda
            </h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="Index">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Número de Crédito</label>
                        <input type="text" name="Numero" class="form-control" value="@ViewBag.Filter?.Numero" />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Cliente</label>
                        <input type="text" name="Cliente" class="form-control" placeholder="DNI o Nombre" value="@ViewBag.Filter?.Cliente" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Estado</label>
                        <select name="Estado" class="form-select">
                            <option value="">Todos</option>
                            <option value="0">Solicitado</option>
                            <option value="1">Aprobado</option>
                            <option value="2">Activo</option>
                            <option value="3">Finalizado</option>
                            <option value="4">Rechazado</option>
                            <option value="5">Cancelado</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Fecha Desde</label>
                        <input type="date" name="FechaDesde" class="form-control" value="@ViewBag.Filter?.FechaDesde?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Fecha Hasta</label>
                        <input type="date" name="FechaHasta" class="form-control" value="@ViewBag.Filter?.FechaHasta?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-12 text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Limpiar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Tabla de Créditos -->
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>Número</th>
                            <th>Cliente</th>
                            <th>Fecha Solicitud</th>
                            <th>Monto Aprobado</th>
                            <th>Cuotas</th>
                            <th>Saldo Pendiente</th>
                            <th>Estado</th>
                            <th style="width: 150px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var credito in Model)
                            {
                                <tr>
                                    <td><strong>@credito.Numero</strong></td>
                                    <td>@credito.ClienteNombre</td>
                                    <td>@credito.FechaSolicitud.ToString("dd/MM/yyyy")</td>
                                    <td>@credito.MontoAprobado.ToString("C2")</td>
                                    <td>@credito.CantidadCuotas cuotas</td>
                                    <td><strong>@credito.SaldoPendiente.ToString("C2")</strong></td>
                                    <td>
                                        @switch (credito.Estado)
                                        {
                                            case TheBuryProject.Models.Enums.EstadoCredito.Solicitado:
                                                <span class="badge bg-info">Solicitado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Aprobado:
                                                <span class="badge bg-success">Aprobado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Activo:
                                                <span class="badge bg-primary">Activo</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Finalizado:
                                                <span class="badge bg-secondary">Finalizado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Rechazado:
                                                <span class="badge bg-danger">Rechazado</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCredito.Cancelado:
                                                <span class="badge bg-warning">Cancelado</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@credito.Id" class="btn btn-info" title="Ver Detalles">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (credito.Estado == TheBuryProject.Models.Enums.EstadoCredito.Solicitado)
                                            {
                                                <a asp-action="Edit" asp-route-id="@credito.Id" class="btn btn-warning" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            <a asp-action="Delete" asp-route-id="@credito.Id" class="btn btn-danger" title="Eliminar">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No hay créditos registrados</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>