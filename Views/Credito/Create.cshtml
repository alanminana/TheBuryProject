@model TheBuryProject.ViewModels.CreditoViewModel
@{ 
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Nueva Línea de Crédito";
    ViewData["PageTitle"] = "Nueva Línea de Crédito";
    ViewData["PageSubtitle"] = "Asigna un monto disponible al cliente";
    ViewData["MostrarEvaluacion"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/credito.css" asp-append-version="true" />
}

@section PageActions {
    <a asp-action="Index" class="btn btn-outline-light">
        <i class="bi bi-arrow-left me-2"></i>Volver
    </a>
}

<section class="container-fluid py-4 text-light">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">
            <i class="bi bi-credit-card text-success me-2"></i>Nueva Línea de Crédito
        </h2>
    </div>

    <div class="alert alert-info bg-opacity-25 border-info text-light shadow-sm">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Línea de Crédito:</strong> Asigna un monto disponible al cliente. Las cuotas se generan automáticamente al usar este crédito en compras.
    </div>

    <div class="card bg-dark border-0 shadow-sm shared-panel">
        <div class="card-header bg-success text-dark py-3 shared-panel-header">
            <h5 class="fw-bold mb-0">
                <i class="bi bi-wallet2 me-2"></i>Datos de la Línea de Crédito
            </h5>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create"
                  method="post"
                  data-credito-form
                  data-evaluar-url="@Url.Action("EvaluarCredito", "Credito")">

                <div asp-validation-summary="ModelOnly"
                     class="alert alert-danger d-flex align-items-center"
                     role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <div>Por favor, corregí los errores antes de continuar</div>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="ClienteId" class="form-label">Cliente *</label>
                        <select asp-for="ClienteId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Clientes" required>
                            <option value="">Seleccione un cliente...</option>
                        </select>
                        <span asp-validation-for="ClienteId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MontoSolicitado" class="form-label">Monto del Crédito (Límite) *</label>
                        <input asp-for="MontoSolicitado" type="number" step="0.01" min="0" class="form-control bg-body-secondary text-light border-0" required />
                        <div class="form-text text-muted">Monto máximo disponible para compras</div>
                        <span asp-validation-for="MontoSolicitado" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TasaInteres" class="form-label">Tasa de Interés Mensual (%) *</label>
                        <input asp-for="TasaInteres" type="number" step="0.01" min="0" max="100" class="form-control bg-body-secondary text-light border-0" required />
                        <div class="form-text text-muted">Ejemplo: 5.00 = 5% mensual</div>
                        <span asp-validation-for="TasaInteres" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 d-flex align-items-center mt-3">
                        <div class="form-check form-switch">
                            <input asp-for="RequiereGarante" class="form-check-input" type="checkbox" id="chkRequiereGarante" />
                            <label asp-for="RequiereGarante" class="form-check-label">Requiere Garante</label>
                        </div>
                    </div>
                </div>

                <div id="garanteSection" class="row g-3 mt-1 d-none">
                    <div class="col-md-12">
                        <label asp-for="GaranteId" class="form-label">Garante</label>
                        <select asp-for="GaranteId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Garantes">
                            <option value="">Seleccione un garante...</option>
                        </select>
                        <span asp-validation-for="GaranteId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Panel de Evaluación en Tiempo Real -->
                <div id="panelEvaluacion" class="d-none">
                    <div class="card bg-dark border-info shadow-sm mb-3">
                        <div class="card-header bg-info text-dark">
                            <h5 class="mb-0">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Evaluación Automática
                            </h5>
                        </div>
                        <div class="card-body text-light" id="resultadoEvaluacion">
                            <div class="text-center py-4">
                                <div class="spinner-border text-info" role="status">
                                    <span class="visually-hidden">Evaluando...</span>
                                </div>
                                <p class="text-muted mt-2">Evaluando solicitud...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-success btn-lg px-4 text-dark fw-semibold">
                        <i class="bi bi-save me-2"></i>Crear Línea de Crédito
                    </button>
                </div>

            </form>
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/credito-create.js" asp-append-version="true"></script>
}
