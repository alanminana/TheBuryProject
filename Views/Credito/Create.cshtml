@model TheBuryProject.ViewModels.CreditoViewModel

@{
    ViewData["Title"] = "Nuevo Crédito";
}

<div class="row">
    <div class="col-md-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-plus-circle"></i> Nuevo Crédito</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Datos del Crédito</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClienteId" class="form-label"></label>
                            <select asp-for="ClienteId" class="form-select" asp-items="ViewBag.Clientes">
                                <option value="">Seleccione un cliente...</option>
                            </select>
                            <span asp-validation-for="ClienteId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Numero" class="form-label"></label>
                            <input asp-for="Numero" class="form-control" />
                            <span asp-validation-for="Numero" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="MontoSolicitado" class="form-label"></label>
                            <input asp-for="MontoSolicitado" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="MontoSolicitado" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="CantidadCuotas" class="form-label"></label>
                            <select asp-for="CantidadCuotas" class="form-select">
                                <option value="3">3 cuotas</option>
                                <option value="6">6 cuotas</option>
                                <option value="12">12 cuotas</option>
                                <option value="18">18 cuotas</option>
                                <option value="24">24 cuotas</option>
                                <option value="36">36 cuotas</option>
                            </select>
                            <span asp-validation-for="CantidadCuotas" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="TasaInteres" class="form-label"></label>
                            <input asp-for="TasaInteres" class="form-control" type="number" step="0.01" />
                            <small class="form-text text-muted">Tasa nominal mensual (ejemplo: 0.05 = 5%)</small>
                            <span asp-validation-for="TasaInteres" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FechaPrimeraCuota" class="form-label"></label>
                            <input asp-for="FechaPrimeraCuota" class="form-control" type="date" />
                            <span asp-validation-for="FechaPrimeraCuota" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check mt-4">
                                <input asp-for="RequiereGarante" class="form-check-input" type="checkbox" />
                                <label asp-for="RequiereGarante" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div class="row" id="garanteSection" style="display: none;">
                        <div class="col-md-12 mb-3">
                            <label asp-for="GaranteId" class="form-label"></label>
                            <select asp-for="GaranteId" class="form-select" asp-items="ViewBag.Garantes">
                                <option value="">Seleccione un garante...</option>
                            </select>
                            <span asp-validation-for="GaranteId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-end gap-2">
                                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-save"></i> Guardar Crédito
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#RequiereGarante').change(function () {
                if ($(this).is(':checked')) {
                    $('#garanteSection').show();
                } else {
                    $('#garanteSection').hide();
                    $('#GaranteId').val('');
                }
            });

            // Trigger on page load
            if ($('#RequiereGarante').is(':checked')) {
                $('#garanteSection').show();
            }
        });
    </script>
}