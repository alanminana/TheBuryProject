@model TheBuryProject.ViewModels.CreditoViewModel
@{
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Nueva Línea de Crédito";
    ViewData["PageTitle"] = "Nueva Línea de Crédito";
    ViewData["PageSubtitle"] = "Asigna un monto disponible al cliente";
    ViewData["MostrarEvaluacion"] = true;
}

@section PageActions {
    <a asp-action="Index" class="btn btn-outline-light">
        <i class="bi bi-arrow-left me-2"></i>Volver
    </a>
}

<div class="alert alert-info bg-opacity-25 border-info text-light shadow-sm">
    <i class="bi bi-info-circle me-2"></i>
    <strong>Línea de Crédito:</strong> Asigna un monto disponible al cliente. Las cuotas se generan automáticamente al usar este crédito en compras.
</div>

<div class="card bg-dark border-0 shadow-sm">
    <div class="card-header bg-success text-dark py-3">
        <h5 class="fw-bold mb-0"><i class="bi bi-wallet2 me-2"></i>Datos de la Línea de Crédito</h5>
    </div>

    <div class="card-body p-4">
        <form asp-action="Create" method="post">
            <partial name="~/Views/Shared/Credito/_CreditoForm.cshtml" model="Model" />

            <div class="alert alert-warning bg-opacity-25 border-warning text-light mt-4 shadow-sm">
                <i class="bi bi-exclamation-circle me-2"></i>
                <strong>Nota:</strong> Las cuotas y fechas se definirán al usar esta línea en una compra.
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                    <i class="bi bi-x-circle me-2"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-success btn-lg px-4 text-dark fw-semibold">
                    <i class="bi bi-save me-2"></i>Crear Línea de Crédito
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let evaluacionTimeout;

            $('#ClienteId, #MontoSolicitado, #GaranteId').on('change', function () {
                clearTimeout(evaluacionTimeout);
                evaluacionTimeout = setTimeout(evaluarCredito, 500);
            });

            $('#chkRequiereGarante').on('change', function () {
                if (!$(this).is(':checked')) {
                    $('#GaranteId').val('');
                }
                evaluarCredito();
            });

            function evaluarCredito() {
                const clienteId = $('#ClienteId').val();
                const montoSolicitado = $('#MontoSolicitado').val();
                const garanteId = $('#GaranteId').val();

                if (!clienteId || !montoSolicitado || montoSolicitado <= 0) {
                    $('#panelEvaluacion').hide();
                    return;
                }

                $('#panelEvaluacion').show();
                $('#resultadoEvaluacion').html(`
                    <div class="text-center py-4">
                        <div class="spinner-border text-info" role="status">
                            <span class="visually-hidden">Evaluando...</span>
                        </div>
                        <p class="text-muted mt-2">Evaluando solicitud...</p>
                    </div>
                `);

                $.ajax({
                    url: '@Url.Action("EvaluarCredito", "Credito")',
                    type: 'GET',
                    data: {
                        clienteId: clienteId,
                        montoSolicitado: montoSolicitado,
                        garanteId: garanteId || null
                    },
                    success: function (evaluacion) {
                        mostrarEvaluacion(evaluacion);
                    },
                    error: function (xhr) {
                        $('#resultadoEvaluacion').html(`
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Error al evaluar: ${xhr.responseJSON?.error || 'Error desconocido'}
                            </div>
                        `);
                    }
                });
            }

            function mostrarEvaluacion(eval) {
                const colorClass = eval.resultado === 2 ? 'success' : eval.resultado === 1 ? 'warning' : 'danger';
                const icono = eval.resultado === 2 ? 'check-circle-fill' : eval.resultado === 1 ? 'exclamation-triangle-fill' : 'x-circle-fill';

                let html = `
                    <div class="alert alert-${colorClass} border-0 mb-3">
                        <h5 class="alert-heading">
                            <i class="bi bi-${icono} me-2"></i>
                            ${eval.resultadoTexto}
                        </h5>
                        <p class="mb-0">${eval.motivo}</p>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <h6 class="text-muted mb-2">Puntaje: ${eval.puntajeFinal.toFixed(0)} / 100</h6>
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar bg-${colorClass}"
                                     role="progressbar"
                                     style="width: ${eval.puntajeFinal}%">
                                    ${eval.puntajeFinal.toFixed(0)}%
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <div class="card bg-dark border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-secondary d-block">Ingresos estimados</small>
                                    <h5 class="text-light mb-0">${eval.ingresosEstimados?.toLocaleString('es-AR', { style: 'currency', currency: 'ARS' }) ?? 'N/D'}</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-dark border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-secondary d-block">Relación cuota/ingreso</small>
                                    <h5 class="text-light mb-0">${eval.relacionCuotaIngreso?.toFixed(2) ?? 'N/D'}%</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card bg-dark border-0 shadow-sm">
                                <div class="card-body">
                                    <small class="text-secondary d-block">Documentación</small>
                                    <h5 class="text-light mb-0">${eval.documentacionCompleta ? 'Completa' : 'Incompleta'}</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                `;

                $('#resultadoEvaluacion').html(html);
            }
        });
    </script>
}
