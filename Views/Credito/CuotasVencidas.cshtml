@model List<TheBuryProject.ViewModels.CuotaViewModel>

@{
    ViewData["Title"] = "Cuotas Vencidas";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-md-6">
            <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Cuotas Vencidas</h2>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver a Créditos
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-info-circle"></i>
            <strong>Total de cuotas vencidas: @Model.Count</strong>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Crédito</th>
                                <th>Cuota Nro</th>
                                <th>Vencimiento</th>
                                <th>Días Atraso</th>
                                <th>Monto</th>
                                <th>Punitorio</th>
                                <th>Total Adeudado</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cuota in Model.OrderBy(c => c.FechaVencimiento))
                            {
                                <tr class="@(cuota.DiasAtraso > 30 ? "table-danger" : "table-warning")">
                                    <td>@cuota.CreditoId</td>
                                    <td><strong>@cuota.NumeroCuota</strong></td>
                                    <td>@cuota.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge bg-danger">@cuota.DiasAtraso días</span>
                                    </td>
                                    <td>@cuota.MontoTotal.ToString("C2")</td>
                                    <td class="text-danger">@cuota.MontoPunitorio.ToString("C2")</td>
                                    <td><strong>@cuota.SaldoPendiente.ToString("C2")</strong></td>
                                    <td>
                                        @switch (cuota.Estado)
                                        {
                                            case TheBuryProject.Models.Enums.EstadoCuota.Vencida:
                                                <span class="badge bg-danger">Vencida</span>
                                                break;
                                            case TheBuryProject.Models.Enums.EstadoCuota.Parcial:
                                                <span class="badge bg-warning">Parcial</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@cuota.Estado</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="PagarCuota" asp-route-id="@cuota.Id" class="btn btn-sm btn-success">
                                            <i class="fas fa-money-bill"></i> Pagar
                                        </a>
                                        <a asp-controller="Credito" asp-action="Details" asp-route-id="@cuota.CreditoId" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i> Ver Crédito
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-check-circle fa-4x text-success mb-3"></i>
                <h4>¡Excelente!</h4>
                <p class="text-muted">No hay cuotas vencidas en este momento</p>
                <a asp-action="Index" class="btn btn-primary mt-3">
                    <i class="fas fa-list"></i> Ver todos los créditos
                </a>
            </div>
        </div>
    }
</div>