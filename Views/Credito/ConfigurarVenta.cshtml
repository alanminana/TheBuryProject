@model TheBuryProject.ViewModels.ConfiguracionCreditoVentaViewModel
@using System.Globalization
@{ 
    Layout = "_ModuleLayout";
    ViewData["Title"] = "Configurar Cr√©dito de Venta";
    ViewData["PageTitle"] = "Cr√©dito Personal";
    ViewData["PageSubtitle"] = "Completa los datos del plan para avanzar";

    var returnUrl = ViewData["ReturnUrl"] as string;
    var backUrl = returnUrl
        ?? (Model.VentaId.HasValue
            ? Url.Action("Details", "Venta", new { id = Model.VentaId })!
            : Url.Action("Index", "Credito")!);
}

@section Styles {
    <link rel="stylesheet" href="~/css/creditos.css" asp-append-version="true" />
}

@section PageActions {
    <a href="@backUrl" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left" aria-hidden="true"></i> Volver
    </a>
}

<form asp-action="ConfigurarVenta" method="post" class="needs-validation" novalidate data-total-venta="@Model.Monto.ToString(CultureInfo.InvariantCulture)" data-tasa-mensual="@(Model.TasaMensual.HasValue ? Model.TasaMensual.Value.ToString(CultureInfo.InvariantCulture) : "0")">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="CreditoId" />
    <input type="hidden" asp-for="VentaId" />
    <input type="hidden" name="returnUrl" value="@returnUrl" />

    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-4">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center gap-2 @(ViewData.ModelState.IsValid ? "d-none" : string.Empty)" role="alert">
                <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
                <div class="flex-fill">Revisa los datos ingresados antes de continuar.</div>
            </div>

            <div class="row g-4">
                <div class="col-lg-4">
                    <div class="card shadow-sm h-100 panel-soft border-0">
                        <div class="card-header border-0">
                            <h5 class="mb-0">Datos de la venta</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Cliente</label>
                                <div class="form-control bg-body-secondary text-light border-0 fw-semibold">@Model.ClienteNombre</div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="NumeroCredito" class="form-label"></label>
                                <input asp-for="NumeroCredito" class="form-control bg-body-secondary text-light border-0" readonly />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Monto total de venta</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-light border-0">$</span>
                                    <input class="form-control bg-body-secondary text-light border-0" value="@Model.Monto.ToString("N2")" readonly />
                                </div>
                                <small class="text-muted">Importe total de la venta antes de anticipo.</small>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Anticipo" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-light border-0">$</span>
                                    <input asp-for="Anticipo" class="form-control bg-body-secondary text-light border-0" type="number" step="0.01" min="0" id="anticipoInput" />
                                </div>
                                <span asp-validation-for="Anticipo" class="text-danger small"></span>
                                <small class="text-muted">Opcional. Se descontar√° del monto a financiar.</small>
                            </div>
                            <div class="p-3 mt-2 rounded info-block">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <p class="mb-1 fw-semibold">Monto financiado</p>
                                        <h5 class="mb-0" id="montoFinanciadoLabel">$@Model.MontoFinanciado.ToString("N2")</h5>
                                    </div>
                                    <i class="bi bi-calculator fs-4" aria-hidden="true"></i>
                                </div>
                                <input type="hidden" asp-for="MontoFinanciado" id="MontoFinanciado" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm h-100 panel-soft border-0">
                        <div class="card-header border-0">
                            <h5 class="mb-0">Condiciones del cr√©dito</h5>
                        </div>
                        <div class="card-body">
                            <!-- TAREA 9: M√©todo de C√°lculo -->
                            <div class="mb-4">
                                <label asp-for="MetodoCalculo" class="form-label d-flex align-items-center gap-2">
                                    <i class="bi bi-calculator" aria-hidden="true"></i> M√©todo de c√°lculo
                                    <span class="badge bg-danger" style="font-size: 0.65rem;">Obligatorio</span>
                                </label>
                                <select asp-for="MetodoCalculo" class="form-select bg-body-secondary text-light border-0" id="metodoCalculoSelect" required>
                                    <option value="" disabled selected>üîΩ Seleccione m√©todo de c√°lculo</option>
                                    <option value="0">ü§ñ Autom√°tico (Por Cliente)</option>
                                    <option value="1">üìã Usar Perfil</option>
                                    @if (ViewBag.ClienteConfigPersonalizada?.TieneConfiguracionCliente == true)
                                    {
                                        <option value="2">üë§ Usar Cliente</option>
                                    }
                                    else
                                    {
                                        <option value="2" disabled>üë§ Usar Cliente (Sin configuraci√≥n)</option>
                                    }
                                    <option value="3">üåç Global (Sistema)</option>
                                    <option value="4">‚úèÔ∏è Manual</option>
                                </select>
                                <span asp-validation-for="MetodoCalculo" class="text-danger small"></span>
                                <input type="hidden" asp-for="ClienteId" />
                                <input type="hidden" asp-for="FuenteConfiguracion" id="fuenteConfigHidden" />
                                <div class="form-text text-muted" id="metodoHelpText">
                                    Selecciona c√≥mo calcular tasa, gastos y cuotas.
                                </div>
                                <!-- PUNTO 2: Aviso visible cuando no hay m√©todo seleccionado -->
                                <div class="alert alert-warning d-flex align-items-center gap-2 mt-3" id="avisoMetodoRequerido" role="alert">
                                    <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
                                    <div>
                                        <strong>‚ö†Ô∏è M√©todo de c√°lculo requerido:</strong> Debe seleccionar un m√©todo para habilitar el formulario y poder guardar.
                                    </div>
                                </div>
                            </div>

                            <!-- TAREA 9: Selector de Perfil (visible solo si MetodoCalculo = UsarPerfil) -->
                            <div class="mb-4" id="perfilSelectorDiv" style="display: none;">
                                <label asp-for="PerfilCreditoSeleccionadoId" class="form-label d-flex align-items-center gap-2">
                                    <i class="bi bi-list-stars" aria-hidden="true"></i> Perfil de Cr√©dito
                                </label>
                                <select asp-for="PerfilCreditoSeleccionadoId" class="form-select bg-body-secondary text-light border-0" id="perfilCreditoSelect">
                                    <option value="">Seleccionar perfil...</option>
                                    @if (ViewBag.PerfilesActivos != null)
                                    {
                                        foreach (var perfil in ViewBag.PerfilesActivos)
                                        {
                                            <option value="@perfil.Id" 
                                                    data-tasa="@perfil.TasaMensual" 
                                                    data-gastos="@perfil.GastosAdministrativos"
                                                    data-min-cuotas="@perfil.MinCuotas"
                                                    data-max-cuotas="@perfil.MaxCuotas">
                                                @perfil.Nombre
                                            </option>
                                        }
                                    }
                                </select>
                                <div class="form-text text-muted">
                                    Selecciona el perfil para precargar sus valores.
                                </div>
                            </div>

                            <!-- Data attributes para JavaScript -->
                            <div id="configData"
                                 data-tasa-global="@ViewBag.ClienteConfigPersonalizada?.TasaGlobal"
                                 data-gastos-globales="@ViewBag.ClienteConfigPersonalizada?.GastosGlobales"
                                 data-tasa-cliente="@ViewBag.ClienteConfigPersonalizada?.TasaPersonalizada"
                                 data-gastos-cliente="@ViewBag.ClienteConfigPersonalizada?.GastosPersonalizados"
                                 data-cuotas-max-cliente="@ViewBag.ClienteConfigPersonalizada?.CuotasMaximas"
                                 data-cuotas-min-cliente="@ViewBag.ClienteConfigPersonalizada?.CuotasMinimas"
                                 data-tiene-config-cliente="@(ViewBag.ClienteConfigPersonalizada?.TieneConfiguracionCliente == true ? "true" : "false")"
                                 data-tiene-perfil-preferido="@(ViewBag.ClienteConfigPersonalizada?.TienePerfilPreferido == true ? "true" : "false")"
                                 data-perfil-preferido-id="@ViewBag.ClienteConfigPersonalizada?.PerfilPreferidoId"
                                 data-perfil-tasa="@ViewBag.ClienteConfigPersonalizada?.PerfilTasa"
                                 data-perfil-gastos="@ViewBag.ClienteConfigPersonalizada?.PerfilGastos"
                                 data-perfil-min-cuotas="@ViewBag.ClienteConfigPersonalizada?.PerfilMinCuotas"
                                 data-perfil-max-cuotas="@ViewBag.ClienteConfigPersonalizada?.PerfilMaxCuotas"></div>
                            
                            <div class="mb-3">
                                <label asp-for="CantidadCuotas" class="form-label"></label>
                                <input asp-for="CantidadCuotas" class="form-control bg-body-secondary text-light border-0" type="number" min="1" max="120" id="cuotasInput" />
                                <span asp-validation-for="CantidadCuotas" class="text-danger small"></span>
                                <small class="text-muted" id="cuotasMaxInfo">Rango: <span id="cuotasMinLabel">1</span> - <span id="cuotasMaxLabel">24</span> cuotas</small>
                            </div>
                                                        <div class="mb-3">
                                <label class="form-label d-flex align-items-center gap-2">
                                    Tasa mensual aplicada
                                    <span class="badge bg-info text-dark" id="tasaBadge" style="font-size: 0.65rem;">Global</span>
                                </label>
                                <div class="input-group">
                                    <input asp-for="TasaMensual" class="form-control bg-body-secondary text-light border-0" id="tasaMensualInput" type="number" step="0.01" min="0" />
                                    <span class="input-group-text bg-secondary text-light border-0">%</span>
                                </div>
                                <div class="form-text text-muted" id="tasaHelpText">
                                    Cambia autom√°ticamente seg√∫n la fuente seleccionada.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label asp-for="GastosAdministrativos" class="form-label"></label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary text-light border-0">$</span>
                                    <input asp-for="GastosAdministrativos" class="form-control bg-body-secondary text-light border-0" type="number" step="0.01" min="0" />
                                </div>
                                <small class="text-muted">Opcional. Si no aplica, d√©jalo en 0.</small>
                            </div>
                            <div class="mb-3">
                                <label asp-for="FechaPrimeraCuota" class="form-label"></label>
                                <input asp-for="FechaPrimeraCuota" class="form-control bg-body-secondary text-light border-0" type="date" id="fechaPrimeraCuota" />
                                <span asp-validation-for="FechaPrimeraCuota" class="text-danger small"></span>
                            </div>
                            <div class="p-3 rounded info-block">
                                <p class="mb-1 fw-semibold">Cuota estimada</p>
                                <h5 class="mb-0" id="cuotaEstimadaLabel">$0,00</h5>
                                <div class="small mt-2">
                                    <div><strong>Tasa aplicada:</strong> <span id="tasaAplicadaLabel">0%</span></div>
                                    <div><strong>Inter√©s total:</strong> <span id="interesTotalLabel">$0,00</span></div>
                                    <div><strong>Total a pagar:</strong> <span id="totalAPagarLabel">$0,00</span></div>
                                </div>
                            </div>
                            <div class="summary-grid d-flex flex-column flex-lg-row mt-3">
                                <div class="summary-item flex-fill">
                                    <small>Capital financiado</small>
                                    <div class="value" id="capitalFinanciadoLabel">$0,00</div>
                                </div>
                                <div class="summary-item flex-fill">
                                    <small>Gastos adm.</small>
                                    <div class="value" id="gastosAdministrativosLabel">$0,00</div>
                                </div>
                                <div class="summary-item flex-fill">
                                    <small>Total plan</small>
                                    <div class="value" id="planTotalLabel">$0,00</div>
                                </div>
                                <div class="summary-item flex-fill">
                                    <small>Primer vencimiento</small>
                                    <div class="value" id="fechaPrimerPagoLabel">--</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="card shadow-sm h-100 panel-soft border-0">
                        <div class="card-header border-0">
                            <h5 class="mb-0">Evaluaci√≥n preliminar</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-flex align-items-center gap-2 mb-3">
                                <span class="badge state-yellow" id="estadoSemaforo">Sin datos</span>
                                <span class="small" id="mensajeSemaforo">Completa los datos para precalificar.</span>
                            </div>
                            <div class="p-3 rounded info-block" id="alertaDatos">
                                <strong class="d-block">Mensajes:</strong>
                                <ul class="mb-0 small" id="listaMensajes">
                                    <li>Completa los datos para precalificar.</li>
                                    <li id="msgIngreso" class="d-none">Falta ingreso</li>
                                    <li id="msgAntiguedad" class="d-none">Falta antig√ºedad</li>
                                </ul>
                            </div>
                            <div class="p-3 mt-3 rounded error-block d-none" id="errorCalculadora">
                                <i class="bi bi-exclamation-triangle-fill me-2" aria-hidden="true"></i>Ingresa anticipo y cuotas para ver los c√°lculos. La fecha ayuda a definir el primer vencimiento.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a href="@backUrl" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle" aria-hidden="true"></i> Cancelar
                </a>
                <button type="submit" class="btn btn-primary" id="btnGuardarCredito" disabled>
                    <i class="bi bi-check-circle" aria-hidden="true"></i> Confirmar Cr√©dito
                </button>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/creditos-configurar.js" asp-append-version="true"></script>
}


