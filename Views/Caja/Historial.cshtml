@model TheBuryProject.ViewModels.HistorialCierresViewModel

@{
    ViewData["Title"] = "Historial de Cierres";
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-body-secondary text-uppercase small mb-1">Cajas</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-clock-history" aria-hidden="true"></i>
                <span>Historial de cierres</span>
            </h1>
            <p class="text-body-secondary small mb-0">
                Revisa los cierres realizados, sus diferencias y los usuarios que intervinieron.
            </p>
        </div>

        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver al módulo de cajas
        </a>
    </div>

    <!-- Filtros -->
    <div class="card card-animate mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <h2 class="h6 mb-1">Filtros</h2>
                    <p class="text-body-secondary small mb-0">
                        Filtra por caja y rango de fechas para acotar el historial.
                    </p>
                </div>
            </div>

            <form asp-action="Historial" method="get" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label small">Caja</label>
                    <select name="cajaId" class="form-select form-select-sm" asp-items="ViewBag.Cajas">
                        <option value="">Todas las cajas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label small">Fecha desde</label>
                    <input type="date"
                           name="fechaDesde"
                           class="form-control form-control-sm"
                           value="@ViewBag.FechaDesde?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label small">Fecha hasta</label>
                    <input type="date"
                           name="fechaHasta"
                           class="form-control form-control-sm"
                           value="@ViewBag.FechaHasta?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        <i class="bi bi-funnel me-1" aria-hidden="true"></i>Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary small text-uppercase mb-1">Total cierres</h6>
                    <h3 class="mb-0 text-primary">@Model.TotalCierres</h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary small text-uppercase mb-1">Cierres exactos</h6>
                    <h3 class="mb-0 text-success">
                        @(Model.TotalCierres - Model.CierresConDiferencia)
                    </h3>
                    <small class="text-body-secondary">
                        @Model.PorcentajeCierresExactos.ToString("F1")%
                    </small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary small text-uppercase mb-1">Sobrantes</h6>
                    <h3 class="mb-0 text-success">
                        @Model.TotalDiferenciasPositivas.ToString("C")
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary small text-uppercase mb-1">Faltantes</h6>
                    <h3 class="mb-0 text-danger">
                        @Model.TotalDiferenciasNegativas.ToString("C")
                    </h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de cierres -->
    <div class="card card-animate">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-list-ul" aria-hidden="true"></i>
                <span>Lista de cierres</span>
            </h2>
            @if (Model.TotalCierres > 0)
            {
                <span class="badge bg-dark bg-opacity-50">
                    @Model.TotalCierres registros
                </span>
            }
        </div>
        <div class="card-body p-0">
            @if (Model.Cierres.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-sm align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Fecha cierre</th>
                                <th scope="col">Caja</th>
                                <th scope="col">Usuario apertura</th>
                                <th scope="col">Usuario cierre</th>
                                <th scope="col" class="text-end">Monto esperado</th>
                                <th scope="col" class="text-end">Monto real</th>
                                <th scope="col" class="text-end">Diferencia</th>
                                <th scope="col">Estado</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cierre in Model.Cierres)
                            {
                                <tr>
                                    <td class="small">
                                        <time datetime="@cierre.FechaCierre.ToString("O")">
                                            @cierre.FechaCierre.ToString("dd/MM/yyyy HH:mm")
                                        </time>
                                    </td>
                                    <td class="small">
                                        <strong>@cierre.AperturaCaja.Caja.Nombre</strong><br />
                                        <span class="text-body-secondary">@cierre.AperturaCaja.Caja.Codigo</span>
                                    </td>
                                    <td class="small">@cierre.AperturaCaja.UsuarioApertura</td>
                                    <td class="small">@cierre.UsuarioCierre</td>
                                    <td class="text-end small">
                                        @cierre.MontoEsperadoSistema.ToString("C")
                                    </td>
                                    <td class="text-end small">
                                        @cierre.MontoTotalReal.ToString("C")
                                    </td>
                                    <td class="text-end small">
                                        @if (cierre.TieneDiferencia)
                                        {
                                            if (cierre.Diferencia > 0)
                                            {
                                                <span class="text-success">
                                                    +@cierre.Diferencia.ToString("C")
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">
                                                    @cierre.Diferencia.ToString("C")
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-body-secondary">$0,00</span>
                                        }
                                    </td>
                                    <td class="small">
                                        @if (cierre.TieneDiferencia)
                                        {
                                            if (cierre.Diferencia > 0)
                                            {
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-arrow-up me-1" aria-hidden="true"></i>Sobrante
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-arrow-down me-1" aria-hidden="true"></i>Faltante
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check me-1" aria-hidden="true"></i>Exacto
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a asp-action="DetallesCierre"
                                           asp-route-id="@cierre.Id"
                                           asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
                                           class="btn btn-sm btn-outline-primary"
                                           aria-label="Ver detalle de cierre">
                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                            <span class="visually-hidden">Ver detalle de cierre</span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-3">
                    <div class="alert alert-info mb-0" role="alert">
                        <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                        No se encontraron cierres con los filtros aplicados.
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Análisis de diferencias -->
    @if (Model.CierresConDiferencia > 0)
    {
        <div class="card card-animate mt-4">
            <div class="card-header bg-warning bg-opacity-10 border-warning">
                <h2 class="h6 mb-0 d-flex align-items-center gap-2 text-warning">
                    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                    <span>Cierres con diferencias</span>
                </h2>
            </div>
            <div class="card-body">
                <div class="row gy-3">
                    <div class="col-md-6">
                        <h6 class="text-body-secondary text-uppercase small mb-2">Análisis de sobrantes</h6>
                        <ul class="small mb-0">
                            @foreach (var cierre in Model.Cierres
                                                    .Where(c => c.Diferencia > 0)
                                                    .OrderByDescending(c => c.Diferencia)
                                                    .Take(5))
                            {
                                <li>
                                    <strong>@cierre.AperturaCaja.Caja.Nombre</strong>
                                    - @cierre.FechaCierre.ToString("dd/MM/yyyy"):
                                    <span class="text-success">
                                        +@cierre.Diferencia.ToString("C")
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6 class="text-body-secondary text-uppercase small mb-2">Análisis de faltantes</h6>
                        <ul class="small mb-0">
                            @foreach (var cierre in Model.Cierres
                                                    .Where(c => c.Diferencia < 0)
                                                    .OrderBy(c => c.Diferencia)
                                                    .Take(5))
                            {
                                <li>
                                    <strong>@cierre.AperturaCaja.Caja.Nombre</strong>
                                    - @cierre.FechaCierre.ToString("dd/MM/yyyy"):
                                    <span class="text-danger">
                                        @cierre.Diferencia.ToString("C")
                                    </span>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
