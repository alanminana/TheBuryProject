@model TheBuryProject.ViewModels.MovimientoCajaViewModel

@{
    ViewData["Title"] = "Registrar Movimiento";
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Operaciones · Cajas</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-arrow-left-right"></i>
                <span>Registrar movimiento</span>
            </h1>
            <p class="text-muted small mb-0">
                Registra ingresos y egresos asociados a la caja abierta.
            </p>
        </div>

        <a asp-action="DetallesApertura"
           asp-route-id="@Model.AperturaCajaId"
           class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left me-1"></i>Volver a la apertura
        </a>
    </div>

    <div class="row">
        <div class="col-12 col-lg-7 col-xl-5">

            <div class="card card-animate">
                <div class="card-body">

                    <!-- Info de la caja -->
                    <div class="mb-3 p-3 rounded-3 bg-dark bg-opacity-25 d-flex justify-content-between align-items-center">
                        <div>
                            <div class="small text-muted text-uppercase">Caja</div>
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-cash-stack"></i>
                                <strong>@Model.CajaNombre</strong>
                            </div>
                        </div>
                        <div class="text-end">
                            <div class="small text-muted text-uppercase">Saldo actual</div>
                            <div class="fw-semibold">
                                @(Model.SaldoActual?.ToString("C") ?? "--")
                            </div>
                        </div>
                    </div>

                    <form asp-action="RegistrarMovimiento" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="AperturaCajaId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Tipo" class="form-label small"></label>
                                <select asp-for="Tipo" class="form-select form-select-sm">
                                    <option value="">-- Seleccione --</option>
                                    <option value="0">Ingreso (+)</option>
                                    <option value="1">Egreso (-)</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Concepto" class="form-label small"></label>
                                <select asp-for="Concepto" class="form-select form-select-sm">
                                    <option value="">-- Seleccione --</option>
                                    <optgroup label="Ingresos por ventas">
                                        <option value="0">Venta efectivo</option>
                                        <option value="1">Venta tarjeta</option>
                                        <option value="2">Venta cheque</option>
                                    </optgroup>
                                    <optgroup label="Créditos">
                                        <option value="3">Cobro de cuota</option>
                                        <option value="4">Cancelación de crédito</option>
                                    </optgroup>
                                    <optgroup label="Operaciones">
                                        <option value="10">Gasto operativo</option>
                                        <option value="11">Extracción efectivo</option>
                                        <option value="12">Depósito efectivo</option>
                                    </optgroup>
                                    <optgroup label="Otros">
                                        <option value="20">Devolución cliente</option>
                                        <option value="30">Ajuste de caja</option>
                                        <option value="99">Otro</option>
                                    </optgroup>
                                </select>
                                <span asp-validation-for="Concepto" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label small"></label>
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">$</span>
                                <input asp-for="Monto"
                                       type="number"
                                       step="0.01"
                                       class="form-control"
                                       placeholder="0,00" />
                            </div>
                            <span asp-validation-for="Monto" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label small"></label>
                            <textarea asp-for="Descripcion"
                                      class="form-control form-control-sm"
                                      rows="2"
                                      placeholder="Descripción del movimiento..."
                                      required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Referencia" class="form-label small"></label>
                            <input asp-for="Referencia"
                                   class="form-control form-control-sm"
                                   placeholder="Ej: Ticket #123, Factura #456" />
                            <span asp-validation-for="Referencia" class="text-danger small"></span>
                            <small class="text-muted">
                                Número de comprobante o referencia (opcional).
                            </small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label small"></label>
                            <textarea asp-for="Observaciones"
                                      class="form-control form-control-sm"
                                      rows="2"
                                      placeholder="Observaciones adicionales..."></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-3">
                            <a asp-action="DetallesApertura"
                               asp-route-id="@Model.AperturaCajaId"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Registrar movimiento
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
