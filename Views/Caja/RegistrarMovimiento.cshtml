@model TheBuryProject.ViewModels.MovimientoCajaViewModel
@{
    ViewData["Title"] = "Registrar Movimiento";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-arrow-left-right"></i> Registrar Movimiento de Caja</h4>
                </div>
                <div class="card-body">
                    <!-- Info de la caja -->
                    <div class="alert alert-info mb-4">
                        <h6><i class="bi bi-cash-stack"></i> @Model.CajaNombre</h6>
                        <p class="mb-0">Saldo actual: <strong>@Model.SaldoActual?.ToString("C")</strong></p>
                    </div>

                    <form asp-action="RegistrarMovimiento" method="post">
                        <input type="hidden" asp-for="AperturaCajaId" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Tipo" class="form-label"></label>
                                <select asp-for="Tipo" class="form-select">
                                    <option value="">-- Seleccione --</option>
                                    <option value="0">Ingreso (+)</option>
                                    <option value="1">Egreso (-)</option>
                                </select>
                                <span asp-validation-for="Tipo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Concepto" class="form-label"></label>
                                <select asp-for="Concepto" class="form-select">
                                    <option value="">-- Seleccione --</option>
                                    <option value="0">Venta Efectivo</option>
                                    <option value="1">Pago Cuota</option>
                                    <option value="2">Gasto Operativo</option>
                                    <option value="3">Extracción Efectivo</option>
                                    <option value="4">Depósito Efectivo</option>
                                    <option value="5">Devolución Cliente</option>
                                    <option value="6">Ajuste Caja</option>
                                    <option value="99">Otro</option>
                                </select>
                                <span asp-validation-for="Concepto" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Monto" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Monto" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Monto" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2" placeholder="Descripción del movimiento..." required></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Referencia" class="form-label"></label>
                            <input asp-for="Referencia" class="form-control" placeholder="Ej: Ticket #123, Factura #456" />
                            <span asp-validation-for="Referencia" class="text-danger"></span>
                            <small class="form-text text-muted">Número de comprobante o referencia (opcional)</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Observaciones" class="form-label"></label>
                            <textarea asp-for="Observaciones" class="form-control" rows="2" placeholder="Observaciones adicionales..."></textarea>
                            <span asp-validation-for="Observaciones" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="DetallesApertura" asp-route-id="@Model.AperturaCajaId" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Registrar Movimiento
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}