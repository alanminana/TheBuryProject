@model TheBuryProject.ViewModels.CajasListViewModel
@using TheBuryProject.Models.Enums
@using TheBuryProject.Models.Constants

@{
    ViewData["Title"] = "Cajas y arqueos";
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-body-secondary text-uppercase small mb-1">Cajas</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-cash-stack" aria-hidden="true"></i>
                <span>Módulo de cajas</span>
            </h1>
            <p class="text-body-secondary small mb-0">
                Gestiona las cajas, sus aperturas y movimientos, y accede al historial de cierres.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="Historial" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-clock-history me-1" aria-hidden="true"></i>Historial de cierres
            </a>
            <a asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>Nueva caja
            </a>
        </div>
    </div>

    <!-- Aperturas abiertas -->
    <div class="card card-animate mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-door-open" aria-hidden="true"></i>
                <span>Cajas actualmente abiertas</span>
            </h2>
            @if (Model.AperturasAbiertas.Any())
            {
                <span class="badge bg-dark bg-opacity-50">
                    @Model.AperturasAbiertas.Count aperturas
                </span>
            }
        </div>
        <div class="card-body p-0">
            @if (Model.AperturasAbiertas.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-sm align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Caja</th>
                                <th scope="col">Usuario apertura</th>
                                <th scope="col">Fecha apertura</th>
                                <th scope="col" class="text-end">Monto inicial</th>
                                <th scope="col" class="text-end">Movimientos</th>
                                <th scope="col" class="text-end">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var apertura in Model.AperturasAbiertas.OrderByDescending(a => a.FechaApertura))
                            {
                                <tr>
                                    <td class="small">
                                        <strong>@apertura.Caja.Nombre</strong><br />
                                        <span class="text-body-secondary">@apertura.Caja.Codigo</span>
                                    </td>
                                    <td class="small">@apertura.UsuarioApertura</td>
                                    <td class="small">
                                        <time datetime="@apertura.FechaApertura.ToString("O")">
                                            @apertura.FechaApertura.ToLocalTime().ToString("dd/MM/yyyy HH:mm")
                                        </time>
                                    </td>
                                    <td class="text-end small">
                                        @apertura.MontoInicial.ToString("C")
                                    </td>
                                    <td class="text-end small">
                                        @apertura.Movimientos.Count
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de apertura">
                                            <a asp-action="DetallesApertura"
                                               asp-route-id="@apertura.Id"
                                               class="btn btn-outline-primary"
                                               aria-label="Ver detalles de apertura">
                                                <i class="bi bi-eye" aria-hidden="true"></i>
                                                <span class="visually-hidden">Ver detalles de apertura</span>
                                            </a>
                                            <a asp-action="Cerrar"
                                               asp-route-aperturaId="@apertura.Id"
                                               class="btn btn-warning"
                                               aria-label="Cerrar caja">
                                                <i class="bi bi-lock" aria-hidden="true"></i>
                                                <span class="visually-hidden">Cerrar caja</span>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="p-3">
                    <div class="alert alert-info mb-0" role="alert">
                        <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                        No hay cajas abiertas en este momento.
                        <a asp-action="Abrir" class="alert-link ms-1">
                            Abrir una caja
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="row g-3">
        <!-- Cajas activas -->
        <div class="col-12 col-xl-8">
            <div class="card card-animate h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-check-circle" aria-hidden="true"></i>
                        <span>Cajas activas</span>
                    </h2>
                    @if (Model.CajasActivas.Any())
                    {
                        <span class="badge bg-dark bg-opacity-50">
                            @Model.CajasActivas.Count cajas
                        </span>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.CajasActivas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Código</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Sucursal</th>
                                        <th scope="col">Ubicación</th>
                                        <th scope="col">Estado</th>
                                        <th scope="col" class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var caja in Model.CajasActivas.OrderBy(c => c.Codigo))
                                    {
                                        var aperturaAbierta = Model.AperturasAbiertas.FirstOrDefault(a => a.CajaId == caja.Id && !a.Cerrada);
                                        var estaAbierta = aperturaAbierta != null;
                                        <tr>
                                            <td class="small">
                                                <strong>@caja.Codigo</strong>
                                            </td>
                                            <td class="small">@caja.Nombre</td>
                                            <td class="small">@(caja.Sucursal ?? "-")</td>
                                            <td class="small">@(caja.Ubicacion ?? "-")</td>
                                            <td class="small">
                                                @if (estaAbierta)
                                                {
                                                    <span class="badge bg-success">Abierta</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Cerrada</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de caja activa">
                                                    @if (estaAbierta)
                                                    {
                                                        <a asp-action="DetallesApertura"
                                                           asp-route-id="@aperturaAbierta!.Id"
                                                           class="btn btn-outline-primary"
                                                           aria-label="Ver apertura">
                                                            <i class="bi bi-eye" aria-hidden="true"></i>
                                                            <span class="visually-hidden">Ver apertura</span>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="Abrir"
                                                           asp-route-cajaId="@caja.Id"
                                                           class="btn btn-success"
                                                           aria-label="Abrir caja">
                                                            <i class="bi bi-unlock" aria-hidden="true"></i>
                                                            <span class="visually-hidden">Abrir caja</span>
                                                        </a>
                                                    }

                                                    <a asp-action="Edit"
                                                       asp-route-id="@caja.Id"
                                                       class="btn btn-outline-secondary"
                                                       aria-label="Editar caja">
                                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Editar caja</span>
                                                    </a>

                                                    @if (User.IsInRole(Roles.SuperAdmin) || User.IsInRole(Roles.Administrador))
                                                    {
                                                        <form asp-action="Delete" asp-controller="Caja" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@caja.Id" />
                                                            <input type="hidden" name="rowVersion" value="@(caja.RowVersion != null ? Convert.ToBase64String(caja.RowVersion) : "")" />
                                                            <button type="submit"
                                                                    class="btn btn-outline-danger"
                                                                    title="Eliminar"
                                                                    data-confirm="¿Eliminar esta caja? Esta acción no se puede deshacer.">
                                                                <i class="bi bi-trash" aria-hidden="true"></i>
                                                                <span class="visually-hidden">Eliminar caja</span>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-3">
                            <div class="alert alert-info mb-0" role="alert">
                                <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                                No hay cajas activas registradas.
                                <a asp-action="Create" class="alert-link ms-1">
                                    Crear nueva caja
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Cajas inactivas -->
        <div class="col-12 col-xl-4">
            <div class="card card-animate h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-pause-circle" aria-hidden="true"></i>
                        <span>Cajas inactivas</span>
                    </h2>
                    @if (Model.CajasInactivas.Any())
                    {
                        <span class="badge bg-dark bg-opacity-50">
                            @Model.CajasInactivas.Count cajas
                        </span>
                    }
                </div>
                <div class="card-body p-0">
                    @if (Model.CajasInactivas.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-sm align-middle mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">Código</th>
                                        <th scope="col">Nombre</th>
                                        <th scope="col">Sucursal</th>
                                        <th scope="col" class="text-end">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var caja in Model.CajasInactivas.OrderBy(c => c.Codigo))
                                    {
                                        <tr>
                                            <td class="small">
                                                <strong>@caja.Codigo</strong>
                                            </td>
                                            <td class="small">@caja.Nombre</td>
                                            <td class="small">@(caja.Sucursal ?? "-")</td>
                                            <td class="text-end">
                                                <div class="btn-group btn-group-sm" role="group" aria-label="Acciones de caja inactiva">
                                                    <a asp-action="Edit"
                                                       asp-route-id="@caja.Id"
                                                       class="btn btn-outline-secondary"
                                                       aria-label="Editar caja">
                                                        <i class="bi bi-pencil" aria-hidden="true"></i>
                                                        <span class="visually-hidden">Editar caja</span>
                                                    </a>

                                                    @if (User.IsInRole(Roles.SuperAdmin) || User.IsInRole(Roles.Administrador))
                                                    {
                                                        <form asp-action="Delete" asp-controller="Caja" method="post" class="d-inline">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="id" value="@caja.Id" />
                                                            <input type="hidden" name="rowVersion" value="@(caja.RowVersion != null ? Convert.ToBase64String(caja.RowVersion) : "")" />
                                                            <button type="submit"
                                                                    class="btn btn-outline-danger"
                                                                    title="Eliminar"
                                                                    data-confirm="¿Eliminar esta caja? Esta acción no se puede deshacer.">
                                                                <i class="bi bi-trash" aria-hidden="true"></i>
                                                                <span class="visually-hidden">Eliminar caja</span>
                                                            </button>
                                                        </form>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="p-3">
                            <div class="alert alert-info mb-0" role="alert">
                                <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                                No hay cajas inactivas.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</section>
