@model TheBuryProject.ViewModels.DetallesAperturaViewModel

@{
    ViewData["Title"] = "Detalles de Apertura";
}

<section class="container-fluid px-0 py-3 text-light">

    <!-- Header de página -->
    <div class="d-flex align-items-start justify-content-between mb-4">
        <div>
            <div class="text-body-secondary text-uppercase small mb-1">Cajas</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <i class="bi bi-receipt" aria-hidden="true"></i>
                <span>Detalles de apertura de caja</span>
            </h1>
            <p class="text-body-secondary small mb-0">
                Visualiza el estado de la caja, su saldo y todos los movimientos asociados.
            </p>
        </div>

        <div class="d-flex flex-wrap gap-2">
            <a asp-action="RegistrarMovimiento"
               asp-route-aperturaId="@Model.Apertura.Id"
               class="btn btn-success btn-sm">
                <i class="bi bi-plus-circle me-1" aria-hidden="true"></i>Nuevo movimiento
            </a>

            @if (!Model.Apertura.Cerrada)
            {
                <a asp-action="Cerrar"
                   asp-route-aperturaId="@Model.Apertura.Id"
                   asp-route-returnUrl="@(Context.Request.Path + Context.Request.QueryString)"
                   class="btn btn-warning btn-sm">
                    <i class="bi bi-lock me-1" aria-hidden="true"></i>Cerrar caja
                </a>
            }

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1" aria-hidden="true"></i>Volver al listado
            </a>
        </div>
    </div>

    <!-- Información de la apertura -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card card-animate">
                <div class="card-header bg-primary text-white">
                    <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-info-circle" aria-hidden="true"></i>
                        <span>Información general</span>
                    </h2>
                </div>
                <div class="card-body">
                    <div class="row small gy-2">
                        <div class="col-md-3">
                            <span class="text-body-secondary d-block">Caja</span>
                            <strong>@Model.Apertura.Caja.Nombre (@Model.Apertura.Caja.Codigo)</strong>
                        </div>
                        <div class="col-md-3">
                            <span class="text-body-secondary d-block">Usuario apertura</span>
                            <strong>@Model.Apertura.UsuarioApertura</strong>
                        </div>
                        <div class="col-md-3">
                            <span class="text-body-secondary d-block">Fecha apertura</span>
                            <strong>
                                <time datetime="@Model.Apertura.FechaApertura.ToString("O")">
                                    @Model.Apertura.FechaApertura.ToString("dd/MM/yyyy HH:mm")
                                </time>
                            </strong>
                        </div>
                        <div class="col-md-3">
                            <span class="text-body-secondary d-block">Estado</span>
                            @if (Model.Apertura.Cerrada)
                            {
                                <span class="badge bg-secondary">Cerrada</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Abierta</span>
                            }
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Apertura.ObservacionesApertura))
                    {
                        <hr class="my-3" />
                        <p class="mb-0 small">
                            <span class="text-body-secondary fw-semibold">Observaciones:</span>
                            <span>@Model.Apertura.ObservacionesApertura</span>
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Resumen financiero -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary text-uppercase small mb-1">Monto inicial</h6>
                    <h3 class="mb-0 text-primary">
                        @Model.Apertura.MontoInicial.ToString("C")
                    </h3>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary text-uppercase small mb-1">Total ingresos</h6>
                    <h3 class="mb-0 text-success">
                        @Model.TotalIngresos.ToString("C")
                    </h3>
                    <small class="text-body-secondary">
                        @Model.Movimientos.Count(m => m.Tipo == TheBuryProject.Models.Enums.TipoMovimientoCaja.Ingreso) movimientos
                    </small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-dark bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary text-uppercase small mb-1">Total egresos</h6>
                    <h3 class="mb-0 text-danger">
                        @Model.TotalEgresos.ToString("C")
                    </h3>
                    <small class="text-body-secondary">
                        @Model.Movimientos.Count(m => m.Tipo == TheBuryProject.Models.Enums.TipoMovimientoCaja.Egreso) movimientos
                    </small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card card-animate border-0 bg-success bg-opacity-25 h-100">
                <div class="card-body text-center py-3">
                    <h6 class="text-body-secondary text-uppercase small mb-1">Saldo actual</h6>
                    <h3 class="mb-0 text-success">
                        @Model.SaldoActual.ToString("C")
                    </h3>
                    <small class="text-body-secondary">
                        @Model.CantidadMovimientos movimientos
                    </small>
                </div>
            </div>
        </div>
    </div>

    <!-- Movimientos -->
    <div class="card card-animate">
        <div class="card-header d-flex align-items-center justify-content-between">
            <h2 class="h6 mb-0 d-flex align-items-center gap-2">
                <i class="bi bi-list-ul" aria-hidden="true"></i>
                <span>Movimientos de caja</span>
            </h2>
            @if (Model.Movimientos.Any())
            {
                <span class="badge bg-dark bg-opacity-50">
                    @Model.CantidadMovimientos movimientos
                </span>
            }
        </div>
        <div class="card-body">
            @if (Model.Movimientos.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover table-sm align-middle mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Fecha / hora</th>
                                <th scope="col">Tipo</th>
                                <th scope="col">Concepto</th>
                                <th scope="col">Descripción</th>
                                <th scope="col">Referencia</th>
                                <th scope="col" class="text-end">Monto</th>
                                <th scope="col">Usuario</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mov in Model.Movimientos.OrderBy(m => m.FechaMovimiento))
                            {
                                <tr>
                                    <td class="small">
                                        <time datetime="@mov.FechaMovimiento.ToString("O")">
                                            @mov.FechaMovimiento.ToString("dd/MM/yyyy HH:mm")
                                        </time>
                                    </td>
                                    <td>
                                        @if (mov.Tipo == TheBuryProject.Models.Enums.TipoMovimientoCaja.Ingreso)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-arrow-down" aria-hidden="true"></i> Ingreso
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-arrow-up" aria-hidden="true"></i> Egreso
                                            </span>
                                        }
                                    </td>
                                    <td class="small">
                                        @mov.Concepto.ToString()
                                    </td>
                                    <td class="small">
                                        @mov.Descripcion
                                    </td>
                                    <td class="small">
                                        @(mov.Referencia ?? "-")
                                    </td>
                                    <td class="text-end">
                                        @if (mov.Tipo == TheBuryProject.Models.Enums.TipoMovimientoCaja.Ingreso)
                                        {
                                            <span class="text-success fw-semibold">
                                                +@mov.Monto.ToString("C")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-danger fw-semibold">
                                                -@mov.Monto.ToString("C")
                                            </span>
                                        }
                                    </td>
                                    <td class="small">
                                        @mov.Usuario
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-active">
                                <td colspan="5" class="text-end">
                                    <strong>Saldo actual:</strong>
                                </td>
                                <td class="text-end">
                                    <strong>@Model.SaldoActual.ToString("C")</strong>
                                </td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0" role="alert">
                    <i class="bi bi-info-circle me-1" aria-hidden="true"></i>
                    No hay movimientos registrados.
                    <a asp-action="RegistrarMovimiento"
                       asp-route-aperturaId="@Model.Apertura.Id"
                       class="alert-link ms-1">
                        Registrar primer movimiento
                    </a>
                </div>
            }
        </div>
    </div>
</section>
