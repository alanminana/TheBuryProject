@model TheBuryProject.ViewModels.CajaViewModel
@{
    ViewData["Title"] = "Nueva Caja";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-plus-circle"></i> Crear Nueva Caja</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Codigo" class="form-label"></label>
                                <input asp-for="Codigo" class="form-control" placeholder="Ej: CAJA01" />
                                <span asp-validation-for="Codigo" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej: Caja Principal" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Sucursal" class="form-label"></label>
                                <input asp-for="Sucursal" class="form-control" placeholder="Ej: Sucursal Centro" />
                                <span asp-validation-for="Sucursal" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Ubicacion" class="form-label"></label>
                                <input asp-for="Ubicacion" class="form-control" placeholder="Ej: Mostrador 1" />
                                <span asp-validation-for="Ubicacion" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción opcional"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Activa" class="form-check-input" type="checkbox" checked />
                            <label asp-for="Activa" class="form-check-label">
                                Caja activa
                            </label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Crear Caja
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}