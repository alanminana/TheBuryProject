@model TheBuryProject.ViewModels.CajaViewModel
@using TheBuryProject.Models.Constants

@{
    ViewData["Title"] = "Editar Caja";
}

<div class="container-fluid px-0">

    <!-- Header de página -->
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <div class="text-muted text-uppercase small mb-1">Cajas</div>
            <h1 class="h4 mb-1 d-flex align-items-center gap-2">
                <span>Editar caja</span>
            </h1>
            <p class="text-muted small mb-0">
                Actualiza los datos de la caja, su ubicación y estado operativo.
            </p>
        </div>

        <div class="d-flex align-items-center gap-2">
            @if (User.IsInRole(Roles.SuperAdmin) || User.IsInRole(Roles.Administrador))
            {
                <form asp-action="Delete" asp-controller="Caja" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="RowVersion" />
                    <button type="submit" class="btn btn-outline-danger btn-sm" title="Eliminar">
                        <i class="bi bi-trash me-1"></i>Eliminar
                    </button>
                </form>
            }

            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left me-1"></i>Volver al listado
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-7 col-xl-5">

            <div class="card card-animate">
                <div class="card-body">

                    <form asp-action="Edit" method="post" novalidate>
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Codigo" class="form-label"></label>
                                <input asp-for="Codigo" class="form-control" />
                                <span asp-validation-for="Codigo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Sucursal" class="form-label"></label>
                                <input asp-for="Sucursal" class="form-control" />
                                <span asp-validation-for="Sucursal" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Ubicacion" class="form-label"></label>
                                <input asp-for="Ubicacion" class="form-control" />
                                <span asp-validation-for="Ubicacion" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label"></label>
                            <textarea asp-for="Descripcion"
                                      class="form-control"
                                      rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="Activa" class="form-check-input" type="checkbox" />
                            <label asp-for="Activa" class="form-check-label">
                                Caja activa
                            </label>
                        </div>

                        <div class="alert alert-info mb-3">
                            <small>
                                <i class="bi bi-info-circle me-1"></i>
                                Estado actual:
                                @if (Model.Estado == TheBuryProject.Models.Enums.EstadoCaja.Abierta)
                                {
                                    <span class="badge bg-success ms-1">Abierta</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary ms-1">Cerrada</span>
                                }
                            </small>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-2">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle me-1"></i>Guardar cambios
                            </button>
                        </div>

                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
