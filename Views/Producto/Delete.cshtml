@model TheBuryProject.ViewModels.CategoriaViewModel
@{
    ViewData["Title"] = "Eliminar Categoría";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a asp-action="Index" class="link-light text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Volver al listado
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-danger border-0">
                    <h4 class="fw-bold text-white mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Eliminar Categoría
                    </h4>
                </div>

                <div class="card-body p-4 text-light">
                    <div class="alert alert-warning border-0 d-flex align-items-start" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-3 me-3 flex-shrink-0"></i>
                        <div>
                            <h5 class="fw-bold mb-2">¿Estás seguro que querés eliminar esta categoría?</h5>
                            <p class="mb-0">Esta acción no se puede deshacer. La categoría será deshabilitada y no podrá usarse en nuevos productos.</p>
                        </div>
                    </div>

                    <div class="card bg-body-secondary border-0 mt-4">
                        <div class="card-body p-4">
                            <h6 class="text-secondary text-uppercase fw-semibold mb-3">Información de la Categoría</h6>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <small class="text-secondary d-block">Código</small>
                                    <span class="badge bg-info text-dark fs-6 px-3 py-2">@Model.Codigo</span>
                                </div>

                                <div class="col-md-6">
                                    <small class="text-secondary d-block">Control de Serie</small>
                                    @if (Model.ControlSerieDefault)
                                    {
                                        <span class="badge bg-success fs-6 px-3 py-2">
                                            <i class="bi bi-check-lg"></i> Sí
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6 px-3 py-2">No</span>
                                    }
                                </div>

                                <div class="col-12">
                                    <small class="text-secondary d-block mb-1">Nombre</small>
                                    <p class="fs-5 fw-semibold mb-0 text-white">@Model.Nombre</p>
                                </div>

                                <div class="col-12">
                                    <small class="text-secondary d-block mb-1">Descripción</small>
                                    @if (!string.IsNullOrEmpty(Model.Descripcion))
                                    {
                                        <p class="text-light mb-0">@Model.Descripcion</p>
                                    }
                                    else
                                    {
                                        <p class="text-secondary fst-italic mb-0">Sin descripción</p>
                                    }
                                </div>

                                <div class="col-12">
                                    <small class="text-secondary d-block mb-1">Categoría Padre</small>
                                    @if (!string.IsNullOrEmpty(Model.ParentNombre))
                                    {
                                        <span class="badge bg-secondary fs-6 px-3 py-2">
                                            <i class="bi bi-diagram-3 me-1"></i>@Model.ParentNombre
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark fs-6 px-3 py-2">
                                            <i class="bi bi-star-fill me-1"></i>Categoría Raíz
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg px-4">
                                <i class="bi bi-trash me-2"></i>Eliminar definitivamente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}
