@model TheBuryProject.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Eliminar producto";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            @* Header unificado *@
            <partial name="_PageHeader" model='new PageHeaderModel {
                Breadcrumb = "Inventario · Productos",
                Title = "Eliminar Producto",
                Icon = "trash",
                Subtitle = "Confirme la eliminación del producto.",
                BackAction = "Index",
                BackController = "Catalogo",
                BackText = "Volver al catálogo",
                ShowCatalogoLink = false
            }' />

            @* Alertas *@
            <partial name="_Alerts" />

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-exclamation-triangle-fill" aria-hidden="true"></i>
                        <span>Eliminar producto</span>
                    </h5>
                </div>

                <div class="card-body p-4">
                    <div class="alert alert-warning border-0 d-flex align-items-start gap-3" role="alert">
                        <i class="bi bi-exclamation-triangle-fill fs-3 flex-shrink-0" aria-hidden="true"></i>
                        <div>
                            <h5 class="fw-bold mb-2">¿Estás seguro que querés eliminar este producto?</h5>
                            <p class="mb-1">Esta acción no se puede deshacer. El producto se deshabilitará y no podrá usarse en nuevas operaciones.</p>
                            <p class="mb-0 text-muted small">Las referencias históricas en movimientos y ventas se conservarán.</p>
                        </div>
                    </div>

                    <div class="card bg-light border-0 mt-4">
                        <div class="card-body p-4">
                            <h6 class="text-muted text-uppercase fw-semibold mb-3">Información del producto</h6>

                            <div class="row g-3">
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Código</small>
                                    <span class="badge bg-info fs-6 px-3 py-2">@Model.Codigo</span>
                                </div>

                                <div class="col-md-6">
                                    <small class="text-muted d-block">Estado</small>
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success fs-6 px-3 py-2"><i class="bi bi-check-lg" aria-hidden="true"></i> Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary fs-6 px-3 py-2">Inactivo</span>
                                    }
                                </div>

                                <div class="col-12">
                                    <small class="text-muted d-block mb-1">Nombre</small>
                                    <p class="fs-5 fw-semibold mb-0">@Model.Nombre</p>
                                </div>

                                <div class="col-md-6">
                                    <small class="text-muted d-block">Categoría</small>
                                    <p class="mb-0"><i class="bi bi-diagram-3 text-primary me-1" aria-hidden="true"></i>@Model.CategoriaNombre</p>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Marca</small>
                                    <p class="mb-0"><i class="bi bi-tag text-primary me-1" aria-hidden="true"></i>@Model.MarcaNombre</p>
                                </div>

                                <div class="col-md-6">
                                    <small class="text-muted d-block">precio de costo</small>
                                    <p class="fw-bold text-primary mb-0">@Model.PrecioCompra.ToString("C2")</p>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-muted d-block">Precio de venta</small>
                                    <p class="fw-bold text-success mb-0">@Model.PrecioVenta.ToString("C2")</p>
                                </div>

                                <div class="col-md-4">
                                    <small class="text-muted d-block">Stock actual</small>
                                    <p class="fw-bold fs-5 mb-0">@Model.StockActual <span class="badge bg-secondary">UN</span></p>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted d-block">Stock mínimo</small>
                                    <p class="fw-bold fs-5 mb-0">@Model.StockMinimo <span class="badge bg-secondary">UN</span></p>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted d-block">Estado de stock</small>
                                    <p class="fw-bold mb-0">
                                        @if (Model.EstadoStock == "Sin Stock")
                                        {
                                            <span class="text-danger"><i class="bi bi-exclamation-circle" aria-hidden="true"></i> Sin Stock</span>
                                        }
                                        else if (Model.EstadoStock == "Stock Bajo")
                                        {
                                            <span class="text-warning"><i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Stock Bajo</span>
                                        }
                                        else
                                        {
                                            <span class="text-success"><i class="bi bi-check-circle" aria-hidden="true"></i> Stock OK</span>
                                        }
                                    </p>
                                </div>

                                <div class="col-12">
                                    <small class="text-muted d-block mb-1">Descripción</small>
                                    @if (!string.IsNullOrEmpty(Model.Descripcion))
                                    {
                                        <p class="mb-0">@Model.Descripcion</p>
                                    }
                                    else
                                    {
                                        <p class="text-muted fst-italic mb-0">Sin descripción</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />

                        <div class="d-flex gap-2 justify-content-between">
                            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1" aria-hidden="true"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1" aria-hidden="true"></i>Eliminar definitivamente
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

