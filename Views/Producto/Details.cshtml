@model TheBuryProject.ViewModels.ProductoViewModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="mb-4">
                <a asp-action="Index" class="text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Volver al listado
                </a>
            </div>

            <div class="card border-0 shadow-lg">
                <div class="card-header bg-info-subtle border-info py-3">
                    <h4 class="mb-0 fw-bold text-info-emphasis">
                        <i class="bi bi-eye me-2"></i>Detalles del Producto
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="border-bottom pb-2 mb-3">
                                        <i class="bi bi-info-circle text-primary"></i> Información General
                                    </h5>
                                </div>
                                <div>
                                    @if (Model.Activo)
                                    {
                                        <span class="badge bg-success-subtle text-success-emphasis fs-6">
                                            <i class="bi bi-check-circle"></i> Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary-emphasis fs-6">
                                            <i class="bi bi-x-circle"></i> Inactivo
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label text-muted small fw-semibold">Código</label>
                            <p class="fw-bold">
                                <span class="badge bg-primary-subtle text-primary-emphasis fs-6">@Model.Codigo</span>
                            </p>
                        </div>

                        <div class="col-md-8">
                            <label class="form-label text-muted small fw-semibold">Nombre del Producto</label>
                            <p class="fw-bold fs-4 mb-0">@Model.Nombre</p>
                        </div>

                        <div class="col-12">
                            <label class="form-label text-muted small fw-semibold">Descripción</label>
                            <p class="text-muted">@(Model.Descripcion ?? "Sin descripción")</p>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-semibold">Categoría</label>
                            <p class="fw-bold">
                                <i class="bi bi-diagram-3 text-primary me-1"></i>@Model.CategoriaNombre
                            </p>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-semibold">Marca</label>
                            <p class="fw-bold">
                                <i class="bi bi-tag text-primary me-1"></i>@Model.MarcaNombre
                            </p>
                        </div>

                        <div class="col-12 mt-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-cash-coin text-success"></i> Información de Precios
                            </h5>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <label class="form-label text-muted small fw-semibold">Precio de Compra</label>
                                    <p class="fw-bold fs-3 text-info mb-0">@Model.PrecioCompra.ToString("C2")</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <label class="form-label text-muted small fw-semibold">Precio de Venta</label>
                                    <p class="fw-bold fs-3 text-success mb-0">@Model.PrecioVenta.ToString("C2")</p>
                                </div>
                            </div>
                        </div>

                        @if (Model.MargenGanancia.HasValue)
                        {
                            <div class="col-12">
                                <div class="alert alert-success border-0">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-graph-up-arrow fs-3 me-3"></i>
                                        <div>
                                            <strong>Margen de Ganancia:</strong>
                                            <span class="fs-5 ms-2">@Model.MargenGanancia.Value.ToString("F2")%</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="col-12 mt-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-boxes text-info"></i> Control de Inventario
                            </h5>
                        </div>

                        <div class="col-md-4">
                            <div class="card border-0 @(Model.EstadoStock == "Sin Stock" ? "bg-danger-subtle" : Model.EstadoStock == "Stock Bajo" ? "bg-warning-subtle" : "bg-success-subtle")">
                                <div class="card-body text-center">
                                    <label class="form-label text-muted small fw-semibold">Stock Actual</label>
                                    <p class="fw-bold fs-2 mb-1">@Model.StockActual</p>
                                    <span class="badge @(Model.EstadoStock == "Sin Stock" ? "bg-danger" : Model.EstadoStock == "Stock Bajo" ? "bg-warning text-dark" : "bg-success")">
                                        @Model.UnidadMedida
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <label class="form-label text-muted small fw-semibold">Stock Mínimo</label>
                                    <p class="fw-bold fs-2 mb-1">@Model.StockMinimo</p>
                                    <span class="badge bg-secondary">@Model.UnidadMedida</span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light border-0">
                                <div class="card-body text-center">
                                    <label class="form-label text-muted small fw-semibold">Estado de Stock</label>
                                    <p class="fw-bold fs-5 mb-0">
                                        @if (Model.EstadoStock == "Sin Stock")
                                        {
                                            <span class="text-danger">
                                                <i class="bi bi-exclamation-circle-fill"></i><br />Sin Stock
                                            </span>
                                        }
                                        else if (Model.EstadoStock == "Stock Bajo")
                                        {
                                            <span class="text-warning">
                                                <i class="bi bi-exclamation-triangle-fill"></i><br />Stock Bajo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-success">
                                                <i class="bi bi-check-circle-fill"></i><br />Stock OK
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-gear text-secondary"></i> Configuración del Producto
                            </h5>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-hash fs-3 me-3 text-primary"></i>
                                        <div>
                                            <label class="form-label text-muted small fw-semibold mb-0">Requiere Número de Serie</label>
                                            <p class="fw-bold mb-0">
                                                @if (Model.RequiereNumeroSerie)
                                                {
                                                    <span class="text-success">
                                                        <i class="bi bi-check-circle-fill"></i> Sí
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-secondary">
                                                        <i class="bi bi-x-circle"></i> No
                                                    </span>
                                                }
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card bg-light border-0">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-box fs-3 me-3 text-primary"></i>
                                        <div>
                                            <label class="form-label text-muted small fw-semibold mb-0">Unidad de Medida</label>
                                            <p class="fw-bold mb-0 fs-5">@Model.UnidadMedida</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12 mt-4">
                            <h5 class="border-bottom pb-2 mb-3">
                                <i class="bi bi-clock-history text-muted"></i> Auditoría
                            </h5>
                        </div>

                        <div class="col-md-6">
                            <label class="form-label text-muted small fw-semibold">Fecha de Creación</label>
                            <p>
                                <i class="bi bi-calendar-plus text-primary me-1"></i>
                                @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                            </p>
                            @if (!string.IsNullOrEmpty(Model.CreatedBy))
                            {
                                <p class="small text-muted">
                                    <i class="bi bi-person me-1"></i>Creado por: @Model.CreatedBy
                                </p>
                            }
                        </div>

                        <div class="col-md-6">
                            @if (Model.UpdatedAt.HasValue)
                            {
                                <label class="form-label text-muted small fw-semibold">Última Modificación</label>
                                <p>
                                    <i class="bi bi-calendar-check text-success me-1"></i>
                                    @Model.UpdatedAt.Value.ToString("dd/MM/yyyy HH:mm")
                                </p>
                                @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                                {
                                    <p class="small text-muted">
                                        <i class="bi bi-person me-1"></i>Modificado por: @Model.UpdatedBy
                                    </p>
                                }
                            }
                            else
                            {
                                <label class="form-label text-muted small fw-semibold">Última Modificación</label>
                                <p class="text-muted">Sin modificaciones</p>
                            }
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                            <i class="bi bi-arrow-left me-2"></i>Volver
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg px-4">
                            <i class="bi bi-pencil me-2"></i>Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-lg px-4">
                            <i class="bi bi-trash me-2"></i>Eliminar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>