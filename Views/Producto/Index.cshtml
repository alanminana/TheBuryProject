@model TheBuryProject.ViewModels.ProductoFilterViewModel
@{
    ViewData["Title"] = "Productos";
}

<section class="container-fluid py-4">
    <div class="row align-items-center mb-4">
        <div class="col">
            <h1 class="h3 fw-bold text-light mb-0">
                <i class="bi bi-box-seam text-info"></i> Gestión de Productos
            </h1>
            <p class="text-secondary mb-0">Administrá el catálogo de productos del sistema</p>
        </div>
        <div class="col-auto d-flex flex-wrap gap-2">
            <!-- Botón al catálogo -->
            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-light fw-semibold shadow-sm">
                <i class="bi bi-collection me-2"></i>Ver Catálogo
            </a>

            <!-- Botón a movimiento de stock -->
            <a asp-controller="MovimientoStock" asp-action="Index" class="btn btn-outline-warning fw-semibold shadow-sm text-dark">
                <i class="bi bi-arrow-left-right me-2"></i>Movimientos de Stock
            </a>

            <!-- Botón nuevo producto -->
            <a asp-action="Create" class="btn btn-info text-dark fw-semibold shadow-sm">
                <i class="bi bi-plus-circle me-2"></i>Nuevo Producto
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="card bg-dark border-0 shadow-sm mb-4">
        <div class="card-header bg-secondary text-light border-0">
            <button class="btn btn-link text-decoration-none text-light w-100 text-start p-0"
                    type="button" data-bs-toggle="collapse" data-bs-target="#filtrosCollapse">
                <div class="d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="bi bi-funnel me-2"></i>Búsqueda y Filtros Avanzados</h6>
                    <i class="bi bi-chevron-down"></i>
                </div>
            </button>
        </div>
        <div class="collapse" id="filtrosCollapse">
            <div class="card-body">
                <form asp-action="Index" method="get">
                    <div class="row g-3">
                        <!-- Búsqueda -->
                        <div class="col-md-6">
                            <label class="form-label text-light fw-semibold"><i class="bi bi-search me-1"></i>Búsqueda por texto</label>
                            <input type="text" class="form-control bg-body-secondary text-light border-0"
                                   name="searchTerm" value="@Model.SearchTerm"
                                   placeholder="Buscar por código, nombre o descripción..." />
                        </div>

                        <!-- Categoría -->
                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold"><i class="bi bi-tag me-1"></i>Categoría</label>
                            <select asp-for="CategoriaId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.CategoriasFiltro">
                                <option value="">Todas</option>
                            </select>
                        </div>

                        <!-- Marca -->
                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold"><i class="bi bi-award me-1"></i>Marca</label>
                            <select asp-for="MarcaId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.MarcasFiltro">
                                <option value="">Todas</option>
                            </select>
                        </div>

                        <!-- Opciones -->
                        <div class="col-md-6">
                            <label class="form-label text-light fw-semibold">Opciones</label>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="stockBajo" id="stockBajo"
                                       value="true" @(Model.StockBajo ? "checked" : "") />
                                <label class="form-check-label text-light" for="stockBajo">
                                    <i class="bi bi-exclamation-triangle text-warning me-1"></i>Solo stock bajo
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="soloActivos" id="soloActivos"
                                       value="true" @(Model.SoloActivos ? "checked" : "") />
                                <label class="form-check-label text-light" for="soloActivos">
                                    <i class="bi bi-check-circle text-success me-1"></i>Solo activos
                                </label>
                            </div>
                        </div>

                        <!-- Orden -->
                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold"><i class="bi bi-sort-down me-1"></i>Ordenar por</label>
                            <select class="form-select bg-body-secondary text-light border-0" name="orderBy">
                                <option value="nombre" selected="@(Model.OrderBy == "nombre" || string.IsNullOrEmpty(Model.OrderBy))">Nombre</option>
                                <option value="codigo" selected="@(Model.OrderBy == "codigo")">Código</option>
                                <option value="precioventa" selected="@(Model.OrderBy == "precioventa")">Precio Venta</option>
                                <option value="stock" selected="@(Model.OrderBy == "stock")">Stock</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label text-light fw-semibold">Dirección</label>
                            <select class="form-select bg-body-secondary text-light border-0" name="orderDirection">
                                <option value="asc" selected="@(Model.OrderDirection == "asc" || string.IsNullOrEmpty(Model.OrderDirection))">Ascendente</option>
                                <option value="desc" selected="@(Model.OrderDirection == "desc")">Descendente</option>
                            </select>
                        </div>

                        <!-- Botones -->
                        <div class="col-12">
                            <div class="d-flex gap-2 mt-2">
                                <button type="submit" class="btn btn-info text-dark fw-semibold">
                                    <i class="bi bi-search me-2"></i>Buscar
                                </button>
                                <a asp-action="Index" class="btn btn-outline-light">
                                    <i class="bi bi-x-circle me-2"></i>Limpiar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    @if (!string.IsNullOrEmpty(Model.SearchTerm) || Model.CategoriaId.HasValue || Model.MarcaId.HasValue || Model.StockBajo || Model.SoloActivos)
    {
        <div class="alert alert-info border-0 shadow-sm d-flex align-items-center mb-3">
            <i class="bi bi-info-circle me-2"></i>
            <span>Se encontraron <strong>@Model.TotalResultados</strong> productos coincidentes.</span>
        </div>
    }

    <!-- Tabla -->
    <div class="card bg-dark border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-dark align-middle mb-0">
                    <thead class="bg-secondary text-light">
                        <tr>
                            <th class="px-4">Código</th>
                            <th>Nombre</th>
                            <th>Categoría</th>
                            <th>Marca</th>
                            <th class="text-end">Precio Compra</th>
                            <th class="text-end">Precio Venta</th>
                            <th class="text-center">Stock</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center px-4">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Productos.Any())
                        {
                            @foreach (var p in Model.Productos)
                            {
                                <tr>
                                    <td class="px-4"><span class="badge bg-info text-dark">@p.Codigo</span></td>
                                    <td>@p.Nombre</td>
                                    <td class="text-secondary">@p.CategoriaNombre</td>
                                    <td class="text-secondary">@p.MarcaNombre</td>
                                    <td class="text-end text-secondary">@p.PrecioCompra.ToString("C2")</td>
                                    <td class="text-end fw-bold text-light">@p.PrecioVenta.ToString("C2")</td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill @(p.EstadoStock == "Sin Stock" ? "bg-danger" : p.EstadoStock == "Stock Bajo" ? "bg-warning text-dark" : "bg-success")">
                                            @p.StockActual @p.UnidadMedida
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (p.Activo)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-check-circle"></i> Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> Inactivo</span>
                                        }
                                    </td>
                                    <td class="text-center px-4">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-info" title="Detalles"><i class="bi bi-eye"></i></a>
                                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-outline-warning" title="Editar"><i class="bi bi-pencil"></i></a>
                                            <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-outline-danger" title="Eliminar"><i class="bi bi-trash"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="9" class="text-center py-5">
                                    <i class="bi bi-inbox display-5 text-secondary d-block mb-3"></i>
                                    <p class="text-secondary mb-2">No hay productos disponibles</p>
                                    <a asp-action="Create" class="btn btn-info text-dark">Agregar Producto</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Métricas -->
    @if (Model.Productos.Any())
    {
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-secondary mb-2">Total Productos</h6>
                        <h3 class="fw-bold text-light mb-0">@Model.TotalResultados</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-secondary mb-2">Activos</h6>
                        <h3 class="fw-bold text-success mb-0">@Model.Productos.Count(p => p.Activo)</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-dark border-0 shadow-sm">
                    <div class="card-body">
                        <h6 class="text-secondary mb-2">Stock Bajo / Sin Stock</h6>
                        <h3 class="fw-bold text-warning mb-0">@Model.Productos.Count(p => p.EstadoStock == "Stock Bajo" || p.EstadoStock == "Sin Stock")</h3>
                    </div>
                </div>
            </div>
        </div>
    }
</section>
