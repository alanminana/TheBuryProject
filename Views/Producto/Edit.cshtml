@model TheBuryProject.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            @* Header unificado *@
            <partial name="_PageHeader" model='new PageHeaderModel {
                Breadcrumb = "Inventario · Productos",
                Title = "Editar Producto",
                Icon = "pencil-square",
                Subtitle = "Modifique los datos del producto.",
                BackAction = "Index",
                BackController = "Catalogo",
                BackText = "Volver al catálogo",
                ShowCatalogoLink = false
            }' />

            @* Alertas *@
            <partial name="_Alerts" />

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0 d-flex align-items-center gap-2">
                        <i class="bi bi-pencil-square"></i>
                        <span>Editar producto: @Model.Nombre</span>
                    </h5>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="RowVersion" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-4">
                            @* Sección: Información Básica *@
                            <partial name="_FormSection" model="FormSectionModel.InfoBasica()" />

                            <div class="col-md-4">
                                <label asp-for="Codigo" class="form-label fw-semibold">Código *</label>
                                <input asp-for="Codigo" class="form-control" placeholder="Código único" />
                                <span asp-validation-for="Codigo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-8">
                                <label asp-for="Nombre" class="form-label fw-semibold">Nombre *</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Nombre del producto" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Descripcion" class="form-label fw-semibold">Descripción</label>
                                <textarea asp-for="Descripcion" class="form-control" rows="2" placeholder="Descripción opcional..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="CategoriaId" class="form-label fw-semibold">Categoría *</label>
                                <select asp-for="CategoriaId" id="CategoriaId" class="form-select" asp-items="ViewBag.Categorias">
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SubcategoriaId" class="form-label fw-semibold">Subcategoría</label>
                                <select asp-for="SubcategoriaId" id="SubcategoriaId" class="form-select">
                                    <option value="">-- Sin subcategoría --</option>
                                </select>
                                <small class="text-muted">Opcional - Se cargan según la categoría</small>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="MarcaId" class="form-label fw-semibold">Marca *</label>
                                <select asp-for="MarcaId" id="MarcaId" class="form-select" asp-items="ViewBag.Marcas">
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <span asp-validation-for="MarcaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="SubmarcaId" class="form-label fw-semibold">Submarca</label>
                                <select asp-for="SubmarcaId" id="SubmarcaId" class="form-select">
                                    <option value="">-- Sin submarca --</option>
                                </select>
                                <small class="text-muted">Opcional - Se cargan según la marca</small>
                            </div>

                            @* Sección: Precios *@
                            <partial name="_FormSection" model="FormSectionModel.Precios()" />
                            
                            <div class="col-12">
                                <div class="alert alert-info d-flex align-items-center py-2 mb-3">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <small>Los precios de venta deben <strong>incluir IVA</strong>. El sistema desglosa el IVA automáticamente en las facturas.</small>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PrecioCompra" class="form-label fw-semibold">precio de costo *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PrecioCompra" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PrecioVenta" class="form-label fw-semibold">Precio de Venta (c/IVA) *</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="PrecioVenta" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="PrecioVenta" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PorcentajeIVA" class="form-label fw-semibold">IVA Aplicable *</label>
                                <select asp-for="PorcentajeIVA" class="form-select">
                                    <option value="0">0% - Sin IVA</option>
                                    <option value="10.5">10.5% - IVA Reducido</option>
                                    <option value="21">21% - IVA General</option>
                                    <option value="27">27% - IVA Incrementado</option>
                                </select>
                                <span asp-validation-for="PorcentajeIVA" class="text-danger small"></span>
                                <small class="text-muted">
                                    <i class="bi bi-info-circle me-1"></i>El IVA se suma al precio de venta
                                </small>
                            </div>

                            <div class="col-12">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-3">
                                            <h6 class="mb-0">Características</h6>
                                            <button type="button" id="btnAgregarCaracteristica" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-plus-circle me-1"></i>Agregar característica
                                            </button>
                                        </div>

                                        <div class="table-responsive">
                                            <table class="table table-sm align-middle mb-0" id="tablaCaracteristicas">
                                                <thead>
                                                    <tr>
                                                        <th style="width: 40%;">Nombre</th>
                                                        <th style="width: 50%;">Valor</th>
                                                        <th style="width: 10%;" class="text-center">Acción</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="caracteristicasBody">
                                                    @if (Model.Caracteristicas != null && Model.Caracteristicas.Any())
                                                    {
                                                        for (var i = 0; i < Model.Caracteristicas.Count; i++)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    <input type="hidden" name="Caracteristicas[@i].Id" value="@Model.Caracteristicas[i].Id" class="caracteristica-id" />
                                                                    <input type="text" class="form-control caracteristica-nombre" name="Caracteristicas[@i].Nombre" value="@Model.Caracteristicas[i].Nombre" placeholder="Ej: Pulgadas" maxlength="100" />
                                                                </td>
                                                                <td>
                                                                    <input type="text" class="form-control caracteristica-valor" name="Caracteristicas[@i].Valor" value="@Model.Caracteristicas[i].Valor" placeholder="Ej: 42" maxlength="300" />
                                                                </td>
                                                                <td class="text-center">
                                                                    <button type="button" class="btn btn-outline-danger btn-sm btn-eliminar-caracteristica">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </td>
                                                            </tr>
                                                        }
                                                    }
                                                </tbody>
                                            </table>
                                        </div>

                                        <small class="text-muted d-block mt-2">
                                            Las características se guardan como datos del producto y no dependen del título.
                                        </small>
                                    </div>
                                </div>
                            </div>

                            @* Sección: Stock *@
                            <partial name="_FormSection" model="FormSectionModel.Stock()" />

                            <div class="col-md-6">
                                <label asp-for="StockActual" class="form-label fw-semibold">Stock Actual *</label>
                                <input asp-for="StockActual" type="number" step="0.01" min="0" class="form-control" />
                                <span asp-validation-for="StockActual" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="StockMinimo" class="form-label fw-semibold">Stock Mínimo *</label>
                                <input asp-for="StockMinimo" type="number" step="0.01" min="0" class="form-control" />
                                <span asp-validation-for="StockMinimo" class="text-danger small"></span>
                            </div>

                            @* Sección: Configuración *@
                            <partial name="_FormSection" model="FormSectionModel.Configuracion()" />

                            <div class="col-md-6">
                                <div class="card bg-light border-0">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="Activo" class="form-check-input" type="checkbox" id="switchActivo" />
                                            <label class="form-check-label" for="switchActivo">Producto Activo</label>
                                        </div>
                                        <small class="text-muted">
                                            <i class="bi bi-info-circle me-1"></i>Solo productos activos están disponibles para venta
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Catalogo" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-check-circle me-1"></i>Actualizar Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const categoriaSelect = document.getElementById('CategoriaId');
            const subcategoriaSelect = document.getElementById('SubcategoriaId');
            const marcaSelect = document.getElementById('MarcaId');
            const submarcaSelect = document.getElementById('SubmarcaId');
            const caracteristicasBody = document.getElementById('caracteristicasBody');
            const btnAgregarCaracteristica = document.getElementById('btnAgregarCaracteristica');
            
            // Valores actuales del modelo
            const subcategoriaActual = @(Model.SubcategoriaId.HasValue ? Model.SubcategoriaId.Value.ToString() : "null");
            const submarcaActual = @(Model.SubmarcaId.HasValue ? Model.SubmarcaId.Value.ToString() : "null");

            function cargarSubcategorias(categoriaId, seleccionarId) {
                subcategoriaSelect.innerHTML = '<option value="">-- Cargando... --</option>';
                
                if (!categoriaId) {
                    subcategoriaSelect.innerHTML = '<option value="">-- Seleccione primero una categoría --</option>';
                    return;
                }

                fetch(`/Producto/GetSubcategorias?categoriaId=${categoriaId}`)
                    .then(response => response.json())
                    .then(data => {
                        subcategoriaSelect.innerHTML = '<option value="">-- Sin subcategoría --</option>';
                        data.forEach(item => {
                            const selected = seleccionarId && item.id == seleccionarId ? 'selected' : '';
                            subcategoriaSelect.innerHTML += `<option value="${item.id}" ${selected}>${item.nombre}</option>`;
                        });
                    })
                    .catch(() => {
                        subcategoriaSelect.innerHTML = '<option value="">-- Error al cargar --</option>';
                    });
            }

            function cargarSubmarcas(marcaId, seleccionarId) {
                submarcaSelect.innerHTML = '<option value="">-- Cargando... --</option>';
                
                if (!marcaId) {
                    submarcaSelect.innerHTML = '<option value="">-- Seleccione primero una marca --</option>';
                    return;
                }

                fetch(`/Producto/GetSubmarcas?marcaId=${marcaId}`)
                    .then(response => response.json())
                    .then(data => {
                        submarcaSelect.innerHTML = '<option value="">-- Sin submarca --</option>';
                        data.forEach(item => {
                            const selected = seleccionarId && item.id == seleccionarId ? 'selected' : '';
                            submarcaSelect.innerHTML += `<option value="${item.id}" ${selected}>${item.nombre}</option>`;
                        });
                    })
                    .catch(() => {
                        submarcaSelect.innerHTML = '<option value="">-- Error al cargar --</option>';
                    });
            }

            function crearFilaCaracteristica(id = 0, nombre = '', valor = '') {
                const tr = document.createElement('tr');
                tr.innerHTML = `
                    <td>
                        <input type="hidden" value="${id}" class="caracteristica-id" />
                        <input type="text" class="form-control caracteristica-nombre" placeholder="Ej: Pulgadas" maxlength="100" value="${nombre}" />
                    </td>
                    <td>
                        <input type="text" class="form-control caracteristica-valor" placeholder="Ej: 42" maxlength="300" value="${valor}" />
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-danger btn-sm btn-eliminar-caracteristica">
                            <i class="bi bi-trash"></i>
                        </button>
                    </td>
                `;
                return tr;
            }

            function reindexarCaracteristicas() {
                if (!caracteristicasBody) return;
                const filas = caracteristicasBody.querySelectorAll('tr');
                filas.forEach((fila, index) => {
                    const inputId = fila.querySelector('.caracteristica-id');
                    const inputNombre = fila.querySelector('.caracteristica-nombre');
                    const inputValor = fila.querySelector('.caracteristica-valor');
                    if (inputId) inputId.name = `Caracteristicas[${index}].Id`;
                    if (inputNombre) inputNombre.name = `Caracteristicas[${index}].Nombre`;
                    if (inputValor) inputValor.name = `Caracteristicas[${index}].Valor`;
                });
            }

            btnAgregarCaracteristica?.addEventListener('click', function () {
                if (!caracteristicasBody) return;
                caracteristicasBody.appendChild(crearFilaCaracteristica());
                reindexarCaracteristicas();
            });

            caracteristicasBody?.addEventListener('click', function (event) {
                const btn = event.target.closest('.btn-eliminar-caracteristica');
                if (!btn) return;
                btn.closest('tr')?.remove();
                reindexarCaracteristicas();
            });

            reindexarCaracteristicas();

            // Cargar valores iniciales si existen
            if (categoriaSelect.value) {
                cargarSubcategorias(categoriaSelect.value, subcategoriaActual);
            }
            if (marcaSelect.value) {
                cargarSubmarcas(marcaSelect.value, submarcaActual);
            }

            // Eventos de cambio
            categoriaSelect.addEventListener('change', function () {
                cargarSubcategorias(this.value, null);
            });

            marcaSelect.addEventListener('change', function () {
                cargarSubmarcas(this.value, null);
            });
        });
    </script>
}
