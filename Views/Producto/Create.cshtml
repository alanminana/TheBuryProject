@model TheBuryProject.ViewModels.ProductoViewModel
@{
    ViewData["Title"] = "Nuevo Producto";
}

<section class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-4">
                <a asp-action="Index" class="link-light text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Volver al listado
                </a>
            </div>

            <div class="card bg-dark border-0 shadow-sm">
                <div class="card-header bg-primary border-0">
                    <h4 class="fw-bold text-dark mb-0">
                        <i class="bi bi-plus-circle me-2"></i>Nuevo Producto
                    </h4>
                </div>

                <div class="card-body p-4 text-light">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger d-flex align-items-center mb-4">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>Corregí los errores antes de continuar</div>
                        </div>

                        <div class="row g-4">
                            <!-- Información Básica -->
                            <div class="col-12">
                                <h5 class="border-bottom border-secondary pb-2 mb-3 text-info">
                                    <i class="bi bi-info-circle me-2"></i>Información Básica
                                </h5>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label text-light fw-semibold">Código *</label>
                                <input asp-for="Codigo" class="form-control bg-body-secondary text-light border-0" placeholder="Código" />
                                <span asp-validation-for="Codigo" class="text-danger small"></span>
                                <small class="text-secondary">Código único del producto</small>
                            </div>

                            <div class="col-md-8">
                                <label class="form-label text-light fw-semibold">Nombre *</label>
                                <input asp-for="Nombre" class="form-control bg-body-secondary text-light border-0" placeholder="Nombre" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label text-light fw-semibold">Descripción (opcional)</label>
                                <textarea asp-for="Descripcion" class="form-control bg-body-secondary text-light border-0" rows="3" placeholder="Descripción del producto..."></textarea>
                                <span asp-validation-for="Descripcion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-light fw-semibold">Categoría *</label>
                                <select asp-for="CategoriaId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Categorias">
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <span asp-validation-for="CategoriaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-light fw-semibold">Marca *</label>
                                <select asp-for="MarcaId" class="form-select bg-body-secondary text-light border-0" asp-items="ViewBag.Marcas">
                                    <option value="">-- Seleccione --</option>
                                </select>
                                <span asp-validation-for="MarcaId" class="text-danger small"></span>
                            </div>

                            <!-- Precios -->
                            <div class="col-12 mt-4">
                                <h5 class="border-bottom border-secondary pb-2 mb-3 text-success">
                                    <i class="bi bi-cash-coin me-2"></i>Precios
                                </h5>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-light fw-semibold">Precio de Compra *</label>
                                <input asp-for="PrecioCompra" type="number" step="0.01" class="form-control bg-body-secondary text-light border-0" placeholder="0.00" />
                                <span asp-validation-for="PrecioCompra" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-light fw-semibold">Precio de Venta *</label>
                                <input asp-for="PrecioVenta" type="number" step="0.01" class="form-control bg-body-secondary text-light border-0" placeholder="0.00" />
                                <span asp-validation-for="PrecioVenta" class="text-danger small"></span>
                            </div>

                            <!-- Inventario -->
                            <div class="col-12 mt-4">
                                <h5 class="border-bottom border-secondary pb-2 mb-3 text-info">
                                    <i class="bi bi-boxes me-2"></i>Inventario
                                </h5>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label text-light fw-semibold">Stock Actual *</label>
                                <input asp-for="StockActual" type="number" step="0.01" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="StockActual" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label text-light fw-semibold">Stock Mínimo *</label>
                                <input asp-for="StockMinimo" type="number" step="0.01" class="form-control bg-body-secondary text-light border-0" />
                                <span asp-validation-for="StockMinimo" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label text-light fw-semibold">Unidad de Medida *</label>
                                <input asp-for="UnidadMedida" class="form-control bg-body-secondary text-light border-0" placeholder="UN, KG, LT..." />
                                <span asp-validation-for="UnidadMedida" class="text-danger small"></span>
                                <small class="text-secondary">Ej: UN, KG, MT, LT</small>
                            </div>

                            <!-- Configuración -->
                            <div class="col-12 mt-4">
                                <h5 class="border-bottom border-secondary pb-2 mb-3 text-light">
                                    <i class="bi bi-gear me-2"></i>Configuración
                                </h5>
                            </div>

                            <div class="col-md-6">
                                <div class="card bg-body-secondary border-0">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="RequiereNumeroSerie" class="form-check-input" type="checkbox" id="switchSerie" />
                                            <label class="form-check-label text-light" for="switchSerie">Requiere N° de Serie</label>
                                        </div>
                                        <small class="text-secondary"><i class="bi bi-info-circle me-1"></i>Control individual por serie</small>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card bg-body-secondary border-0">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="Activo" class="form-check-input" type="checkbox" id="switchActivo" checked />
                                            <label class="form-check-label text-light" for="switchActivo">Producto Activo</label>
                                        </div>
                                        <small class="text-secondary"><i class="bi bi-info-circle me-1"></i>Solo activos están disponibles para la venta</small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <hr class="border-secondary my-4" />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-light btn-lg px-4">
                                <i class="bi bi-x-circle me-2"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary text-dark fw-semibold btn-lg px-4">
                                <i class="bi bi-check-circle me-2"></i>Guardar Producto
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
